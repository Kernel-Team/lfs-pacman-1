pkgname=eog
pkgver=3.26.1
pkgrel=1
pkgdesc="Eye of Gnome: An image viewing and cataloging program"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/EyeOfGnome"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/eog/${pkgver:0:4}/eog-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/eog-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/eog-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f640ae0c0c1ab8b88602a01fc4c2d025fcac95ff081d41de1e1603078ebbb47a759cb234ef36984b565249955d5e44ec6f06de50d281762cab1cfad786a1b0e9')

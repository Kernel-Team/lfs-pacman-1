pkgname=gexiv2
pkgver=0.10.6
pkgrel=1
pkgdesc="GObject-based wrapper around the Exiv2 library"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/gexiv2"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/gexiv2/${pkgver:0:4}/gexiv2-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gexiv2-${pkgver}"

	sed -i "s:-Wl,-lstdc++::g" Makefile.in

	./configure --prefix=/usr --enable-introspection

	make
}

package() {
	cd "${srcdir}/gexiv2-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4b15b33af9266a69babd902d379edefe7afd3d2eef11aa3c144f9ddf9c645b697bae16b8d89f50e9b3da884f1ba32f505e118c5fef5204f5630e3a9c6fee7fca')

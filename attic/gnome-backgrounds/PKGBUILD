pkgname=gnome-backgrounds
pkgver=3.26.2
pkgrel=1
pkgdesc="Background images and data for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-backgrounds/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-backgrounds/${pkgver:0:4}/gnome-backgrounds-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-backgrounds-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('14970e3c87a94a503d5a260304e100e64ea76fdaa5fc5c7d5b1c35444f5f4046abc95041c57bf31350aed4de37c6aaa80fd3d2905a52881d93c49487dd868791')

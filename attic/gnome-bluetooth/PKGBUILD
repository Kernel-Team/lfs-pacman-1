pkgname=gnome-bluetooth
pkgver=3.26.1
pkgrel=1
pkgdesc="The GNOME Bluetooth Subsystem"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeBluetooth"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-bluetooth/${pkgver:0:4}/gnome-bluetooth-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Denable-icon-update=false \
		-Denable-gtk-doc=true \
		"${srcdir}/gnome-bluetooth-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('a7e5a3243af467e17342f6810a9b3d2283310ceb25d00fd523032c7e58aecc0a3d537ac71cfee8c37ab87ede5a79e78797436b709232b0914b9cd35e71dfda87')

pkgname=gnome-session
pkgver=3.26.1
pkgrel=1
pkgdesc="The GNOME Session Handler"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-session/"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-session/${pkgver:0:4}/gnome-session-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-session-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gnome-session-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a4c2e82306ae044c56b857c8f7347dc5d5235231e702d2ac38c8c433e21efc75ca3911ee029af01754685f64000a0e6f5d17408192208b19d7dc367079ee7b0a')

pkgname=gnome-shell-extensions
pkgver=3.24.3
pkgrel=1
pkgdesc="Extensions for GNOME shell, including classic mode"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeShell/Extensions"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-shell-extensions/${pkgver:0:4}/gnome-shell-extensions-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-shell-extensions-${pkgver}"

	./configure --prefix=/usr --enable-extensions=all

	make
}

package() {
	cd "${srcdir}/gnome-shell-extensions-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7948a9cb6f5cb8d760bc42ea2865823ee60bd164b491d944edb0413e362f38ed90d39ead44ac57872a83c43c4050f5448936e739626b89a2b486a22f41d61e20')

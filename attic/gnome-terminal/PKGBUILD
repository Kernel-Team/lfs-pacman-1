pkgname=gnome-terminal
pkgver=3.26.2
pkgrel=1
pkgdesc="The GNOME Terminal Emulator"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Terminal"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-terminal/${pkgver:0:4}/gnome-terminal-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-terminal-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-migration

	make
}

package() {
	cd "${srcdir}/gnome-terminal-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a5f91d68e729695126e1fe0ab81cea994c8fb1dc3de33fdd63ada2592c6c60b16613d1a01a317a83fedc3caf656106955d3a33ef7cdbff01680eb7f30069e555')

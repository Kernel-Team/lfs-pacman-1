pkgname=kcodecs
pkgver=5.38.0
pkgrel=1
pkgdesc="Provide a collection of methods to manipulate strings using various encodings"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kcodecs-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kcodecs-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('545272128930ef9428732c164d68ed539cecb13f2c6b166d426f387686b25b46ca8b28d1f821413fa1cba43252a3ec260c92001154eae731344f8340935a4c3a')

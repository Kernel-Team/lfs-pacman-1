pkgname=kdbusaddons
pkgver=5.38.0
pkgrel=1
pkgdesc="Addons to QtDBus"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kdbusaddons-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kdbusaddons-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('503d3ff5cb0ab738f55aae7fb076dddd36aa2387f0339d83766aacc9a2ea6ef7373e063d3d47701cecab36ae09ac4d735bb09250e0b93d35717dd6732ea8c59d')

pkgname=kguiaddons
pkgver=5.38.0
pkgrel=1
pkgdesc="Addons to QtGui"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kguiaddons-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kguiaddons-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7e3d56a6dbadf4ebfed5ea43dd474a77dc8c402e84936372064e03d63fe3579f289309bc12ea0d6efe3e9e5d54e9a5adbe28a4d521eb1ee1f8d0bcab2aa952e6')

pkgname=libsass
pkgver=3.4.5
pkgrel=1
pkgdesc="Sass compiler library written in C++"
arch=('x86_64')
url="http://sass-lang.com/libsass"
license=('MIT')
#depends=()
source=("https://github.com/sass/libsass/archive/${pkgver}/libsass-${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/libsass-${pkgver}"

	autoreconf -fi
}

build() {
	cd "${srcdir}/libsass-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libsass-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('5e3f56d44d100067d68e338fa97209a78d80c3536d64fdf48d83ec5351f944dbbe50e1050ffc8189b3ae86fd86d7b121229a3866f6e0287abc55af3770ed2bb6')

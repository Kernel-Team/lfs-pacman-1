pkgname=qtdeclarative
pkgver=5.9.2
pkgrel=1
pkgdesc="Classes for QML and JavaScript languages"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtdeclarative-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtdeclarative-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtdeclarative-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('49b8b50932b73ea39da14ac3425044193dfd64eabceadba379aa01cf2fc141177f9870c387caf1cf93ce09e8b197828a54b8d9fcefc4d9cdf400a6c6dd9a9e90')

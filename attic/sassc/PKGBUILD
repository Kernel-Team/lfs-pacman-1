pkgname=sassc
pkgver=3.4.5
pkgrel=1
pkgdesc="Sass compiler written in C++"
arch=('x86_64')
url="http://sass-lang.com/libsass"
license=('MIT')
#depends=()
source=("https://github.com/sass/sassc/archive/${pkgver}/sassc-${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/sassc-${pkgver}"

	autoreconf -fi
}

build() {
	cd "${srcdir}/sassc-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/sassc-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('b317ac4bd776dbf688c3e7b763e8af7221a75e6bcc96fdf41f51682577ff88fbc63797619f5418bcc60287075b60bd3bc40dd29a1d83ab1553e7d5f82b11f463')

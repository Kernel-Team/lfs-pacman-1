pkgname=tracker
pkgver=2.0.1
pkgrel=1
pkgdesc="Desktop-neutral user information store, search tool and indexer"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Tracker"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/tracker/${pkgver:0:3}/tracker-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/tracker-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/tracker-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('86f5ef71320103e84c0e2ede222439cbb6165e9ab574c54a44da24deb0804f9d64db3b88eb2ce06a8fc3448edb82c8371fae96f410e67435169510bcd93b4b11')

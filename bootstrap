for pkg in "${PKGS[@]}"
do
  pushd "$(dirname $(realpath $0))/pkgbuild/${pkg}"
    rm -f $(dirname $(realpath $0))/${pkg}.log.gz
    ./build 2>&1 | tee $(dirname $(realpath $0))/${pkg}.log
    gzip $(dirname $(realpath $0))/${pkg}.log
  popd
done

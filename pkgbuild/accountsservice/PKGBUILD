pkgname=accountsservice
pkgver=0.6.45
pkgrel=1
pkgdesc="D-Bus interface for user account query and manipulation"
arch=('x86_64')
url="https://www.freedesktop.org/software/accountsservice/"
license=('GPL3')
#depends=()
options=(emptydirs)
source=("https://www.freedesktop.org/software/accountsservice/accountsservice-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/accountsservice-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-admin-group=adm

	make
}

package() {
	cd "${srcdir}/accountsservice-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('09975f9fa03a3177d923de6d6f6e6acfffeb2ff4924c45eaac78c994c16974427c8e936a87034747ba494d2bb3df6e8a92ff44db387761b06e06e311d7cf105a')

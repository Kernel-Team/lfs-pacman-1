pkgname=accountsservice
pkgver=0.6.46
pkgrel=1
pkgdesc="D-Bus interface for user account query and manipulation"
arch=('x86_64')
url="https://www.freedesktop.org/software/accountsservice/"
license=('GPL3')
#depends=()
options=(emptydirs)
source=("https://www.freedesktop.org/software/accountsservice/accountsservice-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/accountsservice-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-admin-group=adm

	make
}

package() {
	cd "${srcdir}/accountsservice-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fe603a9d98bb2b22b511f77e2ab78e8134d7b2d78c5e47706eb191697f7f252a8b3e33a99776a1e28491192b818d627a4ba4b972c3c0fc8c8762f78cdcb58054')

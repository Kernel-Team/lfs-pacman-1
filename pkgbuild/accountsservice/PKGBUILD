pkgname=accountsservice
pkgver=0.6.47
pkgrel=1
pkgdesc="D-Bus interface for user account query and manipulation"
arch=('x86_64')
url="https://www.freedesktop.org/software/accountsservice/"
license=('GPL3')
#depends=()
options=(emptydirs)
source=("https://www.freedesktop.org/software/accountsservice/accountsservice-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/accountsservice-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-admin-group=adm

	make
}

package() {
	cd "${srcdir}/accountsservice-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9e6ed72904cd1a8c01007ae879158fa9bf7129821e996d0279d1da2072e9d906115585c8fa4f91012af92dbb841825a26f1239b2a6040ef8f180e4bf678a7402')

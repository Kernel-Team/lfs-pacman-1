pkgname=aisleriot
pkgver=3.22.2
pkgrel=1
pkgdesc="A collection of patience games written in guile scheme"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Aisleriot"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/aisleriot/${pkgver:0:4}/aisleriot-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/aisleriot-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-platform=gtk-only \
		--with-card-theme-formats=svg,fixed,pysol \
		--with-pysol-card-theme-path=/usr/share/PySolFC

	make
}

package() {
	cd "${srcdir}/aisleriot-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9b5d501f2520af1374b9dec0de7f5bd84aad5ae832b2742e4112577ff086e2cde0cf4f0995dbfa13b68b0a3028c0f90e2136b1b04be5286e6a1eac19ad88ab00')

pkgbase=alsa-lib
pkgname=('alsa-lib' 'lib32-alsa-lib')
pkgver=1.1.5
pkgrel=1
arch=('x86_64')
url="http://www.alsa-project.org"
license=('LGPL')
#depends=()
source=("ftp://ftp.alsa-project.org/pub/lib/alsa-lib-${pkgver}.tar.bz2")

prepare() {
	cp -a "${srcdir}"/alsa-lib{,32}-${pkgver}
}

build() {
	cd "${srcdir}/alsa-lib-${pkgver}"

	./configure --prefix=/usr

	cd "${srcdir}/alsa-lib32-${pkgver}"

	export CC_HOLD="${CC}" CXX_HOLD="${CXX}"
	export CC="${CC} -m32" CXX="${CXX} -m32"
	export PKG_CONFIG_PATH=/usr/lib32/pkgconfig

	./configure --prefix=/usr \
		--libdir=/usr/lib32 \
		--disable-python

	export CC="${CC_HOLD}" CXX="${CXX_HOLD}"
	unset CC_HOLD CXX_HOLD PKG_CONFIG_PATH

	cd "${srcdir}"

	make -C "${srcdir}/alsa-lib-${pkgver}"
	make -C "${srcdir}/alsa-lib32-${pkgver}"
}

package_alsa-lib() {
	pkgdesc="An alternative implementation of Linux sound support"

	cd "${srcdir}/alsa-lib-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

package_lib32-alsa-lib() {
	pkgdesc="An alternative implementation of Linux sound support (32 bit)"

	cd "${srcdir}/alsa-lib32-${pkgver}"

	make install DESTDIR="${PWD}/dest"

	install -v -dm755 "${pkgdir}/usr"
	mv dest/usr/lib32 "${pkgdir}/usr"
}

sha512sums=('c79ceaa1ebfeda2caf41a0495ea31dd2748a11795989aebc341ae13a5c96d21495e4542571d5590e68b2575ceddd6e84059a950ddb78e6c0b9d94861faee4f58')

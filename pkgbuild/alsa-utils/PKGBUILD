pkgname=alsa-utils
pkgver=1.1.5
pkgrel=1
pkgdesc="An alternative implementation of Linux sound support"
arch=('x86_64')
url="http://www.alsa-project.org"
license=('GPL')
#depends=()
options=(emptydirs)
source=("ftp://ftp.alsa-project.org/pub/utils/alsa-utils-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/alsa-utils-${pkgver}"

	./configure --prefix=/usr \
		--disable-alsaconf \
		--disable-rst2man

	make
}

package() {
	cd "${srcdir}/alsa-utils-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('102e9ed34b89219dbad243ad5f61ca65fb8101502566c02f40d4e69abb45baa7a60f24440de1417e0f0e7f55b28db53d365d53a59af11f1ca816e2aa5907153d')

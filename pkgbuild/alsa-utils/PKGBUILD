pkgname=alsa-utils
pkgver=1.1.4
pkgrel=1
pkgdesc="An alternative implementation of Linux sound support"
arch=('x86_64')
url="http://www.alsa-project.org"
license=('GPL')
#depends=()
options=(emptydirs)
source=("ftp://ftp.alsa-project.org/pub/utils/alsa-utils-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/alsa-utils-${pkgver}"

	./configure --prefix=/usr \
		--disable-alsaconf \
		--disable-rst2man

	make
}

package() {
	cd "${srcdir}/alsa-utils-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('96852b3f5b57d7d9078a20881f28311543d446b69c80450179823a225089df7306456991890a7ef37672c1f55e9c386a7731c94e125504dcda2c88a674c8b4c7')

pkgname=appstream-glib
pkgver=0.7.10
pkgrel=1
pkgdesc="Objects and methods for reading and writing AppStream metadata"
arch=('x86_64')
url="https://people.freedesktop.org/~hughsient/appstream-glib/"
license=('LGPL')
#depends=()
source=("https://people.freedesktop.org/~hughsient/appstream-glib/releases/appstream-glib-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Dalpm=true \
		-Dgtk-doc=true \
		-Drpm=false \
		-Dstemmer=false \
		"${srcdir}/appstream-glib-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('06a6e0c9ebad70d01649ab7fc36422eb7b9dcbce9f2c671bd9e970977b07ecaee2dc5bd3e809c80b7bc87971e5c1dae0ca59202818dcdc96a381db7ecb37575c')

pkgname=apr-util
pkgver=1.6.0
pkgrel=1
pkgdesc="The Apache Portable Runtime"
arch=('x86_64')
url="http://apr-util.apache.org/"
license=('APACHE')
#depends=()
source=("https://archive.apache.org/dist/apr/apr-util-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/apr-util-${pkgver}"

	./configure --prefix=/usr \
		--with-berkeley-db \
		--with-crypto \
		--with-dbm=db \
		--with-ldap \
		--with-openssl=/usr \
		--with-sqlite3 \
		--without-gdbm \
		--without-sqlite2 \
		--with-apr=/usr/bin/apr-1-config

	make
}

package() {
	cd "${srcdir}/apr-util-${pkgver}"

	make install DESTDIR="${pkgdir}"

	sed -i "s#${srcdir}#/usr/src#g" "${pkgdir}/usr/bin/apu-1-config"
}

sha512sums=('dc88c13ef6116ed1c67584436cb8ca94ef77d358cb60c7cafab953d36d00564776414faed43397755e79bcf1b14dfca81cad2e280a2dd4c31f6e4559583effd0')

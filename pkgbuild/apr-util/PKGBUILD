pkgname=apr-util
pkgver=1.5.4
pkgrel=1
pkgdesc="The Apache Portable Runtime"
arch=('x86_64')
url="http://apr-util.apache.org/"
license=('APACHE')
#depends=()
source=("https://archive.apache.org/dist/apr/apr-util-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/apr-util-${pkgver}"

	./configure --prefix=/usr \
		--with-berkeley-db \
		--with-crypto \
		--with-dbm=db \
		--with-ldap \
		--with-openssl=/usr \
		--with-sqlite3 \
		--without-gdbm \
		--without-sqlite2 \
		--with-apr=/usr/bin/apr-1-config

	make
}

package() {
	cd "${srcdir}/apr-util-${pkgver}"

	make install DESTDIR="${pkgdir}"

	sed -i "s#${srcdir}#/usr/src#g" "${pkgdir}/usr/bin/apu-1-config"
}

sha512sums=('ca877d8e444218c4ba0f28063ee075ddcd6c0a487b692dc80ef442fe775ec4eeb337c6957853772e8082e27edcb450d7e909c2c6c3ab4a95bbf0a5ee5ea4a2d1')

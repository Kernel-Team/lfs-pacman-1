pkgname=apr
pkgver=1.6.2
pkgrel=1
pkgdesc="The Apache Portable Runtime"
arch=('x86_64')
url="http://apr.apache.org/"
license=('APACHE')
#depends=()
source=("https://archive.apache.org/dist/apr/apr-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/apr-${pkgver}"

	./configure --prefix=/usr --with-installbuilddir=/usr/share/apr-1/build

	make
}

package() {
	cd "${srcdir}/apr-${pkgver}"

	make install DESTDIR="${pkgdir}"

	sed -i "s#${srcdir}#/usr/src#g" "${pkgdir}/usr/bin/apr-1-config"
}

sha512sums=('20f449fde522f186b919b64ce6f90073b267557e17438607d31af917eca7941222dd7a7379d66f1430ff68f7e28fbccd140d24f3ca7aae8a876a550b19de284a')

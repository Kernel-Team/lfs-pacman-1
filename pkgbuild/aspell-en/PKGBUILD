pkgname=aspell-en
pkgver=2017.01.22
pkgrel=1
pkgdesc="English dictionary for aspell"
arch=('x86_64')
url="http://aspell.net/"
license=('custom')
#depends=()
source=("https://downloads.sourceforge.net/wordlist/aspell6-en-${pkgver}-0.tar.bz2")

build() {
	cd "${srcdir}/aspell6-en-${pkgver}-0"

	./configure

	make
}

package() {
	cd "${srcdir}/aspell6-en-${pkgver}-0"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('2721ffdc7f2823b9104a0d7cfa10d1ba9581432dcbb2584b9519e56a621520177eef55ea5bf9803503c429201141ce0ed4001e75c6b9385bca2fbf8986617a66')

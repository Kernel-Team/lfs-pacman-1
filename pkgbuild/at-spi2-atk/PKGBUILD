pkgname=at-spi2-atk
pkgver=2.24.1
pkgrel=1
pkgdesc="A GTK+ module that bridges ATK to D-Bus at-spi"
arch=('x86_64')
url="https://wiki.gnome.org/Accessibility"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/at-spi2-atk/${pkgver:0:4}/at-spi2-atk-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/at-spi2-atk-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/at-spi2-atk-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('5dbc186c7ea4f7f34aa0acaf90f683e549162caa274ba5b5818ae9992b52f1b475923d9818870978e87e3dacdf1018db31810d2d53b39bb4f068bcb64a423f23')

pkgname=at-spi2-atk
pkgver=2.26.1
pkgrel=1
pkgdesc="A GTK+ module that bridges ATK to D-Bus at-spi"
arch=('x86_64')
url="https://wiki.gnome.org/Accessibility"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/at-spi2-atk/${pkgver:0:4}/at-spi2-atk-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/at-spi2-atk-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/at-spi2-atk-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('2922ce0429901e00729e05a4fd67860a601917a683160ce123d281426e91074258ae70e8a4a67c2aff5e225290e59f99417a37914b039cab2481f7d1c2c64c5d')

pkgname=at-spi2-atk
pkgver=2.26.0
pkgrel=1
pkgdesc="A GTK+ module that bridges ATK to D-Bus at-spi"
arch=('x86_64')
url="https://wiki.gnome.org/Accessibility"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/at-spi2-atk/${pkgver:0:4}/at-spi2-atk-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/at-spi2-atk-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/at-spi2-atk-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f6645638f811c9e54e1db8ab43b85955804c0a5d79157b8d9ef7684a1843f6a697a924e93caea05d6903cc7cf97ad3363c94790967e2626a36ea44c62cd38b0a')

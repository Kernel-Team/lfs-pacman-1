pkgname=at-spi2-core
pkgver=2.26.0
pkgrel=1
pkgdesc="Protocol definitions and daemon for D-Bus at-spi"
arch=('x86_64')
url="https://www.gnome.org"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/at-spi2-core/${pkgver:0:4}/at-spi2-core-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/at-spi2-core-${pkgver}"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd "${srcdir}/at-spi2-core-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6f8c66430b94cd7d07502d81a5ee79c3aff3e095f78a24ff29d607d11587869c2e467597a0cb892f31bd8d859196f7c9ee653383671837a97b3a28426c7aada3')

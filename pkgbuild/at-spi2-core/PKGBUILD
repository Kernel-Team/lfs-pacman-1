pkgname=at-spi2-core
pkgver=2.27.92
pkgrel=1
pkgdesc="Protocol definitions and daemon for D-Bus at-spi"
arch=('x86_64')
url="https://www.gnome.org"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/at-spi2-core/${pkgver:0:4}/at-spi2-core-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"

	cd "${srcdir}/at-spi2-core-${pkgver}"

	sed -i 's#from "@filename@"##' atspi/atspi-enum-types.h.template
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Denable_docs=true \
		"${srcdir}/at-spi2-core-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('22262e694cd1a13225ff1136a4353217f6d3d8910a8cedc50d4b59b8a38bdeb295a9cc3f1536eaf324578270c99e324db5cef03d23c3033130e7aa010b5b9f88')

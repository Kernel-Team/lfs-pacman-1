pkgname=atk
pkgver=2.24.0
pkgrel=1
pkgdesc="A library providing a set of interfaces for accessibility"
arch=('x86_64')
url="https://developer.gnome.org/atk/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/atk/${pkgver:0:4}/atk-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/atk-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/atk-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('3ae0a4d5f28d5619d465135c685161f690732053bcb70a47669c951fbf389b5d2ccc5c7c73d4ee8c5a3b2df14e2f5b082e812a215f10a79b27b412d077f5e962')

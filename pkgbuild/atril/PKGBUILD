pkgname=atril
pkgver=1.18.2
pkgrel=1
pkgdesc="MATE document viewer"
arch=('x86_64')
url="https://mate-desktop.org"
license=('GPL')
#depends=()
source=("https://pub.mate-desktop.org/releases/${pkgver:0:4}/atril-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/atril-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-introspection

	make
}

package() {
	cd "${srcdir}/atril-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('20dba0b2301c026352870c1ae37295c182761877393f95ebbb3118bde4bc0336ac5d2f1dcc76358b539d9a120a95b7f0aef5aa0b611c0e8ea4a95983c9e2fef7')

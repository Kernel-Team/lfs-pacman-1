pkgname=babl
pkgver=0.1.28
pkgrel=1
pkgdesc="Dynamic, any to any, pixel format conversion library"
arch=('x86_64')
url="http://gegl.org/babl/"
license=('LGPL3')
#depends=()
source=("https://download.gimp.org/pub/babl/${pkgver:0:3}/babl-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/babl-${pkgver}"

	./configure --prefix=/usr --disable-docs

	make
}

package() {
	cd "${srcdir}/babl-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('73542e7b714ac1234c8aa4dd92552ca83f608dcb8215e6bc851d3f9464f24f178799d9410bf724499cff95106f8a6cc646cf4a49f90b72be1cb8c8cbafb68875')

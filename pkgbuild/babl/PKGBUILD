pkgname=babl
pkgver=0.1.30
pkgrel=1
pkgdesc="Dynamic, any to any, pixel format conversion library"
arch=('x86_64')
url="http://gegl.org/babl/"
license=('LGPL3')
#depends=()
source=("https://download.gimp.org/pub/babl/${pkgver:0:3}/babl-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/babl-${pkgver}"

	./configure --prefix=/usr --disable-docs

	make
}

package() {
	cd "${srcdir}/babl-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('391182786312140fe3fa8b4b8448df2829230ef6a1d9957d8bb729c464e94f5b1300ad761d04f51b3d777c4de9fb462dd0391c3f0c2daa53e9c53bf697e58dca')

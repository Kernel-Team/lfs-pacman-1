pkgname=bc
pkgver=1.06.95
pkgrel=1
pkgdesc="An arbitrary precision calculator language"
arch=('x86_64')
url="https://www.gnu.org/software/bc/"
license=('custom')
groups=('core')
#depends=()
source=("http://alpha.gnu.org/gnu/bc/bc-${pkgver}.tar.bz2"
	"bc-fixes.patch")

prepare() {
	cd "${srcdir}/bc-${pkgver}"

	patch -Np1 -i "${srcdir}/bc-fixes.patch"
}

build() {
	cd "${srcdir}/bc-${pkgver}"

	./configure --prefix=/usr \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		--with-readline

	make
}

package() {
	cd "${srcdir}/bc-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

md5sums=('5126a721b73f97d715bb72c13c889035'
         '877e81fba316fe487ec23501059d54b8')

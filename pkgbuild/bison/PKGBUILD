pkgname=bison
pkgver=3.0.5
pkgrel=1
pkgdesc="The GNU general-purpose parser generator"
arch=('x86_64')
url="https://www.gnu.org/software/bison/"
license=('GPL3')
#depends=()
options=(staticlibs)
source=("https://ftp.gnu.org/gnu/bison/bison-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/bison-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/bison-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('00b448db8abe91b07e32ff5273c6617bc1350d806f92073a9472f4c2f0de5d22c152795674171b74f2eb9eff8d36f8173b82dacb215601bb071ae39404d4a8a2')

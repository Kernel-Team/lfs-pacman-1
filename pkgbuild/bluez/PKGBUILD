pkgname=bluez
pkgver=5.47
pkgrel=1
pkgdesc="Linux Bluetooth Protocol Stack"
arch=('x86_64')
url="http://www.bluez.org/"
arch=('i686' 'x86_64')
#depends=()
source=("https://www.kernel.org/pub/linux/bluetooth/bluez-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/bluez-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-experimental \
		--enable-library

	make
}

package() {
	cd "${srcdir}/bluez-${pkgver}"

	make install DESTDIR="${pkgdir}"

	install -v -dm755 "${pkgdir}/etc/bluetooth" "${pkgdir}/usr/lib/systemd/user"

	install -v -Dm644 src/main.conf "${pkgdir}/etc/bluetooth/main.conf"

	ln -sfv /usr/lib/systemd/user/obex.service "${pkgdir}/usr/lib/systemd/user/dbus-org.bluez.obex.service"
}

sha512sums=('86fa1baae1593d4824038db8418358b0be624c81fc23ee8f96ec08979d309a2377be3924ab53cc0fcb712aec8e696360e9a9f4de4c12cc31b14de5cf495a11a6')

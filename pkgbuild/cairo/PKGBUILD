pkgbase=cairo
pkgname=('cairo' 'lib32-cairo')
pkgver=1.15.6
pkgrel=1
arch=('x86_64')
url="https://cairographics.org/"
license=('LGPL' 'MPL')
#depends=()
source=("https://www.cairographics.org/snapshots/cairo-${pkgver}.tar.xz")

prepare() {
	cd "${srcdir}/cairo-${pkgver}"

	sed -i "/am__append/s#boilerplate test perf#boilerplate perf#g" Makefile.in

	cp -a "${srcdir}"/cairo{,32}-${pkgver}
}

build() {
	cd "${srcdir}/cairo-${pkgver}"

	./configure --prefix=/usr --enable-tee

	cd "${srcdir}/cairo32-${pkgver}"

	export CC_HOLD="${CC}" CXX_HOLD="${CXX}"
	export CC="${CC} -m32" CXX="${CXX} -m32"
	export PKG_CONFIG_PATH=/usr/lib32/pkgconfig

	./configure --prefix=/usr \
		--libdir=/usr/lib32 \
		--enable-tee

	export CC="${CC_HOLD}" CXX="${CXX_HOLD}"
	unset CC_HOLD CXX_HOLD PKG_CONFIG_PATH

	cd "${srcdir}"

	make -C "${srcdir}/cairo-${pkgver}"
	make -C "${srcdir}/cairo32-${pkgver}"
}

package_cairo() {
	pkgdesc="Cairo vector graphics library"

	cd "${srcdir}/cairo-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

package_lib32-cairo() {
	pkgdesc="Cairo vector graphics library (32 bit)"

	cd "${srcdir}/cairo32-${pkgver}"

	make install DESTDIR="${PWD}/dest"

	install -v -dm755 "${pkgdir}/usr"
	mv dest/usr/lib32 "${pkgdir}/usr"
}

sha512sums=('e4eccba745a03545001ebd6f1a7b87bee4b932f80a2d877a764500ad5c18011a5bac585f31eec6d0b65ccaa818de0df2b3b99f0792111363bd3554cfa7f688b6')

pkgname=cantarell-fonts
pkgver=0.100
pkgrel=1
pkgdesc="Cantarell font family"
arch=('x86_64')
url="https://git.gnome.org/browse/cantarell-fonts"
license=('custom:SIL')
#depends=()
source=("https://download.gnome.org/sources/cantarell-fonts/${pkgver:0:5}/cantarell-fonts-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/cantarell-fonts-${pkgver}"
		
	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('1cb4c3ca13e1bf2952ab2e19085f7c3fb655728ecefd18836c2aa4f1234572572f2aca2470eb1c7568d840ff0b59bb097216baea37c59af50bf48b395c74bcc3')

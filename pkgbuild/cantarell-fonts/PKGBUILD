pkgname=cantarell-fonts
pkgver=0.0.25
pkgrel=1
pkgdesc="Cantarell font family"
arch=('x86_64')
url="https://git.gnome.org/browse/cantarell-fonts"
license=('custom:SIL')
#depends=()
source=("https://download.gnome.org/sources/cantarell-fonts/${pkgver:0:3}/cantarell-fonts-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/cantarell-fonts-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/cantarell-fonts-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c09c3ecb3d4c50f613234398fabd327ca92b8abbc27082e8e98f2944f3dd9f0c2ff4c022ff5e5503a86e724bb8e2fbf6cd081f8a29e91b4209f5bf0e32168c3e')

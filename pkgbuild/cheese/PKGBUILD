pkgname=cheese
pkgver=3.24.0
pkgrel=1
pkgdesc="Take photos and videos with your webcam, with fun graphical effects"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Cheese"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/cheese/${pkgver:0:4}/cheese-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/cheese-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-compile-warnings \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/cheese-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c81d2f3038970f735960a2cbcec3a074ac2e9835d3f1fa6aae83d65299692d0464fed274e71caa59831a105430ce5db56557ea0cda27c72cdb050a59331b3107')

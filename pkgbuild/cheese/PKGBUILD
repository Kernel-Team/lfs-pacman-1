pkgname=cheese
pkgver=3.25.90
pkgrel=1
pkgdesc="Take photos and videos with your webcam, with fun graphical effects"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Cheese"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/cheese/${pkgver:0:4}/cheese-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/cheese-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-compile-warnings \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/cheese-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d3ed482a5395d996943cc18aa8cc50f2ae0cd99446b70123af3f5fd0d6f18f3ff8b7acc3e787c52625bee9fe3dd75cab2c16c046bb9fadd9808c2bbd7cf9c642')

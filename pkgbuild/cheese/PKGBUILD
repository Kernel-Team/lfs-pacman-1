pkgname=cheese
pkgver=3.26.0
pkgrel=1
pkgdesc="Take photos and videos with your webcam, with fun graphical effects"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Cheese"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/cheese/${pkgver:0:4}/cheese-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/cheese-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-compile-warnings \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/cheese-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6fd58623ca257dff0a53b3577005a8b818b706f5c3da4eab51de9a7f6368847b4fe62885f3a7ba6350ac782cbee51c7b35a0c055bf11bb270934041b15388297')

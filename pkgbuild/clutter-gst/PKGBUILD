pkgname=clutter-gst
pkgver=3.0.24
pkgrel=1
pkgdesc="GStreamer bindings for clutter"
arch=('x86_64')
url="https://git.gnome.org/browse/clutter-gst/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/clutter-gst/${pkgver:0:3}/clutter-gst-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/clutter-gst-${pkgver}"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd "${srcdir}/clutter-gst-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('5f5ae109a9e4b3d1ae0a4ad8a6a8dcc7adc18fdfbd99a762da6e34b7aae5a5fb4accad6bb460689f8da146a6964d04cb22ca6fb6ae0398ac3e88c8e287f2e414')

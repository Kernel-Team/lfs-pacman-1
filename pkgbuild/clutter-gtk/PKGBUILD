pkgname=clutter-gtk
pkgver=1.8.2
pkgrel=1
pkgdesc="Clutter integration with GTK+"
arch=('x86_64')
url="https://git.gnome.org/browse/clutter-gtk/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/clutter-gtk/${pkgver:0:3}/clutter-gtk-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/clutter-gtk-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/clutter-gtk-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f895e43c4eb2d49f5e514f4c29f406d587d6bdf15027c0632e5caa4c8a1f8048dfbef5674d7ec663379127460826c1d662b59690c8db2d3e54bedf78e357f765')

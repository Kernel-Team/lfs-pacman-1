pkgname=cracklib
pkgver=2.9.6
pkgrel=1
pkgdesc="Password Checking Library"
arch=('x86_64')
url="https://github.com/cracklib/cracklib"
license=('GPL')
groups=('core')
#depends=()
source=("https://github.com/cracklib/cracklib/releases/download/cracklib-${pkgver}/cracklib-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/cracklib-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/cracklib-${pkgver}"

	make install DESTDIR="${pkgdir}"

	install -v -dm755 "${pkgdir}/lib"

	mv -v "${pkgdir}"/usr/lib/libcrack.so.* "${pkgdir}/lib"
	ln -sfv ../../lib/$(readlink "${pkgdir}/usr/lib/libcrack.so") "${pkgdir}/usr/lib/libcrack.so"
}

md5sums=('c52f463585d85924b28cdc1e373ae06d')

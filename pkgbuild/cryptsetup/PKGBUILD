pkgname=cryptsetup
pkgver=2.0.1
pkgrel=1
pkgdesc="Userspace setup tool for transparent encryption of block devices using dm-crypt"
arch=('x86_64')
url="https://gitlab.com/cryptsetup/cryptsetup/"
license=('GPL')
#depends=()
source=("https://www.kernel.org/pub/linux/utils/cryptsetup/v${pkgver:0:3}/cryptsetup-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/cryptsetup-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/cryptsetup-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('b0c16de67169aefe861e0d6692dfa7ff1d7cf34990611c71edb82606ebf39a529511b36f7c452da591bdc39c4125a4355b7444d268680458219f2cad63e0f74b')

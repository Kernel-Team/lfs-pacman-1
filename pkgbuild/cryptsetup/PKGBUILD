pkgname=cryptsetup
pkgver=2.0.0
pkgrel=1
pkgdesc="Userspace setup tool for transparent encryption of block devices using dm-crypt"
arch=('x86_64')
url="https://gitlab.com/cryptsetup/cryptsetup/"
license=('GPL')
#depends=()
source=("https://www.kernel.org/pub/linux/utils/cryptsetup/v${pkgver:0:3}/cryptsetup-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/cryptsetup-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/cryptsetup-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('195e9c0b6429d21ec0cc7c5faddfde85cb71eee09d348fa50df6779693a2dc05fce04bada4c835150964e08b2e8af30e4194155e0f6366b24c7812f48477a249')

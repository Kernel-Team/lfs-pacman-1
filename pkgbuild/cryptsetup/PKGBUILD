pkgname=cryptsetup
pkgver=1.7.5
pkgrel=1
pkgdesc="Userspace setup tool for transparent encryption of block devices using dm-crypt"
arch=('x86_64')
url="https://gitlab.com/cryptsetup/cryptsetup/"
license=('GPL')
#depends=()
source=("https://www.kernel.org/pub/linux/utils/cryptsetup/v${pkgver:0:3}/cryptsetup-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/cryptsetup-${pkgver}"

	./configure --prefix=/usr --enable-cryptsetup-reencrypt

	make
}

package() {
	cd "${srcdir}/cryptsetup-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d473f7b06d705a3868a70f3767fafc664436b5897ba59025ea1268f815cb80a9076841ff9ff96cc130fb83ba18b03c1eee38cfaf1b471fdd883a3e126b771439')

pkgname=cryptsetup
pkgver=2.0.4
pkgrel=1
pkgdesc="Userspace setup tool for transparent encryption of block devices using dm-crypt"
arch=('x86_64')
url="https://gitlab.com/cryptsetup/cryptsetup/"
license=('GPL')
#depends=()
source=("https://www.kernel.org/pub/linux/utils/cryptsetup/v${pkgver:0:3}/cryptsetup-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/cryptsetup-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/cryptsetup-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('74d442c7c7837da719a14aefa8bf0b5dffbb050acd6fbd140c50d43470c828f79fdcf7cd6acf1c149a4e1129a100059df6216b7d8ca04eb0b070cb8d4ca33e61')

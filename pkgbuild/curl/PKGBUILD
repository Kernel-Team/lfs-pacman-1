pkgname=curl
pkgver=7.56.0
pkgrel=1
pkgdesc="An URL retrieval utility and library"
arch=('x86_64')
url="https://curl.haxx.se"
license=('MIT')
#depends=()
source=("http://curl.haxx.se/download/curl-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/curl-${pkgver}"

	./configure --prefix=/usr \
		--enable-threaded-resolver \
		--with-gssapi \
		--with-libmetalink

	make
}

package() {
	cd "${srcdir}/curl-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ba17a9fdc4b540d6053fa542bd875f321d009b9ba0cb56b16fe6c217f3856ab061f2a6c735771a0eadc28338889d071884680b4d4c243b4179872abb29915e3b')

pkgname=curl
pkgver=7.54.1
pkgrel=1
pkgdesc="An URL retrieval utility and library"
arch=('x86_64')
url="https://curl.haxx.se"
license=('MIT')
#depends=()
source=("http://curl.haxx.se/download/curl-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/curl-${pkgver}"

	./configure --prefix=/usr \
		--enable-threaded-resolver \
		--with-gssapi \
		--with-libmetalink

	make
}

package() {
	cd "${srcdir}/curl-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('eb9639677f0ca1521ca631c520ab83ad071c52b31690e5e7f31546f6a44b2f11d1bb62282056cffb570eb290bf1e7830e87cb536295ac6a54a904663e795f2da')

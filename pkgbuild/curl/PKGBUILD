pkgname=curl
pkgver=7.64.0
pkgrel=1
pkgdesc="An URL retrieval utility and library"
arch=('x86_64')
url="https://curl.haxx.se"
license=('MIT')
#depends=()
source=("https://curl.haxx.se/download/curl-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/curl-${pkgver}"

	./configure --prefix=/usr \
		--enable-threaded-resolver \
		--with-gssapi \
		--with-libmetalink

	make
}

package() {
	cd "${srcdir}/curl-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('953f1f5336ce5dfd1b9f933624432d401552d91ee02d39ecde6f023c956f99ec6aae8d7746d7c34b6eb2d6452f114e67da4e64d9c8dd90b7644b7844e7b9b423')

pkgname=curl
pkgver=7.59.0
pkgrel=1
pkgdesc="An URL retrieval utility and library"
arch=('x86_64')
url="https://curl.haxx.se"
license=('MIT')
#depends=()
source=("http://curl.haxx.se/download/curl-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/curl-${pkgver}"

	./configure --prefix=/usr \
		--enable-threaded-resolver \
		--with-gssapi \
		--with-libmetalink

	make
}

package() {
	cd "${srcdir}/curl-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9b5586f443a3c9fed947debce86861a8dea0fbf59bf8838cfd72a0884f13073630cf9d369b5535a059d122decd738c652705567752517f5cb11148cc16f693fb')

pkgname=curl
pkgver=7.55.0
pkgrel=1
pkgdesc="An URL retrieval utility and library"
arch=('x86_64')
url="https://curl.haxx.se"
license=('MIT')
#depends=()
source=("http://curl.haxx.se/download/curl-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/curl-${pkgver}"

	./configure --prefix=/usr \
		--enable-threaded-resolver \
		--with-gssapi \
		--with-libmetalink

	make
}

package() {
	cd "${srcdir}/curl-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4975864621219e937585aaf5a9a54bba112b58bbf5a8acd92e1e972ea747a15a5564143548c5d8930b8c0d0e9d27d28225d0c81e52a1ba71e4c6f9e3859c978b')

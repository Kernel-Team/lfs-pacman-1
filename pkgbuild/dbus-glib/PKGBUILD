pkgname=dbus-glib
pkgver=0.108
pkgrel=1
pkgdesc="GLib bindings for DBUS"
arch=('x86_64')
url="http://www.freedesktop.org/wiki/Software/DBusBindings"
license=('GPL' 'custom')
#depends=()
source=("https://dbus.freedesktop.org/releases/dbus-glib/dbus-glib-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/dbus-glib-${pkgver}"

	./configure --prefix=/usr --disable-bash-completion

	make
}

package() {
	cd "${srcdir}/dbus-glib-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9fa7cd1c22bf6ee1e345dd6fe48aa725abc01b3b180ba430efea9996403ad99636b2c40f682956978ae5049c110c3298fa199470a4cc05907e11773d034ea5b1')

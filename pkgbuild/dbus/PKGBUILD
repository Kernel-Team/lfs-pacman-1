pkgbase=dbus
pkgname=('dbus' 'lib32-dbus')
pkgver=1.12.4
pkgrel=1
arch=('x86_64')
url="https://wiki.freedesktop.org/www/Software/dbus/"
license=('GPL' 'custom')
#depends=()
options=(emptydirs)
source=("https://dbus.freedesktop.org/releases/dbus/dbus-${pkgver}.tar.gz")

prepare() {
	cp -a "${srcdir}"/dbus{,32}-${pkgver}
}

build() {
	cd "${srcdir}/dbus-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-systemd \
		--enable-user-session \
		--with-console-auth-dir=/run/console/ \
		--with-systemdsystemunitdir=/usr/lib/systemd/system

	cd "${srcdir}/dbus32-${pkgver}"

	export CC_HOLD="${CC}" CXX_HOLD="${CXX}"
	export CC="${CC} -m32" CXX="${CXX} -m32"
	export PKG_CONFIG_PATH=/usr/lib32/pkgconfig

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--libdir=/usr/lib32 \
		--enable-systemd \
		--enable-user-session \
		--with-console-auth-dir=/run/console/ \
		--with-systemdsystemunitdir=/usr/lib/systemd/system

	export CC="${CC_HOLD}" CXX="${CXX_HOLD}"
	unset CC_HOLD CXX_HOLD PKG_CONFIG_PATH

	cd "${srcdir}"

	make -C "${srcdir}/dbus-${pkgver}"
	make -C "${srcdir}/dbus32-${pkgver}"
}

package_dbus() {
	pkgdesc="Freedesktop.org message bus system"

	cd "${srcdir}/dbus-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/var/run"

	ln -sfv /etc/machine-id "${pkgdir}/var/lib/dbus"
}

package_lib32-dbus() {
	pkgdesc="Freedesktop.org message bus system shared library (32 bit)"

	cd "${srcdir}/dbus32-${pkgver}"

	make install DESTDIR="${PWD}/dest"

	install -v -dm755 "${pkgdir}/usr"
	mv dest/usr/lib32 "${pkgdir}/usr"
}

sha512sums=('ca9f7c76f705aca0f71366627fadf8b5c68992d5bcb6fae1746a8c14e9dc93c4492e80c63b6fd522b8753ec264df046e33482a5ce20be82adf181a6dd69b36a5')

pkgname=dconf-editor
pkgver=3.22.3
pkgrel=1
pkgdesc="dconf Editor"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/dconf"
license=('GPL3')
#depends=()
source=("https://download.gnome.org/sources/dconf-editor/${pkgver:0:4}/dconf-editor-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/dconf-editor-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/dconf-editor-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0e1ddce6e970ea23329c6233ed87e6d4541b6f1e991e3159bda44c43b8092a4d983acbca18bbedb88304ac1afb541a15073a261dab9ffe94c94cfd06e3e412dc')

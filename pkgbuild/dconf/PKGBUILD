pkgname=dconf
pkgver=0.26.0
pkgrel=1
pkgdesc="Configuration database system"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/dconf"
license=(LGPL2.1)
#depends=()
source=("https://download.gnome.org/sources/dconf/${pkgver:0:4}/dconf-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/dconf-${pkgver}"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd "${srcdir}/dconf-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ea225397a486815c90a113c064d943f113490dfc754e4acba049b033115aa3a6a3849a5cdc133663de09811cde41c963041bc244cfd9ed32d65399889e415d1e')

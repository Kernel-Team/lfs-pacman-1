pkgname=dconf
pkgver=0.26.1
pkgrel=1
pkgdesc="Configuration database system"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/dconf"
license=('LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/dconf/${pkgver:0:4}/dconf-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/dconf-${pkgver}"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd "${srcdir}/dconf-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4d2b4afce189e448e3bd4e9c2f9d3d5eec6c694748aec87a9a8de047296c858772a5234dbcace8e84d99c5378d2d1ba35cafb5e5ea7efca25c10a53a55b8b6da')

pkgname=dleyna-core
pkgver=0.5.0
pkgrel=1
pkgdesc="Library of utility functions that are used by the higher level dLeyna"
arch=('x86_64')
url="https://01.org/dleyna"
license=('LGPL2.1')
#depends=()
source=("https://01.org/sites/default/files/downloads/dleyna/dleyna-core-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/dleyna-core-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/dleyna-core-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('8611ae61482dcb0ca55513ed4ce7cae9372f88d710033e5abbaeb3c06533a7b2ac143757776bf9ced0dd3f0149ee9f2e42e90fac3ecbbeb42f38d13aeae7849f')

pkgname=dleyna-renderer
pkgver=0.5.0
pkgrel=1
pkgdesc="Library to discover and manipulate Digital Media Renderers"
arch=('x86_64')
url="https://01.org/dleyna"
license=('LGPL2.1')
#depends=()
source=("https://01.org/sites/default/files/downloads/dleyna/dleyna-renderer-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/dleyna-renderer-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/dleyna-renderer-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('28802057d6e0b7da24fd8abb11748faeb78ea6ef15ce85d83907497ff252c86cec1072a919e64bab6df0a375e0092c1281569802515fb87d9dc083098f1d4820')

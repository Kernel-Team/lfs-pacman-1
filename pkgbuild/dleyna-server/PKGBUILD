pkgname=dleyna-server
pkgver=0.5.0
pkgrel=1
pkgdesc="Library to discover, browse and manipulate Digital Media Servers"
arch=('x86_64')
url="https://01.org/dleyna"
license=('LGPL2.1')
#depends=()
source=("https://01.org/sites/default/files/downloads/dleyna/dleyna-server-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/dleyna-server-${pkgver}"

	sed -i "/connector.h/i#include <libgupnp/gupnp-context-manager.h>" libdleyna/server/upnp.h

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/dleyna-server-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('30bafd14c9b85406efc21dd078bce80ed10927ef2728c4535990654b6c279549c5a89099d9266cd1e22a2f574006d2c9cfec8e3e79109c2e760d8ab4609cf398')

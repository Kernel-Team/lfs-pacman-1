pkgname=ed
pkgver=1.14.2
pkgrel=1
pkgdesc="A POSIX-compliant line-oriented text editor"
arch=('x86_64')
url="https://www.gnu.org/software/ed/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/ed/ed-${pkgver}.tar.lz")

build() {
	cd "${srcdir}/ed-${pkgver}"

	./configure --prefix=/usr --bindir=/bin CFLAGS="${CFLAGS}" CC="${CC}"

	make
}

package() {
	cd "${srcdir}/ed-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

md5sums=('273d04778b2a51f7c3cbfcd2001876bf')

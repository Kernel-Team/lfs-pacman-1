pkgname=enchant
pkgver=2.2.0
pkgrel=1
pkgdesc="A wrapper library for generic spell checking"
arch=('x86_64')
url="https://abiword.github.io/enchant/"
license=('LGPL')
#depends=()
source=("https://github.com/AbiWord/enchant/releases/download/v${pkgver}/enchant-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/enchant-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/enchant-${pkgver}"

	make install DESTDIR="${pkgdir}"

	# Transitional
	ln -sfv enchant-2 "${pkgdir}/usr/include/enchant"
	ln -sfv libenchant-2.so "${pkgdir}/usr/lib/libenchant.so"
	ln -sfv enchant-2.pc "${pkgdir}/usr/lib/pkgconfig/enchant.pc"
}

sha512sums=('b1e1a579cbb23b5222ff30572022c29df0ed868208e39791dc80584880b5471e68fbafb71c231d99754443fe08633b07d2d79a910be6764771d9afb2fadf9ce1')

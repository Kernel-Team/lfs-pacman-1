pkgname=engrampa
pkgver=1.18.3
pkgrel=1
pkgdesc="Archive manipulator for MATE"
arch=('x86_64')
url="https://mate-desktop.org"
license=('GPL')
#depends=()
source=("https://pub.mate-desktop.org/releases/${pkgver:0:4}/engrampa-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/engrampa-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-packagekit

	make
}

package() {
	cd "${srcdir}/engrampa-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6a3872ed9ec1e9d2779842d30c352c5068608913f9261a875b707951a45ff3122df2f4a4ed4da10c4f8a4617cc1d7aae4635b3f1234052793c4a6baa765d80f8')

pkgname=eog
pkgver=3.25.92
pkgrel=1
pkgdesc="Eye of Gnome: An image viewing and cataloging program"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/EyeOfGnome"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/eog/${pkgver:0:4}/eog-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/eog-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/eog-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ab0dd5c22a39840ab9da93ae14525718eed4454bff1675d2b52030e53e89c5ef887166187f6f513cc1a21d03750910fca6f7a483be7cac6ee60cceb965351e23')

pkgname=eog
pkgver=3.24.1
pkgrel=1
pkgdesc="Eye of Gnome: An image viewing and cataloging program"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/EyeOfGnome"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/eog/${pkgver:0:4}/eog-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/eog-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/eog-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c007b6f2cd2b59747db72a5b86ecb34ac87fe0910a2d33df466eb05ebe5ff638fb9e57b15f2ea9328c95037334a2fd9010895241ff285628b7ed7b6d65912fb0')

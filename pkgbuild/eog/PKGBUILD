pkgname=eog
pkgver=3.26.0
pkgrel=1
pkgdesc="Eye of Gnome: An image viewing and cataloging program"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/EyeOfGnome"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/eog/${pkgver:0:4}/eog-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/eog-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/eog-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c838ba0ba403af139cf2b135777d66298f615522add563bdf7b0316b543804f81649a191d2d337ebf2f4ba4a9a6572f735e2d400f87e05302e4c73f5a919608d')

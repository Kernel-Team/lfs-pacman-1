pkgname=eog
pkgver=3.27.91
pkgrel=1
pkgdesc="Eye of Gnome: An image viewing and cataloging program"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/EyeOfGnome"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/eog/${pkgver:0:4}/eog-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Dgtk_doc=true \
		"${srcdir}/eog-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('6bf742909bd1e0abe75e85536fd359f8006d7d5e757eab1c1a3b3cfadf6859f9bd19111e39d34dca61a28706ece547482159f04431f37890cff73fb0529dcd23')

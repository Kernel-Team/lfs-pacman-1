pkgname=eog
pkgver=3.28.3
pkgrel=1
pkgdesc="Eye of Gnome: An image viewing and cataloging program"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/EyeOfGnome"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/eog/${pkgver:0:4}/eog-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Dgtk_doc=true \
		"${srcdir}/eog-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('1878e36aca74360f48de9938ddad1de6d984a87fb6c2dd8c35c837709af95605677ac42ff44927b15d68a78c82ca1187eb4c299019f98efeedab7df8d5f34eeb')

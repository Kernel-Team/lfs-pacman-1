pkgname=eog
pkgver=3.25.90
pkgrel=1
pkgdesc="Eye of Gnome: An image viewing and cataloging program"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/EyeOfGnome"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/eog/${pkgver:0:4}/eog-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/eog-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/eog-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1d6610e929050483d80ffcbabfd16016fbddce8eebfa13abbdc681a3b452028a8433cb02a310ae648d57427b191d4ed4b45253ede0cbb38ae4e7ca06d4173f9a')

pkgname=epiphany
pkgver=3.26.3
pkgrel=1
pkgdesc="A GNOME web browser based on the WebKit rendering engine"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Web"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/epiphany/${pkgver:0:4}/epiphany-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"

	cd "${srcdir}/epiphany-${pkgver}"

	sed -i "s#multipart/related;##" data/org.gnome.Epiphany.desktop.in
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Ddistributor_name="Krejzi" \
		-Dunit_tests=false \
		"${srcdir}/epiphany-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('f9dd21fb75e31538ddaa3901a4813e2f0f6e7f7e16d862863508708e0c33f52bc50ded7c5b31a1589ff053b319f42749553fc660778cebd24ac5860d83b9b207')

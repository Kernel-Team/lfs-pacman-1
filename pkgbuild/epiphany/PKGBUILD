pkgname=epiphany
pkgver=3.26.6
pkgrel=1
pkgdesc="A GNOME web browser based on the WebKit rendering engine"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Web"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/epiphany/${pkgver:0:4}/epiphany-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"

	cd "${srcdir}/epiphany-${pkgver}"

	sed -i "s#multipart/related;##" data/org.gnome.Epiphany.desktop.in
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Ddistributor_name="Krejzi" \
		-Dunit_tests=false \
		"${srcdir}/epiphany-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('4ebdb56af11dbba11fed1d4536ae6034a8fb83ee93443ffb00e2be81d2e81b2051e113715f3e748868d21193e75f30c49cdd6a225d7f0a9d259a741957eb40b6')

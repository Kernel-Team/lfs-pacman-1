pkgname=epiphany
pkgver=3.24.2
pkgrel=1
pkgdesc="A GNOME web browser based on the WebKit rendering engine"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Web"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/epiphany/${pkgver:0:4}/epiphany-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/epiphany-${pkgver}"

	sed -i "s#multipart/related;##" data/org.gnome.Epiphany.desktop.in

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/epiphany-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f1871d92642b5ca278c6d9228d78b79aeb4284ac04f7f480f4d03bb2717fd872e4fd6ef5827ed86fdf08c91efa63ab789aedb9385948bd0f2bd4d89b5454c866')

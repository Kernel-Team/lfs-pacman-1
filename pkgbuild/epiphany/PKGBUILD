pkgname=epiphany
pkgver=3.26.4
pkgrel=1
pkgdesc="A GNOME web browser based on the WebKit rendering engine"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Web"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/epiphany/${pkgver:0:4}/epiphany-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"

	cd "${srcdir}/epiphany-${pkgver}"

	sed -i "s#multipart/related;##" data/org.gnome.Epiphany.desktop.in
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Ddistributor_name="Krejzi" \
		-Dunit_tests=false \
		"${srcdir}/epiphany-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('76475516c5e00070ea8dac5d8e31920c408c496b698dfc3b58ea89b4c8d2ecb4ba7774e196b41986f835ed40038356f9888e2a72dcc50685c9ee180ea6d4d721')

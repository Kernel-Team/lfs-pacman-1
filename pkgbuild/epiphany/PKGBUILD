pkgname=epiphany
pkgver=3.26.5.1
pkgrel=1
pkgdesc="A GNOME web browser based on the WebKit rendering engine"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Web"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/epiphany/${pkgver:0:4}/epiphany-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"

	cd "${srcdir}/epiphany-${pkgver}"

	sed -i "s#multipart/related;##" data/org.gnome.Epiphany.desktop.in
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Ddistributor_name="Krejzi" \
		-Dunit_tests=false \
		"${srcdir}/epiphany-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('18c70b99ad0a543fe59360867e57a5557e4e2fd4c2dae86e2cd79f9ffb5f19beed03ab652946e3c35cc789198dcafd721cacdb4eacb8174d2d9965b77efc1671')

pkgname=epiphany
pkgver=3.25.91
pkgrel=1
pkgdesc="A GNOME web browser based on the WebKit rendering engine"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Web"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/epiphany/${pkgver:0:4}/epiphany-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"

	cd "${srcdir}/epiphany-${pkgver}"

	sed -i "s#multipart/related;##" data/org.gnome.Epiphany.desktop.in
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Ddistributor_name="Krejzi" \
		-Denable_unit_tests=false \
		"${srcdir}/epiphany-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('fb1c287acc92900660a7bd8962bffec42e3fc643bcac674d6d9d0e01fd1be5cecbace47256bf6c821aecd2b08ce21fe4fb6daa11eb71ae5d3964d4c8b8ec5fe0')

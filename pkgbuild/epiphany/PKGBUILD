pkgname=epiphany
pkgver=3.24.3
pkgrel=1
pkgdesc="A GNOME web browser based on the WebKit rendering engine"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Web"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/epiphany/${pkgver:0:4}/epiphany-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/epiphany-${pkgver}"

	sed -i "s#multipart/related;##" data/org.gnome.Epiphany.desktop.in

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/epiphany-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a294cd450073b157450e7ce4d4fa355aa7efe4d5fe8773bab733f918b974126f2f189c4ba55d62a7e14088e1de9d169c5bfe3ed147ba4f8fb074c91443f068af')

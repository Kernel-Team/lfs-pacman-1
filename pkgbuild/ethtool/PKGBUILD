pkgname=ethtool
pkgver=4.10
pkgrel=1
pkgdesc="Utility for controlling network drivers and hardware"
arch=('x86_64')
url="https://www.kernel.org/pub/software/network/ethtool/"
license=('GPL')
#depends=()
source=("https://www.kernel.org/pub/software/network/ethtool/ethtool-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/ethtool-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/ethtool-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6766c468e141300b4828e6bdc98e7e720d35bb122405fc05d4ae94bbdce50b98e48ddd0505b09c990040da67e942e08a88b28b46d94aca8d544caf0aee4aac36')

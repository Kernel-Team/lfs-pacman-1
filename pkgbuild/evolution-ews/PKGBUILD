pkgname=evolution-ews
pkgver=3.28.5
pkgrel=1
pkgdesc="MS Exchange integration through Exchange Web Services"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Evolution/EWS"
license=('LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/evolution-ews/${pkgver:0:4}/evolution-ews-${pkgver}.tar.xz")

prepare() {
        install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DSYSCONF_INSTALL_DIR=/etc \
		-DBUILD_TESTING=OFF \
		-DENABLE_SCHEMAS_COMPILE=OFF \
		-DWITH_MSPACK=OFF \
		"${srcdir}/evolution-ews-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('90b50ba99f0c4e85b7b0e8051ca03e9a13d73d358174d0ef0786ce7e13403be380afa650118baf4466f44d1514bcbae6e05f82930ad112847b05dd10aaeff430')

pkgname=evolution-ews
pkgver=3.26.5
pkgrel=1
pkgdesc="MS Exchange integration through Exchange Web Services"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Evolution/EWS"
license=('LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/evolution-ews/${pkgver:0:4}/evolution-ews-${pkgver}.tar.xz")

prepare() {
        install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	export CXX="${CXX} -std=c++11"

	cmake -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DSYSCONF_INSTALL_DIR=/etc \
		-DBUILD_TESTING=OFF \
		-DENABLE_SCHEMAS_COMPILE=OFF \
		-DWITH_MSPACK=OFF \
		"${srcdir}/evolution-ews-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('ac4657a7cb250a9e9efca37f4a334915d79046c5951d599f9da18c75d57c81185b87ec2f91be18932c12fa69d7e89cf7c720d69549c74e07d9a34bd806ea9425')

pkgname=evolution-ews
pkgver=3.28.3
pkgrel=1
pkgdesc="MS Exchange integration through Exchange Web Services"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Evolution/EWS"
license=('LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/evolution-ews/${pkgver:0:4}/evolution-ews-${pkgver}.tar.xz")

prepare() {
        install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DSYSCONF_INSTALL_DIR=/etc \
		-DBUILD_TESTING=OFF \
		-DENABLE_SCHEMAS_COMPILE=OFF \
		-DWITH_MSPACK=OFF \
		"${srcdir}/evolution-ews-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('651058a81c41d6c170df22a994ab0b8d5e7cee08fff58b93a485c3e095c336c5b44fecd42c9fbfab9d73303836eb30e9e5d575a00e482def0e55628c6138dd97')

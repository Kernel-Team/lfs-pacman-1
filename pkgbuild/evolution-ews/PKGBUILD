pkgname=evolution-ews
pkgver=3.28.0
pkgrel=1
pkgdesc="MS Exchange integration through Exchange Web Services"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Evolution/EWS"
license=('LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/evolution-ews/${pkgver:0:4}/evolution-ews-${pkgver}.tar.xz")

prepare() {
        install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	export CXX="${CXX} -std=c++11"

	cmake -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DSYSCONF_INSTALL_DIR=/etc \
		-DBUILD_TESTING=OFF \
		-DENABLE_SCHEMAS_COMPILE=OFF \
		-DWITH_MSPACK=OFF \
		"${srcdir}/evolution-ews-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('1bf44b66f9eb0fa25432ed536508c55d0a8c6f36ee779f7fc7fb038f20cd8ae785e00f24a34c16b7054e63eba6fe67374e81e884b6849c8ce99d5c1923d3c7a4')

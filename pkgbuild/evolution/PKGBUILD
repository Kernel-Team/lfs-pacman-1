pkgname=evolution
pkgver=3.26.5
pkgrel=1
pkgdesc="Manage your email, contacts and schedule"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Evolution"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/evolution/${pkgver:0:4}/evolution-${pkgver}.tar.xz")

prepare() {
        install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	export CXX="${CXX} -std=c++11"

	cmake -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DSYSCONF_INSTALL_DIR=/etc \
		-DENABLE_GTK_DOC=ON \
		"${srcdir}/evolution-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('ea6dc9ee55e4d320521e2e93a879855348a98f86c68270c6d6c4c38bb18fc0530d46bac901c2804cabb88514672551da545013162b951264b1f504e016bc48ae')

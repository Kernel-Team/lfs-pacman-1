pkgname=evolution
pkgver=3.26.1
pkgrel=1
pkgdesc="Manage your email, contacts and schedule"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Evolution"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/evolution/${pkgver:0:4}/evolution-${pkgver}.tar.xz")

prepare() {
        install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	export CXX="${CXX} -std=c++11"

	cmake -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DSYSCONF_INSTALL_DIR=/etc \
		-DENABLE_GTK_DOC=ON \
		"${srcdir}/evolution-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('d947bd6c9c6999cd2e816a93c1016748fbe6a268498d555ced312117205cb8f5f215c25dee1359e77bce6bdc98bb04ec69bba82802970dacde396543ffd09baf')

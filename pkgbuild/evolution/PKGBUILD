pkgname=evolution
pkgver=3.26.2
pkgrel=1
pkgdesc="Manage your email, contacts and schedule"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Evolution"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/evolution/${pkgver:0:4}/evolution-${pkgver}.tar.xz")

prepare() {
        install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	export CXX="${CXX} -std=c++11"

	cmake -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DSYSCONF_INSTALL_DIR=/etc \
		-DENABLE_GTK_DOC=ON \
		"${srcdir}/evolution-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}


sha512sums=('f8a96437cab445bb74e6f3758a3a9c4ee8270ecc8aefb582ffcbb952d0a7a771e5c10de5606d93c47561e56f9ad3567a112c185fdc453d49fe60e9922c46ed54')

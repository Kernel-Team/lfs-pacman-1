pkgname=evolution
pkgver=3.28.3
pkgrel=1
pkgdesc="Manage your email, contacts and schedule"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Evolution"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/evolution/${pkgver:0:4}/evolution-${pkgver}.tar.xz")

prepare() {
        install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DSYSCONF_INSTALL_DIR=/etc \
		-DENABLE_GTK_DOC=ON \
		"${srcdir}/evolution-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('d694d2d4e46bdedfc2d9173ba59dcdc160095347e34a1ab0b11a55a95f82513dbe26e322902895ac5208f6e2e9853d272fc4cc6373de22dedd67a0b2f7c91a81')

pkgname=evolution
pkgver=3.26.4
pkgrel=1
pkgdesc="Manage your email, contacts and schedule"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Evolution"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/evolution/${pkgver:0:4}/evolution-${pkgver}.tar.xz")

prepare() {
        install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	export CXX="${CXX} -std=c++11"

	cmake -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DSYSCONF_INSTALL_DIR=/etc \
		-DENABLE_GTK_DOC=ON \
		"${srcdir}/evolution-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('3ecc2ba07cf3e4f8ef3556ac5c1004cb05672d8ade92f580d530e279a5b8207700027f99d7312e975f2a3799083f46151a61ab8c897bfeee772b6294ea0d0d0a')

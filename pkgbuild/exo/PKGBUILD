pkgname=exo
pkgver=0.11.5
pkgrel=1
pkgdesc="Extensions to Xfce by os-cillation"
arch=('x86_64')
url="https://xfce.org/"
license=('GPL2' 'LGPL')
#depends=()
source=("http://archive.xfce.org/src/xfce/exo/${pkgver:0:4}/exo-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/exo-${pkgver}"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd "${srcdir}/exo-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c1aeb6dbdb60ab3c19797adcd3e832871960b8a91469d5f96f5fb23bc44794a9b0cf91c910b27f001196d75439baf23565b8860d0bad72799134b2018d3b8463')

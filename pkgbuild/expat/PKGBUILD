pkgbase=expat
pkgname=('expat' 'lib32-expat')
pkgver=2.2.0
pkgrel=1
arch=('x86_64')
url="http://expat.sourceforge.net/"
license=('custom')
#depends=()
source=("https://downloads.sourceforge.net/expat/expat-${pkgver}.tar.bz2")

prepare() {
	cp -a "${srcdir}"/expat{,32}-${pkgver}
}

build() {
	cd "${srcdir}/expat-${pkgver}"

	./configure --prefix=/usr

	cd "${srcdir}/expat32-${pkgver}"

	export CC_HOLD="${CC}" CXX_HOLD="${CXX}"
	export CC="${CC} -m32" CXX="${CXX} -m32"
	export PKG_CONFIG_PATH=/usr/lib32/pkgconfig

	./configure --prefix=/usr --libdir=/usr/lib32

	export CC="${CC_HOLD}" CXX="${CXX_HOLD}"
	unset CC_HOLD CXX_HOLD PKG_CONFIG_PATH

	cd "${srcdir}"

	make -C "${srcdir}/expat-${pkgver}"
	make -C "${srcdir}/expat32-${pkgver}"
}

package_expat() {
	pkgdesc="An XML parser library"

	cd "${srcdir}/expat-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

package_lib32-expat() {
	pkgdesc="An XML parser library (32 bit)"

	cd "${srcdir}/expat32-${pkgver}"

	make install DESTDIR="${PWD}/dest"

	install -v -dm755 "${pkgdir}/usr"
	mv dest/usr/lib32 "${pkgdir}/usr"
}

sha512sums=('2be1a6eea87b439374bfacb1fbb8e814fd8a085d5dfd3ca3be69d1af29b5dc93d36cbdec5f6843ca6d5910843c7ffbc498adc2a561b9dcece488edf3c6f8c7c8')

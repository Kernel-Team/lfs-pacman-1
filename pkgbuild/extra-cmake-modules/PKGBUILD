pkgname=extra-cmake-modules
pkgver=5.35.0
pkgrel=1
pkgdesc=""
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/extra-cmake-modules-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DBUILD_TESTING=OFF \
		"${srcdir}/extra-cmake-modules-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('60030180c46390f1957aab5b1a84dff9b1f54e0810cd45567e959a75590a2c34c653d9e4ed40cb53d419bd1162690866c8acabbc40db44471cb48b7dde844fb3')

pkgname=extra-cmake-modules
pkgver=5.38.0
pkgrel=1
pkgdesc=""
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/extra-cmake-modules-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DBUILD_TESTING=OFF \
		"${srcdir}/extra-cmake-modules-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c1fd65593732e57fb0822fd5bc2b06f9e35713a78f35269f387f6d9e4c87520b46f3cde039a42993139b478da5aebf1764d0111746af75bb0e5a33822684e501')

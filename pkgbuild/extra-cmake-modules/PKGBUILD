pkgname=extra-cmake-modules
pkgver=5.36.0
pkgrel=1
pkgdesc=""
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/extra-cmake-modules-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DBUILD_TESTING=OFF \
		"${srcdir}/extra-cmake-modules-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('27af106097a92901131b73ce31a9410f392272fe6a12436d7fb673f628e4046ca8a93854ccc3119c2237979b58e89179c973c5d1c9daf2744e2c7b2bf033eaa2')

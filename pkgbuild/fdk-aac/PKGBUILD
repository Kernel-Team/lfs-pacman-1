pkgname=fdk-aac
pkgver=0.1.5
pkgrel=1
pkgdesc="Fraunhofer FDK AAC codec library"
arch=('x86_64')
url="https://sourceforge.net/projects/opencore-amr/"
license=('custom')
#depends=()
source=("https://downloads.sourceforge.net/opencore-amr/fdk-aac-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/fdk-aac-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/fdk-aac-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('579e96dae5638cfe2d3d5e84ab24a72ed50ed3b5a9d3c6eb2f434d3a5f4c575877a2ecf6cd7cf7a528eb2811b2014a861eaaac9ea5fc617c6423587525766f00')

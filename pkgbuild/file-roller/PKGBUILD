pkgname=file-roller
pkgver=3.28.1
pkgrel=1
pkgdesc="Create and modify archives"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/FileRoller"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/file-roller/${pkgver:0:4}/file-roller-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Dpackagekit=false \
		"${srcdir}/file-roller-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('5418282a91771f6b7a95ceca986c780472341ca81a6fffa169a593709121c7d4694076bf074a00e3cb7bff6df0cf9f2904cf462cca5d0fbadf6e8aafbb344a03')

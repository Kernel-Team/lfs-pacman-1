pkgname=file-roller
pkgver=3.26.1
pkgrel=1
pkgdesc="Create and modify archives"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/FileRoller"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/file-roller/${pkgver:0:4}/file-roller-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/file-roller-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-packagekit \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/file-roller-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e4951e4f83c8529f987949a64b1247dc8248f638ce31936c42fd22f382cdf4f0330bbef55972b57cdc39d3dab3761cb58f8e0356f33394822412244f9ea285bf')

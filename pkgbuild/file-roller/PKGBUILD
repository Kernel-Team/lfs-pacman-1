pkgname=file-roller
pkgver=3.25.1
pkgrel=1
pkgdesc="Create and modify archives"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/FileRoller"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/file-roller/${pkgver:0:4}/file-roller-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/file-roller-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-packagekit \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/file-roller-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('117ea0da1290bf64d2571666d0d6aca2347dbb90d36ea4d4b84deee7b40ddca10265e12a6724735a9701bbd2fbabe916ceb85a743843437e62099e2f41e02331')

pkgname=file-roller
pkgver=3.25.91
pkgrel=1
pkgdesc="Create and modify archives"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/FileRoller"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/file-roller/${pkgver:0:4}/file-roller-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/file-roller-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-packagekit \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/file-roller-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('07b7812b69a5f357c4337f296f82f1c75d3bdccb4c71bd8e6264dcde512d105c3db213bc06bb6872ec2c24d16878eef538f7d7fb19c9c6bb3a22b4686ee7274a')

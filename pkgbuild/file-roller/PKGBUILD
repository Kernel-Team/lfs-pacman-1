pkgname=file-roller
pkgver=3.27.91
pkgrel=1
pkgdesc="Create and modify archives"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/FileRoller"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/file-roller/${pkgver:0:4}/file-roller-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Dpackagekit=false \
		"${srcdir}/file-roller-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('b30356c209c11ccd6b13fae9e94ca1116f008a6487ad587ed35f8e41bb6936c77f0095a6ff6c61ddf9dd7d992e1ecfb221969a1fc77258764e35475604216565')

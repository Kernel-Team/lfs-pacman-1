pkgname=file-roller
pkgver=3.26.0
pkgrel=1
pkgdesc="Create and modify archives"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/FileRoller"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/file-roller/${pkgver:0:4}/file-roller-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/file-roller-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-packagekit \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/file-roller-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9d2a8a2099d69196327f36bdd4e7e667cd767fc453102153c552f15dcbdaf71766b44e9ddbfba857d8e7ee59816356e8135e3f8a21fdac5030a5bb8bdff9dbab')

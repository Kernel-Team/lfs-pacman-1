pkgname=file
pkgver=5.31
pkgrel=1
pkgdesc="File type identification utility"
arch=('x86_64')
url="https://www.darwinsys.com/file/"
license=('custom')
#depends=()
source=("ftp://ftp.astron.com/pub/file/file-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/file-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/file-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0d024787b5b1fdd6469627d2b4081082fa66fff7a1a84ce06a0710db1dad6b9bd395dc2b758ebc733d14b7e9d135fc2fefcb62919fb98bd140b88445bac89651')

pkgname=folks
pkgver=0.11.3
pkgrel=1
pkgdesc="Library to aggregates people into metacontacts"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Folks"
license=('LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/folks/${pkgver:0:4}/folks-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/folks-${pkgver}"

	./configure --prefix=/usr \
		--disable-schemas-compile \
		--disable-fatal-warnings

	make
}

package() {
	cd "${srcdir}/folks-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ff7061e07545d3c66045dd6fda1045023778b5cf6a4beb15ebd494076d9133564ec06eda22fe9c61bc91545900a0f0cb0bfa17e29046ef376c12e6b6043faa85')

pkgname=frameworkintegration
pkgver=5.35.0
pkgrel=1
pkgdesc="Framework providing components to allow applications to integrate with a KDE Workspace"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/frameworkintegration-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/frameworkintegration-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1c421573618ee5deb78e2f67e96af94bd1950b2869b4e3972a169835cc8a461bc5061afda311e600482e3980f3412328b2fac83f86f7d12090ca9d5fb71eecec')

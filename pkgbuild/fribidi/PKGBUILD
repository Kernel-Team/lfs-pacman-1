pkgname=fribidi
pkgver=0.19.7
pkgrel=1
pkgdesc="A Free Implementation of the Unicode Bidirectional Algorithm"
arch=('x86_64')
url="https://www.fribidi.org/"
license=('LGPL')
#depends=()
source=("https://www.fribidi.org/download/fribidi-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/fribidi-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/fribidi-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4bfdda43d961030a8a2ae2c98d2ca5d43c1b59633fa0987920c5537ec69f3f624204ceacc4c474d878cbb417ee2d9e708dfe169cfce6ad584d2f2d5122678b63')

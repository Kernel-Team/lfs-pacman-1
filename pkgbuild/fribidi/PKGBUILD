pkgname=fribidi
pkgver=1.0.2
pkgrel=1
pkgdesc="A Free Implementation of the Unicode Bidirectional Algorithm"
arch=('x86_64')
url="https://github.com/fribidi/fribidi/"
license=('LGPL')
#depends=()
source=("https://github.com/fribidi/fribidi/releases/download/v${pkgver}/fribidi-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/fribidi-${pkgver}"

	./configure --prefix=/usr --disable-docs

	make
}

package() {
	cd "${srcdir}/fribidi-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a474d01368b85c166e08a236425b6f13b88f2cf83308bf0df21c9fe034b1909edea30b778122719fcb8af72bdcf34f2f82f696031bcce077cf8ac764f019acaa')

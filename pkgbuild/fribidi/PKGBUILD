pkgname=fribidi
pkgver=1.0.1
pkgrel=1
pkgdesc="A Free Implementation of the Unicode Bidirectional Algorithm"
arch=('x86_64')
url="https://github.com/fribidi/fribidi/"
license=('LGPL')
#depends=()
source=("https://github.com/fribidi/fribidi/releases/download/v${pkgver}/fribidi-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/fribidi-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/fribidi-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('333dddba3dc54f3bbf8d739f670455c3c930c4a207c2642053f7f6b4d782cd6199fef41a007630e3ed20b5040e686ee30e9e63f5c0722fff6f73493058e0e5ac')

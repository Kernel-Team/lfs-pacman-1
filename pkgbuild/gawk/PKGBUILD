pkgname=gawk
pkgver=4.2.0
pkgrel=1
pkgdesc="GNU version of awk"
arch=('x86_64')
url="https://www.gnu.org/software/gawk/"
license=('GPL')
#depends=()
source=("https://ftp.gnu.org/gnu/gawk/gawk-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gawk-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gawk-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('3076b2f42e43fff0ce63dcaa3fb749ce421473d0abc3e1e2d9dd375207d3e35c98d5bf91c3179f49156e8a4977424c16bb2d3d662846ad487153729dd4cfeb4c')

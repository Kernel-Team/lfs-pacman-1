pkgname=gawk
pkgver=4.1.4
pkgrel=1
pkgdesc="GNU version of awk"
arch=('x86_64')
url="https://www.gnu.org/software/gawk/"
license=('GPL')
#depends=()
source=("https://ftp.gnu.org/gnu/gawk/gawk-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gawk-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gawk-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6a0e9cf086544212f54b54261dcd517b611aaf495ef99c4b7740d07e363bb00c5632f3d7fd5e12a954d5aa9793764162a57453e0e18884b29c6c54b5f444c097')

if [ "${gnat_available}" == "0" ]
then
	sha512sums+=('5115ac3be0badc5125ee048a98230f18363d72107da3325ce602c0e618cee2e3646a0decc00a2388f14bc61bfed51dd0622f365f5f7ee8b0cec2187ebcf8e075')
fi

pkgname=gcr
pkgver=3.27.92
pkgrel=1
pkgdesc="A library for bits of crypto UI and parsing"
arch=('x86_64')
url="https://git.gnome.org/browse/gcr/"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/gcr/${pkgver:0:4}/gcr-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gcr-${pkgver}"

	./configure --prefix=/usr \
		--disable-update-mime \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gcr-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6aeca5b24e34d334fe45a6ece0e6ede3f3dadc3b45f9cbd327b8e3d8f5742c2602b9814aff7b6b79facd39810de160c07449d64adbdf44165fa688911a9d11a6')

pkgname=gcr
pkgver=3.20.0
pkgrel=1
pkgdesc="A library for bits of crypto UI and parsing"
arch=('x86_64')
url="https://git.gnome.org/browse/gcr/"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/gcr/${pkgver:0:4}/gcr-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gcr-${pkgver}"

	./configure --prefix=/usr \
		--disable-update-mime \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gcr-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0acd0fb085a38507b1cc895ac773f91c6f4e14d2ea7e27b8e74c85ef78426597b6ea08ebee696452b0651939ec4a0d8a4a2523c41b3a8a0bd1b0d7b338b1d9c7')

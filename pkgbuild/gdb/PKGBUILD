pkgname=gdb
pkgver=7.12.1
pkgrel=1
pkgdesc="The GNU Debugger"
arch=('x86_64')
url="https://www.gnu.org/software/gdb/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/gdb/gdb-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gdb-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--with-system-readline \
		--without-guile \
		--with-system-gdbinit=/etc/gdb/gdbinit

	make
}

package() {
	cd "${srcdir}/gdb-${pkgver}"

	make install -C gdb DESTDIR="${pkgdir}"
}

sha512sums=('0ac8d0a495103611ef41167a08313a010dce6ca4c6d827cbe8558a0c1a1a8a6bfa53f1b7704251289cababbfaaf9e075550cdf741a54d6cd9ca3433d910efcd8')

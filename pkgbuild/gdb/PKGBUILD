pkgname=gdb
pkgver=8.0.1
pkgrel=1
pkgdesc="The GNU Debugger"
arch=('x86_64')
url="https://www.gnu.org/software/gdb/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/gdb/gdb-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gdb-${pkgver}"

	unset CC CXX

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--with-system-readline \
		--without-guile \
		--with-system-gdbinit=/etc/gdb/gdbinit

	make
}

package() {
	cd "${srcdir}/gdb-${pkgver}"

	make install -C gdb DESTDIR="${pkgdir}"
}

sha512sums=('5eb328910033f0918058be2f92caebf1e8dfc6caa3c730d99d621627e53de3c1b43761c2f683d53555893253c2f06768cbf56cdea051a3d291ffb6cfae87b5e1')

pkgname=gdb
pkgver=8.1.1
pkgrel=1
pkgdesc="The GNU Debugger"
arch=('x86_64')
url="https://www.gnu.org/software/gdb/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/gdb/gdb-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gdb-${pkgver}"

	export CC="gcc"
	export CXX="g++"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--with-system-readline \
		--without-guile \
		--with-system-gdbinit=/etc/gdb/gdbinit

	make
}

package() {
	cd "${srcdir}/gdb-${pkgver}"

	make install -C gdb DESTDIR="${pkgdir}"
}

sha512sums=('7dcd5e8c90de92f577834d887b5f54edb93a07083bfe661bc46c270a6cc4919f0b348e7e2fe8ae4511298a570ef150eeefdc667ef7cf527f0cf60943177ab6c9')

pkgname=geany
pkgver=1.30.1
pkgrel=1
pkgdesc="Fast and lightweight IDE"
arch=('x86_64')
url="http://www.geany.org/"
license=('GPL')
#depends=()
source=("http://download.geany.org/geany-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/geany-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/geany-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('55fb446b0c517ccee4d2f3023334b96a336788422a4dc41207a4f290c5d4b88df1eefa4b7f6fddf0567224f890ae7bea396306a935512f17e01682034f7200e3')

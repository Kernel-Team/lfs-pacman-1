pkgname=geany
pkgver=1.31
pkgrel=1
pkgdesc="Fast and lightweight IDE"
arch=('x86_64')
url="http://www.geany.org/"
license=('GPL')
#depends=()
source=("http://download.geany.org/geany-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/geany-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/geany-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6b5b07928173ef2673867ce2ab9cef1d74dfa97a5ca3515bfb85c0c4d239d7964d5f8d912dce3d97cad06a92c7a967abd454a5e4dc91e481d47de7773d8f6503')

pkgname=gedit
pkgver=3.22.1
pkgrel=1
pkgdesc="GNOME Text Editor"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Gedit"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gedit/${pkgver:0:4}/gedit-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gedit-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile \
		--disable-updater

	make
}

package() {
	cd "${srcdir}/gedit-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7251732f353b1d9dab0fe447fe90b2259df34ff0694d8731ce3be531c21ac82ab6e7f4a07090aeef364640154f4ba6103539a253bc7942952dcf1e331418f0eb')

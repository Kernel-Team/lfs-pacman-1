pkgname=gedit
pkgver=3.27.92
pkgrel=1
pkgdesc="GNOME Text Editor"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Gedit"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gedit/${pkgver:0:4}/gedit-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gedit-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile \
		--disable-updater

	make
}

package() {
	cd "${srcdir}/gedit-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('602baaef252cc43babd6ccf22dd600e65974e6c08175eaf281b83555f6420a5ebdd69799fd318b9a6d030d317951cd16d5d1132db9a6a4df2a811dbeccf2d297')

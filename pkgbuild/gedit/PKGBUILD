pkgname=gedit
pkgver=3.22.0
pkgrel=1
pkgdesc="GNOME Text Editor"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Gedit"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gedit/${pkgver:0:4}/gedit-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gedit-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile \
		--disable-updater

	make
}

package() {
	cd "${srcdir}/gedit-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7137fe96cca072c294dea545cb7fafee7ca2da84d8b7756e03a5f5dde6cdca8a3eec6f58136cec0aeeb49c294acd000f01bf3a44447411924aff107dbab26efb')

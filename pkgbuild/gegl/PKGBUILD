pkgname=gegl
pkgver=0.3.18
pkgrel=1
pkgdesc="Graph based image processing framework"
arch=('x86_64')
url="http://gegl.org/"
license=('GPL3' 'LGPL3')
#depends=()
source=("https://download.gimp.org/pub/gegl/${pkgver:0:3}/gegl-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/gegl-${pkgver}"

	./configure --prefix=/usr --disable-docs --disable-introspection

	make
}

package() {
	cd "${srcdir}/gegl-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('3ac22cf2dff91135c8c144c961712f15c3a4345d9364b6a62dad89cfbfe26d5e46bd23aa025321a06e769d4d9ef54e68053a345f987d231cff30b89dd470d26e')

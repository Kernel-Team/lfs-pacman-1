pkgname=geoclue
pkgver=2.4.8
pkgrel=1
pkgdesc="Modular geoinformation service built on the D-Bus messaging system"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/GeoClue/"
license=('LGPL')
#depends=()
source=("https://www.freedesktop.org/software/geoclue/releases/${pkgver:0:3}/geoclue-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/geoclue-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/geoclue-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/usr/libexec/geoclue-2.0"
	rm -rf "${pkgdir}/usr/share/applications"
}

sha512sums=('1741962b4bdce925af090961bd50f4d0d934f7b81e53968d5d8ea7957e8593c4c9a8084bbd149c454d76f2af35be036748f212c99506b475567384a43f579f3d')

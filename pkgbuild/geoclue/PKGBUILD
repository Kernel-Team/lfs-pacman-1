pkgname=geoclue
pkgver=2.4.11
pkgrel=1
pkgdesc="Modular geoinformation service built on the D-Bus messaging system"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/GeoClue/"
license=('LGPL')
#depends=()
source=("https://www.freedesktop.org/software/geoclue/releases/${pkgver:0:3}/geoclue-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/geoclue-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/geoclue-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/etc/xdg"
	rm -rf "${pkgdir}/usr/libexec/geoclue-2.0"
	rm -rf "${pkgdir}/usr/share/applications"
}

sha512sums=('a2b617e48cd60f930e75e3dbb6ac2b802cae307fdc2475ed727b3e0cc56a4eb14f3c240a4094e5ceb904bc537499d67d01487f8f91325d759964d04305e82130')

pkgname=geocode-glib
pkgver=3.26.0
pkgrel=1
pkgdesc="Helper library for geocoding services"
arch=('x86_64')
url="https://git.gnome.org/browse/geocode-glib/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/geocode-glib/${pkgver:0:4}/geocode-glib-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"

	cd "${srcdir}/geocode-glib-${pkgver}"

	sed -i 's#from "@filename@"##' geocode-glib/geocode-enum-types.h.in
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Denable-gtk-doc=true \
		-Denable-installed-tests=false \
		"${srcdir}/geocode-glib-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('d0924673b669a29d04ad5f1d70797e98b67af3bc85edd8870d21d22d18ec8f2b93a13f94226e295ccb3c6e83d1545bdd2361ebacdbb1928c06b8beed36759838')

pkgname=giflib
pkgver=5.1.7
pkgrel=1
pkgdesc="A library for reading and writing gif images"
arch=('x86_64')
url="https://sourceforge.net/projects/giflib/"
license=('MIT')
#depends=()
source=("https://downloads.sourceforge.net/giflib/giflib-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/giflib-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/giflib-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('b30c3707839a6d66a3e54d92607c303e5ca3d04d6a02d2037fdc8b80386f9a7fa4148727705014481c3c167bdfac2e99d7e4db1ff7f277b64bd2d9193a89f8b0')

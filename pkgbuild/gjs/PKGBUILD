pkgname=gjs
pkgver=1.52.0
pkgrel=1
pkgdesc="Javascript Bindings for GNOME"
arch=('x86_64')
url="http://live.gnome.org/Gjs"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gjs/${pkgver:0:4}/gjs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gjs-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gjs-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/usr/libexec"
}

sha512sums=('6148e799b3887f3cee6fb28ed6c3a1f4495b0301c5db1d25b3ee930faebfce9f7058af02fc157e9caf83e6755c15afdd3aac2fb40269184c04326a54d39e053a')

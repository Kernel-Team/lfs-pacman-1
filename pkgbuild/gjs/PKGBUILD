pkgname=gjs
pkgver=1.48.3
pkgrel=1
pkgdesc="Javascript Bindings for GNOME"
arch=('x86_64')
url="http://live.gnome.org/Gjs"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gjs/${pkgver:0:4}/gjs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gjs-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gjs-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/usr/libexec"
}

sha512sums=('6fdfb4fb17336f94a077e0d1a5a98c88437a2d3cc361677672e10d36dc220b46f2554cfe6fc3c71e644ea63ff38d5e638c667e3f5f85db7332cdf4ae6326f27f')

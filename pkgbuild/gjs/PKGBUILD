pkgname=gjs
pkgver=1.48.6
pkgrel=1
pkgdesc="Javascript Bindings for GNOME"
arch=('x86_64')
url="http://live.gnome.org/Gjs"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gjs/${pkgver:0:4}/gjs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gjs-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gjs-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/usr/libexec"
}

sha512sums=('29d70bbee722bbb58eb95acf1409d5e34930d11ebd9525f3b7d0050a13b72eb50e357df7c2bb9bc2ba147dcfdbc2dfb1f1f7b710347473d05cd484006b6ea256')

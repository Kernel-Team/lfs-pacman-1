pkgname=gjs
pkgver=1.48.5
pkgrel=1
pkgdesc="Javascript Bindings for GNOME"
arch=('x86_64')
url="http://live.gnome.org/Gjs"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gjs/${pkgver:0:4}/gjs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gjs-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gjs-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/usr/libexec"
}

sha512sums=('7b41dfd573fac325fbf3c429a4925ee1c3ae202a8f9a8300824ec4978b3cddcdcaec49abd1fe02098026f55e52e8759dbb44e4439bf8c590c0c565d111828371')

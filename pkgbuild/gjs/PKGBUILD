pkgname=gjs
pkgver=1.52.1
pkgrel=1
pkgdesc="Javascript Bindings for GNOME"
arch=('x86_64')
url="http://live.gnome.org/Gjs"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gjs/${pkgver:0:4}/gjs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gjs-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gjs-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/usr/libexec"
}

sha512sums=('4d8ffcb6972503d4ae05e59bcafaaef6e0f1e0d07131fefaad1e21cd630e475ef1b7910568b5e515b6b5ab0edad84607ba1b1f98dc0fc6b18936c70d754c6ae1')

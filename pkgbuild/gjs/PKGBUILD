pkgname=gjs
pkgver=1.52.2
pkgrel=1
pkgdesc="Javascript Bindings for GNOME"
arch=('x86_64')
url="http://live.gnome.org/Gjs"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gjs/${pkgver:0:4}/gjs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gjs-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gjs-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/usr/libexec"
}

sha512sums=('4f39070dbb547ff23b626935f20c5381c323e9f66047a5e2bb6abf3d15d5c393274094bc5fe505d87b5fdbcbcb2b9415fcae0f6ed333780d68ec958d6a7c3a98')

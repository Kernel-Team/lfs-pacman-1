pkgname=gjs
pkgver=1.56.0
pkgrel=1
pkgdesc="Javascript Bindings for GNOME"
arch=('x86_64')
url="http://live.gnome.org/Gjs"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gjs/${pkgver:0:4}/gjs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gjs-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gjs-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/usr/libexec"
}

sha512sums=('c39df41511f901078bd5a3caa0b08aa7c96efcf5303982169d7b051b211a410ff48d9e7e5ee7c0072d9439fa3e513649f7a72b7ff9eb715352ebea21d6977007')

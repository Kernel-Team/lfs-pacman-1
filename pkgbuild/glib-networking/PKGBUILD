pkgname=glib-networking
pkgver=2.54.1
pkgrel=1
pkgdesc="Network-related giomodules for glib"
arch=('x86_64')
url="https://git.gnome.org/browse/glib-networking/"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/glib-networking/${pkgver:0:4}/glib-networking-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/glib-networking-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/glib-networking-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('8356d835914e33df43f4f2bb6a915ddcd48dd0565e4d5bc1f1d692e9c3124ee4421b99f87f2586f74e9fed24ef7421159f3242fd1eb7bd74950bd25e860896ec')

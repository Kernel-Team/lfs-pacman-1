pkgname=glib-networking
pkgver=2.60.0.1
pkgrel=1
pkgdesc="Network-related giomodules for glib"
arch=('x86_64')
url="https://git.gnome.org/browse/glib-networking/"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/glib-networking/${pkgver:0:4}/glib-networking-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/glib-networking-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install

	rm -rf "${pkgdir}/usr/share/installed-tests"
}

sha512sums=('98a34a14cdbbcb4a9496bce807e7720dd9e103adbacd5dc44439d5fcaf02eef12c0385df95767d7603587331b84c7ad4a677f47b00583a46f15a022572a3690f')

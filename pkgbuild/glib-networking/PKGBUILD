pkgname=glib-networking
pkgver=2.53.90
pkgrel=1
pkgdesc="Network-related giomodules for glib"
arch=('x86_64')
url="https://git.gnome.org/browse/glib-networking/"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/glib-networking/${pkgver:0:4}/glib-networking-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/glib-networking-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/glib-networking-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('cd4f8aaf6309697dfcbee2673e26719fc26cc8a2efae8d1b2035dd9754ca66c6fbc8c97ce97a12fbb2a60f940ca396393b4fe145c04d0e3f098a0405e24b5412')

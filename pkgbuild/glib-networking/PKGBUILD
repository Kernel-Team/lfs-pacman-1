pkgname=glib-networking
pkgver=2.50.0
pkgrel=1
pkgdesc="Network-related giomodules for glib"
arch=('x86_64')
url="https://git.gnome.org/browse/glib-networking/"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/glib-networking/${pkgver:0:4}/glib-networking-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/glib-networking-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/glib-networking-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a1e9d28a546f83d461057f088ca2467a32be110f444c8ede1cbfeb20244637d8d5fb5b5b0ee4485feb517beebc3536671442bbfdd3ba01663b52e6da138bd7fe')

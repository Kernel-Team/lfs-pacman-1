pkgname=glib-networking
pkgver=2.56.1
pkgrel=1
pkgdesc="Network-related giomodules for glib"
arch=('x86_64')
url="https://git.gnome.org/browse/glib-networking/"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/glib-networking/${pkgver:0:4}/glib-networking-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/glib-networking-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install

	rm -rf "${pkgdir}/usr/share/installed-tests"
}

sha512sums=('474d3e334b901c7445a2ee38018a23bbf0a1f4f7403952bf0e1c882f5c9a518b11696d0c69695b3cb378e33e15f619414e46733172ff6564732b96f3c375003d')

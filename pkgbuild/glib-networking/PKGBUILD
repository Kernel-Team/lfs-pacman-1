pkgname=glib-networking
pkgver=2.54.0
pkgrel=1
pkgdesc="Network-related giomodules for glib"
arch=('x86_64')
url="https://git.gnome.org/browse/glib-networking/"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/glib-networking/${pkgver:0:4}/glib-networking-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/glib-networking-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/glib-networking-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('283638551fd5687936898e321f7bbb144b7d782c9b60b5626d5416d27407dcee427f6af5df29663038c74b9cc0d42d25b37290d186f0abaed7ef0a53e46612e3')

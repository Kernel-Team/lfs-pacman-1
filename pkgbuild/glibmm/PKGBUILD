pkgname=glibmm
pkgver=2.54.0
pkgrel=1
pkgdesc="C++ bindings for GLib"
arch=('x86_64')
url="http://www.gtkmm.org/"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.gnome.org/sources/glibmm/${pkgver:0:4}/glibmm-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/glibmm-${pkgver}"

	export CXX="${CXX} -std=c++14"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/glibmm-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e19d9109cc1c558042b17e9a75789f74de9f9cf84e41b4bf8f6484d18be2b4b1c297c44025a36192408e55819b071722db24831298c6a1f96e430df700059e2c')

pkgname=glibmm
pkgver=2.52.0
pkgrel=1
pkgdesc="C++ bindings for GLib"
arch=('x86_64')
url="http://www.gtkmm.org/"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.gnome.org/sources/glibmm/${pkgver:0:4}/glibmm-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/glibmm-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/glibmm-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('45cbbe4ce4ba04dcadbcc3b46159dda194235c10a7287075724b0e1c19db2e4db061dc2a66823205f6884b30e2ef87ceafdf9cc2970212a2424535dbe3b9a262')

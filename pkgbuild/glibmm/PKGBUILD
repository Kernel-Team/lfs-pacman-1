pkgname=glibmm
pkgver=2.51.7
pkgrel=1
pkgdesc="C++ bindings for GLib"
arch=('x86_64')
url="http://www.gtkmm.org/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/glibmm/${pkgver:0:4}/glibmm-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/glibmm-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/glibmm-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('5ee7311fb6502508554a7a872ee90f1f3576035b6f1ce5abdd49aab01ab7d7673258f5411972aa0f1f9a378d2e28bca725e921455ec071135f72c242f8efffd0')

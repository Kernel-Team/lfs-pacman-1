pkgname=gmime
pkgver=3.0.3
pkgrel=1
pkgdesc="A C/C++ MIME creation and parser library with support for S/MIME, PGP, and Unix mbox spools"
arch=('x86_64')
url="https://github.com/jstedfast/gmime"
license=('LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/gmime/${pkgver:0:3}/gmime-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gmime-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gmime-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7a4c3026a73f4eb5c9b7717fa6dc0010191dd1ce5296792f5fb58c813a843db7377e70c7d36b59461927424f15df2b9ab58cea425b6ce64ca56f75fe8bbfca5d')

pkgname=gmime
pkgver=2.6.23
pkgrel=1
pkgdesc="Glorious MIME Utility Library"
arch=('x86_64')
url="http://spruce.sourceforge.net/gmime/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gmime/${pkgver:0:3}/gmime-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gmime-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-smime

	make
}

package() {
	cd "${srcdir}/gmime-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('2ff6718b7a555cd5b34848399f29c7d0aa5a15e1f3cb46e9258c499e874191ee00f41b737386805d3000bad34367d174a25c45d38ba90cba7902400e733afa14')

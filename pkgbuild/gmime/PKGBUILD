pkgname=gmime
pkgver=3.0.2
pkgrel=1
pkgdesc="A C/C++ MIME creation and parser library with support for S/MIME, PGP, and Unix mbox spools"
arch=('x86_64')
url="https://github.com/jstedfast/gmime"
license=('LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/gmime/${pkgver:0:3}/gmime-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gmime-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gmime-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('246f489c168ce7e04fab664b7e9ae7772ae52f0063fb0eac9153460d84fa5d9712457d81fbd1bdcdadb7e03007cf71ed3bad5287f1639214f54167427c9209ca')

pkgname=gmime3
pkgver=3.0.1
pkgrel=1
pkgdesc="A C/C++ MIME creation and parser library with support for S/MIME, PGP, and Unix mbox spools"
arch=('x86_64')
url="https://github.com/jstedfast/gmime"
license=('LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/gmime/${pkgver:0:3}/gmime-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gmime-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gmime-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d901ca436309acdf4c0f2b14aaf7bee4250eadc56eec6d00180a4c329ed0215c8abc082b7e9d3f79c439f321cf781932c43ef37c90f23a1ca3bc424ef55f7286')

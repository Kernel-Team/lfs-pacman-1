pkgname=gnome-backgrounds
pkgver=3.25.4
pkgrel=1
pkgdesc="Background images and data for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-backgrounds/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-backgrounds/${pkgver:0:4}/gnome-backgrounds-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-backgrounds-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('ab7ce396bce13b28d7495785ddf332fb13cf3f8b04c710ec723493e6e594ae96fc6698db80527d5b0cd9ab1664c3919dba9e8910beadbe7e90704b39db00e950')

pkgname=gnome-backgrounds
pkgver=3.27.90
pkgrel=1
pkgdesc="Background images and data for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-backgrounds/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-backgrounds/${pkgver:0:4}/gnome-backgrounds-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-backgrounds-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('3c787cd4f9a23e013c4451f6d5321abde086199482b172ddd8835b50f4f24b79fdb842454d5ca80e38e615195bab3b1052d75f3733d53fc12aa55eeb508a7c5d')

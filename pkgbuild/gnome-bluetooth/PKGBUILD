pkgname=gnome-bluetooth
pkgver=3.27.92
pkgrel=1
pkgdesc="The GNOME Bluetooth Subsystem"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeBluetooth"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-bluetooth/${pkgver:0:4}/gnome-bluetooth-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Dicon_update=false \
		-Dgtk_doc=true \
		"${srcdir}/gnome-bluetooth-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('490409a938473181bd7b3c2a290a568b91f541427243ace47be73bdddf7b1ee8c799ed1af02850b0694dacf68f38746ecfa124d5f60d98b09f50465d66f753ea')

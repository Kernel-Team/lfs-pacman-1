pkgname=gnome-bluetooth
pkgver=3.20.1
pkgrel=1
pkgdesc="The GNOME Bluetooth Subsystem"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeBluetooth"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-bluetooth/${pkgver:0:4}/gnome-bluetooth-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-bluetooth-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-desktop-update \
		--disable-icon-update \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gnome-bluetooth-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('945dde99c6531e369702dea22e60f5b05759d751b16b091fc67c256e949cee8153f60ac7ad616c086366a0141b263b068fad28bab4b50b84356d59b4e464d88a')

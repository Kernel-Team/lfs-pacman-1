pkgname=gnome-bluetooth
pkgver=3.28.2
pkgrel=1
pkgdesc="The GNOME Bluetooth Subsystem"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeBluetooth"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-bluetooth/${pkgver:0:4}/gnome-bluetooth-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Dicon_update=false \
		-Dgtk_doc=true \
		"${srcdir}/gnome-bluetooth-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('03f66f8c5c195b10cf2c13dc93191b9f2f79adae099ddb8037ef1277731f37b8f0a42b603e8aacbe2fb108be6abf7a77a823d86d5fac62a42a53e3498d53d87e')

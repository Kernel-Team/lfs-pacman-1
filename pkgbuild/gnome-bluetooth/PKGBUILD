pkgname=gnome-bluetooth
pkgver=3.25.91
pkgrel=1
pkgdesc="The GNOME Bluetooth Subsystem"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeBluetooth"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-bluetooth/${pkgver:0:4}/gnome-bluetooth-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Denable-icon-update=false \
		-Denable-gtk-doc=true \
		"${srcdir}/gnome-bluetooth-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('f2271b048f83c2704a5f00874e14a3995b6e12d24c4921de14910ba924b79540295a47890044aec561edc5e39cea51bb41a899d84f70fddcb55756b136248026')

pkgname=gnome-bluetooth
pkgver=3.26.0
pkgrel=1
pkgdesc="The GNOME Bluetooth Subsystem"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeBluetooth"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-bluetooth/${pkgver:0:4}/gnome-bluetooth-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Denable-icon-update=false \
		-Denable-gtk-doc=true \
		"${srcdir}/gnome-bluetooth-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('db3c870392f5444d987208c73e888d5339cc6df2c59de84ed550ab0c4b3a4ff56326a197735300965ec5d10f1cab725dbb29578f0056ff4e3d4f5ba6ea1f37c5')

pkgname=gnome-calculator
pkgver=3.26.0
pkgrel=1
pkgdesc="GNOME Scientific calculator"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Calculator"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-calculator/${pkgver:0:4}/gnome-calculator-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-calculator-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-calculator-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fbcf387bfc2e1e33f2b52badd702d8a6701121f71eb10bb88f475d10673964fd6e780808ea41e1061f102be2ed05c79d2a65e898d8eba59432d3d88464719ebb')

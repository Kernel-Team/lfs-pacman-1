pkgname=gnome-calculator
pkgver=3.25.92
pkgrel=1
pkgdesc="GNOME Scientific calculator"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Calculator"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-calculator/${pkgver:0:4}/gnome-calculator-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-calculator-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-calculator-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0cf7d9da2744106d13be26e498f7f2dbbac14594fff66989b63296ba02b27561976088cb133640f3fe3ab1cde2f7b2c800d135b4bcedc576ea82bf57e368e317')

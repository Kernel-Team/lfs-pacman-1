pkgname=gnome-calculator
pkgver=3.28.2
pkgrel=1
pkgdesc="GNOME Scientific calculator"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Calculator"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-calculator/${pkgver:0:4}/gnome-calculator-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-calculator-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-calculator-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('63b750a24c12feb4db20cdff6bbeb2ce595c7ba165b264c03a507ff9b7c10b70f874230a0f80741ccae775c30a5a39acc9c1fe39270b435eb6d4caef1d92dce5')

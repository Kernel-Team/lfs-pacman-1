pkgname=gnome-calculator
pkgver=3.24.0
pkgrel=1
pkgdesc="GNOME Scientific calculator"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Calculator"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-calculator/${pkgver:0:4}/gnome-calculator-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-calculator-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-calculator-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('55968f3a307748050089652394a3652b8e199be9abf87d43e732874526dc2f08c4521e302a69afd2c09705ffa67a890fc2217503dd31ef51959df9189364c22f')

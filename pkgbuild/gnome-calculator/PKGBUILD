pkgname=gnome-calculator
pkgver=3.27.92
pkgrel=1
pkgdesc="GNOME Scientific calculator"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Calculator"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-calculator/${pkgver:0:4}/gnome-calculator-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-calculator-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-calculator-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('bd3995bbe442f0fe2f0a386ea9d51fcc850da708b9524083c90e2766b13dbf972ef14ae37edb05e98fb5ecaf5b73f0aa872b1d3e32ea6ed6b9913ef350b8f6fd')

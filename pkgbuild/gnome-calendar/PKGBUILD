pkgname=gnome-calendar
pkgver=3.26.1
pkgrel=1
pkgdesc="Simple and beautiful calendar application designed to perfectly fit the GNOME desktop"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Calendar"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-calendar/${pkgver:0:4}/gnome-calendar-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Denable-gtk-doc=true \
		"${srcdir}/gnome-calendar-${pkgver}"

#		-Denable-gtk-doc=true \

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('70634f65245e25d117e44d89296bb71ecf5fa46fa4e46b02f6f04020945d2503fd398acfd7b9e7f582ad62f63e0a0a2203e2b28e097e159fe10908d9143074e6')

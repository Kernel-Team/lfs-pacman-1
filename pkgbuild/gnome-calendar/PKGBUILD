pkgname=gnome-calendar
pkgver=3.26.0
pkgrel=1
pkgdesc="Simple and beautiful calendar application designed to perfectly fit the GNOME desktop"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Calendar"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-calendar/${pkgver:0:4}/gnome-calendar-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-calendar-${pkgver}"

#		-Denable-gtk-doc=true \

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('69ee7b25e5b3ee14a0dcd60c5e879b56f61139414358c32c188c3be219454f884d2592629a6b6ab8e284f536bf35022593ca29f96f8edc183b5e55a6ded1ef1f')

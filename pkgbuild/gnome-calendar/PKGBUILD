pkgname=gnome-calendar
pkgver=3.25.90
pkgrel=1
pkgdesc="Simple and beautiful calendar application designed to perfectly fit the GNOME desktop"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Calendar"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-calendar/${pkgver:0:4}/gnome-calendar-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Denable-gtk-doc=true \
		"${srcdir}/gnome-calendar-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('4484ef7a57e16cc5d312a72d2225f4ed60183c8ae745276fc8c690c4c9aead10a576072674df0c52839327d8a15fe6ca2d89841d2d5d6ebd9a8ad805243e5223')

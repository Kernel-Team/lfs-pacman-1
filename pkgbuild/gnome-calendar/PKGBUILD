pkgname=gnome-calendar
pkgver=3.24.3
pkgrel=1
pkgdesc="Simple and beautiful calendar application designed to perfectly fit the GNOME desktop"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Calendar"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-calendar/${pkgver:0:4}/gnome-calendar-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-calendar-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gnome-calendar-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('979a369a5c5fc7d4621ff1ae69dfb1b53002cc014b2f1c480c0122da5bf4282c1928df9dcdb3528352e9589099184ab51f96d1a065e346be8e639aa5fc96ac67')

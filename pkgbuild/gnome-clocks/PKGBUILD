pkgname=gnome-clocks
pkgver=3.24.0
pkgrel=1
pkgdesc="Clocks applications for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Clocks"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-clocks/${pkgver:0:4}/gnome-clocks-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-clocks-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-clocks-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f29a61ac9634008fa918f9f08c6e24c93816c0077687bd2feff3ef2c62c0db475076de5dbc1e223027627e985c4e4362f0cdf1a47821356c0a9ef9c4cd672de1')

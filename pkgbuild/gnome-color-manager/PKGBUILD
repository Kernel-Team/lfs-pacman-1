pkgname=gnome-color-manager
pkgver=3.25.90
pkgrel=1
pkgdesc="GNOME Color Profile Tools"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-color-manager/"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/gnome-color-manager/${pkgver:0:4}/gnome-color-manager-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Denable-packagekit=false \
		"${srcdir}/gnome-color-manager-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('681a09a3a88d1f3aa42e6c713df82077d0df757fefa1f21a75137fea10dab846ae1a9c7f9a6c3756a677e6667c6cde3ccdc74f505f155058a0d34d2f2e84f434')

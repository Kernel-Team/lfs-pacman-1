pkgname=gnome-color-manager
pkgver=3.24.0
pkgrel=1
pkgdesc="GNOME Color Profile Tools"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-color-manager/"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/gnome-color-manager/${pkgver:0:4}/gnome-color-manager-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-color-manager-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-packagekit

	make
}

package() {
	cd "${srcdir}/gnome-color-manager-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e145caf4e885ea6e9c4ee5a5b4d800d70af338e26d3bfcda81e20c6144e36d0581638d07099302d30787d6d30e9d58f2b8373f6585ae3788df825d6d24f5b003')

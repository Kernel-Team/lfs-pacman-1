pkgname=gnome-contacts
pkgver=3.22.1
pkgrel=1
pkgdesc="Contacts Manager for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Contacts"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/gnome-contacts/${pkgver:0:4}/gnome-contacts-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-contacts-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gnome-contacts-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d93ed6c65ffdabe1925cc795b88ff374fe69e03fcd36af7c2fc67a5236b90ab6af4bd269b6fc3b344fcd6b4688d866628b8b090bb62de95f8bd0c2e40c26a107')

pkgname=gnome-control-center
pkgver=3.28.0
pkgrel=1
pkgdesc="GNOME's main interface to configure various aspects of the desktop"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-control-center/"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/gnome-control-center/${pkgver:0:4}/gnome-control-center-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Ddocumentation=true \
		"${srcdir}/gnome-control-center-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install

	chown 27:root "${pkgdir}/usr/share/polkit-1/rules.d"
	chmod 700 "${pkgdir}/usr/share/polkit-1/rules.d"
}

sha512sums=('7a7edb09986b3375674a49c397358e39f654461b6497d08b84a16ba2a0744e7479d39f552de557048fd671b98012776c2e9e52f994524e9d2a71feac8e92668e')

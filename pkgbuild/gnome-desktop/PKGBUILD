pkgname=gnome-desktop
pkgver=3.32.0
pkgrel=1
pkgdesc="Library with common API for various GNOME modules"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-desktop/"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-desktop/${pkgver:0:4}/gnome-desktop-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Dgnome_distributor=Krejzi \
		-Dgtk_doc=true \
		"${srcdir}/gnome-desktop-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('7e31e11894e23cccd80c82fb30b3614a00dd62f211b8110b23df00cf567e4f811106a39368a6395abfed996b018865fb624ac0a97a568a8a16957584b674b66d')

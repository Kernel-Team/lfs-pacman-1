pkgname=gnome-desktop
pkgver=3.25.92
pkgrel=1
pkgdesc="Library with common API for various GNOME modules"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-desktop/"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-desktop/${pkgver:0:4}/gnome-desktop-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-desktop-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-gnome-distributor=Krejzi

	make
}

package() {
	cd "${srcdir}/gnome-desktop-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f4f9ebb7f1a46436d60f3f5a223df1c023f185f33fd600b16a09fd9bd3bbc0ce042d7c81d5b7ed3cb948342cfde65307a732136320676e80bb892e2e97351353')

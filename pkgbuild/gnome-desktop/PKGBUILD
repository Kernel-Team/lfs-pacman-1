pkgname=gnome-desktop
pkgver=3.26.2
pkgrel=1
pkgdesc="Library with common API for various GNOME modules"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-desktop/"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-desktop/${pkgver:0:4}/gnome-desktop-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-desktop-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-gnome-distributor=Krejzi

	make
}

package() {
	cd "${srcdir}/gnome-desktop-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1425bead81a63d9d19f09fb8d23cd2611645898a910887c2b6a672bfbec3dd956e29e1d8c5f941d06929febc7734dec0550f7a15336583fcf9be41f1a4e9c783')

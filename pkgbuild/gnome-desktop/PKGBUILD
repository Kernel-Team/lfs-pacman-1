pkgname=gnome-desktop
pkgver=3.27.92
pkgrel=1
pkgdesc="Library with common API for various GNOME modules"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-desktop/"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-desktop/${pkgver:0:4}/gnome-desktop-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-desktop-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-gnome-distributor=Krejzi

	make
}

package() {
	cd "${srcdir}/gnome-desktop-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e53eb2ead1a96a980aa5e64b59b7e64af521d3a6b4d039387d4f432db7c2327509bddf254abedf0185bc910460fe9f3aac31476e0d769028129a086a1178cc92')

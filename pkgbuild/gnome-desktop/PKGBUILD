pkgname=gnome-desktop
pkgver=3.26.0
pkgrel=1
pkgdesc="Library with common API for various GNOME modules"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-desktop/"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-desktop/${pkgver:0:4}/gnome-desktop-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-desktop-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-gnome-distributor=Krejzi

	make
}

package() {
	cd "${srcdir}/gnome-desktop-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9d14d6b12d3435234f46d317f7481911e775223d36f0ae5887484f9e7cad6cf70f2e0c2cda14c92d3c9e082fc708f2c3524dd7ee36672bdcc12a37e8ea8ec103')

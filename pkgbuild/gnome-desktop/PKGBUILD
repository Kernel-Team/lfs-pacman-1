pkgname=gnome-desktop
pkgver=3.28.1
pkgrel=1
pkgdesc="Library with common API for various GNOME modules"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-desktop/"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-desktop/${pkgver:0:4}/gnome-desktop-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-desktop-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--with-gnome-distributor=Krejzi

	make
}

package() {
	cd "${srcdir}/gnome-desktop-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f31812275c7da91bcc526d92dd77f4d88930fe9c3de741c954bd2589830a70eb538583706b725935c6465213850e29530341e30f984094c53fe0003958872c6d')

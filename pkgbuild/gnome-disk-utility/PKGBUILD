pkgname=gnome-disk-utility
pkgver=3.26.1
pkgrel=1
pkgdesc="Disk Management Utility for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-disk-utility/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-disk-utility/${pkgver:0:4}/gnome-disk-utility-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-disk-utility-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('b962424759e30daf91428d1121bfad44dac7086e45e6f4d07a5df1482aab8380d8ac83f0dd4a7c4542d502c253cef0caed594dc478b1b1809996ff03744b403a')

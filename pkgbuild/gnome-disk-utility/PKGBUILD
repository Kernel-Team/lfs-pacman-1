pkgname=gnome-disk-utility
pkgver=3.28.3
pkgrel=1
pkgdesc="Disk Management Utility for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-disk-utility/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-disk-utility/${pkgver:0:4}/gnome-disk-utility-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-disk-utility-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('3ecb77f4ea4103d8261c1310c644b2730deecde49e0e8bc72c3e445d8dbc4a25d0228fff541723dadd21a6edc9996bfe68eec7f2c68d5496eed18a3fb4ac4f35')

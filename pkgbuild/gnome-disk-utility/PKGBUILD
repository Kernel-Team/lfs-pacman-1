pkgname=gnome-disk-utility
pkgver=3.28.1
pkgrel=1
pkgdesc="Disk Management Utility for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-disk-utility/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-disk-utility/${pkgver:0:4}/gnome-disk-utility-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-disk-utility-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('8720f1ab93d08fad91a2f9717a3cb9f43c45d180bb65cbdc702df77769a4018ef87a55a05fc237824a664b9f14f0ebb5c5499e6185042761fbb4cc5863cfc47f')

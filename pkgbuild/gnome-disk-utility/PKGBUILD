pkgname=gnome-disk-utility
pkgver=3.28.0
pkgrel=1
pkgdesc="Disk Management Utility for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-disk-utility/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-disk-utility/${pkgver:0:4}/gnome-disk-utility-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-disk-utility-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('53686c043c2605b26921442712e8541a30f2571f9cfceca18ae0d24dc8511f8dff8a70d23cd71f51a5ef43bd277a0bd71b053c7763baa1adc5bd3f1efb9ffb88')

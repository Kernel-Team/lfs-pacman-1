pkgname=gnome-disk-utility
pkgver=3.27.92
pkgrel=1
pkgdesc="Disk Management Utility for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-disk-utility/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-disk-utility/${pkgver:0:4}/gnome-disk-utility-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-disk-utility-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('418d6675b1e0ad80d212cc3a4c4e85c594b51c379407e6ddacfd070ad975abc149f2849830c737f1f1828f5bf91f94a973916e9f5fec356a12d0f85f60a6164e')

pkgname=gnome-documents
pkgver=3.25.91
pkgrel=1
pkgdesc="A document manager application for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Documents"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-documents/${pkgver:0:4}/gnome-documents-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-documents-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-documents-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('784a15a28e5637089f61cad1c1f700f8f59acf7d745c6fd8c0b12f5e6ecdc3baa6cff485684efb66928ddb1ae959b53384f4d1c5940dc1c4696b55df44fda3ca')

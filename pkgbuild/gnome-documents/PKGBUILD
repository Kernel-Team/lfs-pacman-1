pkgname=gnome-documents
pkgver=3.24.2
pkgrel=1
pkgdesc="A document manager application for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Documents"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-documents/${pkgver:0:4}/gnome-documents-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-documents-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-documents-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6f9d6b4f8fdbd64fae9b1318407daef474d065c2d43bbdee5354464de6d647238fb1391838d18d5042e14949e04e53e221fcf87e15d81ee1e80e0062b86c7ac5')

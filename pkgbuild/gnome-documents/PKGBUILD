pkgname=gnome-documents
pkgver=3.26.0
pkgrel=1
pkgdesc="A document manager application for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Documents"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-documents/${pkgver:0:4}/gnome-documents-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-documents-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-documents-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('026769a1aedcd7810f156ecfe4bd442ee900d24e95c6853f859e4364293577125b1581912de4b71c2c3141c6193c2814725f551d134b6dfc5225a77edfa80062')

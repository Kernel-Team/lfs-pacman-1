pkgname=gnome-keyring
pkgver=3.28.0.1
pkgrel=1
pkgdesc="Stores passwords and encryption keys"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeKeyring"
license=('GPL' 'LGPL')
#depends=()
install=gnome-keyring.install
source=("https://download.gnome.org/sources/gnome-keyring/${pkgver:0:4}/gnome-keyring-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-keyring-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile \
		--with-pam-dir=/usr/lib/security

	make
}

package() {
	cd "${srcdir}/gnome-keyring-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e90e2b771d687daaa2e135be04a0d5684aefb13cb669991b131291d7ab8bebcaf9ea858d0de56be1c24c0e5fd27c05206495e001a441572f408e23bd54fac219')

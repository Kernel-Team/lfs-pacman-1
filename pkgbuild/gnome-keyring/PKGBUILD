pkgname=gnome-keyring
pkgver=3.27.2
pkgrel=1
pkgdesc="Stores passwords and encryption keys"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeKeyring"
license=('GPL' 'LGPL')
#depends=()
install=gnome-keyring.install
source=("https://download.gnome.org/sources/gnome-keyring/${pkgver:0:4}/gnome-keyring-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-keyring-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile \
		--with-pam-dir=/usr/lib/security

	make
}

package() {
	cd "${srcdir}/gnome-keyring-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('17ed8d63de4ff6057077c0a5cf2c8eef620819a031af40df9d1f4f7718f8870e5e7b7304e7516c25217c2a1b1dc8b01c19515e7f38cae2d2c25acf7789774e50')

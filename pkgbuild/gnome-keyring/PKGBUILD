pkgname=gnome-keyring
pkgver=3.20.1
pkgrel=1
pkgdesc="Stores passwords and encryption keys"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeKeyring"
license=('GPL' 'LGPL')
#depends=()
install=gnome-keyring.install
source=("https://download.gnome.org/sources/gnome-keyring/${pkgver:0:4}/gnome-keyring-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-keyring-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile \
		--with-pam-dir=/usr/lib/security

	make
}

package() {
	cd "${srcdir}/gnome-keyring-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a60d8a4b17a9c6d8c581578881abaf7d79de43045a314b401e3bfd3974edb4ab94117dd430203b721058f432b24bf6296e0b7c4fba1e66cccd2c2e9441787177')

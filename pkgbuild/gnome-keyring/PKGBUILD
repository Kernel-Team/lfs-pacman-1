pkgname=gnome-keyring
pkgver=3.27.92
pkgrel=1
pkgdesc="Stores passwords and encryption keys"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeKeyring"
license=('GPL' 'LGPL')
#depends=()
install=gnome-keyring.install
source=("https://download.gnome.org/sources/gnome-keyring/${pkgver:0:4}/gnome-keyring-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-keyring-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile \
		--with-pam-dir=/usr/lib/security

	make
}

package() {
	cd "${srcdir}/gnome-keyring-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('07a380116b9dba89505df5fd12149fd6970147444b4a49592be9359c979ffd67ea526c40c79fdc82ee45ff4351d253c483e760860eaeb53d5c9326e79bbcc7c0')

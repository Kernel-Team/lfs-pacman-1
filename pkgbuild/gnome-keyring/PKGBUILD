pkgname=gnome-keyring
pkgver=3.28.0.2
pkgrel=1
pkgdesc="Stores passwords and encryption keys"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeKeyring"
license=('GPL' 'LGPL')
#depends=()
install=gnome-keyring.install
source=("https://download.gnome.org/sources/gnome-keyring/${pkgver:0:4}/gnome-keyring-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-keyring-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile \
		--with-pam-dir=/usr/lib/security

	make
}

package() {
	cd "${srcdir}/gnome-keyring-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e47ce4839ef573879de527c769e554f040060ee5bcf2f7464e4d946aa58893cf164132f4be6a3acec79dd9cf4689c0ad2bc287fad1ce35b3eaa3ba6e870004b7')

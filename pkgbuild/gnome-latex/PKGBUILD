pkgname=gnome-latex
pkgver=3.28.1
pkgrel=1
pkgdesc="A LaTeX editor for the GNOME desktop"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/GNOME-LaTeX"
license=('GPL3')
#depends=()
source=("https://download.gnome.org/sources/gnome-latex/${pkgver:0:4}/gnome-latex-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-latex-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gnome-latex-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fe5c2456839757237d422d0f0629f11a43a8ca5b3cd86ce94b37ee26f68165f111940d5c3c47adba7be05532c413a97a867219c498abec3fd064122516e0c470')

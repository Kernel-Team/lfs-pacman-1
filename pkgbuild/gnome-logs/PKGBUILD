pkgname=gnome-logs
pkgver=3.24.1
pkgrel=1
pkgdesc="A log viewer for the systemd journal"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Logs"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-logs/${pkgver:0:4}/gnome-logs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-logs-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gnome-logs-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c39a1a65735d7c45d363db75a182f75e3a1dde19c77cfdd0a4e9b1e68a98a28e8064c6ed9bf494fe4690b99719ea590f47c9d6c9c83606391fed0ff34daf3d68')

pkgname=gnome-logs
pkgver=3.25.92
pkgrel=1
pkgdesc="A log viewer for the systemd journal"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Logs"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-logs/${pkgver:0:4}/gnome-logs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-logs-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gnome-logs-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('86f9e716243041f8db3200efac823e1f9b3f29a1bf63d42be32284d036bb1fde8bd982efe8e26da9944d50f9454bede5a3962e637ced8d50155c4bb2b3d3f940')

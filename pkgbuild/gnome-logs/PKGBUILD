pkgname=gnome-logs
pkgver=3.25.91
pkgrel=1
pkgdesc="A log viewer for the systemd journal"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Logs"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-logs/${pkgver:0:4}/gnome-logs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-logs-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gnome-logs-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('5dc6c262ca727e60e21e8101efca1ea1f2cb204bc59b310f24cdf2c767212442cf1ee4775814f6db1988e13f6269cfe289b2c84c79e6fa4e8e20cdf71057680a')

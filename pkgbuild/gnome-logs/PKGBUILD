pkgname=gnome-logs
pkgver=3.24.2
pkgrel=1
pkgdesc="A log viewer for the systemd journal"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Logs"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-logs/${pkgver:0:4}/gnome-logs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-logs-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gnome-logs-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6f7dabb0b0093b860198344373eb1feae244ed23c3a65494499c09a83c687ba68ff023ec5ce34846be51fd74293fdb4b575cf3a748a22fae183e89086eba1db9')

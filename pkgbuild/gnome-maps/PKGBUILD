pkgname=gnome-maps
pkgver=3.24.3
pkgrel=1
pkgdesc="A simple GNOME 3 maps application"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Maps"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-maps/${pkgver:0:4}/gnome-maps-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-maps-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gnome-maps-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('b4a4c278359803e11b1aa43fb522a84b95eecfc349a134322f45db7acfe93867a61f6bd48e55a07d5d602b8161cdf5949a6b5d4da1212659e133260063ab6198')

pkgname=gnome-maps
pkgver=3.26.0
pkgrel=1
pkgdesc="A simple GNOME 3 maps application"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Maps"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-maps/${pkgver:0:4}/gnome-maps-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-maps-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gnome-maps-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('eaf907563ded813f25a4379876025979b58a560f878955adae401e57526f070a6fbaffa3ea408f5b0163f5a7eebf2d9845145228bfac61521b6c5a303a786510')

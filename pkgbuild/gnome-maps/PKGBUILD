pkgname=gnome-maps
pkgver=3.25.91
pkgrel=1
pkgdesc="A simple GNOME 3 maps application"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Maps"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-maps/${pkgver:0:4}/gnome-maps-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-maps-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gnome-maps-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c715d7f911c34fb11207f9e72fb6034d95decd27e78fc72778f457ed2926f6d9d05080c86c14da232ef38d5671c79167a098850452644abc65cf8c91c48dda58')

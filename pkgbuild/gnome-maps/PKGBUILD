pkgname=gnome-maps
pkgver=3.25.92
pkgrel=1
pkgdesc="A simple GNOME 3 maps application"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Maps"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-maps/${pkgver:0:4}/gnome-maps-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-maps-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gnome-maps-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('20e158efc0006b9eb072c9cee89f78b184e5d5aa02649a9542f92b71dffcc215b871284a05a7b3dc3d14d5ea5ac36c06e146b2b636fc70a63a0c8b43bb9a399d')

pkgname=gnome-online-accounts
pkgver=3.26.0
pkgrel=1
pkgdesc="Single sign-on framework for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeOnlineAccounts"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-online-accounts/${pkgver:0:4}/gnome-online-accounts-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-online-accounts-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-kerberos \
		--disable-compile-warnings

	make
}

package() {
	cd "${srcdir}/gnome-online-accounts-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ce11fe02e77c8000be869cefdc95d1a053fe1ae00150b15916492ad2a93f2f8884e50d0e8f7ca5331ab61e6757a7728cd88408d0239295e4338a415aabc4bca2')

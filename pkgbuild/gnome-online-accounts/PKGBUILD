pkgname=gnome-online-accounts
pkgver=3.26.1
pkgrel=1
pkgdesc="Single sign-on framework for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeOnlineAccounts"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-online-accounts/${pkgver:0:4}/gnome-online-accounts-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-online-accounts-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-kerberos \
		--enable-lastfm \
		--enable-media-server \
		--enable-todoist \
		--disable-compile-warnings

	make
}

package() {
	cd "${srcdir}/gnome-online-accounts-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ca8ccf669509d00735cebcfd404e74e77e7998f67993d3bd8cb1409a53cb377cdadcae26fef40c608390cba3f2a976075a2073c103f3cc414b9ef1c0f0838044')

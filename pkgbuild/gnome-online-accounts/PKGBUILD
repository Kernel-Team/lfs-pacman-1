pkgname=gnome-online-accounts
pkgver=3.27.92
pkgrel=1
pkgdesc="Single sign-on framework for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeOnlineAccounts"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-online-accounts/${pkgver:0:4}/gnome-online-accounts-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-online-accounts-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-kerberos \
		--enable-lastfm \
		--enable-media-server \
		--enable-todoist \
		--disable-compile-warnings

	make
}

package() {
	cd "${srcdir}/gnome-online-accounts-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1ba485b615de4cc206beb529f5e5eb376087d0c5012e549cb826b7d2638a1f8b365a2ff81349c49bad3cf1f47c11db3a86420ba1b373b5ce5b79365cc2af2e65')

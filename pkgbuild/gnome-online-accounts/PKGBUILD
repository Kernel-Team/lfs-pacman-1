pkgname=gnome-online-accounts
pkgver=3.26.2
pkgrel=1
pkgdesc="Single sign-on framework for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeOnlineAccounts"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-online-accounts/${pkgver:0:4}/gnome-online-accounts-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-online-accounts-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-kerberos \
		--enable-lastfm \
		--enable-media-server \
		--enable-todoist \
		--disable-compile-warnings

	make
}

package() {
	cd "${srcdir}/gnome-online-accounts-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('be1a9f4e1944f19937c2718db64c6968fb1f7538cdb6f7ecfa0b48136d37b1aa0c8054ff7a91cf037fac72f1e8ac7b59b69af3db39c585674113538dccf19114')

pkgname=gnome-online-accounts
pkgver=3.24.1
pkgrel=1
pkgdesc="Single sign-on framework for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeOnlineAccounts"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-online-accounts/${pkgver:0:4}/gnome-online-accounts-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-online-accounts-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-kerberos \
		--disable-compile-warnings

	make
}

package() {
	cd "${srcdir}/gnome-online-accounts-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('8bfaac439b4754134a833e497827cbe06564baf8defebf391533aab5659c1a027a5cac3bb6a18aa2a3bcad6349ce1f2e73a2ff8725d0bb74b4d9418aab2c7d89')

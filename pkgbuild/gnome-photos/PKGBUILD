pkgname=gnome-photos
pkgver=3.24.2
pkgrel=1
pkgdesc="Access, organize, and share your photos on GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Photos"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-photos/${pkgver:0:4}/gnome-photos-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-photos-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var
	make
}

package() {
	cd "${srcdir}/gnome-photos-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6747d7f7b0fe8710f299a7cd72916a1abd2e6296d642f9d7bf027de731f0fa4e0f862cb6bcb5622bb2d69298b911433df2a31f37f1f7d02fd4e5582234fe0c9f')

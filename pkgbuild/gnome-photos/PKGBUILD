pkgname=gnome-photos
pkgver=3.25.92
pkgrel=1
pkgdesc="Access, organize, and share your photos on GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Photos"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-photos/${pkgver:0:4}/gnome-photos-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-photos-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var
	make
}

package() {
	cd "${srcdir}/gnome-photos-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('74acfa0618a4ba8061a122930d4317dc2bc672304f00b220acc7197687bad76f814cb788a05e4599b76448332b13071a0bbe21c71ce1073a3e5a9d8e86cc9f63')

pkgname=gnome-photos
pkgver=3.26.0
pkgrel=1
pkgdesc="Access, organize, and share your photos on GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Photos"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-photos/${pkgver:0:4}/gnome-photos-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-photos-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var
	make
}

package() {
	cd "${srcdir}/gnome-photos-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('914c47d7648f1752caa290e20281add3441fb5bb23b9e364aba93ae8f0febb3660712e6c32792be91ace0d52836fb1102f48163b0c110add46855ab42a6e5272')

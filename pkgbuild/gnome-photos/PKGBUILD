pkgname=gnome-photos
pkgver=3.25.91
pkgrel=1
pkgdesc="Access, organize, and share your photos on GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Photos"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-photos/${pkgver:0:4}/gnome-photos-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-photos-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var
	make
}

package() {
	cd "${srcdir}/gnome-photos-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fa545a1ed92fa8418c5e36b099d645af269bd1bfc64d265d4f3811cfa12cd0de05160a45881ea44138b955cb237bdb63e0f9980d5c11b50ff1fb3fe87802f137')

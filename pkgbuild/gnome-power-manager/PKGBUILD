pkgname=gnome-power-manager
pkgver=3.24.0
pkgrel=1
pkgdesc="System power information and statistics"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-power-manager/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-power-manager/${pkgver:0:4}/gnome-power-manager-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-power-manager-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gnome-power-manager-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fbbac0f5176382ccd13497cd80792d10ca4bc39fa4cc0585543f5458ba0f256ffb66b7ebd82667e482ba33cf2b6f3ef6a64bf2f55ac224e1d9ab2e2b7491e4e0')

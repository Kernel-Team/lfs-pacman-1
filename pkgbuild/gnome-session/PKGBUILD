pkgname=gnome-session
pkgver=3.25.90
pkgrel=1
pkgdesc="The GNOME Session Handler"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-session/"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-session/${pkgver:0:4}/gnome-session-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-session-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gnome-session-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('5c91fa8917ded0088b5196e4a7e26d5f6178c481c83a19a175f0d5fa411dd1b4bae5429f0ef2774576baad2962a4b56ba13a82b5ad397074d0fa5ec7719e9803')

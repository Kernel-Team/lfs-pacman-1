pkgname=gnome-session
pkgver=3.24.1
pkgrel=1
pkgdesc="The GNOME Session Handler"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-session/"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-session/${pkgver:0:4}/gnome-session-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-session-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gnome-session-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('507f9f1cddab37f1b66c72291e1885397f7e8b6bfb7c365f6f1ff827649a71380706fe0e3a8c6e74c3c159349a0eea0aabe3d5c7bbae5b29aeb2d49ae715affb')

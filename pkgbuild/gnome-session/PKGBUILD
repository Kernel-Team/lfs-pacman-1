pkgname=gnome-session
pkgver=3.27.92
pkgrel=1
pkgdesc="The GNOME Session Handler"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-session/"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-session/${pkgver:0:4}/gnome-session-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-session-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('f4ae2e915fc7eb313c3dcce7ab3f48578c0479e770fd4144c3e24ff3a5a564352948ebbf754d396828d4729127a9681277c514d1aa60d85961329ea3260b521a')

pkgname=gnome-session
pkgver=3.26.0
pkgrel=1
pkgdesc="The GNOME Session Handler"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-session/"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-session/${pkgver:0:4}/gnome-session-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-session-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gnome-session-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('05ba2465dee4b23d4cf758c15b7a682207fbc50039d95a60c37051cfa31707dc6737bcbf809812b429cb7ce03bf340d30e66916a579677586b3e531c862a6819')

pkgname=gnome-settings-daemon
pkgver=3.26.1
pkgrel=1
pkgdesc="GNOME Settings Daemon"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-settings-daemon/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-settings-daemon/${pkgver:0:4}/gnome-settings-daemon-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-settings-daemon-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-settings-daemon-${pkgver}"

	make install DESTDIR="${pkgdir}" udevrulesdir=/usr/lib/udev/rules.d
}

sha512sums=('d54bf15409517de1ce722e3471b9f4622c8b43207d1342dd3d2b50621391b50bcff0f92341983e6ef6b0a28ad9237a787fc82376f1aa3f99689db2f7001b392e')

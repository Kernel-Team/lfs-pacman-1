pkgname=gnome-settings-daemon
pkgver=3.38.1
pkgrel=1
pkgdesc="GNOME Settings Daemon"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-settings-daemon/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-settings-daemon/${pkgver:0:4}/gnome-settings-daemon-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-settings-daemon-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('b32c0897d1a5680747bf68e9009ea44cf1a05ef807b772ca6514a278002754d520def7bced929b9004d3aec82a6e82b52637bd2eadd3f6cd54f3d0ac5c8e8cbd')

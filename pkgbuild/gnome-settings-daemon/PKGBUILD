pkgname=gnome-settings-daemon
pkgver=3.27.92
pkgrel=1
pkgdesc="GNOME Settings Daemon"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-settings-daemon/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-settings-daemon/${pkgver:0:4}/gnome-settings-daemon-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-settings-daemon-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('ac4a80ec65a96eb64e809d451d695b8001f5f1c93f0c89415d605297d8fb4614caad04e2ae6c2c01b90e7f16bc481495a9221027f2b447e1568d69167af053ed')

pkgname=gnome-shell-extensions
pkgver=3.28.0
pkgrel=1
pkgdesc="Extensions for GNOME shell, including classic mode"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeShell/Extensions"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-shell-extensions/${pkgver:0:4}/gnome-shell-extensions-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Dextension_set=all \
		-Dclassic_mode=true \
		"${srcdir}/gnome-shell-extensions-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('9f5f331b16cb13dd6856a677a940cb876f73371fa3d46758979790432e19fb0d809cc0d76dcf3fd5ad6091de61fcb5d45e211dc51665c195bf354b62998bee54')

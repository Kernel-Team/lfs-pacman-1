pkgname=gnome-shell
pkgver=3.28.1
pkgrel=1
pkgdesc="The next generation GNOME Shell"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeShell"
license=('GPL2')
#depends=()
options=(emptydirs)
source=("https://download.gnome.org/sources/gnome-shell/${pkgver:0:4}/gnome-shell-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Dbrowser_plugin=false \
		-Dgtk_doc=true \
		"${srcdir}/gnome-shell-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('ec8e7dd1d9b4e74cdc84a30546296a5049f13fc64f8b1f46cbba635dd41c0d88e66b297839370690b88dc71acafbb20503f16d4c1970749ff4c2d072537a58c2')

pkgname=gnome-shell
pkgver=3.28.0
pkgrel=1
pkgdesc="The next generation GNOME Shell"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GnomeShell"
license=('GPL2')
#depends=()
options=(emptydirs)
source=("https://download.gnome.org/sources/gnome-shell/${pkgver:0:4}/gnome-shell-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Dbrowser_plugin=false \
		-Dgtk_doc=true \
		"${srcdir}/gnome-shell-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('0c5e78393c8bca8ddb548c2cecd7799258ca00735cb7600feb9f7fa43f460719ad22636255496a40ea81dfcb779faf141b972b54555626f9e27ea5ca2377cc68')

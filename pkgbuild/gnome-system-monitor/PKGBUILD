pkgname=gnome-system-monitor
pkgver=3.24.0
pkgrel=1
pkgdesc="View current processes and monitor system state"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/SystemMonitor"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-system-monitor/${pkgver:0:4}/gnome-system-monitor-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-system-monitor-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-systemd

	make
}

package() {
	cd "${srcdir}/gnome-system-monitor-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4155d9f130cc1e38d32b76d10ca91056d82b90ca555f9ded26acfd1ef018b92163b0cc2256861b8e166b3bfa7eadc6c900aa9c79fd0c859045197ab2eaf3dc9f')

pkgname=gnome-system-monitor
pkgver=3.25.91
pkgrel=1
pkgdesc="View current processes and monitor system state"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/SystemMonitor"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-system-monitor/${pkgver:0:4}/gnome-system-monitor-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-system-monitor-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-systemd

	make
}

package() {
	cd "${srcdir}/gnome-system-monitor-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('efe7304e68a508b57354d0b2954d3334187e31191ba1cca58d4fce3be4ac3ba1c3523502b564e6155d9a65d839f991b0bf35b7ad40e0c9b08e299ca1a5df2071')

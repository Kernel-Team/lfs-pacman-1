pkgname=gnome-system-monitor
pkgver=3.25.92
pkgrel=1
pkgdesc="View current processes and monitor system state"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/SystemMonitor"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-system-monitor/${pkgver:0:4}/gnome-system-monitor-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-system-monitor-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-systemd

	make
}

package() {
	cd "${srcdir}/gnome-system-monitor-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a5c6fa7acc2d48aa71ded851738340b24d08e4f6cc7940c8f64fa5935c4dd75e9bd9a2671d6ef77c5f31c376a8497aefb7306e2caf23c72a9796af667a593513')

pkgname=gnome-terminal
pkgver=3.26.0
pkgrel=1
pkgdesc="The GNOME Terminal Emulator"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Terminal"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-terminal/${pkgver:0:4}/gnome-terminal-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-terminal-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-migration

	make
}

package() {
	cd "${srcdir}/gnome-terminal-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('13e87fd0bfa5ebed9c8f91e9a57880b0d5b67adc31de6119e7547e4f3f84442e009f1fb9f525f5c1ccdf011bdc6f95c97cf8dab0760fe596a200860ffa880627')

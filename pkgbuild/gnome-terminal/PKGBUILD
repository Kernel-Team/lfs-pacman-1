pkgname=gnome-terminal
pkgver=3.28.0
pkgrel=1
pkgdesc="The GNOME Terminal Emulator"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Terminal"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-terminal/${pkgver:0:4}/gnome-terminal-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-terminal-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-migration

	make
}

package() {
	cd "${srcdir}/gnome-terminal-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4928f847a27f4e88f1030775eafd0e48e174f5665e45f2ce3db4c3d3a4b55ce8b0a9e2df1c4f4e6452983d6058856d1dcbc3b3bbb4173db51e2619495760b8ff')

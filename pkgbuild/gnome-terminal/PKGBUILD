pkgname=gnome-terminal
pkgver=3.28.2
pkgrel=1
pkgdesc="The GNOME Terminal Emulator"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Terminal"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-terminal/${pkgver:0:4}/gnome-terminal-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-terminal-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-migration

	make
}

package() {
	cd "${srcdir}/gnome-terminal-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a20fe13fd2e533a90236410ce6ddd11e4da9da13f2d8952baa3cbf07379dbe253cf897b596421852084bbfc000264de11fb605c73909af8188baa93e46ddae8f')

pkgname=gnome-themes-standard
pkgver=3.22.3
pkgrel=1
pkgdesc="Standard Themes for GNOME Applications"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-themes-standard"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/gnome-themes-standard/${pkgver:0:4}/gnome-themes-standard-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-themes-standard-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gnome-themes-standard-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('aa2f3ad4d867732cd09df6adb4f48ed2757e3f28930ef791ba97a82007332c810d84dd1074ca518ec0fe71bd7d8b95404854bd799e3b1fe616e1809e8ee33501')

pkgname=gnome-todo
pkgver=3.25.90
pkgrel=1
pkgdesc="Task manager for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Todo"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-todo/${pkgver:0:4}/gnome-todo-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Denable-gtk-doc=true \
		-Denable-introspection=false \
		"${srcdir}/gnome-todo-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('bad478e1f2264c052d29c4e2937d17f78b74731fe41b417db7ae102e49de7c461ab8e427962a66a2971cd860930f68dac9d2a7f8670a2ab5f9576285e88bceef')

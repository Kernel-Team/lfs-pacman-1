pkgname=gnome-todo
pkgver=3.24.2
pkgrel=1
pkgdesc="Task manager for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Todo"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-todo/${pkgver:0:4}/gnome-todo-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-todo-${pkgver}"

	./configure --prefix=/usr --disable-debug

	make
}

package() {
	cd "${srcdir}/gnome-todo-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('cc772e8a38d7ce85284dc5a1b562aa52880f8ce8b28e77805de837ccb17a8ad5fd79bc5ff370e797a032b5525ecd48c0ece184c791aff9f0158ee5161691347b')

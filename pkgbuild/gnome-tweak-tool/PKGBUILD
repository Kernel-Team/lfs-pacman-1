pkgname=gnome-tweak-tool
pkgver=3.26.2.1
pkgrel=1
pkgdesc="Customize advanced GNOME 3 options"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/GnomeTweakTool"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-tweak-tool/${pkgver:0:4}/gnome-tweak-tool-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-tweak-tool-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('0a0683db119fbd8f465650f04bc70c785c63b2e0130ae8e7c450b6f6664a3ced1fa6ad6793da8c4d53c75dc274cd95c9725467e4d8d59028d75b3b2f041cd62d')

pkgname=gnome-tweak-tool
pkgver=3.26.3
pkgrel=1
pkgdesc="Customize advanced GNOME 3 options"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/GnomeTweakTool"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-tweak-tool/${pkgver:0:4}/gnome-tweak-tool-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-tweak-tool-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('debdaaa2e7cad26b011354faba9ac1e6e4a40736af82c44b86934eb69970d50af423696bf800545d11d06e293d6b39c1b8f1332a85f9a810150a9ae332bd0320')

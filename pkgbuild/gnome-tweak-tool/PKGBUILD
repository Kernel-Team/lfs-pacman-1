pkgname=gnome-tweak-tool
pkgver=3.24.1
pkgrel=1
pkgdesc="Customize advanced GNOME 3 options"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/GnomeTweakTool"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-tweak-tool/${pkgver:0:4}/gnome-tweak-tool-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-tweak-tool-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gnome-tweak-tool-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('b76e9a46de07d12b586fb7326fcd51fff1565b831fe8f4d1ab4bbefe36450b5d2cb7c7a168922960894ba57ac9bd412afa61973c034bd1b5f2b45c52eb34adcd')

pkgname=gnome-tweaks
pkgver=3.27.92
pkgrel=1
pkgdesc="Customize advanced GNOME 3 options"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/GnomeTweakTool"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-tweaks/${pkgver:0:4}/gnome-tweaks-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/gnome-tweaks-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('b4e106b763458450249074317eeb0a0ffb6f859d3d8e5cb75f19acb7528bc4880425b95d20925d06d62d1b5ec5a57a568ac41a2d2b9bbc6980e3b19c9a712026')

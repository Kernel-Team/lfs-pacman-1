pkgname=gnome-user-docs
pkgver=3.26.2
pkgrel=1
pkgdesc="User documentation for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-user-docs/"
license=('FDL')
#depends=()
options=(!strip)
source=("https://download.gnome.org/sources/gnome-user-docs/${pkgver:0:4}/gnome-user-docs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-user-docs-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-user-docs-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7f32b1e073a38e7cbfc65518560fac0feaeef3f0e7eb7ace0c17e770f74e259f9086a6ba8e96b5d5942ac685615696f9cbab6031b4830e87556036a22d7e1498')

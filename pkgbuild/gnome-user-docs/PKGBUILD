pkgname=gnome-user-docs
pkgver=3.24.2
pkgrel=1
pkgdesc="User documentation for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-user-docs/"
license=('FDL')
#depends=()
options=(!strip)
source=("https://download.gnome.org/sources/gnome-user-docs/${pkgver:0:4}/gnome-user-docs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-user-docs-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-user-docs-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7725ceb6d079d244f9f764c54b2d374588a808c8f1b2e70f655e1d3e3dc957cab3a8edcfe3d000c5d4520e9d9da031585a20ade978b66753ef3b2c912230a87d')

pkgname=gnome-user-docs
pkgver=3.26.1
pkgrel=1
pkgdesc="User documentation for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-user-docs/"
license=('FDL')
#depends=()
options=(!strip)
source=("https://download.gnome.org/sources/gnome-user-docs/${pkgver:0:4}/gnome-user-docs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-user-docs-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-user-docs-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('383986c375adf54ffe84dd1924ace6966d5d6879b3496fc2f65e7f0c76971eab5725962a778de454e550cde4c19a011b0f11c7132a9f771d3ea2882428be04c8')

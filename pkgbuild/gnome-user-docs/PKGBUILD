pkgname=gnome-user-docs
pkgver=3.26.0
pkgrel=1
pkgdesc="User documentation for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-user-docs/"
license=('FDL')
#depends=()
options=(!strip)
source=("https://download.gnome.org/sources/gnome-user-docs/${pkgver:0:4}/gnome-user-docs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-user-docs-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-user-docs-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('2b389a899eba86da815c6f295b2620f9f28a1fe1ff3a2fcf0cb4d37b7a9d94041ffc31f5d56e516dfa37d51cd2bf640c2433183a080282d53994ef1614e5b15f')

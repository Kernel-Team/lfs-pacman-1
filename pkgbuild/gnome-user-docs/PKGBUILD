pkgname=gnome-user-docs
pkgver=3.26.2.1
pkgrel=1
pkgdesc="User documentation for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/gnome-user-docs/"
license=('FDL')
#depends=()
options=(!strip)
source=("https://download.gnome.org/sources/gnome-user-docs/${pkgver:0:4}/gnome-user-docs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-user-docs-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-user-docs-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('eb1bb873e1b8871e07ebd6a4afc694561b5fa4ff30453d25bdaaa530cb4910e8bbaacd36fcdb7f141f9f52ee8cf34521a332856d60c18a9385bfbc2501d13d97')

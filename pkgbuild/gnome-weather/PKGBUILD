pkgname=gnome-weather
pkgver=3.24.0
pkgrel=1
pkgdesc="Access current weather conditions and forecasts"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Weather"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-weather/${pkgver:0:4}/gnome-weather-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-weather-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-weather-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c286c97dc1cbb4991e56ed49e8c788c6a58f0f0dcd5534812ee3e06a0570fd1bb0b45f7e35bdc11443f62dc3a2cd262db4f3d2b1f238cfc24236de88de4a4bce')

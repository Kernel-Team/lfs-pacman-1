pkgname=gnome-weather
pkgver=3.25.92
pkgrel=1
pkgdesc="Access current weather conditions and forecasts"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Weather"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-weather/${pkgver:0:4}/gnome-weather-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-weather-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-weather-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9d52eba83d4e2a3663a9c1853db682e8de42b1410f796b8c5557350784b9cb689eeb7c44e9902fc521075926066af57c53f6aaf55fd1c096377b4093f0bbab77')

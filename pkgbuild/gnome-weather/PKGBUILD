pkgname=gnome-weather
pkgver=3.25.91
pkgrel=1
pkgdesc="Access current weather conditions and forecasts"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Weather"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gnome-weather/${pkgver:0:4}/gnome-weather-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnome-weather-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gnome-weather-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7319658e652f80b9f16c98bbc4d7a4902200393c4085e9b99ff4dcf8c7f102840596da96c28c0343f77fa3e8a25082f7a378af4430d6e833bba2ec29f5d7cb4a')

pkgname=gnupg
pkgver=2.2.14
pkgrel=1
pkgdesc="Complete and free implementation of the OpenPGP standard"
arch=('x86_64')
url="https://www.gnupg.org/"
license=('GPL')
#depends=()
source=("https://www.gnupg.org/ftp/gcrypt/gnupg/gnupg-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/gnupg-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-gpgtar \
		--enable-symcryptrun

	make
}

package() {
	cd "${srcdir}/gnupg-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9d5216dee085efe6de300579d8fb773a5a55df639d5a435708611a974df522dd60dc995fbfcaad98065475dbeb731bbba19ecc3273e78b9b45fccff640dde69b')

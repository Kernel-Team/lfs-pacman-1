pkgname=gnupg
pkgver=2.2.0
pkgrel=1
pkgdesc="Complete and free implementation of the OpenPGP standard"
arch=('x86_64')
url="https://www.gnupg.org/"
license=('GPL')
#depends=()
source=("https://www.gnupg.org/ftp/gcrypt/gnupg/gnupg-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/gnupg-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-gpgtar \
		--enable-symcryptrun

	make
}

package() {
	cd "${srcdir}/gnupg-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('8ab7c4183d2ec2e6b62066e3cbcba95babaa0ae22da47feab716698792d26495f072d50e8ec612b8d26147636bb316320c78940184373b3f4cb6ec411933361b')

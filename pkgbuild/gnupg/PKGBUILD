pkgname=gnupg
pkgver=2.2.2
pkgrel=1
pkgdesc="Complete and free implementation of the OpenPGP standard"
arch=('x86_64')
url="https://www.gnupg.org/"
license=('GPL')
#depends=()
source=("https://www.gnupg.org/ftp/gcrypt/gnupg/gnupg-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/gnupg-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-gpgtar \
		--enable-symcryptrun

	make
}

package() {
	cd "${srcdir}/gnupg-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('3a390b8da21bef0584f39fb8f4b86ec10c78efc64dd1634377b8637042db5f8da462f2881e12fa509b0322d71cba464e0400b91869a4b9fe6189daa4b1386cc1')

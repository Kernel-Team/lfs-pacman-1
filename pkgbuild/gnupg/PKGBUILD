pkgname=gnupg
pkgver=2.2.1
pkgrel=1
pkgdesc="Complete and free implementation of the OpenPGP standard"
arch=('x86_64')
url="https://www.gnupg.org/"
license=('GPL')
#depends=()
source=("https://www.gnupg.org/ftp/gcrypt/gnupg/gnupg-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/gnupg-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-gpgtar \
		--enable-symcryptrun

	make
}

package() {
	cd "${srcdir}/gnupg-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fcda7ea360d9928bf9e410afe3806ee0692dd533443b0c0e050605a9e2e37ec16f3c60a30b30ab137155327bc1f5d2107f1e792582e3ad245b47bf39a1a61a8f')

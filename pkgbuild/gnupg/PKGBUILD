pkgname=gnupg
pkgver=2.1.21
pkgrel=1
pkgdesc="Complete and free implementation of the OpenPGP standard"
arch=('x86_64')
url="https://www.gnupg.org/"
license=('GPL')
#depends=()
source=("https://www.gnupg.org/ftp/gcrypt/gnupg/gnupg-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/gnupg-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-gpgtar \
		--enable-symcryptrun

	make
}

package() {
	cd "${srcdir}/gnupg-${pkgver}"

	make install DESTDIR="${pkgdir}"

	for f in gpg gpgv
	do
		ln -sfv ${f}2   "${pkgdir}/usr/bin/${f}"
		ln -sfv ${f}2.1 "${pkgdir}/usr/share/man/man1/${f}.1"
	done
}

sha512sums=('ddced44c37a220af8371ba36357fc0f23b22b57daec1cba6d4a1a015d345eac7f6060c88b22a5cd457ee364d0ec1f02175644aed1970a97abfa84a3d285bc512')

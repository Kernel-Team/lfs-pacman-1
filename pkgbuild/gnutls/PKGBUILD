pkgname=gnutls
pkgver=3.5.15
pkgrel=1
pkgdesc="A library which provides a secure layer over a reliable transport layer"
arch=('x86_64')
url="http://www.gnutls.org/"
license=('GPL3' 'LGPL2.1')
#depends=()
source=("ftp://ftp.gnutls.org/gcrypt/gnutls/v${pkgver:0:3}/gnutls-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gnutls-${pkgver}"

	./configure --prefix=/usr \
		--enable-local-libopts \
		--disable-guile

	make
}

package() {
	cd "${srcdir}/gnutls-${pkgver}"

	make install DESTDIR="${pkgdir}"

	make -C doc/reference install-data-local DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}"/usr/share/info/*.png "${pkgdir}"/usr/share/info/*guile*
}

sha512sums=('046cf3adf6cc3d38fd431f2ff28ddabb65f3c13379516d105316a04c7128be89c5f7ed3df6a034fc06e9ab2e154c2cde2f5cbe8530a1e58cc4b4fb72e158134b')

pkgname=gobject-introspection
pkgver=1.56.0
pkgrel=1
pkgdesc="Introspection system for GObject-based libraries"
arch=('x86_64')
url="https://live.gnome.org/GObjectIntrospection"
license=('LGPL' 'GPL')
#depends=()
source=("https://download.gnome.org/sources/gobject-introspection/${pkgver:0:4}/gobject-introspection-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gobject-introspection-${pkgver}"

	export PYTHON=python3

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gobject-introspection-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('281c3eb2d44d37185545b95b21ab80204c20f595f109a69fae7b85fef17991edabd9cca2c0f86fbed746e11fa0f6ea34c538803c48a600f7231cc3a0d4bb83b3')

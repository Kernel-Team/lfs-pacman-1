pkgname=gom
pkgver=0.3.2
pkgrel=1
pkgdesc="A GObject to SQLite object mapper"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Gom"
license=('LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/gom/${pkgver:0:3}/gom-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gom-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gom-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a7bfb263e5ff6f89768d8fcbdcc949d4ec9b82ecbb80952becd357a3d5781a60e52a327e865e39e46d542b2a2c5e5c861e5302d7ae3c3a2258d3c3f698263675')

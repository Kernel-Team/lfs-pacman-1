pkgname=gperf
pkgver=3.0.4
pkgrel=1
pkgdesc="Perfect hash function generator"
arch=('x86_64')
url="https://www.gnu.org/software/gperf/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/gperf/gperf-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/gperf-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gperf-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('24a65ac93c9d640670b015a76378eb7e0f167bec685d03f7dc68005d5a6d693d98b2189f7a0ab5bb9e5dc700de7d417c215230f9dbe062ba119240a8da535dad')

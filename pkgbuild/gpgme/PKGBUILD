pkgname=gpgme
pkgver=1.10.0
pkgrel=1
pkgdesc="A C wrapper library for GnuPG"
arch=('x86_64')
url="https://www.gnupg.org/related_software/gpgme/index.html"
license=('LGPL')
#depends=()
source=("https://www.gnupg.org/ftp/gcrypt/gpgme/gpgme-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/gpgme-${pkgver}"

	./configure --prefix=/usr \
		--disable-fd-passing \
		--disable-gpgsm-test \
		--enable-languages=cpp

	make
}

package() {
	cd "${srcdir}/gpgme-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('8ffa348ef4775ed3209486444d54411e28c9a0ff1d7a4315feb0b2856ccd5d110b219100ea41262ca0016af69a1936d79fee0eadf2599c7c5bbeed05d11f7ab5')

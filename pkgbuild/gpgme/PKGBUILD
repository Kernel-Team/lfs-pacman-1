pkgname=gpgme
pkgver=1.12.0
pkgrel=1
pkgdesc="A C wrapper library for GnuPG"
arch=('x86_64')
url="https://www.gnupg.org/related_software/gpgme/index.html"
license=('LGPL')
#depends=()
source=("https://www.gnupg.org/ftp/gcrypt/gpgme/gpgme-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/gpgme-${pkgver}"

	./configure --prefix=/usr \
		--disable-fd-passing \
		--disable-gpgsm-test \
		--enable-languages=cpp

	make
}

package() {
	cd "${srcdir}/gpgme-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c228b3df28377df882be536ada56dc9c73150048a58e591aa4495f89c854af95820152cd60139840f994c249e9c7df50d8b89eb9d6dc4ce02aa80bbfebcdd014')

pkgname=grep
pkgver=3.0
pkgrel=1
pkgdesc="A string search utility"
arch=('x86_64')
url="https://www.gnu.org/software/grep/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/grep/grep-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/grep-${pkgver}"

	./configure --prefix=/usr --bindir=/bin

	make
}

package() {
	cd "${srcdir}/grep-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0e9a00df9d492f399230bae0264942edaf64bb926f93edb7922f27b075a86ba0a78698f54996cc522b6261aa01a8ecbeadeb68523d4470a9941f242c3ae24c58')

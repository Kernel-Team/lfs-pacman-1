pkgname=grilo-plugins
pkgver=0.3.4
pkgrel=1
pkgdesc="A collection of plugins for the Grilo framework"
arch=('x86_64')
url="https://git.gnome.org/browse/grilo-plugins"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/grilo-plugins/${pkgver:0:3}/grilo-plugins-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/grilo-plugins-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-compile-warnings

	make
}

package() {
	cd "${srcdir}/grilo-plugins-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('690e016f4e24894bce8e8a3535898e6a5553fbe725efe539f771867d5a246a2d86e52641cc21696a7ea9da506ab72735db26d40e8aa6e738b818fda81d9d5575')

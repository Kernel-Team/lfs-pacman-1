pkgname=grilo
pkgver=0.3.6
pkgrel=1
pkgdesc="Framework that provides access to various sources of multimedia content"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Grilo"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/grilo/${pkgver:0:3}/grilo-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/grilo-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-compile-warnings

	make
}

package() {
	cd "${srcdir}/grilo-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('175cf61a43aea8456a41f4dce7694fac50e854cf6340ed0671f233e6188fa34347c1e7308aac99bc49d081c36747776b9a8c1c5cc7c0be00a1df2c9d015d8849')

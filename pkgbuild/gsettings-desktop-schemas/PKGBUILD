pkgname=gsettings-desktop-schemas
pkgver=3.27.92
pkgrel=1
pkgdesc="Shared GSettings schemas for the desktop"
arch=('x86_64')
url="https://www.gnome.org/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gsettings-desktop-schemas/${pkgver:0:4}/gsettings-desktop-schemas-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gsettings-desktop-schemas-${pkgver}"

	./configure --prefix=/usr --disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gsettings-desktop-schemas-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('02b2f89bfe2f9528e0d4f4826a1e08e3b300ccbbf881bdc80ca0a46f2aa766289a811a4e079e065f01fd384288d6bec31301b7df97a84a1f9268e0f4f4b1d0eb')

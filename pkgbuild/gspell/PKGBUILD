pkgname=gspell
pkgver=1.6.1
pkgrel=1
pkgdesc="a flexible API to implement the spell checking in a GTK+ application"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/gspell"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/gspell/${pkgver:0:3}/gspell-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gspell-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gspell-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f1ffbd0d23d9743bcf924c25b3a3d7bf93c6a5e4ea5e362fb7300f657d8c1d0117e847f3dec29de377947f850e003b24a3231e88e99b313c955dd94ce358c23e')

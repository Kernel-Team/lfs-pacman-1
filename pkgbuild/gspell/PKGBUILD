pkgname=gspell
pkgver=1.6.0
pkgrel=1
pkgdesc="a flexible API to implement the spell checking in a GTK+ application"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/gspell"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/gspell/${pkgver:0:3}/gspell-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gspell-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gspell-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6c5bde181710951864fae2b157cc4acc71fc4dc90d57b48d50c4ee9c16281689457d920be24435a6fb4dd9cac10102be56cbaba4c806a38276ff2622dc7b3586')

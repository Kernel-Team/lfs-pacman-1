pkgname=gspell
pkgver=1.5.4
pkgrel=1
pkgdesc="a flexible API to implement the spell checking in a GTK+ application"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/gspell"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/gspell/${pkgver:0:3}/gspell-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gspell-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gspell-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e35c33f8381123712f448a7c92d2890b29094abd091d3939bbd2155af3f7545a88af7bef3b838f5c8bd18d57d720e45303815be0e16986c46ae1cabd2e082c08')

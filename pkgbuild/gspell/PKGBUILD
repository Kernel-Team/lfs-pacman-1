pkgname=gspell
pkgver=1.4.1
pkgrel=1
pkgdesc="a flexible API to implement the spell checking in a GTK+ application"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/gspell"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/gspell/${pkgver:0:3}/gspell-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gspell-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gspell-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ded60e876598d8b6002ea28aa9a0d8f84c56c3a46d245df051949f5400f605a666279e42949bf2bfb365cf31f4618f1ce657dd3b81ed748af1036eddc1e67f6d')

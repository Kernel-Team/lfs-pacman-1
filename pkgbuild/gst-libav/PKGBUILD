pkgname=gst-libav
pkgver=1.12.3
pkgrel=1
pkgdesc="GStreamer Multimedia Framework ffmpeg Plugins"
arch=('x86_64')
url="https://gstreamer.freedesktop.org/"
license=('GPL')
#depends=()
source=("https://gstreamer.freedesktop.org/src/gst-libav/gst-libav-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gst-libav-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--libexecdir=/usr/lib \
		--with-system-libav \
		--with-package-name="GStreamer ffmpeg Plugins ${pkgver} Krejzi" \
		--with-package-origin="https://github.com/elkrejzi/"

	make
}

package() {
	cd "${srcdir}/gst-libav-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('33b380b7094afe1db57103eeeca5ae13db98a5bee6785f884a7ec8abb93a94f702eb52f0515f4fa27a0f157ecb0757cf3576df335dc456254f9a82567f5ab7a8')

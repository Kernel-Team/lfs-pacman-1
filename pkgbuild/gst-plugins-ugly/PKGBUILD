pkgname=gst-plugins-ugly
pkgver=1.12.0
pkgrel=1
pkgdesc="GStreamer Multimedia Framework Ugly Plugins"
arch=('x86_64')
url="https://gstreamer.freedesktop.org/"
license=('LGPL')
#depends=()
source=("https://gstreamer.freedesktop.org/src/gst-plugins-ugly/gst-plugins-ugly-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gst-plugins-ugly-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--libexecdir=/usr/lib \
		--with-package-name="GStreamer Ugly Plugins ${pkgver} Krejzi" \
		--with-package-origin="https://github.com/elkrejzi/"

	make
}

package() {
	cd "${srcdir}/gst-plugins-ugly-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('761f66fd7b21ff6dd45b4221257af4d38c4ccebbd18376bdd105946523b7f3cb9d5c1c4701a42e06aa4b9cdf098bbf9a7241d5e9ce0cd9a8f1d027d566040bef')

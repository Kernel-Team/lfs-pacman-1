pkgname=gtef
pkgver=2.0.1
pkgrel=1
pkgdesc="A library that eases the development of GtkSourceView-based text editors and IDEs"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Gtef"
license=('LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/gtef/${pkgver:0:3}/gtef-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gtef-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gtef-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('51cec42405f41c8d3d311811f3a9f6c67ca2a6a87cb305f9becc14694683ed427bf14797d8c997f17d4a05b3048d91cb5ebde81d0db4d11048e8978ecb7e64e1')

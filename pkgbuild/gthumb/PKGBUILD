pkgname=gthumb
pkgver=3.6.0
pkgrel=1
pkgdesc="Image browser and viewer for the GNOME Desktop"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/gthumb"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gthumb/${pkgver:0:3}/gthumb-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gthumb-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/gthumb-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1d32057530c82c0903f393ba97598e4752633ee46eb9b818eca8f5e03e7e81a755c36d080f2ba36453255821f5263efaea84c3c87dcb2f95c749033656dd8862')

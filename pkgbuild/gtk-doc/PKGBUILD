pkgname=gtk-doc
pkgver=1.25
pkgrel=1
pkgdesc="Documentation tool for public library API"
arch=('x86_64')
url="https://www.gtk.org/gtk-doc/"
license=('GPL' 'FDL')
#depends=()
source=("https://download.gnome.org/sources/gtk-doc/${pkgver}/gtk-doc-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gtk-doc-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gtk-doc-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7ac8c73ab9f9ecb6a142bd2232450a6431c3e4fe2372ff40460145b5d0bcffa1953c8cf49436539db86c3a32461cbd4180c714cb19cdd68bfd557816b789339c')

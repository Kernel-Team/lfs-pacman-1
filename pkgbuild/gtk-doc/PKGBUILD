pkgname=gtk-doc
pkgver=1.27
pkgrel=1
pkgdesc="Documentation tool for public library API"
arch=('x86_64')
url="https://www.gtk.org/gtk-doc/"
license=('GPL' 'FDL')
#depends=()
source=("https://download.gnome.org/sources/gtk-doc/${pkgver}/gtk-doc-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gtk-doc-${pkgver}"

	./configure --prefix=/usr PYTHON=/usr/bin/python3

	make
}

package() {
	cd "${srcdir}/gtk-doc-${pkgver}"

	make install DESTDIR="${pkgdir}"
}


sha512sums=('4ba4f938bbf1d70de972917e30c3503b472c5a65164c562ffd0185023c2962a65aa715c68b386c26ef22aa639ca69857337e07bbc8070a044c7ead413137aa13')

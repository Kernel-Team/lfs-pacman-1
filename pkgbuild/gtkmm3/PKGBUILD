pkgname=gtkmm3
pkgver=3.22.1
pkgrel=1
pkgdesc="C++ bindings for GTK+ 3"
arch=('x86_64')
url="http://www.gtkmm.org/"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.gnome.org/sources/gtkmm/${pkgver:0:4}/gtkmm-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gtkmm-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gtkmm-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f2a924774c6f4a9a1ec66bde65201fc6b8e17bf48d306ad78bdcabe9a2ce4b8d67c0714b52406534708c1c505efc7ff5a651a1df21531568795202e2717d1eaf')

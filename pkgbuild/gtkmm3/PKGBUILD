pkgname=gtkmm3
pkgver=3.22.0
pkgrel=1
pkgdesc="C++ bindings for GTK+ 3"
arch=('x86_64')
url="http://www.gtkmm.org/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/gtkmm/${pkgver:0:4}/gtkmm-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gtkmm-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gtkmm-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0bc141ff09bc78697e89c6f071a1411cbc06e015ee664f3a6f9143bdb31793982e09533c8cff6d8c19cc53c4d32a1e5ad016db48141f5cfc21edfb333bf37988')

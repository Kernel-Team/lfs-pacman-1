pkgname=gtksourceview
pkgver=3.24.6
pkgrel=1
pkgdesc="A text widget adding syntax highlighting and more to GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GtkSourceView"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gtksourceview/${pkgver:0:4}/gtksourceview-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gtksourceview-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gtksourceview-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1b7621dbc1effc979fe08af8e6683ef43cc25563aab37a87abce15a0aa74bd0698bf10377a3fc2539b0cba1ad2f4bce2bb3981ef2dd4245bfe2fcba866d72f5d')

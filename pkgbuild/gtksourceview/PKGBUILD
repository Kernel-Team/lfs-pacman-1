pkgname=gtksourceview
pkgver=3.24.5
pkgrel=1
pkgdesc="A text widget adding syntax highlighting and more to GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GtkSourceView"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gtksourceview/${pkgver:0:4}/gtksourceview-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gtksourceview-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gtksourceview-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('bee5eaf12a9be0ae4eb7bf5256864859476526c51c19364f3274bd56c7ed480aceb1bb1bf84970fb35766e4230a06f44f9075c25992283c760f32fd81bd18cf7')

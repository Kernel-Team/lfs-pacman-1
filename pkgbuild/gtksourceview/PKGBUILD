pkgname=gtksourceview
pkgver=3.24.4
pkgrel=1
pkgdesc="A text widget adding syntax highlighting and more to GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GtkSourceView"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gtksourceview/${pkgver:0:4}/gtksourceview-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gtksourceview-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gtksourceview-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fef2008dccae6bca859f99b7171851b84f30e7b4cdb00500972039bf111ab5901498820c91926374a7b446491330c55f7179e8522b90279d0169371981bc90fd')

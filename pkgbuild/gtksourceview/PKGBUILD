pkgname=gtksourceview
pkgver=3.24.3
pkgrel=1
pkgdesc="A text widget adding syntax highlighting and more to GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GtkSourceView"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gtksourceview/${pkgver:0:4}/gtksourceview-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gtksourceview-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gtksourceview-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('354a06502d55d7b237d5cbec5a35102225ae3d7e80e53d1ba42e506fc9c75470c4548b4ab8e9e6b2813d732617a2f13b978194240556b8d810066c94ec13de44')

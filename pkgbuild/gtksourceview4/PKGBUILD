pkgname=gtksourceview4
pkgver=4.0.2
pkgrel=1
pkgdesc="A text widget adding syntax highlighting and more to GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/GtkSourceView"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gtksourceview/${pkgver:0:3}/gtksourceview-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gtksourceview-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gtksourceview-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('59f5c131731683e62696fa72b77ff8755c39fdca6b714e7f128b61ca9ee92d82e31089475837cca143991157e81b6920695745a6bc51ef80398ee3dcf4599317')

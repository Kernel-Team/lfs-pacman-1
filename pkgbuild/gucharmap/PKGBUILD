pkgname=gucharmap
pkgver=10.0.0
pkgrel=1
pkgdesc="Gnome Unicode Charmap"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Gucharmap"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gucharmap/${pkgver:0:4}/gucharmap-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gucharmap-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile \
		--enable-vala \
		--with-unicode-data=download

	make
}

package() {
	cd "${srcdir}/gucharmap-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e097e54cfd4e6a8fd47992d163128bc8e87c0c6aa81718f900d7367fa6d88a528815c7bb87bfcaddd145aaa8b1c8068fdf6da6fe2a1c90381ff555b43712f33a')

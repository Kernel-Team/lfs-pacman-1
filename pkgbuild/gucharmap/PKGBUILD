pkgname=gucharmap
pkgver=10.0.1
pkgrel=1
pkgdesc="Gnome Unicode Charmap"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Gucharmap"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gucharmap/${pkgver:0:4}/gucharmap-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gucharmap-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile \
		--enable-vala \
		--with-unicode-data=download

	make
}

package() {
	cd "${srcdir}/gucharmap-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6c424cf85f9a17ec6b6be39a659a013bac1e9976a8082bd8d490c7b047ebc6e1fca1143c91c737a0cda3b6eb7d955eddcd41cf61f00fc95f0cb339716e969030')

pkgname=gucharmap
pkgver=9.0.4
pkgrel=1
pkgdesc="Gnome Unicode Charmap"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Gucharmap"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/gucharmap/${pkgver:0:3}/gucharmap-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gucharmap-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-compile \
		--enable-vala \
		--with-unicode-data=download

	make
}

package() {
	cd "${srcdir}/gucharmap-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('2d2ce94796cb40bcaf14930624ddd788af1c49d464be1fc5d4ab8112df14054ce1324c86eaf028921266494f9fbb41d29a7b40db810fb15280d470fd26be6df2')

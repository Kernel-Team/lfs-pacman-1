pkgname=guile
pkgver=2.2.2
pkgrel=1
pkgdesc="Portable, embeddable Scheme implementation written in C"
arch=('x86_64')
url="https://www.gnu.org/software/guile/"
license=('GPL')
#depends=()
source=("https://ftp.gnu.org/gnu/guile/guile-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/guile-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/guile-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}"/usr/lib/*.scm
}

sha512sums=('83ce1daa40f8d0f18aa9babd8ef49de0592dd67e45da4316d2ec395890001f6c5536538a145ba253c97f1981f2fcf7eabb2a17655edd3fc3b54b6199c119f821')

pkgname=guile
pkgver=2.0.14
pkgrel=1
pkgdesc="Portable, embeddable Scheme implementation written in C"
arch=('x86_64')
url="https://www.gnu.org/software/guile/"
license=('GPL')
#depends=()
source=("https://ftp.gnu.org/gnu/guile/guile-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/guile-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/guile-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}"/usr/lib/*.scm
}

sha512sums=('2cad60ab8aa77be44bc4988eaa3a2f0652637f315322abd6011c18f1800c3a461eefa15a14fd54d0d48031b093bc56dfc6cd15dc0a8260b97b40521bff793db6')

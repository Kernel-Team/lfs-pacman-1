pkgname=gvfs
pkgver=1.33.91
pkgrel=1
pkgdesc="Virtual filesystem implementation for GIO"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/gvfs"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/gvfs/${pkgver:0:4}/gvfs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gvfs-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gvfs-${pkgver}"

	make install DESTDIR="${pkgdir}"

	chown 27:root "${pkgdir}/usr/share/polkit-1/rules.d"
	chmod 700 "${pkgdir}/usr/share/polkit-1/rules.d"
}

sha512sums=('110b22eb625eae5dd8ff16a2ccff13f3f40eab85e58b7349d1d88f02de58cfbff439f7395de7a68e3ca9d603e78326fc082c8d7df89c13a5b32c3b82e5f87520')

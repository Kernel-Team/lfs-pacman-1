pkgname=gvfs
pkgver=1.34.0
pkgrel=1
pkgdesc="Virtual filesystem implementation for GIO"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/gvfs"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/gvfs/${pkgver:0:4}/gvfs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gvfs-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gvfs-${pkgver}"

	make install DESTDIR="${pkgdir}"

	chown 27:root "${pkgdir}/usr/share/polkit-1/rules.d"
	chmod 700 "${pkgdir}/usr/share/polkit-1/rules.d"
}

sha512sums=('1b8ffdd027eb9033dbaaa34b0f2a5d4a9e1b472dc59a544502e914711a8e76f719a83cde51a5ca3b6d89eb3b7ff789f3ad9f36e946331bc16cc67dcaa2968913')

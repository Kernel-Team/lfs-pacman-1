pkgname=gvfs
pkgver=1.34.2
pkgrel=1
pkgdesc="Virtual filesystem implementation for GIO"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/gvfs"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/gvfs/${pkgver:0:4}/gvfs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gvfs-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gvfs-${pkgver}"

	make install DESTDIR="${pkgdir}"

	chown 27:root "${pkgdir}/usr/share/polkit-1/rules.d"
	chmod 700 "${pkgdir}/usr/share/polkit-1/rules.d"
}

sha512sums=('c5a5e3a75e0eb5ebade4f2374381e2488b54c99a0c6bdea1625173b138b55c09d823f12040a3b1abf5ffa331118b26993ae1cbc6d38802ac5028ce441a365c00')

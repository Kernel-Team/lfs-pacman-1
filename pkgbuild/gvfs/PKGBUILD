pkgname=gvfs
pkgver=1.32.1
pkgrel=1
pkgdesc="Virtual filesystem implementation for GIO"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/gvfs"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/gvfs/${pkgver:0:4}/gvfs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gvfs-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gvfs-${pkgver}"

	make install DESTDIR="${pkgdir}"

	chown 27:root "${pkgdir}/usr/share/polkit-1/rules.d"
	chmod 700 "${pkgdir}/usr/share/polkit-1/rules.d"
}

sha512sums=('7bd4d137437c1704faf6a9c2712bddcc327284e752c552c2cc18c64beb5e6d291af321e92d02d4f09b619762121129cee82c13ec2a4ca39d045196ebeeb28dd8')

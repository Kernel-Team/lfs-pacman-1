pkgname=gvfs
pkgver=1.34.1
pkgrel=1
pkgdesc="Virtual filesystem implementation for GIO"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/gvfs"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/gvfs/${pkgver:0:4}/gvfs-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gvfs-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/gvfs-${pkgver}"

	make install DESTDIR="${pkgdir}"

	chown 27:root "${pkgdir}/usr/share/polkit-1/rules.d"
	chmod 700 "${pkgdir}/usr/share/polkit-1/rules.d"
}

sha512sums=('383f20c3dad1ff833f1d14466f215c7183459c0ed18d842fd09a68061e09814f2a4e33d574a0bf62bc9b6f5023721d03461eaaed86e840513f7e115662af91b6')

pkgname=gzip
pkgver=1.8
pkgrel=1
pkgdesc="GNU compression utility"
arch=('x86_64')
url="https://www.gnu.org/software/gzip/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/gzip/gzip-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/gzip-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/gzip-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('efd3e2439476054badeb127d9156e24e9252129111219f13fd939596c057b2a96291630b2717181984b391abf249ac8699488bbd01ceeb8a70b121c500b10c55')

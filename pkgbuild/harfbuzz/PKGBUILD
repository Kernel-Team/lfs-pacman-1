pkgbase=harfbuzz
pkgname=('harfbuzz' 'lib32-harfbuzz')
pkgver=1.6.0
pkgrel=1
arch=('x86_64')
url="http://www.freedesktop.org/wiki/Software/HarfBuzz"
license=('MIT')
#depends=()
source=("https://www.freedesktop.org/software/harfbuzz/release/harfbuzz-${pkgver}.tar.bz2")

prepare() {
	cp -a "${srcdir}"/harfbuzz{,32}-${pkgver}
}

build() {
	cd "${srcdir}/harfbuzz-${pkgver}"

	./configure --prefix=/usr \
		--with-gobject \
		--with-graphite2

	cd "${srcdir}/harfbuzz32-${pkgver}"

	export CC_HOLD="${CC}" CXX_HOLD="${CXX}"
	export CC="${CC} -m32" CXX="${CXX} -m32"
	export PKG_CONFIG_PATH=/usr/lib32/pkgconfig

	./configure --prefix=/usr \
		--libdir=/usr/lib32 \
		--with-gobject \
		--with-graphite2 \
		--disable-introspection

	export CC="${CC_HOLD}" CXX="${CXX_HOLD}"
	unset CC_HOLD CXX_HOLD PKG_CONFIG_PATH

	cd "${srcdir}"

	make -C "${srcdir}/harfbuzz-${pkgver}"
	make -C "${srcdir}/harfbuzz32-${pkgver}"
}

package_harfbuzz() {
	pkgdesc="OpenType text shaping engine"

	cd "${srcdir}/harfbuzz-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

package_lib32-harfbuzz() {
	pkgdesc="OpenType text shaping engine (32 bit)"

	cd "${srcdir}/harfbuzz32-${pkgver}"

	make install DESTDIR="${PWD}/dest"

	install -v -dm755 "${pkgdir}/usr"
	mv dest/usr/lib32 "${pkgdir}/usr"
}

sha512sums=('392c7055d7fe9bc3fea07e62fa9d00407c98d502de7b42937f434c6127f660521706d3b2c0afbc61ad636676abb50bafe73afb15b9090f0fe1f75443f1f34706')

pkgname=hexchat
pkgver=2.14.0
pkgrel=1
pkgdesc="A popular and easy to use graphical IRC (chat) client"
arch=('x86_64')
url="https://hexchat.github.io/"
license=('GPL')
#depends=()
source=("https://dl.hexchat.net/hexchat/hexchat-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/hexchat-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('b23f227065b7911123e335d19cb76bd5f0bfa9c891eb3f68030677a7346a3bf410ab1679b9c349cf4a2819244fc00766552b1e677f33a45db95d7b928daf49ec')

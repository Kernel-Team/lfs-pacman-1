pkgname=hicolor-icon-theme
pkgver=0.15
pkgrel=1
pkgdesc="Freedesktop.org Hicolor icon theme"
arch=('x86_64')
url="http://www.freedesktop.org/wiki/Software/icon-theme/"
license=('GPL2')
#depends=()
options=(emptydirs)
source=("https://icon-theme.freedesktop.org/releases/hicolor-icon-theme-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/hicolor-icon-theme-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/hicolor-icon-theme-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4ae3cb1d2d1dfc219424d41ffd72323a44e5320117e5e88f81c1629964dd42ab2055c999d0c846f9d8834e7b922b5cec36481e8c82fede6a4e73faf3ac09bd20')

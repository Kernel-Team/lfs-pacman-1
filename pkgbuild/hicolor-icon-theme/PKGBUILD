pkgname=hicolor-icon-theme
pkgver=0.16
pkgrel=1
pkgdesc="Freedesktop.org Hicolor icon theme"
arch=('x86_64')
url="http://www.freedesktop.org/wiki/Software/icon-theme/"
license=('GPL2')
#depends=()
options=(emptydirs)
source=("https://icon-theme.freedesktop.org/releases/hicolor-icon-theme-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/hicolor-icon-theme-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/hicolor-icon-theme-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('db883032c3c0375575e20127f100cda3fbd4ab7c90952bd555ce99318a5c233695bf8799ac08ef2617efeac3fcdee227e2ecdd3d8361db8240d68f088446877f')

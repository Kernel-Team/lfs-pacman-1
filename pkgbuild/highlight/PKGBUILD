pkgname=highlight
pkgver=3.39
pkgrel=1
pkgdesc="Fast and flexible source code highlighter (CLI version)"
arch=('x86_64')
url="http://www.andre-simon.de/doku/highlight/highlight.html"
license=('GPL')
#depends=()
source=("http://www.andre-simon.de/zip/highlight-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/highlight-${pkgver}"

	make CXX="${CXX}"
}

package() {
	cd "${srcdir}/highlight-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('17db7dad5beb57a7aed8995190c4c4781d3db23f32936f7603a7fd551a30226777e3ece18b9c1dc6f0ed9a34572975cf856dc71e257b23dffaa13ed87192b1a9')

pkgname=highlight
pkgver=3.37
pkgrel=1
pkgdesc="Fast and flexible source code highlighter (CLI version)"
arch=('x86_64')
url="http://www.andre-simon.de/doku/highlight/highlight.html"
license=('GPL')
#depends=()
source=("http://www.andre-simon.de/zip/highlight-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/highlight-${pkgver}"

	make CXX="${CXX}"
}

package() {
	cd "${srcdir}/highlight-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0862537b62af5d53828f0be2e9427008ba995e13fa2f5d39d274d98ba5f3ada0c31c0a924330d973e1fc94a956e57a7893df091853adbcae76f697291ed7bb1a')

pkgname=highlight
pkgver=3.40
pkgrel=1
pkgdesc="Fast and flexible source code highlighter (CLI version)"
arch=('x86_64')
url="http://www.andre-simon.de/doku/highlight/highlight.html"
license=('GPL')
#depends=()
source=("http://www.andre-simon.de/zip/highlight-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/highlight-${pkgver}"

	make CXX="${CXX}"
}

package() {
	cd "${srcdir}/highlight-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('bac7e0e90942292d2589a84d83eea8b822b5b555cfb87ef3a1f54302aa8682d16905ffe1526fafdfd2c126289b2696fdaf013767d331ee6cd056fe86ba515524')

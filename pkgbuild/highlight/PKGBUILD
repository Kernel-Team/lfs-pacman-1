pkgname=highlight
pkgver=3.49
pkgrel=1
pkgdesc="Fast and flexible source code highlighter (CLI version)"
arch=('x86_64')
url="http://www.andre-simon.de/doku/highlight/highlight.html"
license=('GPL')
#depends=()
source=("http://www.andre-simon.de/zip/highlight-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/highlight-${pkgver}"

	make CXX="${CXX}"
}

package() {
	cd "${srcdir}/highlight-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('81223c11b7b518b5b289622afadb0f2660898f74342b96f3e03f8bd3ac88d2f9b816efe0dffcc58323417d8a47b112053c16bd5f83475e6908ab228ee3cf81b0')

pkgname=highlight
pkgver=3.41
pkgrel=1
pkgdesc="Fast and flexible source code highlighter (CLI version)"
arch=('x86_64')
url="http://www.andre-simon.de/doku/highlight/highlight.html"
license=('GPL')
#depends=()
source=("http://www.andre-simon.de/zip/highlight-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/highlight-${pkgver}"

	make CXX="${CXX}"
}

package() {
	cd "${srcdir}/highlight-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fb2d4436451d76000c379885c4a7e674c2fd61c660655843ca46f8cb1719db4ff28459023b1011b13be4fd9a3eb57c9398b6d213a521169c5c9e7ba0b068de83')

pkgname=highlight
pkgver=3.38
pkgrel=1
pkgdesc="Fast and flexible source code highlighter (CLI version)"
arch=('x86_64')
url="http://www.andre-simon.de/doku/highlight/highlight.html"
license=('GPL')
#depends=()
source=("http://www.andre-simon.de/zip/highlight-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/highlight-${pkgver}"

	make CXX="${CXX}"
}

package() {
	cd "${srcdir}/highlight-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f4772f53af84756c6706f8484c74578a97f9c61578955df53faadb307da9d296adc60a3a00c4cb21a028898a48b76032379d5474fa137b3d0e71199362d08b72')

pkgname=hunspell
pkgver=1.6.1
pkgrel=1
pkgdesc="Spell checker and morphological analyzer library and program"
arch=('x86_64')
url="http://hunspell.github.io/"
license=('GPL' 'LGPL' 'MPL')
#depends=()
source=("hunspell-${pkgver}.tar.gz::https://github.com/hunspell/hunspell/archive/v${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/hunspell-${pkgver}"

	autoreconf -fi
}

build() {
	cd "${srcdir}/hunspell-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/hunspell-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}"/usr/share/man/[^man{1..8,n}]*
}

sha512sums=('39b096ec1f5226f13eaf241647fc9b49a6dad04945ae0bcdc61ba845d66d67d64a72ba4287b6f376b5ad053b5d0e1d42a42415c30521c50693f0544718029458')

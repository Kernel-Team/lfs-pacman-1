pkgname=ibus
pkgver=1.5.16
pkgrel=1
pkgdesc="Next Generation Input Bus for Linux"
arch=('x86_64')
url="https://github.com/ibus/ibus/wiki"
license=('LGPL')
#depends=()
options=(emptydirs)
install=ibus.install
source=("https://github.com/ibus/ibus/releases/download/${pkgver}/ibus-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/ibus-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--disable-emoji-dict \
		--enable-wayland \
		--enable-python-library \
		--with-python=python3

	rm -f tools/main.c

	make
}

package() {
	cd "${srcdir}/ibus-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('494ead69cf9c0111fd25fd1de27e796d89db4f08443afa1ec469f638469b25d8b19a59ea7ab0db0f3a130b9a89b3f2819667099ba38fc973d6efc61b367ce237')

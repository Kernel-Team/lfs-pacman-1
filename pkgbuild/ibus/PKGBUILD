pkgname=ibus
pkgver=1.5.17
pkgrel=1
pkgdesc="Next Generation Input Bus for Linux"
arch=('x86_64')
url="https://github.com/ibus/ibus/wiki"
license=('LGPL')
#depends=()
options=(emptydirs)
install=ibus.install
source=("https://github.com/ibus/ibus/releases/download/${pkgver}/ibus-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/ibus-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-wayland \
		--enable-python-library \
		--with-python=python3

	make
}

package() {
	cd "${srcdir}/ibus-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('8a7e4fabbcb2096e647b1fb7487c92882bd320a4d777f2765817378abec2e60cafd63364c881fefc2805ff2baa6b28b15ee0710587662a3e65eeb60ead19496c')

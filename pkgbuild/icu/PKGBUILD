pkgbase=icu
pkgname=('icu' 'lib32-icu')
pkgver=59.1
pkgrel=1
arch=('x86_64')
url="http://www.icu-project.org/"
license=('custom:icu')
#depends=()
source=("http://download.icu-project.org/files/${pkgname}4c/${pkgver}/${pkgname}4c-${pkgver//./_}-src.tgz")

prepare() {
	cd "${srcdir}/icu/source"

	sed -i "/xlocale.h/i #   include <locale.h>" i18n/digitlst.cpp

	cp -a "${srcdir}"/icu{,32}
}

build() {
	cd "${srcdir}/icu/source"

	./configure --prefix=/usr

	cd "${srcdir}/icu32/source"

	export CC_HOLD="${CC}" CXX_HOLD="${CXX}"
	export CC="${CC} -m32" CXX="${CXX} -m32"
	export PKG_CONFIG_PATH=/usr/lib32/pkgconfig

	./configure --prefix=/usr --libdir=/usr/lib32

	export CC="${CC_HOLD}" CXX="${CXX_HOLD}"
	unset CC_HOLD CXX_HOLD PKG_CONFIG_PATH

	cd "${srcdir}"

	make -C "${srcdir}/icu/source"
	make -C "${srcdir}/icu32/source"

}

package_icu() {
	pkgdesc="International Components for Unicode library"

	cd "${srcdir}/icu/source"

	make -j1 install DESTDIR="${pkgdir}"
}

package_lib32-icu() {
	pkgdesc="International Components for Unicode library (32 bit)"

	cd "${srcdir}/icu32/source"

	make install DESTDIR="${PWD}/dest"

	install -v -dm755 "${pkgdir}/usr/bin"
	mv dest/usr/lib32 "${pkgdir}/usr"
	mv dest/usr/bin/icu-config "${pkgdir}/usr/bin/icu-config32"
}

sha512sums=('9348aa68d72a74cd1f26588c30c80eee1b48800a26930d7eb0749390fd65f7930ee8843058b6a6dd5f265e79054fef661e807ded16a1ad691cbc5ebc5ab944c4')

pkgname=ilmbase
pkgver=2.2.0
pkgrel=1
pkgdesc="Base libraries from ILM for OpenEXR"
arch=('x86_64')
url="http://www.openexr.com"
license=('custom')
#depends=()
source=("http://download.savannah.nongnu.org/releases/openexr/ilmbase-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/ilmbase-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/ilmbase-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0bbad14ed2bd286dff3987b16ef8631470211da54f822cb3e29b7931807216845ded81c9bf41fd2d22a8b362e8b9904a5450f61f5a242e460083e86b846513f1')

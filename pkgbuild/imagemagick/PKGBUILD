pkgname=imagemagick
_pkgver=6.9.8-10
pkgver=${_pkgver/-/.}
pkgrel=1
pkgdesc="An image viewing/manipulation program"
arch=('x86_64')
url="http://www.imagemagick.org/"
license=('custom')
#depends=()
options=(libtool)
source=("http://www.imagemagick.org/download/ImageMagick-${_pkgver}.tar.xz")

build() {
	cd "${srcdir}/ImageMagick-${_pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-hdri \
		--with-gslib \
		--with-gvc \
		--with-modules \
		--with-perl \
		--with-rsvg \
		--with-dejavu-font-dir=/usr/share/fonts/dejavu \
		--with-gs-font-dir=/usr/share/ghostscript/fonts \
		--with-perl-options=INSTALLDIRS=vendor

	make
}

package() {
	cd "${srcdir}/ImageMagick-${_pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}"/usr/lib/*.la "${pkgdir}/usr/lib/perl"
}

sha512sums=('384da7332ab65a07be77c48d183207f9c378ace43eff0f19633dd704a92c0801314313b9c1164c462f9db163dc860dcebbf174df399977dc9e37568d8c172fe5')

pkgname=imagemagick
_pkgver=6.9.9-5
pkgver=${_pkgver/-/.}
pkgrel=1
pkgdesc="An image viewing/manipulation program"
arch=('x86_64')
url="http://www.imagemagick.org/"
license=('custom')
#depends=()
options=(libtool)
source=("http://www.imagemagick.org/download/ImageMagick-${_pkgver}.tar.xz")

build() {
	cd "${srcdir}/ImageMagick-${_pkgver}"

	sed -i "s#LIB_OMP#GOMP_LIBS#g" configure configure.ac

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-hdri \
		--with-gslib \
		--with-gvc \
		--with-modules \
		--with-perl \
		--with-rsvg \
		--with-dejavu-font-dir=/usr/share/fonts/dejavu \
		--with-gs-font-dir=/usr/share/ghostscript/fonts \
		--with-perl-options=INSTALLDIRS=vendor

	make
}

package() {
	cd "${srcdir}/ImageMagick-${_pkgver}"

	make -j1 install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}"/usr/lib/*.la "${pkgdir}/usr/lib/perl"
}

sha512sums=('d8d5bab4110157b80c6cec2fa5529a145a27814596e850cd42700aab5351f204c154cfc584badd5dcbdb754acaa2f97e419952661570847648c0b558a0ae9e23')

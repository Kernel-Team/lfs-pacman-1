pkgname=imagemagick
_pkgver=6.9.9-40
pkgver=${_pkgver/-/.}
pkgrel=1
pkgdesc="An image viewing/manipulation program"
arch=('x86_64')
url="http://www.imagemagick.org/"
license=('custom')
#depends=()
options=(libtool)
source=("https://www.imagemagick.org/download/ImageMagick-${_pkgver}.tar.xz")

build() {
	cd "${srcdir}/ImageMagick-${_pkgver}"

	sed -i "s#LIB_OMP#GOMP_LIBS#g" configure configure.ac

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-hdri \
		--with-gslib \
		--with-gvc \
		--with-modules \
		--with-perl \
		--with-rsvg \
		--with-dejavu-font-dir=/usr/share/fonts/dejavu \
		--with-gs-font-dir=/usr/share/ghostscript/fonts \
		--with-perl-options=INSTALLDIRS=vendor

	make
}

package() {
	cd "${srcdir}/ImageMagick-${_pkgver}"

	make -j1 install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}"/usr/lib/*.la "${pkgdir}/usr/lib/perl"
}

sha512sums=('416c2e248e3d1c6d89b930b8179194a9e1dfd160b9de1a75f98ceeb4199dd1b5f3b1d0ce646c26429054e7970680c40b77e2bf0a97ca82bbe84aa66648393fb4')

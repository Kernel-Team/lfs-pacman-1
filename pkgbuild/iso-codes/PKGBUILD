pkgname=iso-codes
pkgver=3.79
pkgrel=1
pkgdesc="Lists of the country, language, and currency names"
arch=('x86_64')
url="https://pkg-isocodes.alioth.debian.org/"
license=('LGPL')
#depends=()
source=("https://salsa.debian.org/iso-codes-team/iso-codes/uploads/ef8de8bc12e0512d26ed73436a477871/iso-codes-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/iso-codes-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/iso-codes-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('286d4f328142cdc7ace409d2aaa811e3732df49d78b1875ce71f76f1bb683ce0c4d3f9d2bba752bf6cd25ee8f4c53bdc84568e2eaf85f49650452df19800b345')

pkgname=iso-codes
pkgver=3.75
pkgrel=1
pkgdesc="Lists of the country, language, and currency names"
arch=('x86_64')
url="https://pkg-isocodes.alioth.debian.org/"
license=('LGPL')
#depends=()
source=("https://pkg-isocodes.alioth.debian.org/downloads/iso-codes-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/iso-codes-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/iso-codes-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('157899048cec091864ad8a7723314e28a0ccc4a0e1a5c2101bb630baf1a034bf117e38263e3c95e0135ba9d3a4d76635c8201c50a54e25f6af24c87253b8b40e')

pkgname=iso-codes
pkgver=3.76
pkgrel=1
pkgdesc="Lists of the country, language, and currency names"
arch=('x86_64')
url="https://pkg-isocodes.alioth.debian.org/"
license=('LGPL')
#depends=()
source=("https://pkg-isocodes.alioth.debian.org/downloads/iso-codes-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/iso-codes-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/iso-codes-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a0f6714a79a52b5dab82a268e85cb2d019ff5255744b88d088dcd7d5a15eb9710876a338a0a5d0f5659b4146bc6cc53d6d3474d621b3dcca7c47afabfc7e0dfa')

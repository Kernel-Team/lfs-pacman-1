pkgname=itstool
pkgver=2.0.5
pkgrel=1
pkgdesc="XML to PO and back again"
arch=('x86_64')
url="http://itstool.org/"
license=('GPL3')
#depends=()
source=("http://files.itstool.org/itstool/itstool-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/itstool-${pkgver}"

	./configure --prefix=/usr PYTHON=/usr/bin/python3

	make
}

package() {
	cd "${srcdir}/itstool-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('67c55b83e43b5a4626a6633305b2e48a06a5defdf7725e78b00409edea213d166cb3d870a58eb402c48968bddd7c1778d9852acfa0ddebdd363f34ac13f32aa7')

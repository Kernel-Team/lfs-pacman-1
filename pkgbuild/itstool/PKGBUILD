pkgname=itstool
pkgver=2.0.2
pkgrel=1
pkgdesc="XML to PO and back again"
arch=('x86_64')
url="http://itstool.org/"
license=(GPL3)
#depends=()
source=("http://files.itstool.org/itstool/itstool-${pkgver}.tar.bz2")

prepare() {
	cd "${srcdir}/itstool-${pkgver}"

	sed -i 's#| python -#| $PYTHON -#g' configure
}

build() {
	cd "${srcdir}/itstool-${pkgver}"

	./configure --prefix=/usr PYTHON=/usr/bin/python2

	make
}

package() {
	cd "${srcdir}/itstool-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('b7915c4d463fe5969e282029c2080730c78e18d2d5878da53c6a370f471056b51a7b3f3c08417b801212ba674f55548a112a12a9d81634f60d1e52a8a47a4aa2')

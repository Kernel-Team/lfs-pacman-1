pkgname=jemalloc
pkgver=4.5.0
pkgrel=1
pkgdesc="General-purpose scalable concurrent malloc implementation"
arch=('x86_64')
url="http://www.canonware.com/jemalloc/"
license=('BSD')
#depends=()
source=("https://github.com/jemalloc/jemalloc/releases/download/${pkgver}/jemalloc-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/jemalloc-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/jemalloc-${pkgver}"

	make install DESTDIR="${pkgdir}"

	chmod 644 "${pkgdir}/usr/lib/libjemalloc_pic.a"
}

sha512sums=('76953363fe1007952232220afa1a91da4c1c33c02369b5ad239d8dd1d0792141197c15e8489a8f4cd301b08494e65cadd8ecd34d025cb0285700dd78d7248821')

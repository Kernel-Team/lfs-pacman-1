pkgname=json-c
pkgver=0.12.1
pkgrel=1
pkgdesc="A JSON implementation in C"
arch=('x86_64')
url="https://github.com/json-c/json-c/wiki"
license=('MIT')
#depends=()
source=("https://s3.amazonaws.com/json-c_releases/releases/json-c-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/json-c-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/json-c-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('038676a0ce815e5174161fbd4339524feadc294d517f732fb408ad6aa7c4906423451c13386107569d9f24746a1a101564ca511e92e8276c5bf5b8c022ca42ed')

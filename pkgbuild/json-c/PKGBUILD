pkgname=json-c
pkgver=0.13
pkgrel=1
pkgdesc="A JSON implementation in C"
arch=('x86_64')
url="https://github.com/json-c/json-c/wiki"
license=('MIT')
#depends=()
source=("https://s3.amazonaws.com/json-c_releases/releases/json-c-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/json-c-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/json-c-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7375e1678e40f79298226d070db4ac3dab8a94c9d2438db1bbbcf668284ab30236fc77d841207c25f71cc2cebc596e1b8116d480434d829c8d96007a32ddf636')

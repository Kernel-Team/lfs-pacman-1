pkgname=kapidox
pkgver=5.37.0
pkgrel=1
pkgdesc="Frameworks API Documentation Tools"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kapidox-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		"${srcdir}/kapidox-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0eb34eba15efca3575f66a7b2215a2da960fa9efa1b8d33bbc7cefc18e79598dc294350db14f0f168e66a1a530c0b874741fb22c7e63970dbeb2d6e68febf678')

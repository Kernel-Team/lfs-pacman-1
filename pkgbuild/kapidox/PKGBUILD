pkgname=kapidox
pkgver=5.35.0
pkgrel=1
pkgdesc="Frameworks API Documentation Tools"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kapidox-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		"${srcdir}/kapidox-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('76f7b5c89d9d760d7622476faeed52736cd8c0e794904af1b42667295121a6a82c043f1fd1f9fbb176ac4576534899430e37cf32dc1de5409086fca39ba7c613')

pkgname=kcodecs
pkgver=5.35.0
pkgrel=1
pkgdesc="Provide a collection of methods to manipulate strings using various encodings"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kcodecs-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kcodecs-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6981f0e30925d41dd5e302c7b80b4b975fb5ba6b388ed6cd553513e820ad633ee2a0da99cbb3b729f2b7e115108dc50ce50c420b8ee24f9554c85936233f44da')

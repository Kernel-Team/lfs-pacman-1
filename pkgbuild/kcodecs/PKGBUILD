pkgname=kcodecs
pkgver=5.36.0
pkgrel=1
pkgdesc="Provide a collection of methods to manipulate strings using various encodings"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kcodecs-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kcodecs-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d81b1ea2f1f9da4666d94e0a6c5998f7af59347c609435b7052635ce1ff3f7b2418d72253b200031de9355bfc09594ee5fc501d099023622a79b6ae482dcc9d2')

pkgname=kconfigwidgets
pkgver=5.36.0
pkgrel=1
pkgdesc="Widgets for KConfig"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kconfigwidgets-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kconfigwidgets-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('2068585904912da4bf7893d893ed552f1138a23d502f0f2fd480fc744fda9986e99a915e1499dd443de09dd3f06b097bc73ab71c5ada6bdc4164ca583e01e5ff')

pkgname=kdbusaddons
pkgver=5.35.0
pkgrel=1
pkgdesc="Addons to QtDBus"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kdbusaddons-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kdbusaddons-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4fb6a2f8a5f753e21e6b3bc594636c30ed0425e1db6a8b44cdc19c15a75bf3591313b21feb10dacef23eb185e209ff4dbf27abcf90e2a5e8826fcda5cb5635b7')

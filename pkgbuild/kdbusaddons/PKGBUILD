pkgname=kdbusaddons
pkgver=5.36.0
pkgrel=1
pkgdesc="Addons to QtDBus"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kdbusaddons-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kdbusaddons-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6582424a547754d6f993031971cbaca059b1a6c5c7dcf9ec4196ca58dfaf407ddbf799d6207b938e1efa8f9ab3d9f3d78e8f0c3bbc81784baf45a422838be4a1')

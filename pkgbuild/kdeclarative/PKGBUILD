pkgname=kdeclarative
pkgver=5.38.0
pkgrel=1
pkgdesc="Provides integration of QML and KDE Frameworks"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kdeclarative-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kdeclarative-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('72ea8b2f17792e3075800de93882c0a0b03732121eef43ab38285c0d1988e148e079f40dd6d4fc8afef75bda47f2e02a3ac84b9546c6a6991b10aade1dbcb978')

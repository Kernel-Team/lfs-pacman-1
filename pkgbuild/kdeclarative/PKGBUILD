pkgname=kdeclarative
pkgver=5.35.0
pkgrel=1
pkgdesc="Provides integration of QML and KDE Frameworks"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kdeclarative-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kdeclarative-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('561662102dd2b44415efbe2f796798566e31327ebc5f0035c963ad408523d13f8514984bfeac725e7a2a8f58261c613fe7fcd35a455b603bf0dfccfbeebc8fa9')

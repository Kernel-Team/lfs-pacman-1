pkgname=kdelibs4support
pkgver=5.36.0
pkgrel=1
pkgdesc="Porting aid from KDELibs4"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/portingAids/kdelibs4support-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kdelibs4support-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f5f21034ccb1dbf6f54a250ab8e2b22b7d942932a9399e67ffb994c7f857946616545f0b5a59b1ff2691d744c60ea0888d4a906c5caaa837950bcd81be07eeed')

pkgname=kdewebkit
pkgver=5.35.0
pkgrel=1
pkgdesc="KDE Integration for QtWebKit"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kdewebkit-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kdewebkit-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a073f88d4f4e0c619ebb82f79f1268d0d50eea774b3f60a9c9f56ca0d64b55023c6b7619f854a276694d1bc84c391b223b68051995a4721d444772c0fa00f024')

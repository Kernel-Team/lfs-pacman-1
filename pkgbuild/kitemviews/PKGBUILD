pkgname=kitemviews
pkgver=5.35.0
pkgrel=1
pkgdesc="Widget addons for Qt Model/View"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kitemviews-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kitemviews-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c755f778ff817066af1c75285bdd74b5416ba696726fcffc816f7b9e6ad7be93837a2a00b4b6fbcf4ce5e0899319c0c4a5babf9bde2c344a41585af92ad16492')

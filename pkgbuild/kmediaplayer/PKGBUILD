pkgname=kmediaplayer
pkgver=5.35.0
pkgrel=1
pkgdesc="Plugin interface for media player features"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/portingAids/kmediaplayer-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kmediaplayer-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('870f9bac1cc193a29cf533669e647e6df5964fdea2aada63ac888c0d95bf22430c6f496d1a0eb5f34e4dcff840e045ca6ea0b010901ec7e35fb081c8d65abd01')

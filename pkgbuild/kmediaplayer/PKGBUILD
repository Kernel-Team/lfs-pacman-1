pkgname=kmediaplayer
pkgver=5.37.0
pkgrel=1
pkgdesc="Plugin interface for media player features"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/portingAids/kmediaplayer-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kmediaplayer-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('8279819334eb66c02a90b4bfbabb4c3c10374bce71edad923c30a70ee1f44dc4c271db1374241c82d1bbead18e5e1de2ce282c4a4982752b64bf140d778ccb59')

pkgname=kpackage
pkgver=5.38.0
pkgrel=1
pkgdesc="Framework that lets applications manage user installable packages of non-binary assets"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kpackage-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kpackage-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6882610e9e3ebbb7c61e5bd2e5588e63a262322d491b5338becae8dca737c43e14b419d096e5f88cdd27aa66993f0401ea485ddda12a1f79463de058395c4943')

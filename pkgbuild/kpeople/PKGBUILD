pkgname=kpeople
pkgver=5.36.0
pkgrel=1
pkgdesc="A library that provides access to all contacts and the people who hold them"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kpeople-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kpeople-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4b16114accc3169e5edafb89fcf3eaf76863b221e6ea00f0718cc31f84fba23297545540ad365e10ec6ccd18d9c713a3b5a565faf3eaab5c5da798c6ed980e69')

pkgname=kwidgetsaddons
pkgver=5.37.0
pkgrel=1
pkgdesc="Addons to QtWidgets"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kwidgetsaddons-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kwidgetsaddons-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('69faac2b489a74f2bb4fea4a5c5961bd7fe6badea6777960589ba45d1eb3457ddcd3875d8a56c0f5d15dd88411ca2e730b54e38e3ec77687a01615e45d62acc0')

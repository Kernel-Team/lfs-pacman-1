pkgname=kwindowsystem
pkgver=5.37.0
pkgrel=1
pkgdesc="Access to the windowing system"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kwindowsystem-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kwindowsystem-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('136b772820e8f8b7cd4e0e5e04b4f61495fe6adb56fc5e025efd60dc0293c88632ece19fcdcda4cffcb8c04e3515aca5fbcc80309e6f01d727e56a45c81dc744')

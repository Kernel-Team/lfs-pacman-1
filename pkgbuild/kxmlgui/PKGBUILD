pkgname=kxmlgui
pkgver=5.35.0
pkgrel=1
pkgdesc="User configurable main windows"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kxmlgui-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kxmlgui-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7ea1851b636f41b10f473f468eb56e23209d73d5db31c5209c18c8ea847e3eafc4ddf60ae553ec64db0734f30bae39f3f1f7bdb07c0d0540bf0010132f96f2d6')

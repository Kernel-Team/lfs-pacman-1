pkgname=kxmlrpcclient
pkgver=5.36.0
pkgrel=1
pkgdesc="XML-RPC client library for KDE"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/kxmlrpcclient-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/kxmlrpcclient-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('b4c78407c30a85209c9c8cb6fa8c66984fbae6809a278930eb38e0f5a1f04ef235ed4bd42df0e4c1918ae298321674e2258f62b1f59c103e299559363f25aeb2')

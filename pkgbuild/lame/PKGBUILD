pkgname=lame
pkgver=3.99.5
pkgrel=1
pkgdesc="A high quality MPEG Audio Layer III (MP3) encoder"
arch=('x86_64')
url="http://lame.sourceforge.net/"
license=('LGPL')
#depends=()
source=("https://downloads.sourceforge.net/lame/lame-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/lame-${pkgver}"

	./configure --prefix=/usr --enable-mp3rtp

	make
}

package() {
	cd "${srcdir}/lame-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ce62d7eb9fc8c53c343374ded30f11153a296910f0be7e649197bca7412c6660aad1aa6143d56b750f866229eb492cf7bb4f682535c383fb4aa57d7077d8b4d8')

pkgname=latexila
pkgver=3.26.1
pkgrel=1
pkgdesc="A LaTeX editor designed for the GNOME desktop"
arch=('x86_64')
url="http://projects.gnome.org/latexila/"
license=('GPL3')
#depends=()
source=("https://download.gnome.org/sources/latexila/${pkgver:0:4}/latexila-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/latexila-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/latexila-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d32d0e00fc6148174f19105f33dae4a03c43dc87b5436125056ef3afc1f68f4a39f391612e78a1cc97175b4260d2f76dc0a84b13fe72aacb7871688538ad40b0')

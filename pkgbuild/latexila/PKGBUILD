pkgname=latexila
pkgver=3.24.0
pkgrel=1
pkgdesc="A LaTeX editor designed for the GNOME desktop"
arch=('x86_64')
url="http://projects.gnome.org/latexila/"
license=('GPL3')
#depends=()
source=("https://download.gnome.org/sources/latexila/${pkgver:0:4}/latexila-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/latexila-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/latexila-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4dd327607450f93411162ae3908dbf7c574ad2b6ce613a1eea030a3c35ed6b098ed71e420e6134b66ae4641981065bc5b3bbaebe0a5db7d4c1756518ef244b75')

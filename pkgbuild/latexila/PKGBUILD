pkgname=latexila
pkgver=3.26.0
pkgrel=1
pkgdesc="A LaTeX editor designed for the GNOME desktop"
arch=('x86_64')
url="http://projects.gnome.org/latexila/"
license=('GPL3')
#depends=()
source=("https://download.gnome.org/sources/latexila/${pkgver:0:4}/latexila-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/latexila-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/latexila-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fe0c19b8c78d6b2f3bf90400dac697465d1b960ca40583b541285dcc2e8ad42df8e4c567027d69421413a080c726cdcac58976937bad518f87bafe48402bdbd3')

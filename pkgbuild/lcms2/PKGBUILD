pkgname=lcms2
pkgver=2.8
pkgrel=1
pkgdesc="Small-footprint color management engine, version 2"
arch=('x86_64')
url="http://www.littlecms.com"
license=('MIT')
#depends=()
source=("https://downloads.sourceforge.net/lcms/lcms2-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/lcms2-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/lcms2-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a9478885b4892c79314a2ef9ab560e6655ac8f2d17abae0805e8b871138bb190e21f0e5c805398449f9dad528dc50baaf9e3cce8b8158eb8ff74179be5733f8f')

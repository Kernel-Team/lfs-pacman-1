pkgname=lcms2
pkgver=2.9
pkgrel=1
pkgdesc="Small-footprint color management engine, version 2"
arch=('x86_64')
url="http://www.littlecms.com"
license=('MIT')
#depends=()
source=("https://downloads.sourceforge.net/lcms/lcms2-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/lcms2-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/lcms2-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d5263bccaa6084dc913536b872cacc81a797557fe76770525c4c9693511c69d28e8c4af070aadb43eb8275d9a8e5cda723bf46a705ee997abf5d8e128a4ce692')

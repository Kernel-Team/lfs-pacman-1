pkgname=ldb
pkgver=1.3.0
pkgrel=1
pkgdesc="A schema-less, ldap like, API and database"
arch=('x86_64')
url="https://ldb.samba.org/"
license=('GPL3')
#depends=()
source=("https://www.samba.org/ftp/ldb/ldb-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/ldb-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc/samba \
		--localstatedir=/var \
		--disable-rpath \
		--disable-rpath-install \
		--bundled-libraries=cmocka \
		--builtin-libraries=replace \
		--with-modulesdir=/usr/lib/ldb/modules \
		--with-privatelibdir=/usr/lib/ldb


	make
}

package() {
	cd "${srcdir}/ldb-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c5afe3c5229cbc35a5715e6ed1faa070dfa3d6b3c0902cc53770373bbc1761ff4ff93aa9b88d5573b9af9925332bb5cebf4a7a129852231f13be33d5cee3a9f8')

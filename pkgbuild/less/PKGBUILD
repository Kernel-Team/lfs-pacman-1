pkgname=less
pkgver=487
pkgrel=1
pkgdesc="A terminal based program for viewing text files"
arch=('x86_64')
url="http://www.greenwoodsoftware.com/less"
license=('GPL3')
#depends=()
source=("http://www.greenwoodsoftware.com/less/less-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/less-${pkgver}"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd "${srcdir}/less-${pkgver}"

	make install DESTDIR="${pkgdir}"

	ln -sfv less "${pkgdir}/usr/bin/pager"
}

sha512sums=('d31274fdada570fbc6706d7c52637d1accbd18ce947ec062e10b1624c251a8533c6638bc3a1d89d3c70a0c7b9c6d45740598bec9003f281d64c587b1f829125a')

pkgname=libarchive
pkgver=3.3.1
pkgrel=1
pkgdesc="library that can create and read several streaming archive formats"
arch=('x86_64')
url="http://libarchive.org/"
license=('BSD')
#depends=()
source=("http://libarchive.org/downloads/libarchive-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libarchive-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libarchive-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('90702b393b6f0943f42438e277b257af45eee4fa82420431f6a4f5f48bb846f2a72c8ff084dc3ee9c87bdf8b57f4d8dddf7814870fe2604fe86c55d8d744c164')

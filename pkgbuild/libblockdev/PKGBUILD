pkgname=libblockdev
pkgver=2.9
pkgrel=1
pkgdesc="A library for manipulating block devices"
arch=('x86_64')
url="https://github.com/rhinstaller/libblockdev"
license=('LGPL')
#depends=()
source=("libblockdev-${pkgver}-1.tar.gz::https://github.com/rhinstaller/libblockdev/archive/${pkgver}-1.tar.gz")

prepare() {
	cd "${srcdir}/libblockdev-${pkgver}-1"

	sed -i "s# -Werror##" $(grep -rl Werror)

	./autogen.sh
}

build() {
	cd "${srcdir}/libblockdev-${pkgver}-1"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd "${srcdir}/libblockdev-${pkgver}-1"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9d8a29a9d8a594933bf0cea9f7f32fac1540e8d5f4c02837bfde1aca733d2e540d615f714c0f84ac4f37d59eeb672c34d01aa130072965825db823df2ee14176')

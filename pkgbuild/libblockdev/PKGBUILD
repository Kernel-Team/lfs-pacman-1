pkgname=libblockdev
pkgver=2.15
pkgrel=1
pkgdesc="A library for manipulating block devices"
arch=('x86_64')
url="https://github.com/storaged-project/libblockdev"
license=('LGPL')
#depends=()
source=("https://github.com/storaged-project/libblockdev/releases/download/${pkgver}-1/libblockdev-${pkgver}.tar.gz")

prepare(){
	cd "${srcdir}/libblockdev-${pkgver}"

	sed -i "s# -Werror##" src/utils/Makefile.in src/plugins/Makefile.in src/plugins/fs/Makefile.in
}

build() {
	cd "${srcdir}/libblockdev-${pkgver}"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd "${srcdir}/libblockdev-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a5adc82c9979273b4ca272850ebdc71ac97d5c6f8896d5ae07f554e83817bb434ad07d548214c00116e0c1ba368564f2c8b49fbf8897d91347736f5f2583892f')

pkgname=libblockdev
pkgver=2.14
pkgrel=1
pkgdesc="A library for manipulating block devices"
arch=('x86_64')
url="https://github.com/storaged-project/libblockdev"
license=('LGPL')
#depends=()
source=("https://github.com/storaged-project/libblockdev/releases/download/${pkgver}-1/libblockdev-${pkgver}.tar.gz")

prepare(){
	cd "${srcdir}/libblockdev-${pkgver}"

	sed -i "s# -Werror##" src/utils/Makefile.in src/plugins/Makefile.in
}

build() {
	cd "${srcdir}/libblockdev-${pkgver}"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd "${srcdir}/libblockdev-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7c111d62e4bf993a5332c3e294a5bf0b7944b85924b53d0bb361671fdf2d528bd0febccec50b16eeb5aba81de4f6a4cc1ce4ca1a86e1ecdb167f96ef480de01f')

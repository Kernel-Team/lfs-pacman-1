pkgname=libblockdev
pkgver=2.13
pkgrel=1
pkgdesc="A library for manipulating block devices"
arch=('x86_64')
url="https://github.com/storaged-project/libblockdev"
license=('LGPL')
#depends=()
source=("https://github.com/storaged-project/libblockdev/releases/download/${pkgver}-1/libblockdev-${pkgver}.tar.gz")

prepare(){
	cd "${srcdir}/libblockdev-${pkgver}"

	sed -i "s# -Werror##" src/utils/Makefile.in src/plugins/Makefile.in
}

build() {
	cd "${srcdir}/libblockdev-${pkgver}"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd "${srcdir}/libblockdev-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('784bbb1274fd09114d42c06a9dc6e63d65b7d6c286c47b6e69231ac270991d2b558312d8c583a1143cdb3e18be075b282be761da571e5f0e48a7a92a3a1b9075')

pkgname=libbluray
pkgver=1.0.0
pkgrel=1
pkgdesc="Library to access Blu-Ray disks for video playback"
arch=('x86_64')
url="http://www.videolan.org/developers/libbluray.html"
license=('LGPL2.1')
#depends=()
source=("http://download.videolan.org/pub/videolan/libbluray/${pkgver}/libbluray-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/libbluray-${pkgver}"

	./configure --prefix=/usr --disable-bdjava

	make
}

package() {
	cd "${srcdir}/libbluray-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fcf2193c3b76f3436bc88ce8853cac16f29c3bb6c66447109c14202a41ea938cb6814502a8f724fb1b31add6bd36b42d3aed3eb4a8010c123537e073bd7a0be1')

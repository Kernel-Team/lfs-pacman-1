pkgname=libbytesize
pkgver=1.2
pkgrel=1
pkgdesc="A tiny library providing a C class for working with arbitrary big sizes in bytes"
arch=('x86_64')
url="https://github.com/storaged-project/libbytesize"
license=('LGPL')
#depends=()
source=("https://github.com/storaged-project/libbytesize/releases/download/${pkgver}/libbytesize-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libbytesize-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libbytesize-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d61ff297d1f533aee120bfcfdc3969c6a87428da322a6410707c301ff9b005da5d4f813ea15282eab5eb8435b009646d2cff29ac5247e2664af3ecaef54867a6')

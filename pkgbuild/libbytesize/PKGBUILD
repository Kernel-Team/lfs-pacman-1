pkgname=libbytesize
pkgver=0.11
pkgrel=1
pkgdesc="A tiny library providing a C class for working with arbitrary big sizes in bytes"
arch=('x86_64')
url="https://github.com/rhinstaller/libbytesize"
license=('LGPL')
#depends=()
source=("https://github.com/rhinstaller/libbytesize/archive/${pkgver}/libbytesize-${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/libbytesize-${pkgver}"

	./autogen.sh
}

build() {
	cd "${srcdir}/libbytesize-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libbytesize-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('3275116a74ead484508da494934062e77d19b50dcd124d7b309137e52a416474099685c39ddc63090d6ed124a667c7fc8c2a7a5844712b33f277703bb52d54ec')

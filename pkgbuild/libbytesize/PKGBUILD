pkgname=libbytesize
pkgver=1.0
pkgrel=1
pkgdesc="A tiny library providing a C class for working with arbitrary big sizes in bytes"
arch=('x86_64')
url="https://github.com/rhinstaller/libbytesize"
license=('LGPL')
#depends=()
source=("https://github.com/rhinstaller/libbytesize/archive/${pkgver}/libbytesize-${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/libbytesize-${pkgver}"

	./autogen.sh
}

build() {
	cd "${srcdir}/libbytesize-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libbytesize-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0feca102923aa05638f57f1b35593636ccc0b6cf5198eb9e8b5d805b44d270a9b3b37953ad24d445e607b09f01d64ac69e4a42e08c5f57fd46a3dea03f69c2e5')

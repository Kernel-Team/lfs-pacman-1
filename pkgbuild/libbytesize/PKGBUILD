pkgname=libbytesize
pkgver=0.10
pkgrel=1
pkgdesc="A tiny library providing a C class for working with arbitrary big sizes in bytes"
arch=('x86_64')
url="https://github.com/rhinstaller/libbytesize"
license=('LGPL')
#depends=()
source=("libbytesize-${pkgver}.tar.gz::https://github.com/rhinstaller/libbytesize/archive/${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/libbytesize-${pkgver}"

	./autogen.sh
}

build() {
	cd "${srcdir}/libbytesize-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libbytesize-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('26dcca781c70b5fdc0c0ef973ce65db2c4ce4520bb413b2e0137e3c8a0ccef0b0b47f46e50e13035fb74c3bd2a16ab8faad8c4fb843f33419a5e5d70dae73587')

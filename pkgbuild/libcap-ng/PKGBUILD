pkgname=libcap-ng
pkgver=0.7.8
pkgrel=1
pkgdesc="A library making programming with POSIX capabilities easier than traditional libcap"
arch=('x86_64')
url="http://people.redhat.com/sgrubb/libcap-ng/"
license=('GPL2' 'LGPL2.1')
#depends=()
source=("http://people.redhat.com/sgrubb/libcap-ng/libcap-ng-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libcap-ng-${pkgver}"

	./configure --prefix=/usr --without-python --without-python3

	make
}

package() {
	cd "${srcdir}/libcap-ng-${pkgver}"

	make install DESTDIR="${pkgdir}"

	install -v -dm755 "${pkgdir}/lib"

	mv -v "${pkgdir}"/usr/lib/libcap-ng.so.* "${pkgdir}/lib"
	ln -sfv ../../lib/$(readlink "${pkgdir}/usr/lib/libcap-ng.so") "${pkgdir}/usr/lib/libcap-ng.so"
}

md5sums=('0dece96644bd798020e170fbf7663802')

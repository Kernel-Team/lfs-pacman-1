pkgname=libcdio-paranoia
pkgver=10.2+0.94+1
pkgrel=1
pkgdesc="CD paranoia libraries from libcdio"
arch=('x86_64')
url="https://www.gnu.org/software/libcdio/"
license=('GPL' 'LGPL')
#depends=()
source=("https://ftp.gnu.org/gnu/libcdio/libcdio-paranoia-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libcdio-paranoia-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libcdio-paranoia-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}"/usr/share/man/[^man{1..8,n}]*
}

sha512sums=('9b2381491271090bac08594cb1d84de98e9f0a5afc6a2c98e9ffcf4b95addc3adcd0f0b9adeb928dfbf8178356ad6a7ccfeb048685c823d138b2af232f0b4c93')

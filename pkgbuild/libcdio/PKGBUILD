pkgname=libcdio
pkgver=0.94
pkgrel=1
pkgdesc="GNU Compact Disc Input and Control Library"
arch=('x86_64')
url="https://www.gnu.org/software/libcdio/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/libcdio/libcdio-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libcdio-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libcdio-${pkgver}"

	make install DESTDIR="${pkgdir}"

	sed -i "/LIBCDIO_SOURCE_PATH/s|.*|/* #undef LIBCDIO_SOURCE_PATH */|" \
		"${pkgdir}/usr/include/cdio/cdio_config.h"
}

sha512sums=('e1d3c96c4acc7be923c97109c3f76223adc00b293278daef7d5008b1e5d67f33402f9f224f05120e9e1e8b3a8d1fa1b0bd5069dc6dd309741e3590e2c19e0e66')

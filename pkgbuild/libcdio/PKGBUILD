pkgname=libcdio
pkgver=1.1.0
pkgrel=1
pkgdesc="GNU Compact Disc Input and Control Library"
arch=('x86_64')
url="https://www.gnu.org/software/libcdio/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/libcdio/libcdio-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libcdio-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libcdio-${pkgver}"

	make install DESTDIR="${pkgdir}"

	sed -i "/LIBCDIO_SOURCE_PATH/s|.*|/* #undef LIBCDIO_SOURCE_PATH */|" \
		"${pkgdir}/usr/include/cdio/cdio_config.h"
}

sha512sums=('fe5a0d726974c8678b59de74ce043a5ed464f6ab595bf938e90bc5a348e9e882755e75aa3eecce50ce910b28e2498b5a892402fc0ea8728d382d1af36db71985')

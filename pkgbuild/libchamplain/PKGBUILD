pkgname=libchamplain
pkgver=0.12.15
pkgrel=1
pkgdesc="A map widget"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/libchamplain"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libchamplain/${pkgver:0:4}/libchamplain-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libchamplain-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libchamplain-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('df921dc26e30bc32f6487c02fc3c3f2dc7c672f6f42bd79e05091f717e6545051ab4f0db0709152a5babd4bbd7eb122997682561d9d63bef19bc1b2923100437')

pkgname=libclc
pkgver=0.2.0.296233
pkgrel=1
pkgdesc="Library requirements of the OpenCL C programming language"
arch=('x86_64')
url="http://libclc.llvm.org/"
license=('MIT')
#depends=()
source=("libclc::svn+http://llvm.org/svn/llvm-project/libclc/trunk#revision=296233")

pkgver() {
	cd "${srcdir}/libclc"

	echo "0.2.0."$(svnversion)
}

build() {
	cd "${srcdir}/libclc"

	python2 configure.py --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libclc"

	make install DESTDIR="${pkgdir}"
}

md5sums=('SKIP')

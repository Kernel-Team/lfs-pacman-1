pkgname=libdmapsharing
pkgver=2.9.37
pkgrel=1
pkgdesc="A library that implements the DMAP family of protocols"
arch=('x86_64')
url="https://www.flyn.org/projects/libdmapsharing/"
license=('LGPL2.1')
#depends=()
source=("https://www.flyn.org/projects/libdmapsharing/libdmapsharing-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libdmapsharing-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libdmapsharing-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('db64c7e9ca6d8e06fdbec44853d8667a5d698244bc0881beae6aee447d464882accd885685636b3cd84735fe16eaa3b7bf692f2ac217525a9b86f5a12c810e8f')

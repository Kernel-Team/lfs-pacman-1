pkgname=libdvdcss
pkgver=1.4.0
pkgrel=1
pkgdesc="Portable abstraction library for DVD decryption"
arch=('x86_64')
url="http://www.videolan.org/developers/libdvdcss.html"
license=('GPL')
#depends=()
source=("http://download.videolan.org/pub/videolan/libdvdcss/${pkgver}/libdvdcss-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/libdvdcss-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libdvdcss-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ad4503a37f47a9563da0b9e387ca3e812f6cdfbf109b8d92f8eccdd879b4270e5b0ee79041d7fb4c86698d72748f7bbf0257db8da6bb1c889dd4f78645e3371b')

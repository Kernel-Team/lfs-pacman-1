pkgname=libdvdcss
pkgver=1.4.1
pkgrel=1
pkgdesc="Portable abstraction library for DVD decryption"
arch=('x86_64')
url="http://www.videolan.org/developers/libdvdcss.html"
license=('GPL')
#depends=()
source=("http://download.videolan.org/pub/videolan/libdvdcss/${pkgver}/libdvdcss-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/libdvdcss-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libdvdcss-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4456ebcf8b53a8aaee97643261a14a05c929e9e9120cbe5fc6839ddf62be3dcfe7313fca3ee57c00bea43ddf623dc3d61fff7c2f6316338495df95c9c422f39e')

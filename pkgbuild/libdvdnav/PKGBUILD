pkgname=libdvdnav
pkgver=5.0.3
pkgrel=1
pkgdesc="The library for xine-dvdnav plugin"
arch=('x86_64')
url="https://dvdnav.mplayerhq.hu/"
license=('GPL')
#depends=()
source=("http://download.videolan.org/pub/videolan/libdvdnav/${pkgver}/libdvdnav-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/libdvdnav-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libdvdnav-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d6d0519f654649bd65b3029224191e7d6acc893d94e8578e435d77b75327584e9f44410a062c1fc60c6211f5bea6b3971228d84de595808733ab7356980e0123')

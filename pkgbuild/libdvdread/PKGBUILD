pkgname=libdvdread
pkgver=5.0.3
pkgrel=1
pkgdesc="Provides a simple foundation for reading DVD video disks"
arch=('x86_64')
url="https://dvdnav.mplayerhq.hu/"
license=('GPL')
#depends=()
source=("http://download.videolan.org/pub/videolan/libdvdread/${pkgver}/libdvdread-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/libdvdread-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libdvdread-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1ca438f0b5c406549eec62e1abef1e8745b9f932bcd30a3194ee9e37995b269ec8f1652a24cc3d2cb11ddb964e4a47a06e5405f9402e616586ff6263a1af3fc2')

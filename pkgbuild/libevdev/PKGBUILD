pkgname=libevdev
pkgver=1.5.8
pkgrel=1
pkgdesc="Wrapper library for evdev devices"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/libevdev/"
license=('custom:X11')
#depends=()
source=("https://freedesktop.org/software/libevdev/libevdev-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libevdev-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libevdev-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e9485d8c6b48ebf762b32b003bc6b761c548024ad3bc34a0793485b53383746881fcc9b206a078d571937291e519d9822e50c5d8816778d347094691b65ec3fa')

pkgname=libevdev
pkgver=1.5.7
pkgrel=1
pkgdesc="Wrapper library for evdev devices"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/libevdev/"
license=('custom:X11')
#depends=()
source=("https://freedesktop.org/software/libevdev/libevdev-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libevdev-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libevdev-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('53adf6c92ec61f0635b643a88d8762a18f7cd3088d23ac95831be32cc7150ebd19f20265b90f6a1f9a63420c2f8968c2d17d8dc4892c0e90f9dfcce82c622df1')

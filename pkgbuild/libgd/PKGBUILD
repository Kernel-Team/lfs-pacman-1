pkgname=libgd
pkgver=2.2.4
pkgrel=1
pkgdesc="Library for the dynamic creation of images by programmers"
arch=('x86_64')
url="https://libgd.github.io/"
license=('custom')
#depends=()
source=("https://github.com/libgd/libgd/releases/download/gd-${pkgver}/libgd-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libgd-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libgd-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('07903f322c4f6ab392508b0f60c38ca133699111ea92995dc6cd9379210d598bcb24a46c19657884d9e252f8663d0ee8c89c600e3a382a5ae598198c190f39b5')

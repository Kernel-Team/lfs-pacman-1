pkgname=libgepub
pkgver=0.4
pkgrel=1
pkgdesc="Simple library to read epub files using glib"
arch=('x86_64')
url="https://git.gnome.org/browse/libgepub/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libgepub/${pkgver}/libgepub-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libgepub-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libgepub-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('dd3e9837ba2c5896319918bda19eec8ea790d54f7893ddca46774f96f8e09ac1962ae6cbfc0bcd23c15059c63683ef4a6673e05f8416b024591677fddfa3ca15')

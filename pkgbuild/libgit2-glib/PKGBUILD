pkgname=libgit2-glib
pkgver=0.25.0
pkgrel=1
pkgdesc="GLib wrapper for libgit2"
arch=('x86_64')
url="http://wiki.gnome.org/Projects/Libgit2-glib"
license=('LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/libgit2-glib/${pkgver:0:4}/libgit2-glib-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libgit2-glib-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/libgit2-glib-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f265d5da4bba28de2aa7254d36fa596b9e348c6543cd559cbb9c1f9610d4b63af00c82fb4138f345e15109503e0d61101d3344c68539348cb268403387a4418e')

pkgname=libgsf
pkgver=1.14.41
pkgrel=1
pkgdesc="An extensible I/O abstraction library for dealing with structured file formats"
arch=('x86_64')
url="https://git.gnome.org/browse/libgsf/"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/libgsf/${pkgver:0:4}/libgsf-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libgsf-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/libgsf-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e3892500288e5d1d9e46cdd3940d872ae2504fe54babe2dc085218c3e1a5aff5a7220c88bde730239af4a56c340a22f47337280b8892f0ab31e1e751adea9bc3')

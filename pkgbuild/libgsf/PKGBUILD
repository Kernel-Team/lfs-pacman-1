pkgname=libgsf
pkgver=1.14.42
pkgrel=1
pkgdesc="An extensible I/O abstraction library for dealing with structured file formats"
arch=('x86_64')
url="https://git.gnome.org/browse/libgsf/"
license=('GPL' 'LGPL')
#depends=()
source=("https://download.gnome.org/sources/libgsf/${pkgver:0:4}/libgsf-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libgsf-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/libgsf-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ed31a4064caa06145660f8cf2acfe0f272bb89c81db41702ebd1d006bebb5f5fb2dd345be4ffec5d4f3688a9d1f539430371c7c6f958c45a0514a00855fc2e54')

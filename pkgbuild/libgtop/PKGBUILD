pkgname=libgtop
pkgver=2.37.90
pkgrel=1
pkgdesc="A library that reads information about processes and the running system"
arch=('x86_64')
url="https://git.gnome.org/browse/libgtop/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libgtop/${pkgver:0:4}/libgtop-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libgtop-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/libgtop-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('8a65b0af0eb48c64811dccafa80b9cf7f3dabe59826bb0d43e54bf88ee9c2dbe72931a9d7d005d11b29f07a8f561857243357c1ae3b699a3c96f52909c3b3c09')

pkgname=libgtop
pkgver=2.37.92
pkgrel=1
pkgdesc="A library that reads information about processes and the running system"
arch=('x86_64')
url="https://git.gnome.org/browse/libgtop/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libgtop/${pkgver:0:4}/libgtop-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libgtop-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/libgtop-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('52f3e60a16b8e946321063066413629d89c2aba5ef861eeac1f23d5e8fc66f38c05b2cd11fbf4c9a5dbd9870e39ddce9da09ec4d01fa6ac581e50e77adbc0b23')

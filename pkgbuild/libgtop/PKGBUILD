pkgname=libgtop
pkgver=2.36.0
pkgrel=1
pkgdesc="A library that reads information about processes and the running system"
arch=('x86_64')
url="https://git.gnome.org/browse/libgtop/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libgtop/${pkgver:0:4}/libgtop-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libgtop-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/libgtop-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('2768c628fa3e872a940246042b2c78ad4618612ecb2cf2b95fb70343a4f1a01bb558d0ce9e5b3468f395349f338ca33d460e1d91f2c123ad39243cd0ff20d5e5')

pkgname=libgusb
pkgver=0.2.10
pkgrel=1
pkgdesc="GObject wrapper for libusb1"
arch=('x86_64')
url="https://github.com/hughsie/libgusb"
license=('LGPL2.1')
#depends=()
source=("https://people.freedesktop.org/~hughsient/releases/libgusb-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libgusb-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libgusb-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('eb00fd20bf8f4093c87fca3546783ddbe878d93255fd00ee584958c95dd484504ed050f3de93c2bc15dd1c8d0bcf4a3ae78a3b622d0e463c3617c454c0d75977')

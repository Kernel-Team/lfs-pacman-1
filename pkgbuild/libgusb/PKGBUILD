pkgname=libgusb
pkgver=0.2.11
pkgrel=1
pkgdesc="GObject wrapper for libusb1"
arch=('x86_64')
url="https://github.com/hughsie/libgusb"
license=('LGPL2.1')
#depends=()
source=("https://people.freedesktop.org/~hughsient/releases/libgusb-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libgusb-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libgusb-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f9c3c204b5f0feaf706b23dd9a174feb36a9f3c8db8ffb5dcdefa66b18ba0ac963c6041d2d91a6a2f6e23036fc6486d142210bd5348e10c026a6defeb0bee096')

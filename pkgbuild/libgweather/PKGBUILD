pkgname=libgweather
pkgver=3.28.2
pkgrel=1
pkgdesc="Location and timezone database and weather-lookup library"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/LibGWeather"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libgweather/${pkgver:0:4}/libgweather-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"

	cd "${srcdir}/libgweather-${pkgver}"

	sed -i 's#from "@filename@"##' libgweather/gweather-enum-types.h.tmpl
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Dgtk_doc=true \
		"${srcdir}/libgweather-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('b92716f5f7d7789e12f8fd66ad23de35e921d493ebf4618f68cc669e1b9be8ae6fbb929ee9a027fefe0ad9550f0d39c8647aa0d7ad7e35f1980bee8c9de19b4e')

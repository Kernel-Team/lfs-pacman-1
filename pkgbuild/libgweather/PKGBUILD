pkgname=libgweather
pkgver=3.26.1
pkgrel=1
pkgdesc="Location and timezone database and weather-lookup library"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/LibGWeather"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libgweather/${pkgver:0:4}/libgweather-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libgweather-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/libgweather-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7d8566d5f62c7086826381ce825cd86a58cf362116d0e8fbb8b64b9781118c71663394416f7f08882f0c9d53a6aecef86b6d0c00be12983e754d81e57ad03079')

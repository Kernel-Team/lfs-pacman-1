pkgname=libidn2
pkgver=2.0.4
pkgrel=1
pkgdesc="A free software implementation of IDNA2008, Punycode and TR46"
arch=('x86_64')
url="https://www.gnu.org/software/libidn2/"
license=('GPL2' 'LGPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/libidn/libidn2-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libidn2-${pkgver}"

	./configure --prefix=/usr --disable-doc

	make
}

package() {
	cd "${srcdir}/libidn2-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1e51bd4b8f8907531576291f1c2a8865d17429b4105418b4c98754eb982cd1cbb3adbeab4ec0c1c561d2dba11d876c7c09e5dc5b315c55a2c24986d7a2a3b4d2')

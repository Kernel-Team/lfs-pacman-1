pkgname=libidn2
pkgver=2.0.2
pkgrel=1
pkgdesc="A free software implementation of IDNA2008, Punycode and TR46"
arch=('x86_64')
url="https://www.gnu.org/software/libidn2/"
license=('GPL2' 'LGPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/libidn/libidn2-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libidn2-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libidn2-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c8fd1114fc8df2030abf7c1044da4022989a1cd7ecd92309f62ad0b51b1fcf40418dccd2e397a8335c5e99998130f25339dcb576b4bc88888e3ef0df89714dad')

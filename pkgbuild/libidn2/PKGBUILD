pkgname=libidn2
pkgver=2.0.3
pkgrel=1
pkgdesc="A free software implementation of IDNA2008, Punycode and TR46"
arch=('x86_64')
url="https://www.gnu.org/software/libidn2/"
license=('GPL2' 'LGPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/libidn/libidn2-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libidn2-${pkgver}"

	./configure --prefix=/usr --disable-doc

	make
}

package() {
	cd "${srcdir}/libidn2-${pkgver}"

	make install DESTDIR="${pkgdir}"
}


sha512sums=('1a9f20ff1b57e69d78fe4c3e4b235bda41d6ce963f7604e3604c1164ec10d3e3069bcdf78cef820bf2e8bf481fd4ebae5571d4be66bece1b43d006e1acb7622b')

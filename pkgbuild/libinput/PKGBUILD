pkgname=libinput
pkgver=1.7.3
pkgrel=1
pkgdesc="Input device management and event handling library"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/libinput/"
license=('custom:X11')
#depends=()
source=("https://freedesktop.org/software/libinput/libinput-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libinput-${pkgver}"

	./configure --prefix=/usr \
		--disable-event-gui \
		--disable-tests \
		--with-udev-dir=/usr/lib/udev

	make
}

package() {
	cd "${srcdir}/libinput-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('2262dc56d213a4d3ea765e870af200e2c336a166baa1bbdf5205e3ce70faefc777429ba09563c5dd79feb5442f53abc84e04a0f32a06bb622d6e120bb8ad152b')

pkgname=libinput
pkgver=1.9.901
pkgrel=1
pkgdesc="Input device management and event handling library"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/libinput/"
license=('custom:X11')
#depends=()
source=("https://freedesktop.org/software/libinput/libinput-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Ddebug-gui=false \
		-Dtests=false \
		-Ddocumentation=false \
		"${srcdir}/libinput-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('4e79f81bb52c17833d4e9b05d84657b0e52ff681c9f0408614f7fd66bdd022f8670efc8cb1eff86285b3f39aa51f9727b5c353bae7b6a925070fe6de389f3107')

pkgname=libjpeg-turbo
pkgver=1.5.1
pkgrel=1
pkgdesc="JPEG image codec with accelerated baseline compression and decompression"
arch=('x86_64')
url="http://libjpeg-turbo.virtualgl.org/"
license=('custom')
#depends=()
source=("https://downloads.sourceforge.net/libjpeg-turbo/libjpeg-turbo-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libjpeg-turbo-${pkgver}"

	./configure --prefix=/usr --with-jpeg8

	make
}

package() {
	cd "${srcdir}/libjpeg-turbo-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a03823cf4b3d1aada24e502fea0a979b1f656c01e55ffddc06013b9c79509c2da1e3bcf0b85282289451d77d4cb5f56dd8cbf6e492744836ddda1f7136534852')

pkgname=libmbim
pkgver=1.14.0
pkgrel=1
pkgdesc="MBIM modem protocol helper library"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/libmbim/"
license=('GPL2')
#depends=()
source=("https://www.freedesktop.org/software/libmbim/libmbim-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libmbim-${pkgver}"

	./configure --prefix=/usr --disable-more-warnings

	make
}

package() {
	cd "${srcdir}/libmbim-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a9b1ba59828fd1c8cf39705717c56e3b75f34d6b3b9cd9f8be40fe245c07f4ea4d211727322c8b3c6d92f004c670e2fe6de76a3117e38b1e8de6673cfb6168bd')

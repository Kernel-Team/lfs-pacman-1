pkgname=libmediaart
pkgver=1.9.1
pkgrel=1
pkgdesc="Library tasked with managing, extracting and handling media art caches"
arch=('x86_64')
url="https://git.gnome.org/browse/libmediaart/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libmediaart/${pkgver:0:3}/libmediaart-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libmediaart-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-qt

	make
}

package() {
	cd "${srcdir}/libmediaart-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1ba43d3501d4775984967960c24bf217bcedd075e1716a2f54266817ae2a93eed119035f385025e34ba83b58ec10e544bbde9c2ad328a3de00c5c80b35524222')

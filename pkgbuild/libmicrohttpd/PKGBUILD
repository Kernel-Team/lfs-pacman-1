pkgname=libmicrohttpd
pkgver=0.9.58
pkgrel=1
pkgdesc="C library that is supposed to make it easy to run an HTTP server as part of another application"
arch=('x86_64')
url="https://www.gnu.org/software/libmicrohttpd/"
license=('LGPL')
#depends=()
source=("https://ftp.gnu.org/gnu/libmicrohttpd/libmicrohttpd-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libmicrohttpd-${pkgver}"

	./configure --prefix=/usr --disable-examples

	make
}

package() {
	cd "${srcdir}/libmicrohttpd-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f68268bb0a0776ac0654a682fc598f4778561c2cc775e7315505c0e2f26f0633590d01f157984d348fdcedfb63d31d39add760a4ddb041694330015293d161b6')

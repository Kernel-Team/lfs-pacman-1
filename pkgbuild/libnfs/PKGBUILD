pkgname=libnfs
pkgver=3.0.0
pkgrel=1
pkgdesc="client library for accessing NFS shares"
arch=('x86_64')
url="https://github.com/sahlberg/libnfs"
license=('GPL')
#depends=()
source=("https://github.com/sahlberg/libnfs/archive/libnfs-${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/libnfs-libnfs-${pkgver}"

	autoreconf -fi
}

build() {
	cd "${srcdir}/libnfs-libnfs-${pkgver}"

	./configure --prefix=/usr --disable-werror

	make
}

package() {
	cd "${srcdir}/libnfs-libnfs-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9af31f8824431e9d28267c468dafc7cfc4062b1a280ca141036bc28a2ba544c4470a67955b5e5fbcc6c175435812381013b4c5d3d3d1a175d5efc7b802ae9b3b')

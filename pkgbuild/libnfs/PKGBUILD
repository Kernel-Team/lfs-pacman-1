pkgname=libnfs
pkgver=1.11.0
pkgrel=1
pkgdesc="client library for accessing NFS shares"
arch=('x86_64')
url="https://github.com/sahlberg/libnfs"
license=('GPL')
#depends=()
source=("https://github.com/sahlberg/libnfs/archive/libnfs-${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/libnfs-libnfs-${pkgver}"

	autoreconf -fi
}

build() {
	cd "${srcdir}/libnfs-libnfs-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libnfs-libnfs-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e1ef6e341fd56955c3adedf6ba90841a57be9c6a962d61ff18425593bfc2787c34c776fdc8ec711f8bb2da1ec08271fc8778a0499aef01c3a7694c384a4c037b')

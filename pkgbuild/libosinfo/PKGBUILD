pkgname=libosinfo
pkgver=1.0.0
pkgrel=1
pkgdesc="GObject based library API for managing information about operating systems, hypervisors and the (virtual) hardware devices they can support"
arch=('x86_64')
url="https://libosinfo.org/"
license=('GPL' 'LGPL')
#depends=()
source=("https://releases.pagure.org/libosinfo/libosinfo-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libosinfo-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/libosinfo-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('962b68b2f6639c70b1ab7377475bbddc99a056075e18d1f281e65188eb8a704b932e7ed26362a36ae805d53137e99b0f8303d18a5a1d7b840fad15eb188ab7d0')

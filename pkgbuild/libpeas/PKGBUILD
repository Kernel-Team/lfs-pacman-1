pkgname=libpeas
pkgver=1.21.0
pkgrel=1
pkgdesc="A GObject-based plugins engine"
arch=('x86_64')
url="http://www.gtk.org/"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/libpeas/${pkgver:0:4}/libpeas-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libpeas-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/libpeas-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/usr/bin" "${pkgdir}/usr/lib/peas-demo"
}

sha512sums=('e6ed6a4d7d5fdf43e36ee93e45ab2cf534cabd48429ff6193dbb0e9420b9a7e318f30a927b46c86a61f704ce8e7b3eed5d976fbc6b95bfb33d2811283aee9043')

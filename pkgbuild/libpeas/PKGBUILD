pkgname=libpeas
pkgver=1.20.0
pkgrel=1
pkgdesc="A GObject-based plugins engine"
arch=('x86_64')
url="http://www.gtk.org/"
license=('GPL2')
#depends=()
source=("https://download.gnome.org/sources/libpeas/${pkgver:0:4}/libpeas-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libpeas-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/libpeas-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/usr/bin" "${pkgdir}/usr/lib/peas-demo"
}

sha512sums=('b3ddebf65e1a76493b5cd5150f60c13597c90398eea16c002e51d25449a595f7591bd0ccd1214ca3a8cbce724eb10f38a316e8c95092442034c048bc95cfdbf4')

pkgname=libpipeline
pkgver=1.4.1
pkgrel=1
pkgdesc="C library for manipulating pipelines of subprocesses in a flexible and convenient way"
arch=('x86_64')
url="http://libpipeline.nongnu.org/"
license=('GPL')
#depends=()
source=("http://download.savannah.gnu.org/releases/libpipeline/libpipeline-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libpipeline-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libpipeline-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('835d65aa3f9436398b5421544ca7857fe9caed52cd2e70320ea04d6315825e648df930e1c225d4aaf0f2edda2a438f6c00f15c556fb9fd30311560fb8d966797')

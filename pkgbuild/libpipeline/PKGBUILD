pkgname=libpipeline
pkgver=1.4.2
pkgrel=1
pkgdesc="C library for manipulating pipelines of subprocesses in a flexible and convenient way"
arch=('x86_64')
url="http://libpipeline.nongnu.org/"
license=('GPL')
#depends=()
source=("http://download.savannah.gnu.org/releases/libpipeline/libpipeline-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libpipeline-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libpipeline-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('18d4592c142b745e709b9d30e894f1cb95e8006d8d3d3c978a1c4b8fc2393fc40383aa8236587cc7caf576ee9664867358a94c081c0730de9e337ddbd1e57e02')

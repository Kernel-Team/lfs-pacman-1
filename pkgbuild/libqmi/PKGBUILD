pkgname=libqmi
pkgver=1.22.2
pkgrel=1
pkgdesc="QMI modem protocol helper library"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/libqmi/"
license=('GPL2')
#depends=()
source=("https://www.freedesktop.org/software/libqmi/libqmi-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libqmi-${pkgver}"

	./configure --prefix=/usr --disable-more-warnings

	make
}

package() {
	cd "${srcdir}/libqmi-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('5785b56a60db8fb2566b6a712a18ec2ae74ce1da257473ab6b7cdea3163298ebee6c60a3158a7041aa759bd717eee4b16d9eeaa6b15d9b6e911bc8c8c44bd3d8')

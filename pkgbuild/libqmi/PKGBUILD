pkgname=libqmi
pkgver=1.18.0
pkgrel=1
pkgdesc="QMI modem protocol helper library"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/libqmi/"
license=('GPL2')
#depends=()
source=("https://www.freedesktop.org/software/libqmi/libqmi-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libqmi-${pkgver}"

	./configure --prefix=/usr --disable-more-warnings

	make
}

package() {
	cd "${srcdir}/libqmi-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('3890501fa2299ce5ac8fda732363e39738c95ffb153708d8f727e88c082014018463c569a0d9666385f6394d060ec41052dec400f3f6c733e78748ca7ee56b76')

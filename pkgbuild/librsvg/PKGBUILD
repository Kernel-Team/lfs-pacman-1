pkgname=librsvg
pkgver=2.42.3
pkgrel=1
pkgdesc="SVG rendering library"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/LibRsvg"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/librsvg/${pkgver:0:4}/librsvg-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/librsvg-${pkgver}"

	./configure --prefix=/usr --enable-vala

	make
}

package() {
	cd "${srcdir}/librsvg-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('21bbfea6236a602d41e9ba3f7cc7e25c49a499c791f54feb9bcb72717de0887a0d8554e2e798cc91583bdf4e5266ec4a53a9ea380bc5f4b40adac8b2e502de2e')

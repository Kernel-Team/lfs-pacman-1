pkgname=librsvg
pkgver=2.40.17
pkgrel=1
pkgdesc="SVG rendering library"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/LibRsvg"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/librsvg/${pkgver:0:4}/librsvg-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/librsvg-${pkgver}"

	./configure --prefix=/usr --enable-vala

	make
}

package() {
	cd "${srcdir}/librsvg-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('296e623adbf1e833a9b1f11257a911671d6c01568719ff48f8e2a9e0bf8166eae242d0ae23243a9ac335540fff6b6cdd4760ca2f37f8afe188783fd9b1099ef5')

pkgname=librsvg
pkgver=2.42.5
pkgrel=1
pkgdesc="SVG rendering library"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/LibRsvg"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/librsvg/${pkgver:0:4}/librsvg-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/librsvg-${pkgver}"

	./configure --prefix=/usr --enable-vala

	make
}

package() {
	cd "${srcdir}/librsvg-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('da78aa1fa2f64aaefe9db3f2d27018fe0a4f8210766634d332e137004a3c0d62b011f5ce2ad58a5f9d793da69090c2d5079c91248aa402214b784b95e254a304')

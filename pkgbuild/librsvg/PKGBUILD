pkgname=librsvg
pkgver=2.40.20
pkgrel=1
pkgdesc="SVG rendering library"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/LibRsvg"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/librsvg/${pkgver:0:4}/librsvg-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/librsvg-${pkgver}"

	./configure --prefix=/usr --enable-vala

	make
}

package() {
	cd "${srcdir}/librsvg-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('cdd8224deb4c3786e29f48ed02c32ed9dff5cb15aba574a5ef845801ad3669cfcc3eedb9d359c22213dc7a29de24c363248825adad5877c40abf73b3688ff12f')

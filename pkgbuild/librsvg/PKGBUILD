pkgname=librsvg
pkgver=2.40.19
pkgrel=1
pkgdesc="SVG rendering library"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/LibRsvg"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/librsvg/${pkgver:0:4}/librsvg-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/librsvg-${pkgver}"

	./configure --prefix=/usr --enable-vala

	make
}

package() {
	cd "${srcdir}/librsvg-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ee3921d0344f9c8503a77086e3d0411a5a638beeeefb959529fd07819e21f82504dcd3004faa93c65d77da30d0db055b7cb56ec8517c1bfae3c1ae23582dbce3')

pkgname=libsass
pkgver=3.5.0
pkgrel=1
pkgdesc="Sass compiler library written in C++"
arch=('x86_64')
url="http://sass-lang.com/libsass"
license=('MIT')
#depends=()
source=("https://github.com/sass/libsass/archive/${pkgver}/libsass-${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/libsass-${pkgver}"

	autoreconf -fi
}

build() {
	cd "${srcdir}/libsass-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libsass-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a22ced83ba80a7976da0baa10d0927f48522d8b88e541bed0b73a5b49fc423bbe49cbaaec6651b9a1d06a216c7d25077d70aa256435fed5c9435c56d4be5c1e0')

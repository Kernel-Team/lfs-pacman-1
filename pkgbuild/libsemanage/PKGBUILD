pkgname=libsemanage
pkgver=2.6
pkgrel=1
pkgdesc="SELinux binary policy manipulation library"
arch=('x86_64')
url="http://userspace.selinuxproject.org"
license=('GPL')
options=(emptydirs)
#depends=()
source=("https://raw.githubusercontent.com/wiki/SELinuxProject/selinux/files/releases/20161014/libsemanage-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libsemanage-${pkgver}"

	make
}

package() {
	cd "${srcdir}/libsemanage-${pkgver}"

	make install DESTDIR="${pkgdir}"

	install -v -dm755 "${pkgdir}/var/lib/selinux"
}

md5sums=('666a48c4058c07f2b07ede9eaf210c5f')

pkgname=libsepol
pkgver=2.6
pkgrel=1
pkgdesc="SELinux binary policy manipulation library"
arch=('x86_64')
url="http://userspace.selinuxproject.org"
license=('GPL')
options=(staticlibs)
#depends=()
source=("https://raw.githubusercontent.com/wiki/SELinuxProject/selinux/files/releases/20161014/libsepol-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libsepol-${pkgver}"

	make
}

package() {
	cd "${srcdir}/libsepol-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('17d007857634e3d581fcc9bafcbb75674a06e382bb258c2c6b3656c141d71493699c42b78c8e1917c628476aeb8ead73bb86e8ccf43d7ce59aa0b7884bea132a')

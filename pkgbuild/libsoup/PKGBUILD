pkgname=libsoup
pkgver=2.59.90
pkgrel=1
pkgdesc="GNOME HTTP Library"
arch=('x86_64')
url="http://www.gnome.org"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libsoup/${pkgver:0:4}/libsoup-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libsoup-${pkgver}"

	./configure --prefix=/usr --disable-tls-check

	make
}

package() {
	cd "${srcdir}/libsoup-${pkgver}"

	make install DESTDIR="${pkgdir}"
}


sha512sums=('089fba7cb43fb69b8fb5a491c495ccd58af7294a4a1d13fe87ee7582718f5475e7579b7a88c2ba262d9bf5ce0be3f5dce2f0f831b4a4d728593d65f2d249fce5')

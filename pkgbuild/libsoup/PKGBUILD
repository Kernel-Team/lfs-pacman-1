pkgname=libsoup
pkgver=2.62.1
pkgrel=1
pkgdesc="GNOME HTTP Library"
arch=('x86_64')
url="http://www.gnome.org"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libsoup/${pkgver:0:4}/libsoup-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libsoup-${pkgver}"

	./configure --prefix=/usr --disable-tls-check

	make
}

package() {
	cd "${srcdir}/libsoup-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0617abdf41ab339496e81da83ff67e507913ed42ab6ce149afc5dedea74d0118dbaac2913d8ff2875b8842546504b6c0a373e2746e5007a5f4e24197f94b30f5')

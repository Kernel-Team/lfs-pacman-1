pkgname=libsoup
pkgver=2.60.0
pkgrel=1
pkgdesc="GNOME HTTP Library"
arch=('x86_64')
url="http://www.gnome.org"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libsoup/${pkgver:0:4}/libsoup-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libsoup-${pkgver}"

	./configure --prefix=/usr --disable-tls-check

	make
}

package() {
	cd "${srcdir}/libsoup-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9759d0f6c7dd5975e96e91b7a2b70d2559e2089e54659182dcd443ada6e0481db3b8457377c8ce04085f1ab3160f5e3ec761defc41d8547ff2d3bc08b9ca1217')

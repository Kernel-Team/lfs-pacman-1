pkgname=libsoup
pkgver=2.60.2
pkgrel=1
pkgdesc="GNOME HTTP Library"
arch=('x86_64')
url="http://www.gnome.org"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libsoup/${pkgver:0:4}/libsoup-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libsoup-${pkgver}"

	./configure --prefix=/usr --disable-tls-check

	make
}

package() {
	cd "${srcdir}/libsoup-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1323b0db3f6e5da65769f2c6267b66eddb426c89cc82925e97134b27db8f2c2cbb4f42b75c4efc984ae489907881d3e22ed3a777af0ae7f99d476808a90ca285')

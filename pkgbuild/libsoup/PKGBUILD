pkgname=libsoup
pkgver=2.61.91
pkgrel=1
pkgdesc="GNOME HTTP Library"
arch=('x86_64')
url="http://www.gnome.org"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libsoup/${pkgver:0:4}/libsoup-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libsoup-${pkgver}"

	./configure --prefix=/usr --disable-tls-check

	make
}

package() {
	cd "${srcdir}/libsoup-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('20b6c4aee9c4eefde65c724b85026bca13a7d863c8e25bd4007e92e8500a95c95c97a02aca13fe52e0be25ae2fff62d3e6052397ebed19f10f5d48bb1dad8d78')

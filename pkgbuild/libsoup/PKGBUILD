pkgname=libsoup
pkgver=2.60.3
pkgrel=1
pkgdesc="GNOME HTTP Library"
arch=('x86_64')
url="http://www.gnome.org"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libsoup/${pkgver:0:4}/libsoup-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libsoup-${pkgver}"

	./configure --prefix=/usr --disable-tls-check

	make
}

package() {
	cd "${srcdir}/libsoup-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('56d03702643c8b37ed2ec23a0c7517b7d2d06d4cc01f374a8f1c6a03a95d5413522f430827c8daa30a6338fff11013e303fd12c927ca21c84f0d52a44e3525a8')

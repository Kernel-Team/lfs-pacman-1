pkgname=libsoup
pkgver=2.60.1
pkgrel=1
pkgdesc="GNOME HTTP Library"
arch=('x86_64')
url="http://www.gnome.org"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libsoup/${pkgver:0:4}/libsoup-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libsoup-${pkgver}"

	./configure --prefix=/usr --disable-tls-check

	make
}

package() {
	cd "${srcdir}/libsoup-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c36f74f7b778f8924de5d257f3d07d5b26b078a5b310476e68b5c2c18c7b460fb2950b79b2429ec68303bfa70cd25f08f80de45d08be6ceb562fe820e0e25c31')

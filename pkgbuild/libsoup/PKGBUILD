pkgname=libsoup
pkgver=2.58.1
pkgrel=1
pkgdesc="GNOME HTTP Library"
arch=('x86_64')
url="http://www.gnome.org"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libsoup/${pkgver:0:4}/libsoup-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libsoup-${pkgver}"

	./configure --prefix=/usr --disable-tls-check

	make
}

package() {
	cd "${srcdir}/libsoup-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9181771197a8ed700a80e449ad9b39e697d1b4f470a8d33c227a037322b2a81c8e68bcfdfdab062a97e2b71172b77397facba2ab000be5d388e7ae2f1d6c4d3a')

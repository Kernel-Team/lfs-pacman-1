pkgname=libssh2
pkgver=1.8.1
pkgrel=1
pkgdesc="A library implementing the SSH2 protocol as defined by Internet Drafts"
arch=('x86_64')
url="https://www.libssh2.org/"
license=('BSD')
#depends=()
source=("https://libssh2.org/download/libssh2-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libssh2-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libssh2-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f09ad9ed04d25305b966e7f8c210082fe06c2b236dcd5018b009bd0bd6aaff123d16559d280892a5060760ed055ffe295bc02dc6e8dd1e7b8383c6c703f09290')

pkgname=libtasn1
pkgver=4.12
pkgrel=1
pkgdesc="The ASN.1 library used in GNUTLS"
arch=('x86_64')
url="https://www.gnu.org/software/libtasn1/"
license=('GPL3' 'LGPL')
#depends=()
source=("https://ftp.gnu.org/gnu/libtasn1/libtasn1-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libtasn1-${pkgver}"

	./configure --prefix=/usr --disable-gcc-warnings

	make
}

package() {
	cd "${srcdir}/libtasn1-${pkgver}"

	make install DESTDIR="${pkgdir}"

	make -C doc/reference install-data-local DESTDIR="${pkgdir}"
}

sha512sums=('6c551670949881193e39122f72948e4999ff1ba377f9ee5963d0a4ad1b84256e4fe42e9f6d6a2aa9f7d4ef7acc0e5174fb5cc3df5298524cdeda92f4b8c104f7')

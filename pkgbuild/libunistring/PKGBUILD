pkgname=libunistring
pkgver=0.9.7
pkgrel=1
pkgdesc="Library for manipulating Unicode strings and C strings"
arch=('x86_64')
url="https://www.gnu.org/software/libunistring/"
license=('GPL')
#depends=()
source=("https://ftp.gnu.org/gnu/libunistring/libunistring-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libunistring-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libunistring-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('52d5240dbf9b483976e980027187484dae6bbc103d44be8f9797832e772cde2ea03fcd27b062c81d42ea9b9f5a21216993695f2435bf8c06e48af916be0475f9')

pkgname=libunistring
pkgver=0.9.8
pkgrel=1
pkgdesc="Library for manipulating Unicode strings and C strings"
arch=('x86_64')
url="https://www.gnu.org/software/libunistring/"
license=('GPL')
#depends=()
source=("https://ftp.gnu.org/gnu/libunistring/libunistring-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libunistring-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libunistring-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d4b673d7da3fc122fbc1694a64f9c685f1cfe83592ff427420cb8bbd87169b860740e339c4a8c4b7f72769572eef804fedaa6b607308f243d857209972deb235')

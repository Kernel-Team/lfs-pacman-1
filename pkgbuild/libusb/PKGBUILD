pkgname=libusb
pkgver=1.0.21
pkgrel=1
pkgdesc="Library that provides generic access to USB devices"
arch=('x86_64')
url="http://libusb.sourceforge.net/"
license=('LGPL')
#depends=()
source=("https://downloads.sourceforge.net/libusb/libusb-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/libusb-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libusb-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('015ca07bdb559aa40af5db1302ab0b1c8a30d593699fe2f3c9f45162673dc7b608cecc58d60fde8f3bde2a68370794a045e8efa48fc55402eece11261e525762')

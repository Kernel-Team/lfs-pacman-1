pkgname=libuv
pkgver=1.15.0
pkgrel=1
pkgdesc="Multi-platform support library with a focus on asynchronous I/O"
arch=('x86_64')
url="https://github.com/libuv/libuv"
license=('custom')
#depends=()
source=("libuv-${pkgver}.tar.gz::https://github.com/libuv/libuv/archive/v${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libuv-${pkgver}"

	./autogen.sh

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libuv-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('46b9feb3959e73521f9e499881799c961db3ff1dcdd780537e774dfaf6145430cb98e9558cf3110624fa35a7117350868afdcccb30abf275f7648f11b3de4afa')

pkgname=libuv
pkgver=1.20.0
pkgrel=1
pkgdesc="Multi-platform support library with a focus on asynchronous I/O"
arch=('x86_64')
url="https://github.com/libuv/libuv"
license=('custom')
#depends=()
source=("libuv-${pkgver}.tar.gz::https://github.com/libuv/libuv/archive/v${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libuv-${pkgver}"

	./autogen.sh

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libuv-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('382309cb6e54765b956b03357cb754f49d93505ba0e0122a77f33efca07d7b87966c993a5fd9f9503edd1bcd0f49ca42bd9cd9264cce94c847aebca77d237ba0')

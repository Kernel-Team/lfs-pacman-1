pkgname=libuv
pkgver=1.18.0
pkgrel=1
pkgdesc="Multi-platform support library with a focus on asynchronous I/O"
arch=('x86_64')
url="https://github.com/libuv/libuv"
license=('custom')
#depends=()
source=("libuv-${pkgver}.tar.gz::https://github.com/libuv/libuv/archive/v${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libuv-${pkgver}"

	./autogen.sh

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libuv-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d1ef70b0f060f40cf57b282279d1d63d6dd019b4b811211b2252db32633a80af46290d201b4a4338f84b3efdfe9754a11b29bfa4a7636b06540b1a65e1fd4fbc')

pkgname=libuv
pkgver=1.19.1
pkgrel=1
pkgdesc="Multi-platform support library with a focus on asynchronous I/O"
arch=('x86_64')
url="https://github.com/libuv/libuv"
license=('custom')
#depends=()
source=("libuv-${pkgver}.tar.gz::https://github.com/libuv/libuv/archive/v${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libuv-${pkgver}"

	./autogen.sh

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libuv-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('b903dd460c4bbb11011821d1e1f6c92474462cb6ff0dd8185604eb7726cc61c545dc3f59f5b418e9b31d6512beacdf4fcbdb868dd0004e688a6e34f3feb17eb2')

pkgname=libuv
pkgver=1.12.0
pkgrel=1
pkgdesc="Multi-platform support library with a focus on asynchronous I/O"
arch=('x86_64')
url="https://github.com/libuv/libuv"
license=('custom')
#depends=()
source=("libuv-${pkgver}.tar.gz::https://github.com/libuv/libuv/archive/v${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libuv-${pkgver}"

	./autogen.sh

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libuv-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('879359747e8319b6e951157f9406176c53ee24833ab9ea3e6ad2b9cf25368fd8f166fa2074b89bdb75e2a6a77757d91a079c4ef86b92330a8ea11519cd1e3018')

pkgname=libuv
pkgver=1.22.0
pkgrel=1
pkgdesc="Multi-platform support library with a focus on asynchronous I/O"
arch=('x86_64')
url="https://github.com/libuv/libuv"
license=('custom')
#depends=()
source=("libuv-${pkgver}.tar.gz::https://github.com/libuv/libuv/archive/v${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libuv-${pkgver}"

	./autogen.sh

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libuv-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e79cae6aa1d9cf2c8f7c0262c866fea2858d7104ece7c556e537e7d1cf884f191d5cd3e56539bfe857fa15dc50b57fdcb33019824cd585a2ca250a77d923af73')

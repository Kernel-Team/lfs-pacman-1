pkgname=libva-utils
pkgver=2.2.0
pkgrel=1
pkgdesc="Video Acceleration (VA) API for Linux (client utilities)"
arch=('x86_64')
url="https://01.org/linuxmedia/vaapi"
license=('MIT')
#depends=()
source=("https://github.com/01org/libva-utils/releases/download/${pkgver}/libva-utils-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/libva-utils-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libva-utils-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('bd1a6e4fa72379b6b2ac44c00fb1813447a6b44b2bbb08df5158ddc9dc36b3cb774b3caf4e7e3813edbb01cbe4dab1683185d921fdfbc2a3f1cef0057912df80')

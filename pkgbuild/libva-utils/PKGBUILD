pkgname=libva-utils
pkgver=1.8.3
pkgrel=1
pkgdesc="Video Acceleration (VA) API for Linux (client utilities)"
arch=('x86_64')
url="https://01.org/linuxmedia/vaapi"
license=('MIT')
#depends=()
source=("https://github.com/01org/libva-utils/releases/download/${pkgver}/libva-utils-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/libva-utils-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libva-utils-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0d2bc6e2949be8795012bb82f586b87786beab8cb35d8534eb14a3f0aa3162cc05112b6d1761c7f8af9cd7f81f77814c6bdcfa7c700781de7a126fcb435b00a2')

pkgname=libva-utils
pkgver=2.0.0
pkgrel=1
pkgdesc="Video Acceleration (VA) API for Linux (client utilities)"
arch=('x86_64')
url="https://01.org/linuxmedia/vaapi"
license=('MIT')
#depends=()
source=("https://github.com/01org/libva-utils/releases/download/${pkgver}/libva-utils-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/libva-utils-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libva-utils-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6f6da5ca99745f78ad1ee9c7fa8c9d986a5a4360b8e7b01031fd33bfe3884075291c7596817824f7dbd310b07614b0633b60cf29195769e651e2e8c579d1d211')

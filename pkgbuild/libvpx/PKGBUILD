pkgname=libvpx
pkgver=1.6.1
pkgrel=1
pkgdesc="VP8 and VP9 codec"
arch=('x86_64')
url="http://www.webmproject.org/"
license=('BSD')
#depends=()
source=("http://downloads.webmproject.org/releases/webm/libvpx-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/libvpx-${pkgver}"

	./configure --prefix=/usr \
		--enable-shared \
		--enable-experimental \
		--enable-spatial-svc

	make
}

package() {
	cd "${srcdir}/libvpx-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1a4b009fe1737715c6563a79848126a5859394a5074b1e9cca9bc2e213df90890c15e708040d5f2c96c7c21e268f51e1352ac6911514bf891a4bf3eea154159d')

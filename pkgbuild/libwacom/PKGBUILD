pkgname=libwacom
pkgver=0.25
pkgrel=1
pkgdesc="Library to identify Wacom tablets and their features"
arch=('x86_64')
url="https://sourceforge.net/projects/linuxwacom/"
license=('MIT')
#depends=()
source=("https://downloads.sourceforge.net/linuxwacom/libwacom-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/libwacom-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libwacom-${pkgver}"

	make install DESTDIR="${pkgdir}"

	install -v -dm755 "${pkgdir}/lib/udev/rules.d"
	tools/generate-udev-rules > "${pkgdir}/lib/udev/rules.d/65-libwacom.rules"
}

md5sums=('47ce63c65d74a5730fbf6ff3cea6d821')

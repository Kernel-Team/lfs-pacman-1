pkgname=libwnck
pkgver=3.24.0
pkgrel=1
pkgdesc="Library to manage X windows and workspaces (via pagers, tasklists, etc.)"
arch=('x86_64')
url="https://git.gnome.org/browse/libwnck/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/libwnck/${pkgver:0:4}/libwnck-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libwnck-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/libwnck-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('8b89dde4682d140ad39eb31d52de3549cbfee79ddd92d8bc32632aa785932a3300bbcd2f68325df42eac8bdcbaaf01c274e4894c0661fe493543cff6db7a95d1')

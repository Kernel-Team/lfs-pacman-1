pkgbase=libxcb
pkgname=('libxcb' 'lib32-libxcb')
pkgver=1.12
pkgrel=1
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/xcb/libxcb-${pkgver}.tar.bz2")

prepare() {
	cd "${srcdir}/libxcb-${pkgver}"

	sed -e "s/pthread-stubs//" -i configure.ac
	autoreconf -fi

	cp -a "${srcdir}"/libxcb{,32}-${pkgver}
}

build() {
	cd "${srcdir}/libxcb-${pkgver}"

	./configure --prefix=/usr \
		--enable-xinput \
		--disable-devel-docs

	cd "${srcdir}/libxcb32-${pkgver}"

	export CC_HOLD="${CC}" CXX_HOLD="${CXX}"
	export CC="${CC} -m32" CXX="${CXX} -m32"
	export PKG_CONFIG_PATH=/usr/lib32/pkgconfig

	./configure --prefix=/usr \
		--enable-xinput \
		--disable-devel-docs \
		--libdir=/usr/lib32

	export CC="${CC_HOLD}" CXX="${CXX_HOLD}"
	unset CC_HOLD CXX_HOLD PKG_CONFIG_PATH

	cd "${srcdir}"

	make -C "${srcdir}/libxcb-${pkgver}"
	make -C "${srcdir}/libxcb32-${pkgver}"
}

package_libxcb() {
	pkgdesc="X11 client-side library"

	cd "${srcdir}/libxcb-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

package_lib32-libxcb() {
	pkgdesc="X11 client-side library (32 bit)"

	cd "${srcdir}/libxcb32-${pkgver}"

	make install DESTDIR="${PWD}/dest"

	install -v -dm755 "${pkgdir}/usr"
	mv dest/usr/lib32 "${pkgdir}/usr"
}

sha512sums=('4ce3e3f62b7e1c3a9e61c149c720ef2a4a760539ea615d7d52ae39e7f5a08456dc87d7a1ac5d85ca15dcc468a9a02d56fb8f8f6361c959af9b8780f011995896')

pkgname=libxkbcommon
pkgver=0.7.2
pkgrel=1
pkgdesc="Keymap handling library for toolkits and window systems"
arch=('x86_64')
url="https://xkbcommon.org/"
license=('custom')
#depends=()
source=("http://xkbcommon.org/download/libxkbcommon-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libxkbcommon-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libxkbcommon-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4a06f9d719393a34689fdd74b0cce80af20e26cc5bd6e1b34fff4093a4f8f103704bdc54f0245b62903cdd7529cd8d59864924b9f4ddab314d152804da4da649')

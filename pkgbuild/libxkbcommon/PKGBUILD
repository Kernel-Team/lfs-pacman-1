pkgname=libxkbcommon
pkgver=0.7.1
pkgrel=1
pkgdesc="Keymap handling library for toolkits and window systems"
arch=('x86_64')
url="https://xkbcommon.org/"
license=('custom')
#depends=()
source=("http://xkbcommon.org/download/libxkbcommon-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libxkbcommon-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libxkbcommon-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9f209214d5d7f9334cabb2cd7e0d9b9b0392c1fae06b60e92a03398875399fe48754b543389f78b8b06dd28a86dfd440720e534bae309ca8ef882eb874dce4e1')

pkgname=libxkbcommon
pkgver=0.8.1
pkgrel=1
pkgdesc="Keymap handling library for toolkits and window systems"
arch=('x86_64')
url="https://xkbcommon.org/"
license=('custom')
#depends=()
source=("http://xkbcommon.org/download/libxkbcommon-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libxkbcommon-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libxkbcommon-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('efe57ddb01c555a517451d8d08b69fc298c55823f353873d5e2267b34700fa190e34730ae5be7170a362eba9a0421c03507f3244414f075a303eaefbdaf9ff17')

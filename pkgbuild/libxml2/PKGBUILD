pkgbase=libxml2
pkgname=('libxml2' 'lib32-libxml2')
pkgver=2.9.5
pkgrel=1
arch=('x86_64')
url="http://www.xmlsoft.org/"
license=('MIT')
#depends=()
source=("http://xmlsoft.org/sources/libxml2-${pkgver}.tar.gz")

prepare() {
	cp -a "${srcdir}"/libxml2{,32}-${pkgver}
}

build() {
	cd "${srcdir}/libxml2-${pkgver}"

	./configure --prefix=/usr \
		--with-history \
		--with-icu

	cd "${srcdir}/libxml232-${pkgver}"

	export CC_HOLD="${CC}" CXX_HOLD="${CXX}"
	export CC="${CC} -m32" CXX="${CXX} -m32"
	export PKG_CONFIG_PATH=/usr/lib32/pkgconfig

	./configure --prefix=/usr \
		--libdir=/usr/lib32 \
		--with-history \
		--with-icu \
		--without-python

	export CC="${CC_HOLD}" CXX="${CXX_HOLD}"
	unset CC_HOLD CXX_HOLD PKG_CONFIG_PATH

	cd "${srcdir}"

	make -C "${srcdir}/libxml2-${pkgver}"
	make -C "${srcdir}/libxml232-${pkgver}"
}

package_libxml2() {
	pkgdesc="XML parsing library, version 2"

	cd "${srcdir}/libxml2-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

package_lib32-libxml2() {
	pkgdesc="XML parsing library, version 2 (32 bit)"

	cd "${srcdir}/libxml232-${pkgver}"

	make install DESTDIR="${PWD}/dest"

	install -v -dm755 "${pkgdir}/usr"
	mv dest/usr/lib32 "${pkgdir}/usr"
}

sha512sums=('197dbd1722e5f90eea43837323352f48d215e198aa6b95685645ef7511e2beba8aadc0dd67e099c945120c5dbe7f8c9da5f376b22f447059e9ffa941c1bfd175')

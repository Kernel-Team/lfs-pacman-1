pkgname=libxslt
pkgver=1.1.29
pkgrel=1
pkgdesc="XML stylesheet transformation library"
arch=('x86_64')
url="http://xmlsoft.org/XSLT/"
license=('custom')
#depends=()
options=(emptydirs)
source=("http://xmlsoft.org/sources/libxslt-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libxslt-${pkgver}"

	sed -i "/xlocale.h/d" libxslt/xsltlocale.h

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libxslt-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a1ce555a74a9dabe65e8f64bb66e27e77760fd76940d88f2d59f58dd63ca73c8ae59f3fcbd8e76c8f92ff992fb0c09328528c20ea38ccac83e63252106bf5f31')

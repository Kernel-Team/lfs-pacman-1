pkgname=libxslt
pkgver=1.1.31
pkgrel=1
pkgdesc="XML stylesheet transformation library"
arch=('x86_64')
url="http://xmlsoft.org/XSLT/"
license=('custom')
#depends=()
options=(emptydirs)
source=("http://xmlsoft.org/sources/libxslt-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libxslt-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libxslt-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9012d643625d827b131c825a103f2e2a5f3cbd45d3cdf3318378e8f046da8d084db51c6b0078b5850a26adc81ba3bf357101d65ef510eff54c8b416a71efed92')

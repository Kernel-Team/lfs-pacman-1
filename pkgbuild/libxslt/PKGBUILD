pkgname=libxslt
pkgver=1.1.30
pkgrel=1
pkgdesc="XML stylesheet transformation library"
arch=('x86_64')
url="http://xmlsoft.org/XSLT/"
license=('custom')
#depends=()
options=(emptydirs)
source=("http://xmlsoft.org/sources/libxslt-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/libxslt-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libxslt-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d24e37398503b6bc29245a993738df51bf3948c4a8f052eedd7eac0a9fcff2d5b54220f37070c46f763e073c34bdb3153c9f129aa0df60c3d7cf7eadbbf15986')

pkgname=libzip
pkgver=1.2.0
pkgrel=1
pkgdesc="A C library for reading, creating, and modifying zip archives"
arch=('x86_64')
url="https://nih.at/libzip/index.html"
license=('BSD')
#depends=()
source=("https://nih.at/libzip/libzip-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/libzip-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/libzip-${pkgver}"

	make install DESTDIR="${pkgdir}"

	ln -sfv ../lib/libzip/include/zipconf.h "${pkgdir}/usr/include/zipconf.h"
}

sha512sums=('1ba8626d72e6b47f735568afaf007d1e18beb3ebedf6b69a6b575f9e04d3b84550371191a89be153f8fcedb4a8eac2f996e141da95cdbb52380b6283cc99cf8b')

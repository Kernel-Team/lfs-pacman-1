pkgname=links
pkgver=2.14
pkgrel=1
pkgdesc="A text WWW browser, similar to Lynx"
arch=('x86_64')
url="http://links.twibright.com/"
license=('GPL')
#depends=()
source=("http://links.twibright.com/download/links-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/links-${pkgver}"

	./configure --prefix=/usr \
		--mandir=/usr/share/man \
		--enable-graphics \
		--enable-javascript \
		--without-gpm

	make
}

package() {
	cd "${srcdir}/links-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d03b091957e0a2e06605fcf7c9bc56d48ebbcdc695f4ce894901540008455a9bc6544abdecd787faa041e2dbdff28b0d6ddcc9d26528d39d7d72750655c73575')

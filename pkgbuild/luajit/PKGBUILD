pkgname=luajit
pkgver=2.0.4
pkgrel=1
pkgdesc="Just-in-time compiler and drop-in replacement for Lua 5.1"
arch=('x86_64')
url="https://luajit.org/"
license=('MIT')
#depends=()
source=("https://luajit.org/download/LuaJIT-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/LuaJIT-${pkgver}"

	make amalg PREFIX=/usr CC="${CC}" XCFLAGS="${CFLAGS}"
}

package() {
	cd "${srcdir}/LuaJIT-${pkgver}"

	make install PREFIX=/usr CC="${CC}" XCFLAGS="${CFLAGS}" DESTDIR="${pkgdir}"
}

sha512sums=('a72957bd85d8f457269e78bf08c19b28c5707df5d19920d61918f8a6913f55913ce13037fb9a6463c04cefde0c6644739f390e09d656e4bbc2c236927aa3f8f9')

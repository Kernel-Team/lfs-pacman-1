pkgname=lvm2
pkgver=2.02.171
pkgrel=1
pkgdesc="Logical Volume Manager 2"
arch=('x86_64')
url="http://sourceware.org/lvm2/"
license=('GPL2' 'LGPL2.1')
#depends=()
source=("ftp://sourceware.org/pub/lvm2/releases/LVM2.${pkgver}.tgz")

prepare() {
	cd "${srcdir}/LVM2.${pkgver}"

	sed -i "s#systemd >=#lib&#g" configure
}

build() {
	cd "${srcdir}/LVM2.${pkgver}"

	./configure --prefix=/usr \
		--exec-prefix= \
		--with-confdir=/etc \
		--enable-applib \
		--enable-cmdlib \
		--enable-dmeventd \
		--enable-pkgconfig \
		--enable-udev_rules \
		--enable-udev_sync \
		--enable-udev-systemd-background-jobs \
		--with-tmpfilesdir=/usr/lib/tmpfiles.d \
		--with-systemdsystemunitdir=/lib/systemd/system \
		systemdutildir=/lib/systemd

	make
}

package() {
	cd "${srcdir}/LVM2.${pkgver}"

	make install DESTDIR="${pkgdir}"
	make install_systemd_units DESTDIR="${pkgdir}"
	make install_systemd_generators DESTDIR="${pkgdir}"
}

sha512sums=('801adcc2ae483f81edf6bfba73090b6b8f710370e48764f08a62da71d617157075bea01593c2535ad5ba71dcb5e0cfe83cec9a65180a6e8b9e0d214bdee79883')

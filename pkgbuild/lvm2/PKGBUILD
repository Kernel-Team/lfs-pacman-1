pkgname=lvm2
pkgver=2.02.181
pkgrel=1
pkgdesc="Logical Volume Manager 2"
arch=('x86_64')
url="https://sourceware.org/lvm2/"
license=('GPL2' 'LGPL2.1')
#depends=()
#source=("ftp://sourceware.org/pub/lvm2/releases/LVM2.${pkgver}.tgz")
source=("ftp://sources.redhat.com/pub/lvm2/LVM2.${pkgver}.tgz")

prepare() {
	cd "${srcdir}/LVM2.${pkgver}"

	sed -i "s#systemd >=#lib&#g" configure
}

build() {
	cd "${srcdir}/LVM2.${pkgver}"

	./configure --prefix=/usr \
		--with-confdir=/etc \
		--enable-applib \
		--enable-cmdlib \
		--enable-dmeventd \
		--enable-lvmetad \
		--enable-lvmpolld \
		--enable-pkgconfig \
		--enable-udev_rules \
		--enable-udev_sync \
		--enable-udev-systemd-background-jobs \
		--with-tmpfilesdir=/usr/lib/tmpfiles.d \
		--with-systemdsystemunitdir=/usr/lib/systemd/system \
		systemdutildir=/usr/lib/systemd

	make
}

package() {
	cd "${srcdir}/LVM2.${pkgver}"

	make install DESTDIR="${pkgdir}"
	make install_systemd_units DESTDIR="${pkgdir}"
	make install_systemd_generators DESTDIR="${pkgdir}"
}

sha512sums=('599d992823510e27f3ec3ceaf0d2332402b731afc0d2df88096ab55ed98dba8c3bdc5408d51b9f5b0ffbbb9ac3760ee37b878a0f36ab379449dc076c58e59511')

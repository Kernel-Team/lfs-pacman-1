pkgname=m4
pkgver=1.4.18
pkgrel=1
pkgdesc="The GNU macro processor"
arch=('x86_64')
url="https://www.gnu.org/software/m4/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/m4/m4-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/m4-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/m4-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

md5sums=('730bb15d96fffe47e148d1e09235af82')

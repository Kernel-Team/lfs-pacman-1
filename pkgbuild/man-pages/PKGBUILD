pkgname=man-pages
pkgver=4.13
pkgrel=1
pkgdesc="Linux man pages"
arch=('x86_64')
url="http://man7.org/linux/man-pages/index.html"
license=('GPL' 'custom')
#depends=()
options=(!strip)
source=("https://www.kernel.org/pub/linux/docs/man-pages/man-pages-${pkgver}.tar.xz")

package() {
	cd "${srcdir}/man-pages-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/usr/share/man/man3/getspnam.3"
	rm -rf "${pkgdir}/usr/share/man/man5/attr.5"
	rm -rf "${pkgdir}/usr/share/man/man5/passwd.5"
}

sha512sums=('86479372cbe2ba5fcad3e2049f52ec788a4aa2d8056cadf7b248eaa776064e1c9387a42d0a77f4bde4385214c11aac117b1e99745459260ca639c656c01698b7')

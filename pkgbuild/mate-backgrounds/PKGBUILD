pkgname=mate-backgrounds
pkgver=1.18.0
pkgrel=1
pkgdesc="Background images and data for MATE"
arch=('x86_64')
url="http://mate-desktop.org"
license=('GPL')
#depends=()
source=("http://pub.mate-desktop.org/releases/${pkgver:0:4}/mate-backgrounds-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/mate-backgrounds-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/mate-backgrounds-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('489ed3c57f60b471cba6afa8243cd752b534ac1881db30310b603949af7e3bfb3c9fa8d55c37942377cb36c0fc7545d940de2d03c1166e829b128e6c576f587e')

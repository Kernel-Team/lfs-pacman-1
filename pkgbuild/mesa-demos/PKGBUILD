pkgname=mesa-demos
pkgver=8.3.0
pkgrel=1
pkgdesc="Mesa demos and tools"
arch=('x86_64')
url="http://mesa3d.sourceforge.net"
license=('custom')
#depends=()
source=("ftp://ftp.freedesktop.org/pub/mesa/demos/${pkgver}/mesa-demos-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/mesa-demos-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/mesa-demos-${pkgver}"

	make -C src/egl/opengles2 install DESTDIR="${pkgdir}" bin_PROGRAMS="es2gears_x11 es2_info"
	make -C src/xdemos install DESTDIR="${pkgdir}" bin_PROGRAMS="glxgears glxinfo"
}

sha512sums=('9ba96980306953f7b72745063e75809fb8399bbd5fc58fca96290a8b4e61741bb82fb6171311eddf249ea12face83d7c7b087e6dade6833699a8d220fc752e3f')

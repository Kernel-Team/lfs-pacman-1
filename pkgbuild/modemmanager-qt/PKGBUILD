pkgname=modemmanager-qt
pkgver=5.37.0
pkgrel=1
pkgdesc="Qt wrapper for ModemManager DBus API"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/modemmanager-qt-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/modemmanager-qt-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('110d186478cd656f00abcd71b48b4e09aad6f2c31bdcd5ea24dd96c1e8c39f68d0591025dabfe5b834a49fedfe7d349c47cea09e7314a6c8468caa8df1811227')

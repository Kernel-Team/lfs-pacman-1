pkgname=modemmanager
pkgver=1.6.8
pkgrel=1
pkgdesc="Mobile broadband modem management service"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/ModemManager/"
license=('GPL2' 'LGPL2.1')
#depends=()
source=("https://www.freedesktop.org/software/ModemManager/ModemManager-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/ModemManager-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-more-warnings \
		--enable-gtk-doc \
		--with-polkit=permissive \
		--with-suspend-resume=systemd \
		--with-systemdsystemunitdir=/lib/systemd/system \
		--with-udev-base-dir=/lib/udev

	make
}

package() {
	cd "${srcdir}/ModemManager-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9c1bb321ac0b5165e075900fbf816a21a365995ec319734edfeb7806c6388e7551c84970bb02642f4c8848f03c5d11ddb9653880d02635cfad8ce929c96ff5f3')

pkgname=modemmanager
pkgver=1.8.0
pkgrel=1
pkgdesc="Mobile broadband modem management service"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/ModemManager/"
license=('GPL2' 'LGPL2.1')
#depends=()
source=("https://www.freedesktop.org/software/ModemManager/ModemManager-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/ModemManager-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-more-warnings \
		--enable-gtk-doc \
		--with-polkit=permissive \
		--with-suspend-resume=systemd \
		--with-systemdsystemunitdir=/usr/lib/systemd/system \
		--with-udev-base-dir=/usr/lib/udev

	make
}

package() {
	cd "${srcdir}/ModemManager-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d5ff550e8483dbfb7bc29effde62caa038b1a1bae04254556677a5f1a688a20fe79c8c40a24d74b40ca2dba38d7669fc530c4e869189b1bd0bed298498026232')

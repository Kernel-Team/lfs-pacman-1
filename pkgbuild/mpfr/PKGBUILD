pkgname=mpfr
_basever=4.0.2
pkgver=4.0.2
pkgrel=1
pkgdesc="Multiple-precision floating-point library"
arch=('x86_64')
url="http://www.mpfr.org/"
license=('LGPL')
#depends=()
source=("http://mpfr.org/mpfr-current/mpfr-${_basever}.tar.xz")
#	"mpfr-cumulative.patch::http://mpfr.org/mpfr-current/allpatches")

export CC="gcc"
export CXX="g++"

prepare() {
	cd "${srcdir}/mpfr-${_basever}"

	[ ${_basever} != ${pkgver} ] && patch -Np1 -i "${srcdir}/mpfr-cumulative.patch" || true
}

build() {
	cd "${srcdir}/mpfr-${_basever}"

	./configure --prefix=/usr --enable-thread-safe

	make
}

package() {
	cd "${srcdir}/mpfr-${_basever}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d583555d08863bf36c89b289ae26bae353d9a31f08ee3894520992d2c26e5683c4c9c193d7ad139632f71c0a476d85ea76182702a98bf08dde7b6f65a54f8b88')

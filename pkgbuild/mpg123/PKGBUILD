pkgname=mpg123
pkgver=1.25.3
pkgrel=1
pkgdesc="A console based real time MPEG Audio Player for Layer 1, 2 and 3"
arch=('x86_64')
url="https://sourceforge.net/projects/mpg123/"
license=('LGPL2.1')
#depends=()
source=("https://downloads.sourceforge.net/mpg123/mpg123-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/mpg123-${pkgver}"

	./configure --prefix=/usr --with-module-suffix=.so

	make
}

package() {
	cd "${srcdir}/mpg123-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a2e4368db3b6726b94fc8b1f8aa1210fda2ba1456503cca73b0d9315894d3b72645ebac11dba6717540110bf680fe2f00727da5b0087b6d797fe288bb3c1e65e')

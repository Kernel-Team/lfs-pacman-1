pkgname=mpg123
pkgver=1.25.4
pkgrel=1
pkgdesc="A console based real time MPEG Audio Player for Layer 1, 2 and 3"
arch=('x86_64')
url="https://sourceforge.net/projects/mpg123/"
license=('LGPL2.1')
#depends=()
source=("https://downloads.sourceforge.net/mpg123/mpg123-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/mpg123-${pkgver}"

	./configure --prefix=/usr --with-module-suffix=.so

	make
}

package() {
	cd "${srcdir}/mpg123-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('aea1f225f6addfea8a22cbe020f3216531b8e988d11cf5d588733e7ce22c03d4649df5ae3f596a0e15507e1d9f2c83a16a71affb479dd4156d270b0d23c2f072')

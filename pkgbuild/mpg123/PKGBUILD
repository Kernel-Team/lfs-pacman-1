pkgname=mpg123
pkgver=1.25.6
pkgrel=1
pkgdesc="A console based real time MPEG Audio Player for Layer 1, 2 and 3"
arch=('x86_64')
url="https://sourceforge.net/projects/mpg123/"
license=('LGPL2.1')
#depends=()
source=("https://downloads.sourceforge.net/mpg123/mpg123-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/mpg123-${pkgver}"

	./configure --prefix=/usr --with-module-suffix=.so

	make
}

package() {
	cd "${srcdir}/mpg123-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0b129c38c19462f7fbe3f56ea2b856222f8a1a3ba76ef8109ca759c9a9c668432cc0ec76059f9a7a3c37228ce615e4c628c7de3b1663073302cc7c8fc93f249c')

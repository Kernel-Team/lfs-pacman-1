pkgname=mpg123
pkgver=1.25.0
pkgrel=1
pkgdesc="A console based real time MPEG Audio Player for Layer 1, 2 and 3"
arch=('x86_64')
url="https://sourceforge.net/projects/mpg123/"
license=('LGPL2.1')
#depends=()
source=("https://downloads.sourceforge.net/mpg123/mpg123-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/mpg123-${pkgver}"

	./configure --prefix=/usr --with-module-suffix=.so

	make
}

package() {
	cd "${srcdir}/mpg123-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fc5047fe88639b1cd5c44cdd054d452984abfbf572d064c7f465b7cef8a03b389591daf4934010f227a28d0e12bf0b0214d0c92132e893af90cd859389558e3c')

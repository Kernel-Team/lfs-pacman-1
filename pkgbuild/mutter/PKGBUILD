pkgname=mutter
pkgver=3.27.1
pkgrel=1
pkgdesc="A window manager for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/mutter/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/mutter/${pkgver:0:4}/mutter-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/mutter-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-compile-warnings=minimum \
		--disable-maintainer-flags \
		--disable-Werror \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/mutter-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ba7c00bd52c829e745248799b221abc586a674448e29bdfa11865811207b73d21ed38781caa5e27eaa7b611df76e24164e35e5aeec24bd28e4765377d6f69e45')

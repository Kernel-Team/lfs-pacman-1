pkgname=mutter
pkgver=3.24.4
pkgrel=1
pkgdesc="A window manager for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/mutter/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/mutter/${pkgver:0:4}/mutter-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/mutter-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-compile-warnings=minimum \
		--disable-maintainer-flags \
		--disable-Werror \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/mutter-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7ae579ab3e9df09cae37fbc1b277e382c9f610058b914b69a7bdb89f3bec510403210c0cded16a6487111507151f4d7075d161e051c0b88585d6ab6b4575b8d3')

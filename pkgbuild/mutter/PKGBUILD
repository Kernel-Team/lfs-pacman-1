pkgname=mutter
pkgver=3.24.2
pkgrel=1
pkgdesc="A window manager for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/mutter/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/mutter/${pkgver:0:4}/mutter-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/mutter-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-compile-warnings=minimum \
		--disable-maintainer-flags \
		--disable-Werror \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/mutter-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6b999a39637a8eacba5c04f07bfc64b42f4a6a8c36613c43d67a5b1a29c71deed65a77f8d09b4919577848abc7613ac5c0bc12341d5fcec48c6af104ad39f361')

pkgname=mutter
pkgver=3.28.3
pkgrel=1
pkgdesc="A window manager for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/mutter/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/mutter/${pkgver:0:4}/mutter-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/mutter-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-compile-warnings=minimum \
		--disable-maintainer-flags \
		--disable-Werror \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/mutter-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1230e4489693188c4d9ffe5460b235cd018b16f27741451120c3acb6027901d5286d9793cc0c9ad50a2233ff20ea91e7a47c0df611bb4479f1e33af0d185f69a')

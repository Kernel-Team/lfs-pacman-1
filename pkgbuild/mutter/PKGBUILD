pkgname=mutter
pkgver=3.24.3
pkgrel=1
pkgdesc="A window manager for GNOME"
arch=('x86_64')
url="https://git.gnome.org/browse/mutter/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/mutter/${pkgver:0:4}/mutter-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/mutter-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-compile-warnings=minimum \
		--disable-maintainer-flags \
		--disable-Werror \
		--disable-schemas-compile

	make
}

package() {
	cd "${srcdir}/mutter-${pkgver}"

	make install DESTDIR="${pkgdir}"
}


sha512sums=('3edf2bcaa48dc7c65c291a7c12ebdcd99a5d905f991761983e79e5ae7ef4cdeef80b830b8595b882fd91bb3d60b9806ed86a99b28f684ba6af34270262c8d00e')

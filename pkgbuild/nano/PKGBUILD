pkgname=nano
pkgver=2.7.5
pkgrel=1
pkgdesc="Pico editor clone with enhancements"
arch=('x86_64')
url="http://www.nano-editor.org"
license=('GPL')
#depends=()
source=("https://nano-editor.org/dist/v${pkgver:0:3}/nano-${pkgver}.tar.xz"
	"nanorc")

build() {
	cd "${srcdir}/nano-${pkgver}"

	./configure --prefix=/usr --sysconfdir=/etc --enable-utf8

	make
}

package() {
	cd "${srcdir}/nano-${pkgver}"

	make install DESTDIR="${pkgdir}"

	ln -sfv nano "${pkgdir}/usr/bin/editor"

	install -v -Dm644 "${srcdir}/nanorc" "${pkgdir}/etc"
}

md5sums=('002703e368e07882f75e304c8860d83d'
         'fc57b93c907fefbccf12317d40b4a204')

pkgname=nasm
pkgver=2.13.01
pkgrel=1
pkgdesc="An 80x86 assembler designed for portability and modularity"
arch=('x86_64')
url="http://www.nasm.us"
license=('BSD')
#depends=()
source=("http://www.nasm.us/pub/nasm/releasebuilds/${pkgver}/nasm-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/nasm-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/nasm-${pkgver}"

	make install INSTALLROOT="${pkgdir}"
}

sha512sums=('6561a2efb3ffea77a1a8cd364edf1ecedb2c14e1902469d7c59d743f25ca612529113d1099818abbe0a9f2592f12604f1810855bbdf8dc9de3648094a83529ae')

pkgname=nasm
pkgver=2.13.02
pkgrel=1
pkgdesc="An 80x86 assembler designed for portability and modularity"
arch=('x86_64')
url="http://www.nasm.us"
license=('BSD')
#depends=()
source=("http://www.nasm.us/pub/nasm/releasebuilds/${pkgver}/nasm-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/nasm-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/nasm-${pkgver}"

	make install INSTALLROOT="${pkgdir}"
}

sha512sums=('62b9db259f24bda428eb1532aa262df10e5352008cd8b4570ed31e20d9e966ad580b8084e9f4589a14f8dde2230289695bee4fbab0f6beb9d5f9c89f837307bd')

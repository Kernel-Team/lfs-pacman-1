pkgname=nautilus
pkgver=3.25.92
pkgrel=1
pkgdesc="Default file manager for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Nautilus"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/nautilus/${pkgver:0:4}/nautilus-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Denable-exif=true \
		-Denable-xmp=true \
		-Denable-packagekit=false \
		-Denable-gtk-doc=true \
		"${srcdir}/nautilus-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('1ef7d34d06d362b2aad6865145690e06590ccebc9951f4a35fd069121c5857a151e0d80341091b3aed988f5de04336e76caef024ec67de1c3d73149d2beb436e')

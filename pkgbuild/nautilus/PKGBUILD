pkgname=nautilus
pkgver=3.26.0
pkgrel=1
pkgdesc="Default file manager for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Nautilus"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/nautilus/${pkgver:0:4}/nautilus-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Denable-exif=true \
		-Denable-xmp=true \
		-Denable-packagekit=false \
		-Denable-gtk-doc=true \
		"${srcdir}/nautilus-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('cd5288da2cd2e13b5f5facf5ac42688c970b8e08102fb1eb1c21d3133f483ccdac6c49721f9650f9bc59b115e18ac7e965f667f4aa949cccbd9191c85037d290')

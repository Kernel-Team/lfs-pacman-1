pkgname=nautilus
pkgver=3.27.92.1
pkgrel=1
pkgdesc="Default file manager for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Nautilus"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/nautilus/${pkgver:0:4}/nautilus-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Ddocs=true \
		-Dpackagekit=false \
		"${srcdir}/nautilus-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('4601a74395fcbf411a0bde4c450474dfee210be0ed3e012e37fe67c3b10cbdd43f98bc85f9807436ed42eff5f9bfc0cc4d47e6ed1b69bce67ca415bacf25fa31')

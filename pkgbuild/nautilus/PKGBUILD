pkgname=nautilus
pkgver=3.24.2.1
pkgrel=1
pkgdesc="Default file manager for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Nautilus"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/nautilus/${pkgver:0:4}/nautilus-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/nautilus-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-packagekit \
		--disable-schemas-compile \
		--disable-update-mimedb \
		--disable-tracker

	make
}

package() {
	cd "${srcdir}/nautilus-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f6868600bcdc82071b3a63f4e4a0f7decf0d72e021eb3d0c26e914413c858163ee4403c4f3ef7689556a0fc91394f30cff9a3db14da030b277b50972c7b80a07')

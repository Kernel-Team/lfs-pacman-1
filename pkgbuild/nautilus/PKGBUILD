pkgname=nautilus
pkgver=3.24.1
pkgrel=1
pkgdesc="Default file manager for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Nautilus"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/nautilus/${pkgver:0:4}/nautilus-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/nautilus-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-packagekit \
		--disable-schemas-compile \
		--disable-update-mimedb \
		--disable-tracker

	make
}

package() {
	cd "${srcdir}/nautilus-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d01be58d9f476dc53e67a3cd2502e7042805ca178d2d7c0d540c3f01c2b7dab505cc7b57716c258a402759f4ed709cca65520397f1cbbf5cd69592ddc63b015e')

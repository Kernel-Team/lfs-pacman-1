pkgname=nautilus
pkgver=3.28.0.1
pkgrel=1
pkgdesc="Default file manager for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Nautilus"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/nautilus/${pkgver:0:4}/nautilus-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Ddocs=true \
		-Dpackagekit=false \
		"${srcdir}/nautilus-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('1a1db1f0c657f880575c9327b48a517263cfce8461da5bc1d8f3deeff6d5039256e18b12d040052423c2fcbc3fb5a568f5478eaeeb36f72bc4339858308584ab')

pkgname=nautilus
pkgver=3.25.90
pkgrel=1
pkgdesc="Default file manager for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Nautilus"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/nautilus/${pkgver:0:4}/nautilus-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Denable-exif=true \
		-Denable-xmp=true \
		-Denable-packagekit=false \
		-Denable-gtk-doc=true \
		"${srcdir}/nautilus-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('f5a353a678c3124484806e0976318c779bb079220137ea401a5e62fe5b3deaba15122e707730a6c6c100e65e1cfbbfd8f53c0a99f196c2f4f8100664470f100b')

pkgname=nettle
pkgver=3.3
pkgrel=1
pkgdesc="A low-level cryptographic library"
arch=('x86_64')
url="http://www.lysator.liu.se/~nisse/nettle/"
license=('GPL2')
#depends=()
source=("https://ftp.gnu.org/gnu/nettle/nettle-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/nettle-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/nettle-${pkgver}"

	make install DESTDIR="${pkgdir}"

	chmod 755 "${pkgdir}"/usr/lib/lib{nettle,hogweed}.so
}

sha512sums=('271981d89766f151af3cdc4e5fc43c438222f0f6f44475bad114f4209955b5235fced6526c7abca001cca223e8cfcd2a6bf389b160b305a499e7acf52425ec70')

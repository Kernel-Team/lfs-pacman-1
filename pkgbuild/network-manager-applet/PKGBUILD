pkgname=network-manager-applet
pkgver=1.8.6
pkgrel=1
pkgdesc="Applet for managing network connections"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/NetworkManager/"
license=('GPL2' 'LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/network-manager-applet/${pkgver:0:3}/network-manager-applet-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/network-manager-applet-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--without-selinux

	make
}

package() {
	cd "${srcdir}/network-manager-applet-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9080fe1ef252837f16c698fe2083ebe66949e2a30f626619ef7eb82f44e988a0b8488f4f8cd0946a78a240f9bf7a5d054afc988b25c1bedeba7f79a7c84d46fa')

pkgname=ninja
pkgver=1.8.1
pkgrel=1
pkgdesc="Small build system with a focus on speed"
arch=('x86_64')
url="https://ninja-build.org/"
license=('APACHE')
#depends=()
source=("ninja-${pkgver}.tar.gz::https://github.com/ninja-build/ninja/archive/v${pkgver}.tar.gz")

build() {
	cd "${srcdir}/ninja-${pkgver}"

	python ./configure.py --bootstrap --verbose
}

package() {
	cd "${srcdir}/ninja-${pkgver}"

	install -Dm755 ninja "${pkgdir}/usr/bin/ninja"
}

sha512sums=('d4bdd0c354bb1d597fc035fbd2c8ed985c9d219f4e30e205d32498f6fe646c127285f4a0c933b0b177db35971672ffb98a497fbe2a89dbd0787351d7367a0c80')

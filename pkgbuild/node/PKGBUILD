pkgname=node
pkgver=8.6.0
pkgrel=1
pkgdesc="Evented I/O for V8 javascript"
arch=('x86_64')
url="https://nodejs.org/en/"
license=('MIT')
#depends=()
source=("https://nodejs.org/dist/v${pkgver}/node-v${pkgver}-linux-x64.tar.xz")

package() {
	cd "${srcdir}/node-v${pkgver}-linux-x64"

	install -v -dm755 "${pkgdir}/usr"

	cp -a bin include lib share "${pkgdir}/usr"

	rm -rf "${pkgdir}"/usr/share/{doc,systemtap}
}

sha512sums=('c0b460b258697b1b5b224a01d38e7cc21723f6c3b4f7950acb142c5d8b3f0f086faa8b00b991c243fa878673b112837397887f88e7a873f41813c858a9330c1d')

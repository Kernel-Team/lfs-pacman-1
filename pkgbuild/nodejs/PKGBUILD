pkgname=nodejs
pkgver=9.5.0
pkgrel=1
pkgdesc="Evented I/O for V8 javascript"
arch=('x86_64')
url="https://nodejs.org/en/"
license=('MIT')
#depends=()
source=("https://nodejs.org/dist/v${pkgver}/node-v${pkgver}.tar.xz")

build() {
	cd "${srcdir}/node-v${pkgver}"

	./configure --prefix=/usr \
		--shared-http-parser \
		--shared-libuv \
		--shared-nghttp2 \
		--shared-openssl \
		--shared-zlib \
		--shared-cares \
		--with-intl=system-icu

	make
}

package() {
	cd "${srcdir}/node-v${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f2f4d78e7c70ab32357bd35af7afeb59feca8839fb7e652421c4ac4d0c55c1c1c78cf9a2e433f3ed714be45e658c9e04cf465e751eb5a40a67d2b1afdebae4a9')

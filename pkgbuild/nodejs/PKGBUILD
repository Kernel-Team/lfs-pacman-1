pkgname=nodejs
pkgver=9.10.1
pkgrel=1
pkgdesc="Evented I/O for V8 Javascript"
arch=('x86_64')
url="https://nodejs.org/en/"
license=('MIT')
#depends=()
source=("https://nodejs.org/dist/v${pkgver}/node-v${pkgver}.tar.xz")

build() {
	cd "${srcdir}/node-v${pkgver}"

	./configure --prefix=/usr \
		--shared-http-parser \
		--shared-libuv \
		--shared-nghttp2 \
		--shared-openssl \
		--shared-zlib \
		--shared-cares \
		--with-intl=system-icu

	make
}

package() {
	cd "${srcdir}/node-v${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f94564a62fdce80b4ac946e6161e22664f372adf46e3baece17c1733eb9a5b850b43628f131653144bf920364933d0e94f21d1c5404f2388b2b9d56743d02e94')

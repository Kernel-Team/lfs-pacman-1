pkgname=nodejs
pkgver=9.9.0
pkgrel=1
pkgdesc="Evented I/O for V8 Javascript"
arch=('x86_64')
url="https://nodejs.org/en/"
license=('MIT')
#depends=()
source=("https://nodejs.org/dist/v${pkgver}/node-v${pkgver}.tar.xz")

build() {
	cd "${srcdir}/node-v${pkgver}"

	./configure --prefix=/usr \
		--shared-http-parser \
		--shared-libuv \
		--shared-nghttp2 \
		--shared-openssl \
		--shared-zlib \
		--shared-cares \
		--with-intl=system-icu

	make
}

package() {
	cd "${srcdir}/node-v${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('937ecc6d73b82a6e27a787c96c895078fe6f3a2cc7bf29982eee4d5b6f4d814d1fc0e063c92880c43bea6175e6bef096d0ec2ee18db70af16555bef289616be0')

pkgname=nodejs
pkgver=9.8.0
pkgrel=1
pkgdesc="Evented I/O for V8 Javascript"
arch=('x86_64')
url="https://nodejs.org/en/"
license=('MIT')
#depends=()
source=("https://nodejs.org/dist/v${pkgver}/node-v${pkgver}.tar.xz")

build() {
	cd "${srcdir}/node-v${pkgver}"

	./configure --prefix=/usr \
		--shared-http-parser \
		--shared-libuv \
		--shared-nghttp2 \
		--shared-openssl \
		--shared-zlib \
		--shared-cares \
		--with-intl=system-icu

	make
}

package() {
	cd "${srcdir}/node-v${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('40c6f721a234c2600475b49774ac4a9ce363be2098bda45c4c360ad41a5b037c8cb6513f79839927cfcf86b415dc507d44fda5da2babad1aa533beb64b7d0cae')

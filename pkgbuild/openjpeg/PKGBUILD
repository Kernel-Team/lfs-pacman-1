pkgname=openjpeg
pkgver=2.1.2
pkgrel=1
pkgdesc="An open source JPEG 2000 codec, version 2"
arch=('x86_64')
url="http://www.openjpeg.org"
license=('custom: BSD')
#depends=()
source=("openjpeg-${pkgver}.tar.gz::https://github.com/uclouvain/openjpeg/archive/v${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/openjpeg-${pkgver}"

	sed -i "s#defined(OPJ_STATIC)#0 \&\& &#g" src/lib/openjp2/openjpeg.h

	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		"${srcdir}/openjpeg-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('411067e33c8e4da9921d0281e932a4ac2af592cf822bfad828daea9e2b9c414859455bcec6d912ce76460ea462fa4cbd94a401333bda5716ec017d18b8e5942c')

pkgname=opus
pkgver=1.3
pkgrel=1
pkgdesc="Totally open, royalty-free, highly versatile audio codec"
arch=('x86_64')
url="https://www.opus-codec.org/"
license=('BSD')
#depends=()
source=("https://archive.mozilla.org/pub/opus/opus-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/opus-${pkgver}"

	./configure --prefix=/usr --enable-custom-modes 

	make
}

package() {
	cd "${srcdir}/opus-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('438635667e72c326d6d06a30e0b3a5564ba6cf5d484066456e1118e1c2fe3a61b959d0afa77a1084b177b72f9230618b6b55c78bc4e24e9127a09fd345b42518')

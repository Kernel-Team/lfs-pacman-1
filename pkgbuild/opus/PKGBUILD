pkgname=opus
pkgver=1.2
pkgrel=1
pkgdesc="Totally open, royalty-free, highly versatile audio codec"
arch=('x86_64')
url="https://www.opus-codec.org/"
license=('BSD')
#depends=()
source=("https://archive.mozilla.org/pub/opus/opus-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/opus-${pkgver}"

	./configure --prefix=/usr --enable-custom-modes 

	make
}

package() {
	cd "${srcdir}/opus-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1bc8489012923c14fc38577c7b9c78368b627b088be55f6c7a40a825864da5006ec36c65686adbeba7e402fdc6ea793d6f1a6dfd281a2aadd79064ff07091ebc')

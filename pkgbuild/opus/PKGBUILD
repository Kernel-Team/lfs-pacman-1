pkgname=opus
pkgver=1.1.5
pkgrel=1
pkgdesc="Totally open, royalty-free, highly versatile audio codec"
arch=('x86_64')
url="https://www.opus-codec.org/"
license=('BSD')
#depends=()
#source=("http://downloads.xiph.org/releases/opus/opus-${pkgver}.tar.gz")
source=("https://archive.mozilla.org/pub/opus/opus-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/opus-${pkgver}"

	./configure --prefix=/usr --enable-custom-modes 

	make
}

package() {
	cd "${srcdir}/opus-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('20a211caf3c363a77f042abb5c6da0ca186887511b467d3434e927d0e3b8850ac6ee32c671a60c549343d38617fca77cc10ca01a7e9cc864ecc2dcebed95c6bd')

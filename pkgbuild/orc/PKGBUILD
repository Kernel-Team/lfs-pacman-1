pkgname=orc
pkgver=0.4.27
pkgrel=1
pkgdesc="Optimized Inner Loop Runtime Compiler"
arch=('x86_64')
url="https://gstreamer.freedesktop.org/projects/orc.html"
license=('custom')
#depends=()
source=("https://gstreamer.freedesktop.org/src/orc/orc-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/orc-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/orc-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('5ca0b4553e370ea7c95acfc8248d9d568dafc9577041d47f52c7d0945456c534e18e0e80d28df9301d6deac1ea4f8ea6a51ca373b32927c8724846d8ec1f73e8')

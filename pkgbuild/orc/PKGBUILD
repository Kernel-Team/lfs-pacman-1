pkgname=orc
pkgver=0.4.26
pkgrel=1
pkgdesc="Optimized Inner Loop Runtime Compiler"
arch=('x86_64')
url="https://gstreamer.freedesktop.org/projects/orc.html"
license=('custom')
#depends=()
source=("https://gstreamer.freedesktop.org/src/orc/orc-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/orc-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/orc-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c0b02d4f00b7cc45c5952a4db4f63629bbcbc4d338bbe69fd2743198f2b346bf437742a7a8e1d308f765caf1b43f7fab75add7ebf69897bc0e335a169eef7326')

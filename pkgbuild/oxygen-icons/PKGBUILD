pkgname=oxygen-icons
pkgver=5.36.0
pkgrel=1
pkgdesc="The Oxygen Icon Theme"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/oxygen-icons5-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/oxygen-icons5-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('95cf30611931b380d892a81623f3ee2a135ca5205285013dc1cf97d4158fb6a557dc4b7c4700a3348d7c72eae79600861d6a54f29cfcce3a99eccec4718e2ffc')

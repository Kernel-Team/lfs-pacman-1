pkgname=oxygen-icons
pkgver=5.38.0
pkgrel=1
pkgdesc="The Oxygen Icon Theme"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/oxygen-icons5-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/oxygen-icons5-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9931b5792a0468eeebee70012946618cdb9d1d082aabd38ffcec175d1f84144d018e0ce451fa3b9140f9949ea59c2aa7bf24af4185efa15d9197486dea9a392d')

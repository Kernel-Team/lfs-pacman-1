pkgname=p11-kit
pkgver=0.23.7
pkgrel=1
pkgdesc="Library to work with PKCS#11 modules"
arch=('x86_64')
url="http://p11-glue.freedesktop.org"
license=('BSD')
#depends=()
source=("https://github.com/p11-glue/p11-kit/releases/download/${pkgver}/p11-kit-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/p11-kit-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-doc

	make
}

package() {
	cd "${srcdir}/p11-kit-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('c9f492220a963726cd1883c276a4a3e607c07f77a34253797beb9f11e671cadcc1b1fa85baa746a0c5bc3f439a8c362e0b2f86796500215fa05efb5446f2baf8')

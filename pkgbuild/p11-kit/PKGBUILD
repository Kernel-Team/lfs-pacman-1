pkgname=p11-kit
pkgver=0.23.8
pkgrel=1
pkgdesc="Library to work with PKCS#11 modules"
arch=('x86_64')
url="http://p11-glue.freedesktop.org"
license=('BSD')
#depends=()
source=("https://github.com/p11-glue/p11-kit/releases/download/${pkgver}/p11-kit-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/p11-kit-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-doc

	make
}

package() {
	cd "${srcdir}/p11-kit-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('cf3b28e4bed8cc18ef49fa7af1e4ad04f1b97dbd08f1e0bab07c280f0aa35306c01e35896bc990c9ed7bdecd6c5ce697ccb95288ef04dd3740db384343ea2f24')

pkgname=p11-kit
pkgver=0.23.9
pkgrel=1
pkgdesc="Library to work with PKCS#11 modules"
arch=('x86_64')
url="http://p11-glue.freedesktop.org"
license=('BSD')
#depends=()
source=("https://github.com/p11-glue/p11-kit/releases/download/${pkgver}/p11-kit-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/p11-kit-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-doc

	make
}

package() {
	cd "${srcdir}/p11-kit-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6a8a569483763d3ffacadf669b8ba9b9be38a77dd8dc366ca0cb91c44753517fa1879d4422e4e8dfbcac594565727839a619566a170c0f94f8e112f18b0086ed')

pkgname=p11-kit
pkgver=0.23.12
pkgrel=1
pkgdesc="Library to work with PKCS#11 modules"
arch=('x86_64')
url="http://p11-glue.freedesktop.org"
license=('BSD')
#depends=()
source=("https://github.com/p11-glue/p11-kit/releases/download/${pkgver}/p11-kit-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/p11-kit-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-doc

	make
}

package() {
	cd "${srcdir}/p11-kit-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ae43b1f6ba5400cf5ae7b64b8c93aa47e5c7ee927196828600fd88beb6fdf6bcb6a63bc822d356757255638f9fbf10896e0604e32a1332a9a833836fa0468726')

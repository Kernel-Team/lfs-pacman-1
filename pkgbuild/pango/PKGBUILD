pkgname=pango
pkgver=1.40.7
pkgrel=1
pkgdesc="A library for layout and rendering of text"
arch=('x86_64')
url="https://www.pango.org/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/pango/${pkgver:0:4}/pango-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/pango-${pkgver}"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd "${srcdir}/pango-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('225175d23053cf96657f572a44415029c00a76d8d8a82a3d146ee678984aea36492518ed327b271d30826777674d9b25a770ea9b66d7eb025883022c0ea7d58c')

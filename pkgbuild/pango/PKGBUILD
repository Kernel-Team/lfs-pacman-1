pkgname=pango
pkgver=1.40.9
pkgrel=1
pkgdesc="A library for layout and rendering of text"
arch=('x86_64')
url="https://www.pango.org/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/pango/${pkgver:0:4}/pango-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/pango-${pkgver}"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd "${srcdir}/pango-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fcfb6f047dbc1b265447beade2880c4618c1f8ec0111c2191cb44866407dd95fcda662e56f568fd95c47ceba90340346e57ab51413e459866518f1d35173eeba')

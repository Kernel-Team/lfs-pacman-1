pkgname=patch
pkgver=2.7.5
pkgrel=1
pkgdesc="A utility to apply patch files to original sources"
arch=('x86_64')
url="https://www.gnu.org/software/patch/"
license=('GPL')
#depends=()
source=("https://ftp.gnu.org/gnu/patch/patch-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/patch-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/patch-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6620ac8101f60c0b456ce339fa5e371f40be0b391e2e9728f34f3625f9907e516de61dac2f91bc76e6fd28a9bd1224efc3ba827cfaa606d857730c1af4195a0f')

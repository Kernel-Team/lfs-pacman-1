pkgname=pciutils
pkgver=3.5.4
pkgrel=1
pkgdesc="PCI bus configuration space access library and tools"
arch=('x86_64')
url="http://mj.ucw.cz/sw/pciutils/"
license=('GPL2')
#depends=()
source=("https://www.kernel.org/pub/software/utils/pciutils/pciutils-${pkgver}.tar.xz")

prepare() {
	cd "${srcdir}/pciutils-${pkgver}"

	wget http://pci-ids.ucw.cz/v2.2/pci.ids -O pci.ids
}

build() {
	cd "${srcdir}/pciutils-${pkgver}"

  	sed -i "s#gcc#${CC}#g" Makefile

	make PREFIX=/usr \
		SHAREDIR=/usr/share/misc \
		SHARED=yes ZLIB=no \
		OPT="${CFLAGS}"
}

package() {
	cd "${srcdir}/pciutils-${pkgver}"

	make PREFIX=/usr \
		SHAREDIR=/usr/share/misc \
		SHARED=yes ZLIB=no \
		OPT="${CFLAGS}" install \
		install-lib DESTDIR="${pkgdir}"

	chmod 755 "${pkgdir}/usr/lib/libpci.so"

	install -v -dm755 "${pkgdir}/usr/bin"
	mv -v "${pkgdir}/usr/sbin/lspci" "${pkgdir}/usr/bin"
}

sha512sums=('654f4f761e61eb3ccf92ae2f133d7cb5d963f2605a1e9bbd319d751ff902bdda4b34247c8b3b4f0d640adf6385762a98b0b59e64cab5550d393389141ab632cf')

pkgbase=pcre
pkgname=('pcre' 'lib32-pcre')
pkgver=8.40
pkgrel=1
arch=('x86_64')
url="http://www.pcre.org/"
license=('BSD')
#depends=()
source=("ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/pcre-${pkgver}.tar.bz2")

prepare() {
	cp -a "${srcdir}"/pcre{,32}-${pkgver}
}

build() {
	cd "${srcdir}/pcre-${pkgver}"

	./configure --prefix=/usr \
		--enable-unicode-properties \
		--enable-pcre16 \
		--enable-pcre32 \
		--enable-jit \
		--enable-pcregrep-libz \
		--enable-pcregrep-libbz2 \
		--enable-pcretest-libreadline

	cd "${srcdir}/pcre32-${pkgver}"

	export CC_HOLD="${CC}" CXX_HOLD="${CXX}"
	export CC="${CC} -m32" CXX="${CXX} -m32"
	export PKG_CONFIG_PATH=/usr/lib32/pkgconfig

	./configure --prefix=/usr \
		--libdir=/usr/lib32 \
		--enable-unicode-properties \
		--enable-pcre16 \
		--enable-pcre32 \
		--enable-jit

	export CC="${CC_HOLD}" CXX="${CXX_HOLD}"
	unset CC_HOLD CXX_HOLD PKG_CONFIG_PATH

	cd "${srcdir}"

	make -C "${srcdir}/pcre-${pkgver}"
	make -C "${srcdir}/pcre32-${pkgver}"
}

package_pcre() {
	pkgdesc="A library that implements Perl 5-style regular expressions"

	cd "${srcdir}/pcre-${pkgver}"

	make install DESTDIR="${pkgdir}"

	install -v -dm755 "${pkgdir}/lib"

	mv -v "${pkgdir}"/usr/lib/libpcre.so.* "${pkgdir}/lib"
	ln -sfv ../../lib/$(readlink "${pkgdir}/usr/lib/libpcre.so") "${pkgdir}/usr/lib/libpcre.so"
}

package_lib32-pcre() {
	pkgdesc="A library that implements Perl 5-style regular expressions (32 bit)"

	cd "${srcdir}/pcre32-${pkgver}"

	make install DESTDIR="${PWD}/dest"

	install -v -dm755 "${pkgdir}/usr"
	mv dest/usr/lib32 "${pkgdir}/usr"
}

sha512sums=('b4c27eafbdf33bd7a1384655b1936f4be3bc6745c072347eb26e988896c52664bd85ac42444da1be78b6e20f45b6c7e5921f5f20f5b0741b5bd3d9844e5bd4e2')

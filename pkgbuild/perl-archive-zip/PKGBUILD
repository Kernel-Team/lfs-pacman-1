pkgname=perl-archive-zip
pkgver=1.59
pkgrel=1
pkgdesc="Provide a perl interface to ZIP archive files"
arch=('x86_64')
url="http://search.cpan.org/dist/Archive-Zip/"
license=('GPL' 'PerlArtistic')
#depends=()
source=("http://search.cpan.org/CPAN/authors/id/P/PH/PHRED/Archive-Zip-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/Archive-Zip-${pkgver}"

	perl Makefile.PL INSTALLDIRS=vendor

	make
}

package() {
	cd "${srcdir}/Archive-Zip-${pkgver}"

	make install DESTDIR="${pkgdir}"

	find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}

sha512sums=('ca9df48d770bf34945daa1721b9372ed90816b8a2a3d61523fc91c583ef545df169528093d6cd15fbc7e962ce0aab17f0fe8899fd35a6f0245c97b7cb379dd5f')

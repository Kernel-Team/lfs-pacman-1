pkgname=perl-error
pkgver=0.17024
pkgrel=1
pkgdesc="Perl/CPAN Error module - Error/exception handling in an OO-ish way"
arch=('x86_64')
url="http://search.cpan.org/dist/Error/"
license=('GPL' 'PerlArtistic')
#depends=()
source=("http://search.cpan.org/CPAN/authors/id/S/SH/SHLOMIF/Error-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/Error-${pkgver}"

	perl Makefile.PL INSTALLDIRS=vendor

	make
}

package() {
	cd "${srcdir}/Error-${pkgver}"

	make install DESTDIR="${pkgdir}"

	find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}

sha512sums=('886ad8d527936ddca564c466bb753e29bcb203ebc32bee7c8af8db05f70fcae17d3536f1f0163d17e3d1a0669da0c559ea0e5d14a1e83c4c7e329d4368ba3e77')

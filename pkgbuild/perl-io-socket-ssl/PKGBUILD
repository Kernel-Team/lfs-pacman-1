pkgname=perl-io-socket-ssl
pkgver=2.048
pkgrel=1
pkgdesc="Nearly transparent SSL encapsulation for IO::Socket::INET"
arch=('x86_64')
url="http://search.cpan.org/dist/IO-Socket-SSL/"
license=('GPL' 'PerlArtistic')
#depends=()
source=("http://search.cpan.org/CPAN/authors/id/S/SU/SULLR/IO-Socket-SSL-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/IO-Socket-SSL-${pkgver}"

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

	make
}

package() {
	cd "${srcdir}/IO-Socket-SSL-${pkgver}"

	make install DESTDIR="${pkgdir}"

	find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}

sha512sums=('649aa7f4ed8c7c1f4725bd48e28c40d3929f0c7c7fc40093f6e4d373ea8e306451c2fc3f645a23a33d99cd3a5a378997f7affb2b165d883648c33fc801cfce67')

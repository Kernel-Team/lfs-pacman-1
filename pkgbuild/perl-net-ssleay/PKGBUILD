pkgname=perl-net-ssleay
pkgver=1.81
pkgrel=1
pkgdesc="Perl extension for using OpenSSL"
arch=('x86_64')
url="http://search.cpan.org/dist/Net-SSLeay/"
license=('custom:BSD')
#depends=()
source=("http://search.cpan.org/CPAN/authors/id/M/MI/MIKEM/Net-SSLeay-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/Net-SSLeay-${pkgver}"

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

	make
}

package() {
	cd "${srcdir}/Net-SSLeay-${pkgver}"

	make install DESTDIR="${pkgdir}"

	find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}

sha512sums=('8d4b72ede74ea22cf2ed681a8441f40965331cd5d4442c19677cf5bc7c1e61ed1e50d0f3a4f1b272428485bcc132ec99b0c75344ca43e8a34a9dd15539719f55')

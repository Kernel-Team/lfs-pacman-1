pkgname=perl-parse-yapp
pkgver=1.05
pkgrel=1
pkgdesc="Perl/CPAN Module Parse::Yapp - Generates OO LALR parser modules"
arch=('x86_64')
url="http://search.cpan.org/dist/Parse-Yapp"
license=('GPL' 'PerlArtistic')
#depends=()
source=("http://search.cpan.org/CPAN/authors/id/F/FD/FDESAR/Parse-Yapp-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/Parse-Yapp-${pkgver}"

	perl Makefile.PL INSTALLDIRS=vendor

	make
}

package() {
	cd "${srcdir}/Parse-Yapp-${pkgver}"

	make install DESTDIR="${pkgdir}"

	find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}

sha512sums=('27375b333bf4358f04354baa1d389b082863e12925bc16425b8b029fa4780a04f6d2e314fd011be4ddcc8dff5f17e9921b257c7a3b1c3cea728220c971bb059b')

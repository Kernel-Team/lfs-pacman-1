pkgname=perl-uri
pkgver=1.73
pkgrel=1
pkgdesc="Uniform Resource Identifiers (absolute and relative)"
arch=('x86_64')
url="http://search.cpan.org/dist/URI/"
license=('GPL' 'PerlArtistic')
#depends=()
source=("http://search.cpan.org/CPAN/authors/id/E/ET/ETHER/URI-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/URI-${pkgver}"

	perl Makefile.PL INSTALLDIRS=vendor

	make
}

package() {
	cd "${srcdir}/URI-${pkgver}"

	make install DESTDIR="${pkgdir}"

	find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}

sha512sums=('b72d07e9e9e284f360ad4bf42b22ddec2d1930be40ec465ca28c68484e87b01c55ab664cdec63af387bc435e9428681c64aed39b46b668d7c7c5f36be5fbeb2e')

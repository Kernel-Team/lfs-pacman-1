pkgname=perl-uri
pkgver=1.71
pkgrel=1
pkgdesc="Uniform Resource Identifiers (absolute and relative)"
arch=('x86_64')
url="http://search.cpan.org/dist/URI/"
license=('GPL' 'PerlArtistic')
#depends=()
source=("http://search.cpan.org/CPAN/authors/id/E/ET/ETHER/URI-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/URI-${pkgver}"

	perl Makefile.PL INSTALLDIRS=vendor

	make
}

package() {
	cd "${srcdir}/URI-${pkgver}"

	make install DESTDIR="${pkgdir}"

	find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}

sha512sums=('db412b75054a4d315eb861060fa4641832c2428b9dfe56bbe35f530c9ba572d4de2061d9782454750293dd5a64f3375830988d8512f410e84a9d599c80458405')

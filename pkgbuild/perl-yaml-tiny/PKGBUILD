pkgname=perl-yaml-tiny
pkgver=1.70
pkgrel=1
pkgdesc="Read/Write YAML files with as little code as possible"
arch=('x86_64')
url="http://search.cpan.org/dist/YAML-Tiny/"
license=('GPL' 'PerlArtistic')
#depends=()
source=("http://search.cpan.org/CPAN/authors/id/E/ET/ETHER/YAML-Tiny-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/YAML-Tiny-${pkgver}"

	perl Makefile.PL INSTALLDIRS=vendor

	make
}

package() {
	cd "${srcdir}/YAML-Tiny-${pkgver}"

	make install DESTDIR="${pkgdir}"

	find "${pkgdir}" -name .packlist -o -name perllocal.pod -delete
}

sha512sums=('a4d790f8d797170fac819640d23a3ddc62b506ac9467d8922ed2ca8f1abacf5a6ba7604e5312f6539a3c9e4aa8c41ccd91754ca32f74bf8b0d89a9d84e4b4f53')

pkgname=pinentry
pkgver=1.0.0
pkgrel=1
pkgdesc="Collection of simple PIN or passphrase entry dialogs which utilize the Assuan protocol"
arch=('x86_64')
url="https://www.gnupg.org/related_software/pinentry/index.html"
license=('GPL')
#depends=()
source=("https://www.gnupg.org/ftp/gcrypt/pinentry/pinentry-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/pinentry-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/pinentry-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f109236707c51871b5020ef807a551366461fafcfbe09bf8cda19d4b163a42cf622562b905ceb41429f1d648b3f3d27807538709da6a135b67f9888709eccd62')

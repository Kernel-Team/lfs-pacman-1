pkgname=polari
pkgver=3.24.2
pkgrel=1
pkgdesc="An IRC Client for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Polari"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/polari/${pkgver:0:4}/polari-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/polari-${pkgver}"

	./configure --prefix=/usr --disable-debug

	make
}

package() {
	cd "${srcdir}/polari-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('23a475d657556e7f4e93dde8e545bf7bede227635d540bd006b85b068923d87e713bd05f14d8ccde458bf6efd4920665bca02ea41c4de870680581ebfa595f0e')

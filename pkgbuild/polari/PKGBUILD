pkgname=polari
pkgver=3.25.92
pkgrel=1
pkgdesc="An IRC Client for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Polari"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/polari/${pkgver:0:4}/polari-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/polari-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('f12b6c0abb035b15f795a1daec18f1713641ffc99d25ed30acbba4b9af9df08db1240a476281b9ed2add2cfc9b9bc2bc7748a27feb59f1dc9c2051207339eb4a')

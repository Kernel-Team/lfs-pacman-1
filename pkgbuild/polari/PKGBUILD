pkgname=polari
pkgver=3.24.1
pkgrel=1
pkgdesc="An IRC Client for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Polari"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/polari/${pkgver:0:4}/polari-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/polari-${pkgver}"

	./configure --prefix=/usr --disable-debug

	make
}

package() {
	cd "${srcdir}/polari-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('dd4f41ae6b8de001df69cea894880eae3f4dac52ceff0b8f7793b6f4bdf892cb38e2391e07ae0d747b4dc6222b241991b7067f921c34c6020e129525e8fa0dbb')

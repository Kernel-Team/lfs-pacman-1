pkgname=polari
pkgver=3.26.0
pkgrel=1
pkgdesc="An IRC Client for GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Polari"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/polari/${pkgver:0:4}/polari-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/polari-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('3d40099e044ef3a05b79d7be1f964103f395775283851fa215559dd13406d3744aa08740a4825320ac4112eb3858f4914b22ebcd3b7cbe488ed5f071cb770f2d')

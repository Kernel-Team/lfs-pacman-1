pkgname=poppler
pkgver=0.59.0
pkgrel=1
pkgdesc="PDF rendering library based on xpdf 3.0"
arch=('x86_64')
url="https://poppler.freedesktop.org/"
license=('GPL')
#depends=()
source=("https://poppler.freedesktop.org/poppler-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/poppler-${pkgver}"

	export CXX="${CXX} -std=c++11"

	./configure --prefix=/usr --enable-xpdf-headers

	make
}

package() {
	cd "${srcdir}/poppler-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/usr/bin/poppler-glib-demo"
}

sha512sums=('23777922dc95feee2a4459281081b37e124a39fc25cd00c2c3fc206f5484c13eb9ac5317f674fbbcb51e384f9a53e38b4cacbf1426c68d2bae21a7cefbc48a0e')

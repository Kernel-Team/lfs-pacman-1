pkgname=poppler
pkgver=0.61.0
pkgrel=1
pkgdesc="PDF rendering library based on xpdf 3.0"
arch=('x86_64')
url="https://poppler.freedesktop.org/"
license=('GPL')
#depends=()
source=("https://poppler.freedesktop.org/poppler-${pkgver}.tar.xz")

prepare() {
        install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	export CXX="${CXX} -std=c++11"

	cmake -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_INCLUDEDIR=/usr/include \
		-DCMAKE_INSTALL_LIBDIR=/usr/lib \
		-DENABLE_GTK_DOC=ON \
		-DENABLE_XPDF_HEADERS=ON \
		"${srcdir}/poppler-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install

	rm -rf "${pkgdir}/usr/bin/poppler-glib-demo"
}

sha512sums=('d65a7ed87c8b87ee9a6b15ace90114c1538af29669a0bd6688895876f1fb726d38ddc4f686efdf5a33fc2a950cab10ca032dcd8f42ef5941b3b089239c6b11f5')

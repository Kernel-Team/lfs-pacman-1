pkgname=procps-ng
pkgver=3.3.14
pkgrel=1
pkgdesc="Utilities for monitoring your system and its processes"
arch=('x86_64')
url="https://gitlab.com/procps-ng/procps"
license=('GPL' 'LGPL')
#depends=()
source=("https://downloads.sourceforge.net/procps-ng/procps-ng-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/procps-ng-${pkgver}"

	sed -i "s:ncursesw/::g" watch.c

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-watch8bit

	make
}

package() {
	cd "${srcdir}/procps-ng-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('45617924ae1520765c15d71b76278dc80cac04f5985f83c9b65a8ba379d9a80a2ff0dc14c5a6edee7d6cfa66ce50ec019e8b5203704175ff94547ae6ff2b18c5')

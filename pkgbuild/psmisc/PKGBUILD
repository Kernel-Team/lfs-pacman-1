pkgname=psmisc
pkgver=23.0
pkgrel=1
pkgdesc="Miscellaneous procfs tools"
arch=('x86_64')
url="http://psmisc.sourceforge.net/index.html"
license=('GPL')
#depends=()
source=("https://downloads.sourceforge.net/psmisc/psmisc-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/psmisc-${pkgver}"

	./configure --prefix=/usr --enable-selinux

	make
}

package() {
	cd "${srcdir}/psmisc-${pkgver}"

	make install DESTDIR="${pkgdir}"

	install -v -dm755 "${pkgdir}/bin"
	mv -v "${pkgdir}"/usr/bin/{fuser,killall} "${pkgdir}/bin"
}

sha512sums=('334d625202fccd741363787c3f1d750515d63e2b5322b8ada5979144c8d841f505244c569bae9b63ce332aeace41b7caacd5354014c0301b56aca720a227f10d')

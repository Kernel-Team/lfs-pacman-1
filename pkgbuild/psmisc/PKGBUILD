pkgname=psmisc
pkgver=22.21
pkgrel=1
pkgdesc="Miscellaneous procfs tools"
arch=('x86_64')
url="http://psmisc.sourceforge.net/index.html"
license=('GPL')
groups=('core')
#depends=()
source=("https://downloads.sourceforge.net/psmisc/psmisc-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/psmisc-${pkgver}"

	./configure --prefix=/usr --enable-selinux

	make
}

package() {
	cd "${srcdir}/psmisc-${pkgver}"

	make install DESTDIR="${pkgdir}"

	install -v -dm755 "${pkgdir}/bin"
	mv -v "${pkgdir}"/usr/bin/{fuser,killall} "${pkgdir}/bin"
}

md5sums=('935c0fd6eb208288262b385fa656f1bf')

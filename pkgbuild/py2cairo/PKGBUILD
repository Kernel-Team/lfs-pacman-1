pkgname=python2-cairo
pkgver=1.10.0
pkgrel=1
pkgdesc="Python 2 bindings for the cairo graphics library"
arch=('x86_64')
url="https://www.cairographics.org/pycairo"
license=('LGPL3')
#depends=()
source=("https://www.cairographics.org/releases/py2cairo-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/py2cairo-${pkgver}"

	PYTHON=/usr/bin/python2 ./waf configure --prefix=/usr

	./waf build
}

package() {
	cd "${srcdir}/py2cairo-${pkgver}"

	./waf install --destdir="${pkgdir}"
}

md5sums=('20337132c4ab06c1146ad384d55372c5')

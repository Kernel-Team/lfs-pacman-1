pkgbase=python-pytz
pkgname=('python2-pytz' 'python3-pytz')
pkgver=2017.2
pkgrel=1
pkgdesc="World timezone definitions, modern and historical"
arch=('x86_64')
url="https://pypi.python.org/pypi/pytz/"
license=('PSF')
#depends=()
source=("https://files.pythonhosted.org/packages/source/p/pytz/pytz-${pkgver}.zip")

prepare() {
	cp -a "${srcdir}/pytz-${pkgver}" "${srcdir}/pytz-${pkgver}-py2"
}

build() {
	cd "${srcdir}/pytz-${pkgver}"

	python3 setup.py build

	cd "${srcdir}/pytz-${pkgver}-py2"

	python2 setup.py build
}

package_python3-pytz() {
	cd "${srcdir}/pytz-${pkgver}"

	python3 setup.py install --root="${pkgdir}" --optimize=1
}

package_python2-pytz() {
	cd "${srcdir}/pytz-${pkgver}-py2"

	python2 setup.py install --root="${pkgdir}" --optimize=1
}

sha512sums=('d67d64a64b4c21e0bd41da56020fc7b016aec9da7f3243f79b65704119f70b8a9cd4f5f905631b6761e06ecef93830e5e479e16c7b1611ac70e0cd2b39d5b916')

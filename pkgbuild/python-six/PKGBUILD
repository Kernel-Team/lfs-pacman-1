pkgbase=python-six
pkgname=('python2-six' 'python3-six')
pkgver=1.10.0
pkgrel=1
pkgdesc="Python 2 and 3 compatibility utilities"
arch=('x86_64')
url="https://pypi.python.org/pypi/six/"
license=('PSF')
#depends=()
source=("https://files.pythonhosted.org/packages/source/s/six/six-${pkgver}.tar.gz")

prepare() {
	cp -a "${srcdir}/six-${pkgver}" "${srcdir}/six-${pkgver}-py2"
}

build() {
	cd "${srcdir}/six-${pkgver}"

	python3 setup.py build

	cd "${srcdir}/six-${pkgver}-py2"

	python2 setup.py build
}

package_python3-six() {
	cd "${srcdir}/six-${pkgver}"

	python3 setup.py install --root="${pkgdir}" --optimize=1
}

package_python2-six() {
	cd "${srcdir}/six-${pkgver}-py2"

	python2 setup.py install --root="${pkgdir}" --optimize=1
}

sha512sums=('9a53b7bc8f7e8b358c930eaecf91cc5639176a699830153f586780c3e6d637f1bd31349a69c383574f99da19cb3a36524e7733a318f3572b27aefb69c6409c2e')

pkgname=qpdf
pkgver=7.1.0
pkgrel=1
pkgdesc="A Content-Preserving PDF Transformation System"
arch=('x86_64')
url="http://qpdf.sourceforge.net/"
license=('custom')
#depends=()
source=("https://downloads.sourceforge.net/qpdf/qpdf-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/qpdf-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/qpdf-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('28c00f0e7e1d89ab8165031b7e741297d472801fd115911b5f970e97f27fb0c463169dad2d59bb35885de5989984bc5f31a9c26be42015c0dba41105ae342726')

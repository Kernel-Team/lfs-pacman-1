pkgname=qpdf
pkgver=7.0.0
pkgrel=1
pkgdesc="A Content-Preserving PDF Transformation System"
arch=('x86_64')
url="http://qpdf.sourceforge.net/"
license=('custom')
#depends=()
source=("https://downloads.sourceforge.net/qpdf/qpdf-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/qpdf-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/qpdf-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7b52d67b4d2c428a7b0c1cd03b03a23f05d38d7e3c81041079a137919019ea5158f12bf95fdcfcff6b43ffdefe93a85127ced2a363a6b4b380cbaa02a3840256')

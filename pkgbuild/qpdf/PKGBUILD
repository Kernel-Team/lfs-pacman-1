pkgname=qpdf
pkgver=8.0.0
pkgrel=1
pkgdesc="A Content-Preserving PDF Transformation System"
arch=('x86_64')
url="http://qpdf.sourceforge.net/"
license=('custom')
#depends=()
source=("https://downloads.sourceforge.net/qpdf/qpdf-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/qpdf-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/qpdf-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('194a439cf703e4e9990f61c05b59e1be1972a21e0698647a02a475ca53358f6a8ae3d44d56425bcd9d8b94cdea3cbcd66217d7b4e7a0cdd0ae428464f45e58ae')

pkgname=qpdf
pkgver=7.1.1
pkgrel=1
pkgdesc="A Content-Preserving PDF Transformation System"
arch=('x86_64')
url="http://qpdf.sourceforge.net/"
license=('custom')
#depends=()
source=("https://downloads.sourceforge.net/qpdf/qpdf-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/qpdf-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/qpdf-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a75f988c7dd7ac174bdc981cd3696ca8b539ac6c581e3afecf601dc67277014cb4fe3f0e5cb75a67412cafa4eb645b2fc2d8a0ec203834464baf0c7e80baa0b4')

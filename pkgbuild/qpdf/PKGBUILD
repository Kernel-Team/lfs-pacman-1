pkgname=qpdf
pkgver=8.1.0
pkgrel=1
pkgdesc="A Content-Preserving PDF Transformation System"
arch=('x86_64')
url="http://qpdf.sourceforge.net/"
license=('custom')
#depends=()
source=("https://downloads.sourceforge.net/qpdf/qpdf-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/qpdf-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/qpdf-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1831bcaaed87dae268db5d61805d1483ec5c101f6ce594be660664c119597ae67cf011c2b50092964d785a814d5f6c780935127a89401fe37a1026ae4d3af15c')

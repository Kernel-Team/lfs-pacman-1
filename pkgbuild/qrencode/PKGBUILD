pkgname=qrencode
pkgver=3.4.4
pkgrel=1
pkgdesc="C library for encoding data in a QR Code symbol"
arch=('x86_64')
url="http://fukuchi.org/works/qrencode/index.html.en"
license=('GPL')
#depends=()
source=("http://fukuchi.org/works/qrencode/qrencode-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/qrencode-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/qrencode-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4835d462542e37e5460635e0dd84e291ff0976a6aec61c63f9950c1e60b446bc913220726e14f6379322bfd32ccd9bcd5fceed9ca10cb95343c952d8472b983d')

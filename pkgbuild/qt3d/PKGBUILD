pkgname=qt3d
pkgver=5.9.1
pkgrel=1
pkgdesc="C++ and QML APIs for easy inclusion of 3D graphics"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qt3d-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qt3d-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qt3d-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('63b647dd2e73420443ed1a4f317d79ab83ba2c101b260ecd8eafdc51b6bf901cffbfb2d645a9f9d740881ca963346c02b26fedb535768f7247aab30362d9bc35')

pkgname=qtbase
pkgver=5.9.1
pkgrel=1
pkgdesc="A cross-platform application and UI framework"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtbase-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtbase-opensource-src-${pkgver}"

        CFLAGS+=" -isystem /usr/include/c++/v1"

	sed -i "s#^\(QMAKE_CFLAGS_RELEASE.*\)#\1 ${CFLAGS}#g" mkspecs/common/gcc-base.conf
	sed -i "s#config.atspi#libs.atspi#g" src/gui/configure.json

	./configure -prefix /usr \
		-sysconfdir /etc/xdg \
		-headerdir /usr/include/qt5 \
		-archdatadir /usr/lib/qt5 \
		-datadir /usr/share/qt5 \
		-docdir /usr/share/doc/qt5 \
		-translationdir /usr/share/qt5/translations \
		-examplesdir /usr/share/doc/qt5/examples \
		-confirm-license \
		-opensource \
		-c++std c++14 \
		-dbus-linked \
		-openssl-linked \
		-journald \
		-libinput \
		-system-harfbuzz \
		-system-sqlite \
		-nomake examples \
		-reduce-relocations \
		-no-rpath \
		-no-strip \
		-no-separate-debug-info \
		-optimized-qmake \
		-no-use-gold-linker \
		-platform linux-clang-libc++

	make

	find . -name "*.pc" -exec perl -pi -e "s, -L${PWD}/?\S+,,g" {} \;
}

package() {
	cd "${srcdir}/qtbase-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "s:${PWD}:/usr/lib/qt5:g" \
		"${pkgdir}/usr/lib/qt5/mkspecs/modules/qt_lib_bootstrap_private.pri"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d" "${pkgdir}"/usr/lib/*.prl

	rm -rf "${pkgdir}/usr/share"
}

sha512sums=('b384e91b3fd88b2f32e826e3dd1c930213683a0fdbfd284a319204fa8d27c796b54324cf4a715f6bebd92fca6426e37cf0be5866fc1f6053b8758570ddb2fa45')

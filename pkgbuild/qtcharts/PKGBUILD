pkgname=qtcharts
pkgver=5.9.1
pkgrel=1
pkgdesc="Provides a set of easy to use chart components"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtcharts-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtcharts-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtcharts-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('897a024b8bcca10d30db2d1df1975cd19a8ebfe7914c0d9238c4044fc120970d32fbc667430c4386cfdf3b6bab3ca4cc92edc3843084237ac8bbf9057502d6ba')

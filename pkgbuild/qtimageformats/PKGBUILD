pkgname=qtimageformats
pkgver=5.9.0
pkgrel=1
pkgdesc="Plugins for additional image formats: TIFF, MNG, TGA, WBMP"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtimageformats-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtimageformats-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtimageformats-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"
}

sha512sums=('7a8c9cad0e71c7cd02ab01e301891ef352efa3700790ecc41148ed9ce425eb8f7b0279f99865c7e26a1a9da88ef0be40d76b0233a47c46d6d47d39805a30d57e')

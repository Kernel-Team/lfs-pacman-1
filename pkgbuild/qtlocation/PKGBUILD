pkgname=qtlocation
pkgver=5.11.1
pkgrel=1
pkgdesc="Provides access to position, satellite and area monitoring classes"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:4}/${pkgver}/submodules/qtlocation-everywhere-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtlocation-everywhere-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtlocation-everywhere-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('8b89aae5bb7caa0999c20c86da1a356e5ba21e1e12ac892a695d180f21527846aa45f926828934b83147b851145477028ff1212802c1c21f8f6bb4e616b8b1fd')

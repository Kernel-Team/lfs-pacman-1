pkgname=qtlocation
pkgver=5.9.0
pkgrel=1
pkgdesc="Provides access to position, satellite and area monitoring classes"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtlocation-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtlocation-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtlocation-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('a7331e89ddfa44f930081ed3346cb85ec8e5aaceae117732f2504e73cb38a4b3fea845ce4aaab1b7b337bd73a11d303110e7b7cd1348d8cac35d14177f077fe3')

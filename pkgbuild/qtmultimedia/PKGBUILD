pkgname=qtmultimedia
pkgver=5.8.0
pkgrel=1
pkgdesc="Classes for audio, video, radio and camera functionality"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtmultimedia-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtmultimedia-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtmultimedia-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

md5sums=('c8610023cfe036d3ad7c13f6e99892cf')

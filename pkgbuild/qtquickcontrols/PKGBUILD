pkgname=qtquickcontrols
pkgver=5.9.0
pkgrel=1
pkgdesc="Reusable Qt Quick based UI controls to create classic desktop-style user interfaces"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtquickcontrols-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtquickcontrols-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtquickcontrols-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"
}

sha512sums=('24259d70d70e4222264383f9a571e343c1a35a387e8b053a3e992453a432d93c4aff4d4e59e30a4d1a040cfbf0581e88fba7ace8701989ff27df8239a8f9d52a')

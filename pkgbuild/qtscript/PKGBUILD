pkgname=qtscript
pkgver=5.9.0
pkgrel=1
pkgdesc="Classes for making Qt applications scriptable. Provided for Qt 4.x compatibility"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtscript-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtscript-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtscript-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('263fcaaa24f7b5410eb5fb031c9bdd561aeaa82ae4b254ba27ea6377825d66a755e9a3182278b2bd29883155fc6fa68cc9bc757966191fc3b00cd12b8268b69b')

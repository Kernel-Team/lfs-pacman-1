pkgname=qtsensors
pkgver=5.10.0
pkgrel=1
pkgdesc="Provides access to sensor hardware and motion gesture recognition"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:4}/${pkgver}/submodules/qtsensors-everywhere-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtsensors-everywhere-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtsensors-everywhere-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('4cffe6ee7a30dd3ba992648d28a2558e4084326828511a7afd18085a86aad42c6228da2fe19398d04db5943a812d5233d2ff705ab5a3fe3ab9d1170f8a53ee6d')

pkgname=qtsensors
pkgver=5.9.1
pkgrel=1
pkgdesc="Provides access to sensor hardware and motion gesture recognition"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtsensors-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtsensors-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtsensors-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('a6f0e10aad5f0242dfad470c0aa334dcff817587a3f24c6930de8197281eb72b94f96d74aea5fc5446a262fbfc41cad68ea1b6f21df5fade5da278f8493732a5')

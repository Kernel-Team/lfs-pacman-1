pkgname=qtsvg
pkgver=5.9.2
pkgrel=1
pkgdesc="Classes for displaying the contents of SVG files"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtsvg-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtsvg-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtsvg-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('c21c5a12fa10ff9f91deda88c99c995ee2138bdffa21c793b0c42f25155f01f87ede5206624b9d82713649f8cf1cfdb95f1d5b7e792de62f3848d3a9ec665fdd')

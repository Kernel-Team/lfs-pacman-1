pkgname=qtsvg
pkgver=5.10.0
pkgrel=1
pkgdesc="Classes for displaying the contents of SVG files"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:4}/${pkgver}/submodules/qtsvg-everywhere-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtsvg-everywhere-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtsvg-everywhere-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('6103015629da60d1bd424a86dbfa88ac955151e2d6883abafcb14a8f6a405397e61855f15c41527549b1dbe89376df6753b3a6919717d2948215eb86843f0b13')

pkgname=qtvirtualkeyboard
pkgver=5.9.1
pkgrel=1
pkgdesc="Virtual keyboard framework"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtvirtualkeyboard-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtvirtualkeyboard-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtvirtualkeyboard-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"
}

sha512sums=('ce1fbd787b2722ab90d037e0d0012099c9eb301a942ef989ebc61763f9037703d2017f3c5abcc52790e6378589f443f9539494aa0bf8ed522500fa1606a8c34b')

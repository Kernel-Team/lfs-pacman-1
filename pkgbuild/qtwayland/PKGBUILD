pkgname=qtwayland
pkgver=5.9.1
pkgrel=1
pkgdesc="Provides APIs for Wayland"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtwayland-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtwayland-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtwayland-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('619025f6db1234e2e85e8790ca152765696b3019414e4de1a7630ef3cb5a11fa3d0f3955f1e2e9e82f05a90a6da3a0a355c3c4de4dc0006cb91f122428031df3')

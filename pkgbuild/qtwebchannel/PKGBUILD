pkgname=qtwebchannel
pkgver=5.9.0
pkgrel=1
pkgdesc="Provides access to QObject or QML objects from HTML clients for seamless integration of Qt applications with HTML/JavaScript clients"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtwebchannel-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtwebchannel-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtwebchannel-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('56df897c11c472e9c871577e85a7b6c7bbf4e385fdf892368b3e2aa22a8ebdf4b80681ab0bf7b547b18bf5a8c1aa2ccac6c084b3c6436c5f8016b1b6cf8612d8')

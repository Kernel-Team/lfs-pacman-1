pkgname=qtx11extras
pkgver=5.9.0
pkgrel=1
pkgdesc="Provides platform-specific APIs for X11"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:3}/${pkgver}/submodules/qtx11extras-opensource-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtx11extras-opensource-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtx11extras-opensource-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('ee45d70fa4f2f1a9e72642786fb524adfda42125047a9719cb74a5b5f9860d8adb6ba008dd8507d0b6210cca44fdd79da0e147806e8874332b0232aa6c41607a')

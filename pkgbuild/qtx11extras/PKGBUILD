pkgname=qtx11extras
pkgver=5.11.1
pkgrel=1
pkgdesc="Provides platform-specific APIs for X11"
arch=('x86_64')
url="https://www.qt.io/"
license=('GPL3' 'LGPL3' 'FDL' 'custom')
#depends=()
source=("https://download.qt.io/official_releases/qt/${pkgver:0:4}/${pkgver}/submodules/qtx11extras-everywhere-src-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/qtx11extras-everywhere-src-${pkgver}"

	qmake
	make
}

package() {
	cd "${srcdir}/qtx11extras-everywhere-src-${pkgver}"

	make install INSTALL_ROOT="${pkgdir}"

	sed -i "/^QMAKE_PRL_BUILD_DIR/d;s#${PWD}#/usr#g" "${pkgdir}"/usr/lib/*.prl
}

sha512sums=('a5acd182e06ced304bdb9d86982c3cdb826411ed4c888dfc530e5bf005f34ac9c58812bda3c98dde66eea372c7075f9eedd62a6e36cb8b549a56b8dc7a9b19af')

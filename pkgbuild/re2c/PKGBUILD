pkgname=re2c
pkgver=1.0.1
pkgrel=1
pkgdesc="A tool for generating C-based recognizers from regular expressions"
arch=('x86_64')
url="http://re2c.sourceforge.net/"
license=('LGPL')
#depends=()
source=("https://github.com/skvadrik/re2c/releases/download/${pkgver}/re2c-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/re2c-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/re2c-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ab3b652d8f97b0d1be4c7561ce65e28870ab8976f8a31d74a6629b43d2057bfa608c7f393d5e5d59d26f991552a60e6274f554ef58752bdfcfeba330578f1299')

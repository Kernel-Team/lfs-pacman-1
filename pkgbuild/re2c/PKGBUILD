pkgname=re2c
pkgver=1.0.2
pkgrel=1
pkgdesc="A tool for generating C-based recognizers from regular expressions"
arch=('x86_64')
url="http://re2c.sourceforge.net/"
license=('LGPL')
#depends=()
source=("https://github.com/skvadrik/re2c/releases/download/${pkgver}/re2c-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/re2c-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/re2c-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9d85933ae874cb9240175ce7210d3808173bafe246c67b9c333578846239b7bcef074287f26040b5a048bcd98db8d0393035c417918b80db1f74098695a77176')

pkgname=re2c
pkgver=0.16
pkgrel=1
pkgdesc="A tool for generating C-based recognizers from regular expressions"
arch=('x86_64')
url="http://re2c.sourceforge.net/"
license=('LGPL')
#depends=()
source=("https://downloads.sourceforge.net/re2c/re2c-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/re2c-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/re2c-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d4fb8078d9566a1fa177331b649cac79e2e45cc9558a22a2212503f6c77c9e6b4238aa01c85c66b86fa4831cdc669cedf8b430d395be6a0c6cfabfb7c61cf8a3')

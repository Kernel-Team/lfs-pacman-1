pkgname=rest
pkgver=0.8.0
pkgrel=1
pkgdesc="Helper library for RESTful services"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Librest"
license=('LGPL2.1')
#depends=()
source=("https://download.gnome.org/sources/rest/${pkgver:0:3}/rest-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/rest-${pkgver}"

	./configure --prefix=/usr --sysconfdir=/etc

	make
}

package() {
	cd "${srcdir}/rest-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('dfcfed4196e613ed4415ea04eaa890e47d1d2e6899afdefff3dd7bfed5bcace58724158deb4c0cc7974f9a4493d00d5c0a27415160f2795df81c2210c14a823a')

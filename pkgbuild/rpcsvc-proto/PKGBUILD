pkgname=rpcsvc-proto
pkgver=1.3
pkgrel=1
pkgdesc="Contains rpcsvc proto.x files from glibc"
arch=('x86_64')
url="https://github.com/thkukuk/rpcsvc-proto"
license=('LGPL2.1')
#depends=()
source=("https://github.com/thkukuk/rpcsvc-proto/archive/v${pkgver}/rpcsvc-proto-${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/rpcsvc-proto-${pkgver}"

	autoreconf -fi
}

build() {
	cd "${srcdir}/rpcsvc-proto-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/rpcsvc-proto-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('5880ea39a750ee1f69dcedfe32afd617e695ee5328d6386977bbd11babb7bd18d8cb50c2d5f8daf35650aa8a94a4f6dda1171c1159917bb596108b1057c5a158')

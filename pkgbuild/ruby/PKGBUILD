pkgname=ruby
pkgver=2.4.3
pkgrel=1
pkgdesc="An object-oriented language for quick and easy programming"
arch=('x86_64')
url="http://www.ruby-lang.org/en/"
license=('BSD' 'custom')
#depends=()
options=(staticlibs emptydirs)
source=("http://cache.ruby-lang.org/pub/ruby/${pkgver:0:3}/ruby-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/ruby-${pkgver}"

	./configure --prefix=/usr \
		--enable-shared \
		--disable-install-capi

	make
}

package() {
	cd "${srcdir}/ruby-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('8bcf60c994a96787da5d743c66f5609a5a6d834d6d61243cdea7fd059197c3b10da43c99e5649be85e2f2329eedcbb1dd76e89ce3ac586be9056348f7449ed09')

pkgname=scons
pkgver=2.5.1
pkgrel=1
pkgdesc="Extensible Python-based build utility"
arch=('x86_64')
url="http://scons.org"
license=('MIT')
#depends=()
source=("https://downloads.sourceforge.net/scons/scons-${pkgver}.tar.gz")

package() {
	cd "${srcdir}/scons-${pkgver}"

	python setup.py install --prefix=/usr \
		--standard-lib \
		--optimize=1 \
		--install-data=/usr/share \
		--root="${pkgdir}"
}

sha512sums=('0e39f7f22a6c4ecc13edcd843b050754da5ded5371b3a8b406395f7b53dd280f95f804707eec271f8de3624d06f5b4ba3cc788dc4eb891cad224a163544f51b9')

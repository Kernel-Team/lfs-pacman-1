pkgname=scons
pkgver=3.0.4
pkgrel=1
pkgdesc="Extensible Python-based build utility"
arch=('x86_64')
url="http://scons.org"
license=('MIT')
#depends=()
source=("https://downloads.sourceforge.net/scons/scons-${pkgver}.tar.gz")

package() {
	cd "${srcdir}/scons-${pkgver}"

	python setup.py install --prefix=/usr \
		--standard-lib \
		--optimize=1 \
		--install-data=/usr/share \
		--root="${pkgdir}"
}

sha512sums=('064a604939460fa85aa247776e5a2083ce98cac5f49f6035886d207f5cf167255756ee10cc00dd8228278d0d1efbed2afd8793bf3ca736a3ac970fabc3c4b627')

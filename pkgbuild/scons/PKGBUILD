pkgname=scons
pkgver=3.0.0
pkgrel=1
pkgdesc="Extensible Python-based build utility"
arch=('x86_64')
url="http://scons.org"
license=('MIT')
#depends=()
source=("https://downloads.sourceforge.net/scons/scons-${pkgver}.tar.gz")

package() {
	cd "${srcdir}/scons-${pkgver}"

	python setup.py install --prefix=/usr \
		--standard-lib \
		--optimize=1 \
		--install-data=/usr/share \
		--root="${pkgdir}"
}

sha512sums=('e52c31a21f8aab4bbb684a8770cbcb9eeef042d5c8c86ea2f4beb64ec0c50bc1ca4aa738a2bf92330bd26f8fa9589cb10314dc53defccc2825a5a13b01641b2d')

pkgname=sed
pkgver=4.4
pkgrel=1
pkgdesc="GNU stream editor"
arch=('x86_64')
url="https://www.gnu.org/software/sed/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/sed/sed-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/sed-${pkgver}"

	./configure --prefix=/usr --bindir=/bin

	make
}

package() {
	cd "${srcdir}/sed-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4e1b0a7403913f1e25047eb2292a0a9b3488b15b4463ce2803e05eaecbc2da19f477a18e6a70c992461c38ced90774415091aa2d8ce85cb74e391610d9eedb70')

pkgname=simple-scan
pkgver=3.27.92
pkgrel=1
pkgdesc="Simple scanning utility"
arch=('x86_64')
url="https://launchpad.net/simple-scan"
license=('GPL3')
#depends=()
source=("https://download.gnome.org/sources/simple-scan/${pkgver:0:4}/simple-scan-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/simple-scan-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('f7bded271501a985e8cecea6b56b34950a21600d6eb1c12dbab42d9f023509747baee12745ee6df619e952042eeea5ee01bd7247c6a69bf8f7f9fd47a379371d')

pkgname=simple-scan
pkgver=3.28.0
pkgrel=1
pkgdesc="Simple scanning utility"
arch=('x86_64')
url="https://launchpad.net/simple-scan"
license=('GPL3')
#depends=()
source=("https://download.gnome.org/sources/simple-scan/${pkgver:0:4}/simple-scan-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/simple-scan-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('81ecd273d072f21a58a7613fa7d61a0d32daec6cec58639d3be06cefc1f22933849b7dee28ca004bb039050a81e2c3c139c6a8ec04c3ae5749dc19e2ccf1eae5')

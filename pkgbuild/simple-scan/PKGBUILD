pkgname=simple-scan
pkgver=3.26.1
pkgrel=1
pkgdesc="Simple scanning utility"
arch=('x86_64')
url="https://launchpad.net/simple-scan"
license=('GPL3')
#depends=()
source=("https://download.gnome.org/sources/simple-scan/${pkgver:0:4}/simple-scan-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/simple-scan-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('4991bc5f539732969c6e4eb2ede9a617f395ac8b54afcfdffa6ecf168aa34246e36c22bb17a3c75fa3de6c03f23646fe0d67e375efdc8f8db497ba4e8d0e031b')

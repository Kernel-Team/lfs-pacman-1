pkgname=simple-scan
pkgver=3.26.0
pkgrel=1
pkgdesc="Simple scanning utility"
arch=('x86_64')
url="https://launchpad.net/simple-scan"
license=('GPL3')
#depends=()
source=("https://download.gnome.org/sources/simple-scan/${pkgver:0:4}/simple-scan-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		"${srcdir}/simple-scan-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('98de590d7398090224e3914773e9c504eae7fa3459804a53200db65e24a06428c569992ea157550f79a108bdb87f3f2928b9ec03676a44be346cdf7a33094328')

pkgname=slang
pkgver=2.3.1a
pkgrel=1
pkgdesc="S-Lang is a powerful interpreted language"
arch=('x86_64')
url="http://www.jedsoft.org/slang/"
license=('GPL')
#depends=()
options=(!makeflags staticlibs emptydirs)
source=("http://www.jedsoft.org/releases/slang/slang-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/slang-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--with-readline=gnu

	make
}

package() {
	cd "${srcdir}/slang-${pkgver}"

	make install-all DESTDIR="${pkgdir}"
}

sha512sums=('e7236a189081ebcbaf4e7f0506671226a4d46aede8826e1a558f1a2f57bcbe3ad58eadeabe2df99cd3d8bacb4c93749996bcbce4f51d338fc9396e0f945933e7')

pkgname=sonnet
pkgver=5.35.0
pkgrel=1
pkgdesc="Spelling framework for Qt5"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/sonnet-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/sonnet-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('330eaa77e3ca6296d8bbf3ede3c55be550652de980d2ea1193a330a68cfe6ae1d5ff9bcc3f4ac58b80e7bd7cce2b3aded502eddf566c013070919ef7eb31837d')

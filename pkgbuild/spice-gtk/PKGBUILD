pkgname=spice-gtk
pkgver=0.33
pkgrel=1
pkgdesc="Gtk client and libraries for SPICE remote desktop servers"
arch=('x86_64')
url="https://www.spice-space.org"
license=('LGPL2.1')
#depends=()
source=("https://www.spice-space.org/download/gtk/spice-gtk-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/spice-gtk-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-vala \
		--with-audio=pulse \
		--with-coroutine=gthread

	make
}

package() {
	cd "${srcdir}/spice-gtk-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ee5750194057a7f568641f6382d6969b67dc7271b4d13037570b79cdecd70a7eeb457ad349d3ed8e576f1fbd9701fac7d24607d5cbde8af0e030433b347abc80')

pkgname=spice-protocol
pkgver=0.12.12
pkgrel=1
pkgdesc="Headers for SPICE protocol"
arch=('x86_64')
url="https://www.spice-space.org/"
license=('BSD' 'LGPL2.1')
#depends=()
source=("https://www.spice-space.org/download/releases/spice-protocol-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/spice-protocol-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/spice-protocol-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('66e7a902b3c4a5a778cb91ffd9d324b12d414184146ac834dfb3bd81b4b6b1bb56258d3e1ce240b6f8747e1960fce8f0f6b0ada3617e9f9819be7118195fce6b')

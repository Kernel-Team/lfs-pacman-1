pkgname=stlink
pkgver=1.3.1
pkgrel=1
pkgdesc="Firmware programmer for STM32 STLINK v1/v2 protocol"
arch=('x86_64')
url="https://github.com/texane/stlink"
license=('BSD')
#depends=()
source=("stlink-${pkgver}.tar.gz::https://github.com/texane/stlink/archive/${pkgver}.tar.gz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DSTLINK_UDEV_RULES_DIR=/lib/udev/rules.d \
		-DSTLINK_MODPROBED_DIR=/usr/lib/modprobe.d \
		"${srcdir}/stlink-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}/usr/lib/libstlink.a"
}

md5sums=('1f347803b68600ee14ca7f93c5166f07')

pkgname=strace
pkgver=4.19
pkgrel=1
pkgdesc="A useful diagnositic, instructional, and debugging tool"
arch=('x86_64')
url="https://sourceforge.net/projects/strace/"
license=('custom')
#depends=()
source=("https://downloads.sourceforge.net/strace/strace-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/strace-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/strace-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('91d57f58ac0e70ff4dcd69fda3cb835de7f40a9152817427e9c264773f99015badbad7bab047ce7f69001b689b1ce54af9522a9738060823de8873bee1e0c629')

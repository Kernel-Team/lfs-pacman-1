pkgname=strace
pkgver=4.17
pkgrel=1
pkgdesc="A useful diagnositic, instructional, and debugging tool"
arch=('x86_64')
url="https://sourceforge.net/projects/strace/"
license=('custom')
#depends=()
source=("https://downloads.sourceforge.net/strace/strace-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/strace-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/strace-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('dab376d9c5ac7db98e864f3cfb165eeec714e3ea492f32ee873cebe01fbd3a0793db09983af1da6530480666a59973ccd9855d348e754be1eead9c0a5d524029')

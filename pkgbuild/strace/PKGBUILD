pkgname=strace
pkgver=4.23
pkgrel=1
pkgdesc="A useful diagnositic, instructional, and debugging tool"
arch=('x86_64')
url="https://strace.io/"
license=('custom')
#depends=()
source=("https://strace.io/files/${pkgver}/strace-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/strace-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/strace-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('b54df972dc86e27668784ea4619e8c55230816b249e0a7fcca99a37b7f9ec37710742aca08c9e39b508522accb654a83c98207bab9ccac1197bb8e73e51ab116')

pkgname=strace
pkgver=4.20
pkgrel=1
pkgdesc="A useful diagnositic, instructional, and debugging tool"
arch=('x86_64')
url="https://sourceforge.net/projects/strace/"
license=('custom')
#depends=()
source=("https://downloads.sourceforge.net/strace/strace-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/strace-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/strace-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('869b3b9c48401619073a021e20e80cce37d8884f615bdb52dac9e6a2903df11507d7a0cb0ccad75bcc03d8dfafead0e68d14267e663503e94849079c9a2ebd4c')

pkgname=talloc
pkgver=2.1.10
pkgrel=1
pkgdesc="Hierarchical pool based memory allocator with destructors"
arch=('x86_64')
url="https://talloc.samba.org/"
license=('GPL3')
#depends=()
source=("https://www.samba.org/ftp/talloc/talloc-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/talloc-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc/samba \
		--localstatedir=/var \
		--disable-rpath \
		--disable-rpath-install \
		--bundled-libraries=NONE \
		--builtin-libraries=replace

	make
}

package() {
	cd "${srcdir}/talloc-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('215e70056f37ade8f67c20ab2b79dcb40f071989ec908de81144f8a0160637bbdec9a94123dea73475ba42425415df4c1eb8c1986485a00e2e03323719a03ce3')

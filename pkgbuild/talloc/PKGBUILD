pkgname=talloc
pkgver=2.1.14
pkgrel=1
pkgdesc="Hierarchical pool based memory allocator with destructors"
arch=('x86_64')
url="https://talloc.samba.org/"
license=('GPL3')
#depends=()
source=("https://www.samba.org/ftp/talloc/talloc-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/talloc-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc/samba \
		--localstatedir=/var \
		--disable-rpath \
		--disable-rpath-install \
		--bundled-libraries=NONE \
		--builtin-libraries=replace

	make
}

package() {
	cd "${srcdir}/talloc-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1fcc70bf283a4d9fb61faf1c57f80a9c158efbe996452740db9755e879ad72ee7bff6f6c9bed358e085c5c7f97c78800bb903161143af2202952b702141cc130')

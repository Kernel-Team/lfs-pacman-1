pkgname=talloc
pkgver=2.1.12
pkgrel=1
pkgdesc="Hierarchical pool based memory allocator with destructors"
arch=('x86_64')
url="https://talloc.samba.org/"
license=('GPL3')
#depends=()
source=("https://www.samba.org/ftp/talloc/talloc-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/talloc-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc/samba \
		--localstatedir=/var \
		--disable-rpath \
		--disable-rpath-install \
		--bundled-libraries=NONE \
		--builtin-libraries=replace

	make
}

package() {
	cd "${srcdir}/talloc-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('baf572bc90ba0f0277d1d71cdfe441d4624592ad33e374b65ad9709189afa39fff227710db95e0e7ff2f96154f25b14d3e8d75ef10c8c81f03b3d432e80b63a2')

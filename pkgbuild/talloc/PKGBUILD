pkgname=talloc
pkgver=2.1.9
pkgrel=1
pkgdesc="Hierarchical pool based memory allocator with destructors"
arch=('x86_64')
url="https://talloc.samba.org/"
license=('GPL3')
#depends=()
source=("https://www.samba.org/ftp/talloc/talloc-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/talloc-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc/samba \
		--localstatedir=/var \
		--disable-rpath \
		--disable-rpath-install \
		--bundled-libraries=NONE \
		--builtin-libraries=replace

	make
}

package() {
	cd "${srcdir}/talloc-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a8f051bb15aba769ca286acad0946605d0053b0d149b4da2e6ecc333345f3e603d13a7f062452ae0f165615a4170ebdd7f41fc1b46c7a360000d5308bc304cbb')

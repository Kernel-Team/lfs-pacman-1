pkgname=talloc
pkgver=2.1.11
pkgrel=1
pkgdesc="Hierarchical pool based memory allocator with destructors"
arch=('x86_64')
url="https://talloc.samba.org/"
license=('GPL3')
#depends=()
source=("https://www.samba.org/ftp/talloc/talloc-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/talloc-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc/samba \
		--localstatedir=/var \
		--disable-rpath \
		--disable-rpath-install \
		--bundled-libraries=NONE \
		--builtin-libraries=replace

	make
}

package() {
	cd "${srcdir}/talloc-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e0c7e44f21b0b6510e04e09ce325d50323a0c6466acb6f301676e82f8812c61ed7f6faadac62380aa6338d54679fdf7afba7fb9ac774d0def96efbcf49d00523')

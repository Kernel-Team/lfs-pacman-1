pkgname=tar
pkgver=1.29
pkgrel=1
pkgdesc="Utility used to store, backup, and transport files"
arch=('x86_64')
url="https://www.gnu.org/software/tar/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/tar/tar-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/tar-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/tar-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7249689176bd9e4e842e1e363c3f5867d9d4db9ec082ba59805047091e89de22a67153a366c23bdc1e53a3fb154df1c19a5bc1fa88267333724c5bc11bd27329')

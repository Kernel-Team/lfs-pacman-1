pkgname=tdb
pkgver=1.3.12
pkgrel=1
pkgdesc="A Trivial Database similar to GDBM but allows simultaneous commits"
arch=('x86_64')
url="https://tdb.samba.org/"
license=('GPL3')
#depends=()
source=("https://www.samba.org/ftp/tdb/tdb-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/tdb-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc/samba \
		--localstatedir=/var \
		--disable-rpath \
		--disable-rpath-install \
		--bundled-libraries=NONE \
		--builtin-libraries=replace

	make
}

package() {
	cd "${srcdir}/tdb-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7556e03ca6784521cda023ce4e1ca259747a1e43b493790563a4f2d4eac57c4f6acbaa577b35cf6d1bf1eb8c24c71a8f73c697f816d384a9756aca7fa4e75d5b')

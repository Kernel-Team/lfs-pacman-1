pkgname=tdb
pkgver=1.3.14
pkgrel=1
pkgdesc="A Trivial Database similar to GDBM but allows simultaneous commits"
arch=('x86_64')
url="https://tdb.samba.org/"
license=('GPL3')
#depends=()
source=("https://www.samba.org/ftp/tdb/tdb-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/tdb-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc/samba \
		--localstatedir=/var \
		--disable-rpath \
		--disable-rpath-install \
		--bundled-libraries=NONE \
		--builtin-libraries=replace

	make
}

package() {
	cd "${srcdir}/tdb-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('776b736d5c61cb796e19731141a85606cbe90e09943d813e0b7bf45066656d4a92ba449d0116664f65b9d8e5729bde4526170bbb1b7b46fd7a2fac1508f3841b')

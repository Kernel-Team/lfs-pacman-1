pkgname=tevent
pkgver=0.9.33
pkgrel=1
pkgdesc="An event system based on the talloc memory management library"
arch=('x86_64')
url="https://tevent.samba.org/"
license=('GPL3')
#depends=()
source=("https://www.samba.org/ftp/tevent/tevent-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/tevent-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc/samba \
		--localstatedir=/var \
		--disable-rpath \
		--disable-rpath-install \
		--bundled-libraries=NONE \
		--builtin-libraries=replace

	make
}

package() {
	cd "${srcdir}/tevent-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('3a437957859a556e06f24334301c41a3db1433c1e90d651fa74585a638a36d71369f235a8ab51aa0dd8f9d9bb88ad42f2c3ddeba0b99c4234c63866a8c922b91')

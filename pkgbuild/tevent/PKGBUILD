pkgname=tevent
pkgver=0.9.37
pkgrel=1
pkgdesc="An event system based on the talloc memory management library"
arch=('x86_64')
url="https://tevent.samba.org/"
license=('GPL3')
#depends=()
source=("https://www.samba.org/ftp/tevent/tevent-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/tevent-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc/samba \
		--localstatedir=/var \
		--disable-rpath \
		--disable-rpath-install \
		--bundled-libraries=NONE \
		--builtin-libraries=replace

	make
}

package() {
	cd "${srcdir}/tevent-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('5d4833403e1c2f2749f00a389e4757261a4f22cd3a67c906001b36a8b622cc68a38e86d4eb475848a2121ebba054a7e7dac7f486d9f2906a401c3cc97fb447f4')

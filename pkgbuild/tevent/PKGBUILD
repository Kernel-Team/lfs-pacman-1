pkgname=tevent
pkgver=0.9.35
pkgrel=1
pkgdesc="An event system based on the talloc memory management library"
arch=('x86_64')
url="https://tevent.samba.org/"
license=('GPL3')
#depends=()
source=("https://www.samba.org/ftp/tevent/tevent-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/tevent-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc/samba \
		--localstatedir=/var \
		--disable-rpath \
		--disable-rpath-install \
		--bundled-libraries=NONE \
		--builtin-libraries=replace

	make
}

package() {
	cd "${srcdir}/tevent-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('935719382469a0f39764a7ebdbc0ee977ccca2fc55ff1e896ddd95ba2d065d989f0c366cb98be95ce87475e628b0de38b7138261717a5c2cee870e98339ed5fd')

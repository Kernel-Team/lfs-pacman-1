pkgname=tevent
pkgver=0.9.34
pkgrel=1
pkgdesc="An event system based on the talloc memory management library"
arch=('x86_64')
url="https://tevent.samba.org/"
license=('GPL3')
#depends=()
source=("https://www.samba.org/ftp/tevent/tevent-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/tevent-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc/samba \
		--localstatedir=/var \
		--disable-rpath \
		--disable-rpath-install \
		--bundled-libraries=NONE \
		--builtin-libraries=replace

	make
}

package() {
	cd "${srcdir}/tevent-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('29ff88cedc05d9345749ee241f8ab083fc6f98d3975b2739629a3a75a766db6ec42133eeb6c9297315ee0c68ab512c70b8b927d2df5ea61880c673ef33b44183')

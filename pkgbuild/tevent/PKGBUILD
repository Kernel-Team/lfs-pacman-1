pkgname=tevent
pkgver=0.9.31
pkgrel=1
pkgdesc="An event system based on the talloc memory management library"
arch=('x86_64')
url="https://tevent.samba.org/"
license=('GPL3')
#depends=()
source=("https://www.samba.org/ftp/tevent/tevent-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/tevent-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc/samba \
		--localstatedir=/var \
		--disable-rpath \
		--disable-rpath-install \
		--bundled-libraries=NONE \
		--builtin-libraries=replace

	make
}

package() {
	cd "${srcdir}/tevent-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('048e37a7f5d3b8e948215fdb909c9b6e94b915c9d4978a8e18c73c9d27d5b1f179c10d19ec90325f8250e7c177c28231ad116a2975caaa43312c383e75517258')

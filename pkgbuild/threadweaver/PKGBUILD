pkgname=threadweaver
pkgver=5.35.0
pkgrel=1
pkgdesc="High-level multithreading framework"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/threadweaver-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/threadweaver-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fe9fb193e3d8345fe7106d110b72af88dc6e9cd4f39be523822cf2c382677b1c75f9fadace908a3e0e3a0612fdeb10586d9b8ee4e98c14b2fb1086d76cece618')

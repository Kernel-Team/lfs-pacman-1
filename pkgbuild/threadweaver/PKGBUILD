pkgname=threadweaver
pkgver=5.36.0
pkgrel=1
pkgdesc="High-level multithreading framework"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/threadweaver-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/threadweaver-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('cf52bd157e8e3b19a579e1066648b8d2b9bd3b7c3b06caf448eae94219f7f2c5728fa41c150c3b5bc3c32c400e6ce4f5075fa53f7ccfa6f6dc5fd970edcb67a8')

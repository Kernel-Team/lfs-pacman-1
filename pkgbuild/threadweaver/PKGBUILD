pkgname=threadweaver
pkgver=5.37.0
pkgrel=1
pkgdesc="High-level multithreading framework"
arch=('x86_64')
url="https://community.kde.org/Frameworks"
license=('LGPL')
#depends=()
options=(docs)
source=("https://download.kde.org/stable/frameworks/${pkgver:0:4}/threadweaver-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DKDE_INSTALL_SYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DKDE_INSTALL_LIBDIR=lib \
		-DBUILD_TESTING=OFF \
		"${srcdir}/threadweaver-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('8679a65b59a787884c3aed01d7fb06dbb9e91a6f60ff4db952e1cba50022db430f3bb3f3411d7ecdf0f47b469be0d2d32b4d4a7879a976c96ac4c0efe688efd7')

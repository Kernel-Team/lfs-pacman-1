pkgname=tidy-html5
pkgver=5.6.0
pkgrel=1
pkgdesc="A tool to tidy down your HTML code to a clean style"
arch=('x86_64')
url="http://www.html-tidy.org/"
license=('custom')
#depends=()
source=("https://github.com/htacg/tidy-html5/archive/${pkgver}/tidy-html5-${pkgver}.tar.gz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		"${srcdir}/tidy-html5-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('179088a6dbd29bb0e4f0219222f755b186145495f7414f6d0e178803ab67140391283d35352d946f9790c6b1b5b462ee6e24f1cc84f19391cb9b65e73979ffd1')

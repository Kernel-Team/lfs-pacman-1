pkgname=totem-pl-parser
pkgver=3.26.1
pkgrel=1
pkgdesc="Simple GObject-based library to parse and save a host of playlist formats"
arch=('x86_64')
url="https://git.gnome.org/browse/totem-pl-parser/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/totem-pl-parser/${pkgver:0:4}/totem-pl-parser-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Denable-gtk-doc=true \
		"${srcdir}/totem-pl-parser-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('99219e34d257c8317e147411ca7bb7f8ffef0c2be7985494cf93823d96be1cb33b16525b8c863e2b6e547cce4709c163ee560e62178821b76ba4d1e1485c538d')

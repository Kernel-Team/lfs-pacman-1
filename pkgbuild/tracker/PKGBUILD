pkgname=tracker
pkgver=2.0.4
pkgrel=1
pkgdesc="Desktop-neutral user information store, search tool and indexer"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Tracker"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/tracker/${pkgver:0:3}/tracker-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/tracker-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/tracker-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('053445d7023d04f9aec138a4bea400fc5525766146ef640a6b8cecbf0213da7f835543776441442870979391e2f4b8f6c2dd4c0a245170c1039de996492c6705')

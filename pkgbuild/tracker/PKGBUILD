pkgname=tracker
pkgver=1.12.0
pkgrel=1
pkgdesc="Desktop-neutral user information store, search tool and indexer"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Tracker"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/tracker/${pkgver:0:4}/tracker-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/tracker-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-miner-firefox \
		--disable-miner-thunderbird \
		--disable-miner-user-guides \
		--disable-unit-tests \
		--enable-libflac \
		--enable-libvorbis

	make
}

package() {
	cd "${srcdir}/tracker-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7c4282f18b08afbda893a6fad8c4851cfd6cd1e4dde214e55bf2fe1c82c992217d57b026da0ad98f0f1b62cbbf3dd4e48e067f4dbcdfbc64039b84a748b3bdb5')

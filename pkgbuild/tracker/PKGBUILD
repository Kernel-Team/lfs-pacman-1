pkgname=tracker
pkgver=1.12.1
pkgrel=1
pkgdesc="Desktop-neutral user information store, search tool and indexer"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Tracker"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/tracker/${pkgver:0:4}/tracker-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/tracker-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-miner-firefox \
		--disable-miner-thunderbird \
		--disable-miner-user-guides \
		--disable-unit-tests \
		--enable-libflac \
		--enable-libvorbis

	make
}

package() {
	cd "${srcdir}/tracker-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a99bc07515d74e2a3b578ddba061060566aad00d8d9579fb726105db66da5374b40222dc23e7323b244a595c856ddb3b6c7ccc6be1a13cbb8669f93d0afd8b59')

pkgname=tracker
pkgver=2.0.0
pkgrel=1
pkgdesc="Desktop-neutral user information store, search tool and indexer"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Tracker"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/tracker/${pkgver:0:3}/tracker-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/tracker-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/tracker-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('5a1fce503ecd601130f9d9d162e391fa1abe0942cd090f459e33ef422ecef13f5880eb05748b9763e31dd7ea9219f6692f292c682a4e5382245bf1e42fa6248b')

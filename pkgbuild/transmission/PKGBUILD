pkgname=transmission
pkgver=2.92
pkgrel=1
pkgdesc="Fast, easy, and free BitTorrent client"
arch=('x86_64')
url="http://www.transmissionbt.com/"
license=('MIT')
#depends=()
source=("https://github.com/transmission/transmission-releases/raw/master/transmission-${pkgver}.tar.xz")

prepare() {
	cd "${srcdir}/transmission-${pkgver}"

	sed -i "s:libsystemd-daemon:libsystemd:g" configure
}

build() {
	cd "${srcdir}/transmission-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/transmission-${pkgver}"

	make install DESTDIR="${pkgdir}"

	install -Dm644 daemon/transmission-daemon.service "${pkgdir}/lib/systemd/system/transmission-daemon.service"
}

sha512sums=('4d99476bee88cedcc4238a0eee64a4089016933cbfc1cfb1cca023ad4ebcfe46375c9e7651a17af4aeaaf1feb19cbd8166aa56ef7992d9e745a7bbcbe8efca11')

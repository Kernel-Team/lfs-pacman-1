pkgname=udisks
pkgver=2.7.2
pkgrel=1
pkgdesc="Disk Management Service"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/udisks/"
license=('GPL2')
#depends=()
options=(emptydirs)
source=("https://github.com/storaged-project/udisks/releases/download/udisks-${pkgver}/udisks-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/udisks-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/udisks-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('cfaa234340e9f1dacc50bc455a834d53e27d6f42036951384e3603c374517b049db6e13ebbcf6767cc346d56860e3058a406102872a5c5cbbec9edb39c86c4a1')

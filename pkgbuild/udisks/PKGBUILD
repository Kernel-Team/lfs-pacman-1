pkgname=udisks
pkgver=2.7.4
pkgrel=1
pkgdesc="Disk Management Service"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/udisks/"
license=('GPL2')
#depends=()
options=(emptydirs)
source=("https://github.com/storaged-project/udisks/releases/download/udisks-${pkgver}/udisks-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/udisks-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/udisks-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4e8f1aa6e5fbcceb3c4aae0fa567b154b892b024cb0bd7273622445070088656ab7b15427533aefa53932ee29cfabd5b9d86bd5aef04e872093fbb1278c0997d')

pkgname=udisks
pkgver=2.7.3
pkgrel=1
pkgdesc="Disk Management Service"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/udisks/"
license=('GPL2')
#depends=()
options=(emptydirs)
source=("https://github.com/storaged-project/udisks/releases/download/udisks-${pkgver}/udisks-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/udisks-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/udisks-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('106174cbe717aca837028f93c50c1c93d528b66d94769dc36f0d35fc4071325658feb6020005f10691165a3908eda1aa830c3a4fd65d506f662f3c61331b1bae')

pkgname=udisks
pkgver=2.7.5
pkgrel=1
pkgdesc="Disk Management Service"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/udisks/"
license=('GPL2')
#depends=()
options=(emptydirs)
source=("https://github.com/storaged-project/udisks/releases/download/udisks-${pkgver}/udisks-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/udisks-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/udisks-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('3af72b87acb8e540b229e58e2176ac87de831ef402f4825b6e9ee163a8d34e921a38909f45e685cd2a9931d08aaa22285ba2f6a811cb8265237201f0b5e36310')

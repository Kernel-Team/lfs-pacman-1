pkgname=unrar
pkgver=5.5.8
pkgrel=1
pkgdesc="The RAR uncompression program"
arch=('x86_64')
url="http://www.rarlab.com/rar_add.htm"
license=('custom')
#depends=()
source=("http://www.rarlab.com/rar/unrarsrc-${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/unrar"

	sed -i "s:-O2:${CFLAGS} -w:g;/CXX/s:c++:${CXX}:g" makefile
}

build() {
	cd "${srcdir}/unrar"

	unset CFLAGS CXXFLAGS

	make
}

package() {
	cd "${srcdir}/unrar"

	install -v -Dm755 unrar "${pkgdir}/usr/bin/unrar"
}

sha512sums=('9eac83707fa47a03925e5f3e8adf47889064d748304b732d12a2d379ab525b441f1aa33216377d4ef445f45c4e8ad73d2cd0b560601ceac344c60571b77fd6aa')

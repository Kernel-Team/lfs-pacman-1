pkgname=unrar
pkgver=5.6.2
pkgrel=1
pkgdesc="The RAR uncompression program"
arch=('x86_64')
url="http://www.rarlab.com/rar_add.htm"
license=('custom')
#depends=()
source=("http://www.rarlab.com/rar/unrarsrc-${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/unrar"

	sed -i "s:-O2:${CFLAGS} -w:g;/CXX/s:c++:${CXX}:g" makefile
}

build() {
	cd "${srcdir}/unrar"

	unset CFLAGS CXXFLAGS

	make
}

package() {
	cd "${srcdir}/unrar"

	install -v -Dm755 unrar "${pkgdir}/usr/bin/unrar"
}

sha512sums=('67f958330bc58fecc2fde3a16073bb44b61b5fd4a0ff19c5e345ce830a1ff3f00f3fb2507455912b7b3252804b9d27a92c4469f31513337569fed298d6af7655')

pkgname=unrar
pkgver=5.5.4
pkgrel=1
pkgdesc="The RAR uncompression program"
arch=('x86_64')
url="http://www.rarlab.com/rar_add.htm"
license=('custom')
#depends=()
source=("http://www.rarlab.com/rar/unrarsrc-${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/unrar"

	sed -i "s:-O2:${CFLAGS} -w:g;/CXX/s:c++:${CXX}:g" makefile
}

build() {
	cd "${srcdir}/unrar"

	unset CFLAGS CXXFLAGS

	make
}

package() {
	cd "${srcdir}/unrar"

	install -v -Dm755 unrar "${pkgdir}/usr/bin/unrar"
}

sha512sums=('8f079ade9aca6218ca21bddc1ec4c1639bf1ba9c8bc6413295a5dbedd59320b1de5321ee2853fbc0f4486437a82d5135e91fe00c447f47bac2f8dd296c2acfbc')

pkgname=unrar
pkgver=5.6.3
pkgrel=1
pkgdesc="The RAR uncompression program"
arch=('x86_64')
url="http://www.rarlab.com/rar_add.htm"
license=('custom')
#depends=()
source=("http://www.rarlab.com/rar/unrarsrc-${pkgver}.tar.gz")

prepare() {
	cd "${srcdir}/unrar"

	sed -i "s:-O2:${CFLAGS} -w:g;/CXX/s:c++:${CXX}:g" makefile
}

build() {
	cd "${srcdir}/unrar"

	unset CFLAGS CXXFLAGS

	make
}

package() {
	cd "${srcdir}/unrar"

	install -v -Dm755 unrar "${pkgdir}/usr/bin/unrar"
}

sha512sums=('cd3c97d357242a91917cdd9ee6898527829bff73dd187e58d7490d0d0ed5ffd8f8db651ce63d4bd8307c6a085fa95d72faa7b0cf1348bba191086136232a98fc')

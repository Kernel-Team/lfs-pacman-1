pkgname=usbutils
pkgver=008
pkgrel=1
pkgdesc="USB Device Utilities"
arch=('x86_64')
url="http://linux-usb.sourceforge.net/"
license=('GPL')
#depends=()
source=("https://www.kernel.org/pub/linux/utils/usb/usbutils/usbutils-${pkgver}.tar.xz")

prepare() {
	cd "${srcdir}/usbutils-${pkgver}"

	wget -c http://www.linux-usb.org/usb.ids
}

build() {
	cd "${srcdir}/usbutils-${pkgver}"

	./configure --prefix=/usr \
		--datadir=/usr/share/misc \
		--disable-zlib

	make
}

package() {
	cd "${srcdir}/usbutils-${pkgver}"

	make install DESTDIR="${pkgdir}"

	install -Dm644 usb.ids "${pkgdir}/usr/share/misc/usb.ids"
}

sha512sums=('ab1ad36467ff79ff5ab0b924620001612cae44def58c05ade01a4e58d8a4d48df61c09faba49a20497b7d6314045bbaf137b51a9f4e6b65ed0ea3bb339bf1c45')

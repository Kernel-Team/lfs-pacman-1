pkgname=usbutils
pkgver=009
pkgrel=1
pkgdesc="USB Device Utilities"
arch=('x86_64')
url="http://linux-usb.sourceforge.net/"
license=('GPL')
#depends=()
source=("https://www.kernel.org/pub/linux/utils/usb/usbutils/usbutils-${pkgver}.tar.xz")

prepare() {
	cd "${srcdir}/usbutils-${pkgver}"

	wget -c http://www.linux-usb.org/usb.ids
}

build() {
	cd "${srcdir}/usbutils-${pkgver}"

	./configure --prefix=/usr \
		--datadir=/usr/share/misc \
		--disable-zlib

	make
}

package() {
	cd "${srcdir}/usbutils-${pkgver}"

	make install DESTDIR="${pkgdir}"

	install -Dm644 usb.ids "${pkgdir}/usr/share/misc/usb.ids"
}

sha512sums=('e5936a42615690c13e618655fc5eb4f414d9a84f85b860eaeb3bcf737258e05d299b09d1c5388d50c718626036ec8cac5d670ad567ceadfaab85f401f0744a8a')

pkgname=util-linux
pkgver=2.30.1
pkgrel=1
pkgdesc="Miscellaneous system utilities for Linux"
arch=('x86_64')
url="https://www.kernel.org/pub/linux/utils/util-linux/"
license=('GPL2')
#depends=()
source=("https://www.kernel.org/pub/linux/utils/util-linux/v${pkgver:0:4}/util-linux-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/util-linux-${pkgver}"

	./configure --prefix=/usr \
		--bindir=/usr/bin \
		--libdir=/usr/lib \
		--sbindir=/usr/sbin \
		--enable-mesg \
		--disable-nologin \
		--disable-chfn-chsh \
		--disable-su \
		--disable-login \
		--disable-kill \
		--with-audit \
		--with-selinux \
		--with-systemd \
		--enable-fs-paths-default=/usr/sbin \
		--with-systemdsystemunitdir=/usr/lib/systemd/system \
		PYTHON=/usr/bin/python3

	make
}

package() {
	cd "${srcdir}/util-linux-${pkgver}"

	make install DESTDIR="${pkgdir}"

	rm -rf "${pkgdir}"/usr/lib/*.so* "${pkgdir}"/usr/lib/*.a
	rm -rf "${pkgdir}/usr/include" "${pkgdir}/usr/lib/pkgconfig"

	rm -rf "${pkgdir}"/usr/bin/{mount,umount}
	rm -rf "${pkgdir}"/usr/share/man/man8/{mount,umount}.8
	rm -rf "${pkgdir}/usr/share/man/man5/fstab.5"
}

sha512sums=('bcf1807198660c133c380e13d6ba5dcdb7470c47bcaeea03ccc5a78a0d834e3df3d13ae5ffc35fd7f8fff7ba062629d4b1f5cde78452b846c9315c51c9e108f5')

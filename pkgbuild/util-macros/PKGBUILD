pkgname=util-macros
pkgver=1.19.1
pkgrel=1
pkgdesc="X.Org Autotools macros"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/util/util-macros-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/util-macros-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/util-macros-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d69a415d5922f072bab1ddf8984c98bc349a24ffc7a60184320a12992a76b04d7cb773b426b1a7000e6dc7983d59df51bbc8f2ff25273d63e4e238b4cd91eb38')

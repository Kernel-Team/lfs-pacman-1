pkgname=vala
pkgver=0.36.3
pkgrel=1
pkgdesc="Compiler for the GObject type system"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Vala"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/vala/${pkgver:0:4}/vala-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/vala-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/vala-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f86037ff55cb89a3099d34c0965fa42aa66e34c943b13fbf0072f62990d843e6c2de9f25aa68c0d6ed48e7bd850d8b67a906ab0a134a5ed1ac10b8cb338a450f')

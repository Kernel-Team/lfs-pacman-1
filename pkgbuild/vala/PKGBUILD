pkgname=vala
pkgver=0.38.1
pkgrel=1
pkgdesc="Compiler for the GObject type system"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Vala"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/vala/${pkgver:0:4}/vala-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/vala-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/vala-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('00ed915c0ca0a095626e4189fd6331e59e53c95619f76bff51413f822e73eedac8fb0937f0fb8bc32821154d68c9d7207e120be3c71596e2e0daa855b20f1f8a')

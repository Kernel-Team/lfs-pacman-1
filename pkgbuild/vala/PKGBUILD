pkgname=vala
pkgver=0.38.0
pkgrel=1
pkgdesc="Compiler for the GObject type system"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Vala"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/vala/${pkgver:0:4}/vala-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/vala-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/vala-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7dbce81474710c730fec2c465e38800b893af6e9882ebada22758acca5b3f71d9b10281e49aee2f99937cdc235a743ef190f0b1dfb9e229b7e16d06b7bd53eda')

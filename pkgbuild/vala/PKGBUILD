pkgname=vala
pkgver=0.44.0
pkgrel=1
pkgdesc="Compiler for the GObject type system"
arch=('x86_64')
url="https://wiki.gnome.org/Projects/Vala"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/vala/${pkgver:0:4}/vala-${pkgver}.tar.xz")

prepare() {
	cd "${srcdir}/vala-${pkgver}"

	#patch -Np1 -i "${srcdir}/vala-remove-valadoc.patch"
	#autoreconf -fi
}

build() {
	cd "${srcdir}/vala-${pkgver}"

	./configure --prefix=/usr --disable-valadoc

	make
}

package() {
	cd "${srcdir}/vala-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1c2e962e849fbf7f3a2be56cca3f26770f6f754f403f7ff7dc8a7ed28bba212d3b704313e02cce86a27432b9b3b918009f59155398ca3be26afc698cc3952b3d')

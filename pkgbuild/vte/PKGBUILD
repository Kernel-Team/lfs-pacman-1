pkgname=vte
pkgver=0.50.2
pkgrel=1
pkgdesc="Virtual Terminal Emulator widget for use with GTK3"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Terminal/VTE"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/vte/${pkgver:0:4}/vte-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/vte-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-introspection

	make
}

package() {
	cd "${srcdir}/vte-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a1b12c74bedb167bf2a470294c566198c224c90be9b5c50366ef18d9542921f6cb2dc2329afd82f7342279c3eebd4ef5dfd753b4feb9d4e3e194cb878b48a7a2')

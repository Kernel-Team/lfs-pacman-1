pkgname=vte
pkgver=0.52.0
pkgrel=1
pkgdesc="Virtual Terminal Emulator widget for use with GTK3"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Terminal/VTE"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/vte/${pkgver:0:4}/vte-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/vte-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-introspection

	make
}

package() {
	cd "${srcdir}/vte-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('2f8b1efc7c73c4e74070d3bfcb33e61672d6ed70a352eed2c43198f8c3ffb513f6ed98dcf822dbd55d31d914c7f9dc157b29f8e4781705ee2c9ddb0e43c6e5fa')

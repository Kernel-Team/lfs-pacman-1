pkgname=vte
pkgver=0.48.3
pkgrel=1
pkgdesc="Virtual Terminal Emulator widget for use with GTK3"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Terminal/VTE"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/vte/${pkgver:0:4}/vte-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/vte-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-introspection

	make
}

package() {
	cd "${srcdir}/vte-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('3037b61a759cfcf56838bc7804df5a211da416bff9ddc5791f8a8d5157b90926985cfe57d7edbab42de64945d5e668470fe4129a218fb9c7af546648e1660c72')

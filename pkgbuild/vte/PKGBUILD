pkgname=vte
pkgver=0.49.92
pkgrel=1
pkgdesc="Virtual Terminal Emulator widget for use with GTK3"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Terminal/VTE"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/vte/${pkgver:0:4}/vte-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/vte-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-introspection

	make
}

package() {
	cd "${srcdir}/vte-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4d5ff9f8f278c5f0c5169b20878422b4b34d298e4e09746124cb693e18c284db1810587c08eee24204b8962d6a874c1aff5f919c0a71ccd179e57271317d7df0')

pkgname=webkitgtk
pkgver=2.16.4
pkgrel=1
pkgdesc="GTK+ Web content engine library"
arch=('x86_64')
url="https://webkitgtk.org/"
license=('custom')
#depends=()
source=("https://webkitgtk.org/releases/webkitgtk-${pkgver}.tar.xz")

prepare() {
	cd "${srcdir}/webkitgtk-${pkgver}"

	sed -i "/unistd.h/i#include <stdio.h>" Source/WTF/wtf/NumberOfCores.cpp
	sed -i "/stdlib.h/i#include <stdio.h>" Source/WebKit2/UIProcess/linux/MemoryPressureMonitor.cpp

	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	CXXFLAGS+=" -w"

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_SKIP_RPATH=ON \
		-DPORT=GTK \
		-DLIB_INSTALL_DIR=/usr/lib \
		"${srcdir}/webkitgtk-${pkgver}"

	make
}

package() {
	cd "${srcdir}/build"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9643b40f5425cb6c13daf39cbe66db7103e588c8a6a1822709d1b2d24ddf73662c139337327a403c25678cec96df7e5ccf186c14aca162b6f32b5bc31310709c')

pkgname=webkitgtk
pkgver=2.17.91
pkgrel=1
pkgdesc="GTK+ Web content engine library"
arch=('x86_64')
url="https://webkitgtk.org/"
license=('custom')
#depends=()
source=("https://webkitgtk.org/releases/webkitgtk-${pkgver}.tar.xz")

prepare() {
	cd "${srcdir}/webkitgtk-${pkgver}"

	sed -i "/<mutex>/a #include <cstdio>" Source/bmalloc/bmalloc/Gigacage.cpp

	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	CXXFLAGS+=" -w"

	cmake -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_SKIP_RPATH=ON \
		-DPORT=GTK \
		-DLIB_INSTALL_DIR=/usr/lib \
		"${srcdir}/webkitgtk-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('f6ce14ce5838819e348ec300d6a98bde7a6fdeef4e2b88179169378b7193cfee3460c53c2f986fbfb55ba2dbdfe40ff509f9cf2ca615105765762b800cd1c980')

pkgname=webkitgtk
pkgver=2.17.92
pkgrel=1
pkgdesc="GTK+ Web content engine library"
arch=('x86_64')
url="https://webkitgtk.org/"
license=('custom')
#depends=()
source=("https://webkitgtk.org/releases/webkitgtk-${pkgver}.tar.xz")

prepare() {
	cd "${srcdir}/webkitgtk-${pkgver}"

	sed -i "/<mutex>/a #include <cstdio>" Source/bmalloc/bmalloc/Gigacage.cpp

	install -v -dm755 "${srcdir}/build"
}

build() {
	cd "${srcdir}/build"

	CXXFLAGS+=" -w"

	cmake -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_SKIP_RPATH=ON \
		-DPORT=GTK \
		-DLIB_INSTALL_DIR=/usr/lib \
		"${srcdir}/webkitgtk-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('e6d16460553e1f55ccc940274f4ca9a6fd46654dbd1176d03239bc8e90d0c9eee63860c6a78bf8992a0f6d8d29ced26226a996610c441edd57cb32628b9277cf')

pkgname=weston
pkgver=2.0.0
pkgrel=1
pkgdesc='Reference implementation of a Wayland compositor'
arch=('x86_64')
url="https://wayland.freedesktop.org/"
license=('MIT')
#depends=()
source=("https://wayland.freedesktop.org/releases/weston-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/weston-${pkgver}"

	./configure --prefix=/usr --enable-demo-clients-install

	make
}

package() {
	cd "${srcdir}/weston-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('085a0ba278932d41b50edd6e89db5df31cd6a1179c6cfe9a8ac5ac64e63b25cfc3da1ad8c587259273c3812593029b803867195e2d82b12b5cdd2588ac59acc6')

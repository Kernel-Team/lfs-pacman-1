pkgname=weston
pkgver=3.0.0
pkgrel=1
pkgdesc='Reference implementation of a Wayland compositor'
arch=('x86_64')
url="https://wayland.freedesktop.org/"
license=('MIT')
#depends=()
source=("https://wayland.freedesktop.org/releases/weston-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/weston-${pkgver}"

	./configure --prefix=/usr --enable-demo-clients-install

	make
}

package() {
	cd "${srcdir}/weston-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('b824c39f2a884f6d50d607613f447090621f684c96f7d905f25f6e500dabd03ecb2b1cd1030babc193c3417223cb220103abb792437e1a5ead7229a76b5c7a58')

pkgname=weston
pkgver=3.0.92
pkgrel=1
pkgdesc='Reference implementation of a Wayland compositor'
arch=('x86_64')
url="https://wayland.freedesktop.org/"
license=('MIT')
#depends=()
source=("https://wayland.freedesktop.org/releases/weston-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/weston-${pkgver}"

	./configure --prefix=/usr --enable-demo-clients-install

	make
}

package() {
	cd "${srcdir}/weston-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e2e3e961de19df8a2da328676506bc5ea922302e89ab62f7c7b30b0327d4baab92b4069fd3d2e7dbe273ba5fc73c9736eabe5274aa4115ad945695ac73b33881')

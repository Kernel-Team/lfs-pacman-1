pkgname=weston
pkgver=5.0.94
pkgrel=1
pkgdesc='Reference implementation of a Wayland compositor'
arch=('x86_64')
url="https://wayland.freedesktop.org/"
license=('MIT')
#depends=()
source=("https://wayland.freedesktop.org/releases/weston-${pkgver}.tar.xz")

prepare() {
	install -v -dm755 "${srcdir}/build"

	cd "${srcdir}/weston-${pkgver}"

	sed -i "s#pangocairo#gobject-2.0 &#" clients/meson.build
}

build() {
	cd "${srcdir}/build"

	meson --prefix /usr \
		--sysconfdir /etc \
		--localstatedir /var \
		--buildtype=plain \
		-Dbackend-rdp=false \
		-Dsimple-dmabuf-drm=intel \
		"${srcdir}/weston-${pkgver}"

	ninja ${MAKEFLAGS}
}

package() {
	cd "${srcdir}/build"

	DESTDIR="${pkgdir}" ninja install
}

sha512sums=('daafd16c8e7993b96c7745adea10029501a3b0273f6564f38feaee9d5a27e7555902ffca388fa261fcab486012cf95a9632d7535f85181b51ddf262e7b717e8b')

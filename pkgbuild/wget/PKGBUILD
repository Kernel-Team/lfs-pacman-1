pkgname=wget
pkgver=1.19.1
pkgrel=1
pkgdesc="A network utility to retrieve files from the Web"
arch=('x86_64')
url="https://www.gnu.org/software/wget/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/wget/wget-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/wget-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--with-ssl=openssl

	make
}

package() {
	cd "${srcdir}/wget-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('00864d225439bcb7c5af01d7ef19efa615427812d3320ab3f4c8f62c38191e837b1392397843f935d7dc5860a4d0ce89ee31f2730c4a729402f1f2bf3e5f64e5')

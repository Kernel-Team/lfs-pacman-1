pkgname=wget
pkgver=1.19.2
pkgrel=1
pkgdesc="A network utility to retrieve files from the Web"
arch=('x86_64')
url="https://www.gnu.org/software/wget/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/wget/wget-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/wget-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--with-ssl=openssl

	make
}

package() {
	cd "${srcdir}/wget-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a0f8afcc0767a8fd1acd64b1b1b27d177bc938e70cc3709c1b3faa6c1426ec926642cd8e49d292cec0268ee507683539b5152072110106de5a728a03efd8cedd')

pkgname=wget
pkgver=1.20.1
pkgrel=1
pkgdesc="A network utility to retrieve files from the Web"
arch=('x86_64')
url="https://www.gnu.org/software/wget/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/wget/wget-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/wget-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--with-ssl=openssl

	make
}

package() {
	cd "${srcdir}/wget-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('855c7e3c45f9020a9fdb30e286ee6a0bdcaa780be3d0dda9ffdae73b562ae1012d4550242f66240407a28076a7054328d4f08a469a0da227a9e3410b8d5f46dc')

pkgname=wget
pkgver=1.19.4
pkgrel=1
pkgdesc="A network utility to retrieve files from the Web"
arch=('x86_64')
url="https://www.gnu.org/software/wget/"
license=('GPL3')
#depends=()
source=("https://ftp.gnu.org/gnu/wget/wget-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/wget-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--with-ssl=openssl

	make
}

package() {
	cd "${srcdir}/wget-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e84b0c40235b160ade69e18f2f139c782eb2387edc97a847c11dbb906c0273daf6d0ef5afe20360ba965c7da8b5e109f5a45e39ea93d20ec945575203235943a')

pkgname=x264
pkgver=20170920
pkgrel=1
pkgdesc="Library for encoding H264/AVC video streams"
arch=('x86_64')
url="http://www.videolan.org/developers/x264.html"
license=('GPL')
#depends=()
source=("http://download.videolan.org/pub/videolan/x264/snapshots/x264-snapshot-${pkgver}-2245.tar.bz2")

build() {
	cd "${srcdir}/x264-snapshot-${pkgver}-2245"

	./configure --prefix=/usr \
		--disable-cli \
		--enable-shared \
		--system-libx264

	make
}

package() {
	cd "${srcdir}/x264-snapshot-${pkgver}-2245"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('0360491626c226656c90b10c5008aed4d9cf13e0905a83c2d6bcd4374185800aa479931399f5adc573ed02777a41537b8ccfecaa88a36a5fade533fbe73c42ba')

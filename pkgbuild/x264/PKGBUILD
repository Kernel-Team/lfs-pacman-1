pkgname=x264
pkgver=20170715
pkgrel=1
pkgdesc="Library for encoding H264/AVC video streams"
arch=('x86_64')
url="http://www.videolan.org/developers/x264.html"
license=('GPL')
#depends=()
source=("http://download.videolan.org/pub/videolan/x264/snapshots/x264-snapshot-${pkgver}-2245.tar.bz2")

build() {
	cd "${srcdir}/x264-snapshot-${pkgver}-2245"

	./configure --prefix=/usr \
		--disable-cli \
		--enable-shared \
		--system-libx264

	make
}

package() {
	cd "${srcdir}/x264-snapshot-${pkgver}-2245"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('bcb04440d7a347e1cdc7165531b3d5665a168ca3b2c67de24102d2bc4b6443ce13f69c7912c8c00e4409726e99ad25449692a3dd19ea04d595c89f36be30dadf')

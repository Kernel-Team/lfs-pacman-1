pkgname=x264
pkgver=20180706
pkgrel=1
pkgdesc="Library for encoding H264/AVC video streams"
arch=('x86_64')
url="http://www.videolan.org/developers/x264.html"
license=('GPL')
#depends=()
source=("http://download.videolan.org/pub/videolan/x264/snapshots/x264-snapshot-${pkgver}-2245.tar.bz2")

build() {
	cd "${srcdir}/x264-snapshot-${pkgver}-2245"

	./configure --prefix=/usr \
		--disable-cli \
		--enable-shared \
		--system-libx264

	make
}

package() {
	cd "${srcdir}/x264-snapshot-${pkgver}-2245"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('495b2d0dc7dc57d815e4b015619a6011afc1d6ba740824d741f39e1da6916a18128b017429c6d0a30e48dd69a4eda1ca493df2d5a6c11e5450ec7c14a1823f17')

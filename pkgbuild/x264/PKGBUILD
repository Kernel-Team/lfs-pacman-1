pkgname=x264
pkgver=20171105
pkgrel=1
pkgdesc="Library for encoding H264/AVC video streams"
arch=('x86_64')
url="http://www.videolan.org/developers/x264.html"
license=('GPL')
#depends=()
source=("http://download.videolan.org/pub/videolan/x264/snapshots/x264-snapshot-${pkgver}-2245.tar.bz2")

build() {
	cd "${srcdir}/x264-snapshot-${pkgver}-2245"

	./configure --prefix=/usr \
		--disable-cli \
		--enable-shared \
		--system-libx264

	make
}

package() {
	cd "${srcdir}/x264-snapshot-${pkgver}-2245"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ec4597ceed8d9cc8669011449f946a7db9a7d35752c4a9dedd75133362aadf2fdb1f814f8426f692a90e606f1df7e1dc5a22de99d1b468e1bda0a2ce88dfc60c')

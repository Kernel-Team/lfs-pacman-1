pkgname=x264
pkgver=20170612
pkgrel=1
pkgdesc="Library for encoding H264/AVC video streams"
arch=('x86_64')
url="http://www.videolan.org/developers/x264.html"
license=('GPL')
#depends=()
source=("http://download.videolan.org/pub/videolan/x264/snapshots/x264-snapshot-${pkgver}-2245.tar.bz2")

build() {
	cd "${srcdir}/x264-snapshot-${pkgver}-2245"

	./configure --prefix=/usr \
		--disable-cli \
		--enable-shared \
		--system-libx264

	make
}

package() {
	cd "${srcdir}/x264-snapshot-${pkgver}-2245"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fdaadf587b01d4a707a4f68e4a89424baa6f65b769f1d4eb5e1ae0ea02a503b3ae32c45ad33e5cc63b9bc5f7d5dcacc3a9327c41a215afde5683af14615d7624')

pkgname=xapian-core
pkgver=1.4.6
pkgrel=1
pkgdesc="Open source search engine library."
arch=('x86_64')
url="https://xapian.org/"
license=('GPL')
#depends=()
source=("https://oligarchy.co.uk/xapian/${pkgver}/xapian-core-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/xapian-core-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xapian-core-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f08168eba26a24ea00c2219d2cdfac1d904b51162fdd98d437564786375245e00010986a7d6e9c8c7548ae19aab80434b5cb0051252f902b40db2976b1008fe2')

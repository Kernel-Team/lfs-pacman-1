pkgname=xapian-core
pkgver=1.4.4
pkgrel=1
pkgdesc="Open source search engine library."
arch=('x86_64')
url="https://xapian.org/"
license=('GPL')
#depends=()
source=("https://oligarchy.co.uk/xapian/${pkgver}/xapian-core-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/xapian-core-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xapian-core-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('dc88bab1d82c68b29d51c2113319ddb5d16840f3544b9d5fcc7a3671f97d58f16ddff58b865ad3521ea778cbaacf73fe7346bb514a1275f1f739283a4128d001')

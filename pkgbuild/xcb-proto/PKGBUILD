pkgname=xcb-proto
pkgver=1.12
pkgrel=1
pkgdesc="XML-XCB protocol descriptions"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/xcb/xcb-proto-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xcb-proto-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xcb-proto-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1f427eaf223971b25b56c9f641350e03f5ebeb17a1fc212ce2a0c892de7aba7e53d5e3958b073a122bb344c387c0ff394cf96f542ff046f33de4e1cd27fb9e5c')

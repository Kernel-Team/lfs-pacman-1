pkgname=xcursor-themes
pkgver=1.0.4
pkgrel=1
pkgdesc="X.org Cursor themes"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/data/xcursor-themes-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xcursor-themes-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xcursor-themes-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('14f83e1aa08b89469338d59b067aeca14d8edb3af4b077cb9358521340ac3fc75bdf512a7fe40fb5485ab613a8b885f91b6993035b4bb0525e64e1682ba17bd7')

pkgname=xdg-utils
pkgver=1.1.2
pkgrel=1
pkgdesc="Command line tools that assist applications with a variety of desktop integration tasks"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/xdg-utils/"
license=('MIT')
#depends=()
source=("https://portland.freedesktop.org/download/xdg-utils-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/xdg-utils-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xdg-utils-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('1927506065788b5f8bba8b0617a8ee585265342fa40c4b73000d320acd5909036daef94d49495b00982dbb67b7706b2f1ed949cb4cc519dfa534be2c1c8f74db')

pkgname=xf86-input-libinput
pkgver=0.28.0
pkgrel=1
pkgdesc="Generic input driver for the X.Org server based on libinput"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/driver/xf86-input-libinput-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xf86-input-libinput-${pkgver}"

	export CC="gcc"
	export CXX="g++"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xf86-input-libinput-${pkgver}"

	make install DESTDIR="${pkgdir}"

	mv "${pkgdir}/usr/share/X11/xorg.conf.d/40-libinput.conf" "${pkgdir}/usr/share/X11/xorg.conf.d/60-libinput.conf"
}

sha512sums=('4276b6aea87ddc83fa1f5e8d8949e34ad117186a6b5b599549231cb90424cd0fa69f3a4701ce529739c676665bb5c936eb447817c9420511d23bc048f6be92a4')

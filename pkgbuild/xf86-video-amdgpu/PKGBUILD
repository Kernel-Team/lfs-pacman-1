pkgname=xf86-video-amdgpu
pkgver=1.3.0
pkgrel=1
pkgdesc="X.org amdgpu video driver"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/driver/xf86-video-amdgpu-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xf86-video-amdgpu-${pkgver}"

	export CC="gcc"
	export CXX="g++"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xf86-video-amdgpu-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('d5b3099679b6ab35f086f18b4b6e95c299b8b94e0e5eb4cd34f49c9117808c4bb1a4e2c9a8939ab903c077a128f57e31bf89986784dabdafb398d301dccbf93e')

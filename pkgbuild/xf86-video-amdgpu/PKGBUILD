pkgname=xf86-video-amdgpu
pkgver=18.0.0
pkgrel=1
pkgdesc="X.org amdgpu video driver"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/driver/xf86-video-amdgpu-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xf86-video-amdgpu-${pkgver}"

	export CC="gcc"
	export CXX="g++"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xf86-video-amdgpu-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('5f9fa173c1b2f90878a9cc961e49abb0ad56db16fd80ec9fe6788fcc90eaa1906f3bff74437cb9afa95b9212ff946e1558736739f27e959a3848e77e4dabbd17')

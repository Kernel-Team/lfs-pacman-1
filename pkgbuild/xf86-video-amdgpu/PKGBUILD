pkgname=xf86-video-amdgpu
pkgver=1.4.0
pkgrel=1
pkgdesc="X.org amdgpu video driver"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/driver/xf86-video-amdgpu-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xf86-video-amdgpu-${pkgver}"

	export CC="gcc"
	export CXX="g++"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xf86-video-amdgpu-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('cae6417a45f6b981e007e080486083f1c38eaca58c6e331b04bbf46c86f23394742a722ae0d798d8dcad66879e99d90e57f04ae9ccb198f3ed26ec745878ccc2')

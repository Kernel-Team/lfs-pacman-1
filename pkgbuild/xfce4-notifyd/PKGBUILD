pkgname=xfce4-notifyd
pkgver=0.4.1
pkgrel=1
pkgdesc="Notification daemon for the Xfce desktop"
arch=('x86_64')
url="http://goodies.xfce.org/projects/applications/xfce4-notifyd"
license=('GPL2')
#depends=()
source=("http://archive.xfce.org/src/apps/xfce4-notifyd/${pkgver:0:3}/xfce4-notifyd-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xfce4-notifyd-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xfce4-notifyd-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('3dd12a8d27d950c2ffe7a4bc0eaa3b44f4a783273fc90d95304ec77450e88241ad39ca13366cb2a0c666ff6afb9ad58f6468e2fc38b8a87a2737614cfedadfae')

pkgname=xkeyboard-config
pkgver=2.24
pkgrel=1
pkgdesc="X keyboard configuration files"
arch=('x86_64')
url="https://www.freedesktop.org/wiki/Software/XKeyboardConfig"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/data/xkeyboard-config/xkeyboard-config-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xkeyboard-config-${pkgver}"

	./configure --prefix=/usr --with-xkb-rules-symlink=xorg

	make
}

package() {
	cd "${srcdir}/xkeyboard-config-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('96b65d18a85443a9bf93d65a4423da6e2b3d44882dae6a03bf46768a92017e9762cf3721361ba399c2873d53782944d0292eb673484f1cd8a8bdbf643e7a1dc0')

pkgname=xorg-iceauth
pkgver=1.0.7
pkgrel=1
pkgdesc="ICE authority file utility"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/iceauth-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/iceauth-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/iceauth-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4fe08b3137904c99219456716879cbdf5b49ca9bf390011ffb44b1e896f9a6e008b5f761346a533e682f5cfbf18d18a859c74ad4268ec8d40002ffb79c33bcd7')

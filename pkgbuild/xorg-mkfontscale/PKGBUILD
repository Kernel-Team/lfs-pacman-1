pkgname=xorg-mkfontscale
pkgver=1.1.2
pkgrel=1
pkgdesc="Create an index of scalable font files for X"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/mkfontscale-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/mkfontscale-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/mkfontscale-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('5c3331f66cd523afe95347aa36440655ba8fdbc716c5987a24ad624c1fbd718c4a8d67aa36330f6d5ab2eb5a6195a409a041954568c0a3375c0e2aeb6a955601')

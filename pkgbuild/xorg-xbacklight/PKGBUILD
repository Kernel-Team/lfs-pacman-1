pkgname=xorg-xbacklight
pkgver=1.2.1
pkgrel=1
pkgdesc="RandR-based backlight control application"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/xbacklight-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xbacklight-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xbacklight-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('9a0afebea2fe155ab7d1ad00ef27566daeb7dc4fd47523511f1b8e8ac30977f938a08783bc0c7443fe92ebff1c17c68c78d44db08b32768d7831128130e0637d')

pkgname=xorg-xdriinfo
pkgver=1.0.5
pkgrel=1
pkgdesc="Query configuration information of DRI drivers"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/xdriinfo-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xdriinfo-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xdriinfo-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('6b7a3641f488d305f950c494464fd4b674ab3aaed5c7159d6d8ddad4587c18d680e5854bd80666444f1dee52eb4f46b45709a6d9c333593fe045c73e738524de')

pkgname=xorg-xkill
pkgver=1.0.4
pkgrel=1
pkgdesc="Kill a client by its X resource"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/xkill-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xkill-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xkill-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('14d1fc0eff96a62d66307f09efc599639ee70be4bf580e2857569326881bfdcae7a8a21640509875218dd2b88575b4801ab0c43c4295550dc71141a579483545')

pkgname=xorg-xmessage
pkgver=1.0.4
pkgrel=1
pkgdesc="Display a message or query in a window"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/xmessage-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xmessage-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xmessage-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a087fb09595bf0b188a4525b45e9b607acd063cceae36c69c78a48674fb7eca1c82d5c2d2770c7f4425b499e4c002bfc0e377935308c218a330a2b4994b94ebd')

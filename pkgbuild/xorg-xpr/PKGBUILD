pkgname=xorg-xpr
pkgver=1.0.4
pkgrel=1
pkgdesc="Print an X window dump from xwd"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/xpr-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xpr-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xpr-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('4b88b71a6da835b8f27b185510cff6bc6b260e009b31b9118f12d77d37e660606654ff7ebd50014ff13f15ca74011cd3ffc12a417cea5e38d6d29ccc820a2957')

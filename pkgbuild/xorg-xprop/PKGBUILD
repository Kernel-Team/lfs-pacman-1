pkgname=xorg-xprop
pkgver=1.2.2
pkgrel=1
pkgdesc="Property displayer for X"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/xprop-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xprop-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xprop-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('934a46423d4904e57a3f5fc4ffed469f85a9bb6a3544cd2d2f80cf7ac1e6ebe1de8b3631c99a4d32c0f02992fcc940e2938832751182f0996ba3a95017794572')

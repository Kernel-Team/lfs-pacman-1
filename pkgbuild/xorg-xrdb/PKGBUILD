pkgname=xorg-xrdb
pkgver=1.1.0
pkgrel=1
pkgdesc="X server resource database utility"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/xrdb-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xrdb-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xrdb-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('8e2a177653d5aa895c71ed3640e0f1dd9fe8bf5cd6f0c6ff7e372394a2a41c3aa2286905fd9c69e3d140024d235b81a1f32b5d4012b1ac5ac1ed945599dee407')

pkgname=xorg-xrefresh
pkgver=1.0.5
pkgrel=1
pkgdesc="Refresh all or part of an X screen"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/xrefresh-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xrefresh-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xrefresh-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('287d167cd167aa35cfc89364bf4e74313137ce47978419446c60cb915188c34051f95d4900d0d5dcf692173f31e00e2699d70e54b79f0b21a59b4694be744014')

pkgname=xorg-xset
pkgver=1.2.3
pkgrel=1
pkgdesc="User preference utility for X"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/xset-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xset-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xset-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7b2cf4b06b93aec9f6f868be3f0932a5d6e62968485f7eb742a9b775059aa2a49c9170404e0597fd41a5730c0bf321e371ee6b23bbcde3be054f768ab8d3d92a')

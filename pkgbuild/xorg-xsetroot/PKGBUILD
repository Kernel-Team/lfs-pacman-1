pkgname=xorg-xsetroot
pkgver=1.1.1
pkgrel=1
pkgdesc="Classic X utility to set your root window background to a given pattern or color"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/xsetroot-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xsetroot-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xsetroot-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('04834a8ca658a4aabe03e62588353102e8019d424e25fab450d48e6fc4ac358df5bb98a850c82c61e2495faabfe54f3d92d9563e77c83ace7fd69c278edbbd64')

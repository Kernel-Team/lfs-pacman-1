pkgname=xorg-xwd
pkgver=1.0.6
pkgrel=1
pkgdesc="X Window System image dumping utility"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/xwd-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xwd-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xwd-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('8fb86cbe163631fdb3f49ad6bb648ea599d7c5f9b11aba7e88afb86daed34cab88dcba057e0c5ca3e4e5904598b279f5a68ad43a64dd1053d647aa78523a806f')

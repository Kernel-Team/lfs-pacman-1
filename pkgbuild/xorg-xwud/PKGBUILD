pkgname=xorg-xwud
pkgver=1.0.4
pkgrel=1
pkgdesc="X Window System image undumping utility"
arch=('x86_64')
url="https://www.x.org/wiki/"
license=('custom')
#depends=()
source=("https://www.x.org/releases/individual/app/xwud-${pkgver}.tar.bz2")

build() {
	cd "${srcdir}/xwud-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xwud-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('f3ef5fb0dc9c9e3dc3acfa597c1332263f62be5e524c7512600106e9d8eb5733231729853f6b123205367db52cb0a567320dff65d29743bf892e237795ebee57')

pkgname=xvidcore
pkgver=1.3.4
pkgrel=1
pkgdesc="XviD is an open source MPEG-4 video codec"
arch=('x86_64')
url="https://www.xvid.com/"
license=('GPL')
#depends=()
source=("http://downloads.xvid.org/downloads/xvidcore-${pkgver}.tar.bz2")

prepare() {
	cd "${srcdir}/xvidcore/build/generic"

	sed -i 's/^LN_S=@LN_S@/& -f/' platform.inc.in
}

build() {
	cd "${srcdir}/xvidcore/build/generic"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/xvidcore/build/generic"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('09c0dca898ad8ba32161d979dea66730c235d9649e93e5053f0e0f0d02f8996f0f85d629728bff16d3253b71e0435809360e6cf4d72801e63c061f2a0b0dbe7d')

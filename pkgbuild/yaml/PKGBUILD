pkgname=yaml
pkgver=0.2.1
pkgrel=1
pkgdesc="YAML 1.1 library"
arch=('x86_64')
url="http://pyyaml.org/wiki/LibYAML"
license=('MIT')
#depends=()
source=("http://pyyaml.org/download/libyaml/yaml-${pkgver}.tar.gz")

build() {
	cd "${srcdir}/yaml-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/yaml-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('97ebeea2a2c877b24de2e1ffbf175d07d97d5c8b90e06d21fd057e1114d10b96c04fd92c2ed4e956db751b7ac1686b3fd5778927912ca5bb0d096908a1351235')

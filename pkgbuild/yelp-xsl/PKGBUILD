pkgname=yelp-xsl
pkgver=3.27.90
pkgrel=1
pkgdesc="Document transformations from Yelp"
arch=('x86_64')
url="https://git.gnome.org/browse/yelp-xsl/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/yelp-xsl/${pkgver:0:4}/yelp-xsl-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/yelp-xsl-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/yelp-xsl-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e3ec78ec287084c58ac6d1433fb129929595f9a5f980b49ec72c62c80c9ee0b7a730066b0041c0b0844c349167bc2b6381a1d9685020e21c331b800968c77f91')

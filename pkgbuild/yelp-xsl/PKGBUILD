pkgname=yelp-xsl
pkgver=3.20.1
pkgrel=1
pkgdesc="Document transformations from Yelp"
arch=('x86_64')
url="https://git.gnome.org/browse/yelp-xsl/"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/yelp-xsl/${pkgver:0:4}/yelp-xsl-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/yelp-xsl-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/yelp-xsl-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('7ea22c3180261917d1a277a9b5023f9b2b22346bc3f55cdb1c61c4ae8f78411da93058b55f99c25c9a1bedad21ffa6c3dc460e1ee98614a84a4efa2c2449baac')

pkgname=yelp
pkgver=3.28.0
pkgrel=1
pkgdesc="Get help with GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Yelp"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/yelp/${pkgver:0:4}/yelp-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/yelp-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/yelp-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('b03a984253217860b10776b2bbc594bf5bbd23bc2e42f2c8c9e38bda785fb07ea9003971d7be42a7e4df4c56fcc7d58c8ac4524dfc5abc0757211c134c6795f2')

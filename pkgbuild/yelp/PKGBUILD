pkgname=yelp
pkgver=3.26.0
pkgrel=1
pkgdesc="Get help with GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Yelp"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/yelp/${pkgver:0:4}/yelp-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/yelp-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/yelp-${pkgver}"

	make install DESTDIR="${pkgdir}"
}


sha512sums=('8c2423d39933d82036a2197e170c88ea4ed1ad5e421f5a1cc4b2f2f314393a82d42be1c763d353de1ae2adacb7ca879da79beeeb3c20fc66172867145762d5d0')

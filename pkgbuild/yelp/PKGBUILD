pkgname=yelp
pkgver=3.22.0
pkgrel=1
pkgdesc="Get help with GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Yelp"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/yelp/${pkgver:0:4}/yelp-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/yelp-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/yelp-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('ba31c7801fc4642d9c4dcf34d4b8c02005f2ebfab4ecfe4e726685c5fb95f05311fc3a481f9b2d2e8b211395e4c932adba0e68b57d264cd1f6065402d9143d32')

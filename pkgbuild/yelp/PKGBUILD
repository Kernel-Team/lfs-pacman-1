pkgname=yelp
pkgver=3.27.1
pkgrel=1
pkgdesc="Get help with GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Yelp"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/yelp/${pkgver:0:4}/yelp-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/yelp-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/yelp-${pkgver}"

	make install DESTDIR="${pkgdir}"
}


sha512sums=('4710cb33eb26631650023c452299bfbc7936730e7ea7b2adecf8a40b35eec2157f00d0e8099e14ab097f9f99c66bf39afead337d55bd542c3ba0c00b4a5f0ac6')

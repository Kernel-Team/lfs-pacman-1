pkgname=yelp
pkgver=3.25.3
pkgrel=1
pkgdesc="Get help with GNOME"
arch=('x86_64')
url="https://wiki.gnome.org/Apps/Yelp"
license=('GPL')
#depends=()
source=("https://download.gnome.org/sources/yelp/${pkgver:0:4}/yelp-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/yelp-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/yelp-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('fb25d0575d346a361edd4a124494c7df03fa8d808824847be735c67a962d85a01c3c72ff4bd1c4122f60e9e529b1bc952294d933edf5ac1e16db0aa15544cd84')

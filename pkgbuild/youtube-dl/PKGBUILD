pkgname=youtube-dl
pkgver=2017.07.15
pkgrel=1
pkgdesc="A small command-line program to download videos from YouTube.com and a few more sites"
arch=('x86_64')
url="http://rg3.github.io/youtube-dl/"
license=('custom')
#depends=()
options=(!strip)
source=("https://github.com/rg3/youtube-dl/releases/download/${pkgver}/youtube-dl-${pkgver}.tar.gz")

package() {
	cd "${srcdir}/youtube-dl"

	python setup.py install --root="${pkgdir}" --optimize=1

	rm -rf "${pkgdir}/usr/etc"
}

sha512sums=('372ac27be349fb10ce21249d7d455cec291c1691b78a67f20ae425cb5c146226ee278e97fc5903a5fd6df6dca8e0cd09da8377f606b93633161bc02ba239f573')

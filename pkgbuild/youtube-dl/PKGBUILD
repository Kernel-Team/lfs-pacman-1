pkgname=youtube-dl
pkgver=2018.07.04
pkgrel=1
pkgdesc="A small command-line program to download videos from YouTube.com and a few more sites"
arch=('x86_64')
url="http://rg3.github.io/youtube-dl/"
license=('custom')
#depends=()
options=(!strip)
source=("https://github.com/rg3/youtube-dl/releases/download/${pkgver}/youtube-dl-${pkgver}.tar.gz")

package() {
	cd "${srcdir}/youtube-dl"

	python3 setup.py install --root="${pkgdir}" --optimize=1

	rm -rf "${pkgdir}/usr/etc"
}

sha512sums=('7a67948307d8909c0415635c9c560bdf809b085f1675aa2c4aafa8007b8f420beb6347a56e3fbe61507aca1b42ac932ce75ae46aa2cd62e129fa604cd6ceb6e0')

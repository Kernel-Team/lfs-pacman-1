pkgname=zenity
pkgver=3.26.0
pkgrel=1
pkgdesc="Display graphical dialog boxes from shell scripts"
arch=('x86_64')
url="https://git.gnome.org/browse/zenity/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/zenity/${pkgver:0:4}/zenity-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/zenity-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/zenity-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('b0cc080dbf8a2dcd78ffc0b6460c3b41ca728d62a564d2d49ee0a45cbeeb699c2be06575750a13340bc305efbf43b8ef55f1bbb8c75592b8e186a6f885bc4d5a')

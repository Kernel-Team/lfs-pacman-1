pkgname=zenity
pkgver=3.24.0
pkgrel=1
pkgdesc="Display graphical dialog boxes from shell scripts"
arch=('x86_64')
url="https://git.gnome.org/browse/zenity/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/zenity/${pkgver:0:4}/zenity-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/zenity-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/zenity-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('b24291166221cc2dabeabfeab7ca00ca63ff21c12a4eb327cd35ac43f485b8d4a858dd717df1b35b8bd3fd89d0bb235609855c6d349b76879b0f77b4fedd4dd9')

pkgname=zenity
pkgver=3.28.0
pkgrel=1
pkgdesc="Display graphical dialog boxes from shell scripts"
arch=('x86_64')
url="https://git.gnome.org/browse/zenity/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/zenity/${pkgver:0:4}/zenity-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/zenity-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/zenity-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a94e1d0506d379cf60c6afe09ba73b04f9e3e8f616eea6183bf3dbd69b74695ed6d875ec63ad5c99578c80529cd62edf3f6132ade6f1ee2eaf2d9b2e582b6ba0')

pkgname=zenity
pkgver=3.27.90
pkgrel=1
pkgdesc="Display graphical dialog boxes from shell scripts"
arch=('x86_64')
url="https://git.gnome.org/browse/zenity/"
license=('LGPL')
#depends=()
source=("https://download.gnome.org/sources/zenity/${pkgver:0:4}/zenity-${pkgver}.tar.xz")

build() {
	cd "${srcdir}/zenity-${pkgver}"

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var

	make
}

package() {
	cd "${srcdir}/zenity-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('08c4bab9232d2c4a9b94eec5bdb630a7875140e8231bc58370379c11510861aaa8d119b0b36cf6673bb4e0ab2f341e426c3438c99356fc43e48e003e30bc47a9')

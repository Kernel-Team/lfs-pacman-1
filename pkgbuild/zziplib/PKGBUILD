pkgname=zziplib
pkgver=0.13.68
pkgrel=1
pkgdesc="A lightweight library that offers the ability to easily extract data from files archived in a single zip file"
arch=('x86_64')
url="http://zziplib.sourceforge.net"
license=('LGPL' 'MPL')
#depends=()
source=("zziplib-${pkgver}.tar.gz::https://github.com/gdraheim/zziplib/archive/v${pkgver}.tar.gz")

build() {
	cd "${srcdir}/zziplib-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/zziplib-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('e8a9976242acc04064ec239b9b929228370a946e5bd37092adcc1bda14605710a3850d39795d1937b609d1ab9a9a1998152f8c88b2dccc387ac6ec774d9cfce9')

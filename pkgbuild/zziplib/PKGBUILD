pkgname=zziplib
pkgver=0.13.67
pkgrel=1
pkgdesc="A lightweight library that offers the ability to easily extract data from files archived in a single zip file"
arch=('x86_64')
url="http://zziplib.sourceforge.net"
license=('LGPL' 'MPL')
#depends=()
source=("zziplib-${pkgver}.tar.gz::https://github.com/gdraheim/zziplib/archive/v${pkgver}.tar.gz")

build() {
	cd "${srcdir}/zziplib-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/zziplib-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('a34b801a18a2051aa3898a572508ffd327521b69878413af679b10f6a68b37e770651884ae611bf9c01ce14013c6a1e06adeadd3ef6219d4b9278f1b9e7a6459')

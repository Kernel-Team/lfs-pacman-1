pkgname=zziplib
pkgver=0.13.66
pkgrel=1
pkgdesc="A lightweight library that offers the ability to easily extract data from files archived in a single zip file"
arch=('x86_64')
url="http://zziplib.sourceforge.net"
license=('LGPL' 'MPL')
#depends=()
source=("zziplib-${pkgver}.tar.gz::https://github.com/gdraheim/zziplib/archive/v${pkgver}.tar.gz")

build() {
	cd "${srcdir}/zziplib-${pkgver}"

	./configure --prefix=/usr

	make
}

package() {
	cd "${srcdir}/zziplib-${pkgver}"

	make install DESTDIR="${pkgdir}"
}

sha512sums=('893885d85293269fd8ff14d61eaae5f7d07689a16dd9c07c1ae8d46ea2b2f94a13d6aab19670efa7716cafe5e9f8efb1cbc1254bd9e860c836faa35736bdbe20')
